#compdef spark-shell

local arguments

arguments=(
  '-I[preload <file>, enforcing line-by-line interpretation]'
  '--master[spark://host:port, mesos://host:port, yarn]'
  '--deploy-mode[whether to launch the driver program locally ("client") or]'
  '--class[your applications main class (for Java / Scala apps).]'
  '--name[A name of your application.]'
  '--jars[comma-separated list of jars to include on the driver]'
  '--packages[comma-separated list of maven coordinates of jars to include]'
  '--exclude-packages[comma-separated list of groupId:artifactId, to exclude while]'
  '--repositories[comma-separated list of additional remote repositories to]'
  '--py-files[comma-separated list of .zip, .egg, or .py files to place]'
  '--files[comma-separated list of files to be placed in the working]'
  '--conf[Arbitrary Spark configuration property.]:value'
  '--properties-file[path to a file from which to load extra properties. If not]'
  '--driver-memory[memory for driver (e.g. 1000M, 2G) (Default: 1024M).]'
  '--driver-java-options[extra Java options to pass to the driver.]'
  '--driver-library-path[extra library path entries to pass to the driver.]'
  '--driver-class-path[extra class path entries to pass to the driver. Note that]'
  '--executor-memory[memory per executor (e.g. 1000M, 2G) (Default: 1G).]'
  '--proxy-user[user to impersonate when submitting the application.]'
  {--help,-h}'[show this help message and exit.]'
  {--verbose,-v}'[print additional debug output.]'
  '--version[print the version of current Spark.]'
  '--driver-cores[number of cores used by the driver, only in cluster mode]'
  '--supervise[if given, restarts the driver on failure.]'
  '--kill[if given, kills the driver specified.]'
  '--status[if given, requests the status of the driver specified.]'
  '--total-executor-cores[total cores for all executors.]'
  '--executor-cores[number of cores per executor. (Default: 1 in YARN mode]'
  '--queue[the YARN queue to submit to (Default: "default").]'
  '--num-executors[number of executors to launch (Default: 2).]'
  '--archives[comma separated list of archives to be extracted into the]'
  '--principal[principal to be used to login to KDC, while running on]'
  '--keytab[the full path to the file that contains the keytab for the]'
  '*:filename:_files'
)

_arguments -s $arguments
