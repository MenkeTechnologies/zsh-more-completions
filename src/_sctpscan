#compdef sctpscan

local arguments

arguments=(
  {-p,--port}'[(default: 10000)]'
  {-P,--loc}'[_port <port> (default: 10000)]'
  {-l,--loc}'[_host <loc_host> (default: 127.0.0.1)]'
  {-r,--rem}'[_host <rem_host> (default: 127.0.0.2)]'
  {-s,--scan,-r}'[.bbb\[.ccc\]\]]'
  {-m,--map}'[map all SCTP ports from 0 to 65535 (portscan)]'
  {-F,--Frequent}'[portscans the frequently used SCTP ports]'
  {-a,--autoportscan}'[portscans automatically any host with SCTP aware TCP/IP stack]'
  {-i,--linein}'[receive IP to scan from stdin]'
  {-f,--fuzz}'[fuzz test all the remote protocol stack]'
  {-B,--bothpackets}'[send packets with INIT chunk for one, and SHUTDOWN_ACK for the other]'
  {-b,--both}'[_checksum]'
  {-C,--crc32}'[calculate checksums with the new crc32]'
  {-A,--adler32}'[calculate checksums with the old adler32]'
  {-Z,--zombie}'[does not collaborate to the SCTP Collaboration platform. No reporting.]'
  {-d,--dummyserver}'[starts a dummy SCTP server on port 10000. You can then try to scan it from another machine.]'
  {-E,--exec}'[executes <script_name> each time an open SCTP port is found.]'
  {-t,--tcpbridge}'[TCP port>]'
  {-S,--streams}'[of streams>]'
  '*:filename:_files'
)

_arguments -s $arguments
