#compdef iowatcher

local arguments

arguments=(
  '-d[): device for blktrace to trace]'
  '-D[): destination for blktrace]'
  '-t[): trace file name (more than one allowed)]'
  '-F[): fio bandwidth trace (more than one allowed)]'
  '-l[): trace label in the graph]'
  '-o[): output file name (SVG only)]'
  '-p[): program to run while blktrace is run]'
  '-K[keep svgs generated for movie mode]'
  '-m[\[=spindle|rect\]): create IO animations]'
  '-C[): ffmpeg codec. Use ffmpeg -codecs to list]'
  '-r[): number of seconds in the rolling averge]'
  '-T[): graph title]'
  '-N[): skip a single graph (io, tput, latency, queue_depth]'
  '-O[): add a single graph to the output]'
  '-h[): set the height of each graph]'
  '-w[): set the width of each graph]'
  '-c[): numbers of columns in graph output]'
  '-x[): limit processed time to min:max]'
  '-y[): limit processed sectors to min:max]'
  '-a[): plot given action (one of Q,D,C) in IO graph]'
  '-P[): distinguish between processes in IO graph]'
  '*:filename:_files'
)

_arguments -s $arguments
