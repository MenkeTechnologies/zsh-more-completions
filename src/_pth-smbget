#compdef pth-smbget

local arguments

arguments=(
  {-w,--workgroup}'[workgroup to use (optional)]'
  {-U,--user}'[username to use]'
  {-a,--guest}'[work as user guest]'
  {-n,--nonprompt}'[dont ask anything (non-interactive)]'
  {-d,--debuglevel}'[debuglevel to use]'
  {-e,--encrypt}'[encrypt SMB transport]'
  {-r,--resume}'[automatically resume aborted files]'
  {-u,--update}'[download only when remote file is newer than]'
  {-R,--recursive}'[recursively download files]'
  {-b,--blocksize}'[change number of bytes in a block]'
  {-o,--outputfile}'[write downloaded data to specified file]'
  {-O,--stdout}'[write data to stdout]'
  {-D,--dots}'[show dots as progress indication]'
  {-q,--quiet}'[be quiet]'
  {-v,--verbose}'[be verbose]'
  {-f,--rcfile}'[use specified rc file]'
  '--usage[display brief usage message]'
  '*:filename:_files'
)

_arguments -s $arguments
