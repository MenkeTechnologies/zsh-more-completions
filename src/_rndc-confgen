#compdef rndc-confgen

local arguments

arguments=(
  '-a[generate just the key clause and write it to keyfile (/etc/rndc.key)]::'
  '-A[algorithm (default hmac-md5)]'
  '-b[from 1 through 512, default 256; total length of the secret]'
  '-c[specify an alternate key file (requires -a)]'
  '-k[the name as it will be used in named.conf and rndc.conf]'
  '-p[the port named will listen on and rndc will connect to]'
  '-r[source of random data (use "keyboard" for key timing)]'
  '-s[the address to which rndc should connect]'
  '-t[write a keyfile in chrootdir as well (requires -a)]'
  '-u[set the keyfile owner to "user" (requires -a)]'
  '*:filename:_files'
)

_arguments -s $arguments
