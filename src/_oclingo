#compdef oclingo

local arguments

arguments=(
  '--configuration[Configure default configuration \[auto\]]'
  '--tester[Pass (quoted) string of <options> to tester]'
  '--stats[{0..2}\],-s     : Maintain {0=no|1=basic|2=extended} statistics]'
  '--solve-limit[<m>\] : Stop search after <n> conflicts or <m> restarts]'
  {--enum-mode,-e}'[: Configure enumeration algorithm \[auto\]]'
  '--opt-mode[Configure optimization algorithm]'
  '--opt-bound[...|no : Initialize objective function(s)]'
  '--opt-sat[Treat DIMACS input as MaxSAT optimization problem]'
  '--project[Project models to named atoms]'
  {--models,-n}'[: Compute at most <n> models (0 for all)]'
  '--eq[Configure equivalence preprocessing]'
  '--trans-ext[Configure handling of Lparse-like extended rules]'
  '--text[Print plain text format]'
  {--const,-c}'[<term>  : Replace term occurences of <id> with <term>]'
  '--lparse-rewrite[Use together with --text to inspect lparse rewriting]'
  '--lparse-debug[Debug information during lparse rewriting:]'
  {--warn,-W}'[: Enable/disable warnings:]'
  {--help,-h}'[: Print {1=basic|2=more|3=full} help and exit]'
  {--version,-v}'[: Print version information and exit]'
  {--verbose,-V}'[: Set verbosity level to <n>]'
  '--time-limit[Set time limit to <n> seconds (0=no limit)]'
  {--quiet,-q}'[: Configure printing of models, costs, and calls]'
  '--pre[Run preprocessing and exit]'
  '--print-portfolio[Print default portfolio and exit]'
  '--mode[Run in {clingo|clasp|gringo} mode]'
  '*:filename:_files'
)

_arguments -s $arguments
