#compdef ispellaff2myspell

local arguments

arguments=(
  '--affixfile[affix file]'
  '--bylocale[use current locale setup for upper/lowercase]'
  '--charset[use specified charset for upper/lowercase]'
  '--debug[print debugging info]'
  '--extraflags[allow some non alphabetic flags]'
  '--lowercase[lowercase string]'
  '--myheader[header file]'
  '--printcomments[print commented lines in output]'
  '--replacements[replacements file]'
  '--split[split flags with more that i entries]'
  '--uppercase[uppercase string]'
  '--wordlist[still unused]'
  '*:filename:_files'
)

_arguments -s $arguments
