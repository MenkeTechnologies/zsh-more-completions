#compdef ldapurl

local arguments

arguments=(
  '-a[comma separated list of attributes]'
  '-b[(RFC 4514 LDAP DN)]'
  '-E[(format: "ext=value"; multiple occurrences allowed)]'
  '-f[(RFC 4515 LDAP filter)]'
  '-h[]'
  '-p[(default: 389 for ldap, 636 for ldaps)]'
  '-s[(RFC 4511 searchScope and extensions)]'
  '-S[(RFC 4516 LDAP URL scheme and extensions)]'
  '*:filename:_files'
)

_arguments -s $arguments
