#compdef hostapd-wpe_cli

local arguments

arguments=(
  '-h[help (show this usage text)]'
  '-v[shown version information]'
  '-p[path to find control sockets (default: /var/run/hostapd-wpe)]:path:'
  '-s[dir path to open client sockets (default: /var/run/hostapd-wpe)]:dir_path:'
  '-a[run in daemon mode executing the action file based on events]:file:'
  '-B[run a daemon in the background]'
  '-i[Interface to listen on (default: first interface found in the]:ifname:'
  '*:filename:_files'
)

_arguments -s $arguments
