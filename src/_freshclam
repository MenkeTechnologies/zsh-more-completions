#compdef freshclam

local arguments

arguments=(
    {--help,-h}'[Show this help]'
    {--version,-V}'[Print version number and exit]'
    {--verbose,-v}'[Be verbose]'
    '--debug[Enable debug messages]'
    '--quiet[Only output error messages]'
    '--no-warnings[Dont print and log warnings]'
    '--stdout[Write to stdout instead of stderr]'
    '--show-progress[Show download progress percentage]'
    '--config-file[Read configuration from FILE.]'
    {--log,-l}'[Log into FILE]'
    {--daemon,-d}'[Run in daemon mode]'
    {--pid,-p}'[Save daemons pid in FILE]'
    {--user,-u}'[Run as USER]'
    '--no-dns[Force old non-DNS verification method]'
    {--checks,-c}'[Number of checks per day, 1 <= n <= 50]'
    '--datadir[Download new databases into DIRECTORY]'
    '--daemon-notify[/path/clamd.conf\] Send RELOAD command to clamd]'
    {--local-address,-a}'[Bind to IP for HTTP downloads]'
    '--on-update-execute[Execute COMMAND after successful update]'
    '--on-error-execute[Execute COMMAND if errors occurred]'
    '--on-outdated-execute[Execute COMMAND when software is outdated]'
    '--list-mirrors[Print mirrors from mirrors.dat]'
    '--update-db[Only update database DBNAME]'
    '*:filename:_files'
)

_arguments -s $arguments
