#compdef docker-runc

local arguments

arguments=(
  '--debug[enable debug output for logging]'
  '--log[set the log file path where internal debug information is written (default: "/dev/null")]'
  '--log-format[set the format used by logs (text (default), or json) (default: "text")]'
  '--root[root directory for storage of container state (this should be located in tmpfs) (default: "/run/user/1000/runc")]'
  '--criu[path to the criu binary used for checkpoint and restore (default: "criu")]'
  '--systemd-cgroup[enable systemd cgroup support, expects cgroupsPath to be of form "slice:prefix:name" for e.g. "system.slice:runc:434234"]'
  '--rootless[ignore cgroup permission errors (true, false, or auto) (default: "auto")]'
  {--help,-h}'[show help]'
  {--version,-v}'[print the version]'
  '*:filename:_files'
)

_arguments -s $arguments
