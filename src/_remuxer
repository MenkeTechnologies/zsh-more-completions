#compdef remuxer

local arguments

arguments=(
  '--help[display help.]'
  '--version[display version information.]'
  '--chapter[set chapters from the file.]'
  '--chpl-with-bom[add UTF-8 BOM to the chapter strings in the chapter list. (experimental)]'
  '--chapter-track[set which track the chapter applies to.]'
  '--language[specify the default language for all the output tracks.]'
  '--max-chunk-duration[specify the maximum duration per chunk in milliseconds.]'
  '--max-chunk-size[specify the maximum size per chunk in bytes.]'
  '--fragment[enable fragmentation per random accessible point.]'
  '--min-frag-duration[specify the minimum duration which fragments are allowed to be.]'
  '--dash[enable DASH ISOBMFF-based Media segmentation.]'
  '--compact-size-table[compress sample size tables if possible.]'
  '--dry-run[execute as a dry run.]'
  '-i[1\]:\[track_option1\],\[track_option2\]?\[track_number2\]:...]'
  '*:filename:_files'
)

_arguments -s $arguments
