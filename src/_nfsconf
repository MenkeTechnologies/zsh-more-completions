#compdef nfsconf

local arguments

arguments=(
  '-v[increase Verbosity]'
  '--file[.conf Load this config file]'
  '--dump[outputs the configuration to the named file]'
  '--get[subsection\] {section} {tag}]'
  '--isset[subsection\] {section} {tag}]'
  '--set[subsection\] {section} {tag} {value}]'
  '--unset[subsection\] {section} {tag}]'
  '*:filename:_files'
)

_arguments -s $arguments
