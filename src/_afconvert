#compdef afconvert

local arguments

arguments=(
  '--prime-method[decode priming method (see AudioConverter.h)]'
  '--prime-override[samples_remain]'
  '--no-filler[dont page-align audio data in the output file]'
  '--soundcheck-generate[analyze audio, add SoundCheck data to the output file]'
  '--media-kind[kind string"]'
  '--anchor-loudness[set a single precision floating point value to]'
  '--soundcheck-generate[is also enabled.]'
  '--anchor-generate[analyze audio and add dialogue anchor level data to output file]'
  '--soundcheck-generate[is also enabled.]'
  '--generate-hash[generate an SHA-1 hash of the input audio data and add it to the output file.]'
  '--codec-manuf[specify the codec with the specified 4-character component manufacturer]'
  '--dither[algorithm: 1-2]'
  '--mix[enable channel downmixing]'
  '-ud[value]'
  '-ue[value]'
  '--decode-formatid[for input audio files with multiple data format layers (e.g. AAC_HE)]'
  '--read-track[for input files containing multiple tracks, the index (0..n-1)]'
  '--offset[the starting offset in the input file in frames. (The first frame is]'
  '--soundcheck-read[read SoundCheck data from source file and set it on any destination]'
  '--copy-hash[copy an SHA-1 hash chunk, if present, from the source file to the output file.]'
  '--gapless-before[file coming before the current input file of a gapless album]'
  '--gapless-after[file coming after the current input file of a gapless album]'
  '-o[specify an (additional) output file.]'
  '--condensed-framing[specify storage size in bits for externally framed packet sizes.]'
  '*:filename:_files'
)

_arguments -s $arguments
