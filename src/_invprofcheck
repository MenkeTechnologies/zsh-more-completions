#compdef invprofcheck

local arguments

arguments=(
  '-v[verbosity level (default 1), 2 to print each DE]'
  '-l[set total ink limit (estimate by default)]'
  '-L[set black channel ink limit (estimate by default)]'
  '-i[a = absolute, r = relative colorimetric (def.)]'
  '-h[high res test (27)]'
  '-u[ultra high res test (61)]'
  '-R[specific grid resolution]'
  '-I[do bwd to fwd check]'
  '-c[show CIE94 delta E values]'
  '-k[show CIEDE2000 delta E values]'
  '-w[create X3DOM visualisation (profile.x3d.html)]'
  '-x[use X3DOM axes]'
  '-e[color vectors according to delta E]'
  '*:filename:_files'
)

_arguments -s $arguments
