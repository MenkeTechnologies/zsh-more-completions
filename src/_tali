#compdef tali

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show help options]'
  '--help-all[show all help options]'
  '--help-gtk[show GTK+ Options]'
  {-d,--delay}'[delay computer moves]'
  {-t,--thoughts}'[display computer thoughts]'
  {-n,--computers}'[number of computer opponents]'
  {-p,--humans}'[number of human opponents]'
  {-g,--game}'[game choice: Regular or Colors]'
  {-c,--computer-test}'[number of computer-only games to play]'
  {-m,--monte-carlo-trials}'[number of trials for each roll for the computer]'
  '--display[X display to use]'
  '*:filename:_files'
)

_arguments -s $arguments
