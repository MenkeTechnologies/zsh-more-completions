#compdef start-pulseaudio-x11

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show this help]'
  '--version[show version]'
  '--dump-conf[dump default configuration]'
  '--dump-modules[dump list of available modules]'
  '--dump-resample-methods[dump available resample methods]'
  '--cleanup-shm[cleanup stale shared memory segments]'
  '--start[start the daemon if it is not running]'
  {-k,--kill}'[kill a running daemon]'
  '--check[check for a running daemon (only returns exit code)]'
  '--system[run as system-wide instance]'
  {-D,--daemonize}'[daemonize after startup]'
  '--fail[quit when startup fails]'
  '--high-priority[try to set high nice level]'
  '--realtime[try to enable realtime scheduling]'
  '--disallow-module-loading[disallow module user requested module]'
  '--disallow-exit[disallow user requested exit]'
  '--exit-idle-time[terminate the daemon when idle and this]'
  '--scache-idle-time[unload autoloaded samples when idle and]'
  '--log-level[increase or set verbosity level]'
  {-v,--verbose}'[increase the verbosity level]'
  '--log-target[syslog,stderr,file:PATH,newfile:PATH}]'
  '--log-meta[include code location in log messages]'
  '--log-time[include timestamps in log messages]'
  '--log-backtrace[include a backtrace in log messages]'
  {-p,--dl-search-path}'[set the search path for dynamic shared]'
  '--resample-method[use the specified resampling method]'
  '--use-pid-file[create a PID file]'
  '--no-cpu-limit[do not install CPU load limiter on]'
  '--disable-shm[disable shared memory support.]'
  {-L,--load}'[ARGUMENTS"         Load the specified plugin module with]'
  {-F,--file}'[run the specified script]'
  '-C[open a command line on the running TTY]'
  '-n[dont load default script file]'
  '*:filename:_files'
)

_arguments -s $arguments
