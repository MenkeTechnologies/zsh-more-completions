#compdef xmlsec1-config

local arguments

arguments=(
  '--cflags[print pre-processor and compiler flags]'
  '--libs[print library linking information]'
  '--prefix[print the default XMLSEC prefix folder]'
  '--exec-prefix[print the default XMLSEC executable prefix folder]'
  '--libdir[print the default XMLSEC libraries folder]'
  '--crypto[print the default crypto library name]'
  '--prefix[change XMLSEC prefix folder]'
  '--exec-prefix[change XMLSEC executable prefix folder]'
  '--libdir[change XMLSEC libraries folder]'
  '--crypto[configure with XMLSEC crypto library (one of the]'
  '--help[display this help and exit]'
  '--version[output version information]'
  '*:filename:_files'
)

_arguments -s $arguments
