#compdef lame

local arguments

arguments=(
  '-b[set the bitrate, default 128 kbps]'
  '-h[higher quality, but a little slower.]'
  '-f[fast mode (lower quality)]'
  '-V[quality setting for VBR. default n=4]'
  '--preset[type must be "medium", "standard", "extreme", "insane"]'
  '--help[3 ID3 tagging related options]'
  '--longhelp[full list of options]'
  '--license[print License information]'
  '*:filename:_files'
)

_arguments -s $arguments
