#compdef sg_xcopy

local arguments

arguments=(
  '--help[print out this usage message then exit]'
  '--on[_dst send XCOPY command to the output file/device]'
  '--on[_src send XCOPY command to the input file/device.]'
  '--verbose[same action as verbose=1]'
  '--version[print version information then exit]'
  '*:filename:_files'
)

_arguments -s $arguments
