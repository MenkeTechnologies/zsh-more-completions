#compdef avconvert

local arguments

arguments=(
  '-p[]'
  '-s[movie>]'
  '-o[movie>]'
  '-h[) - prints this help string and lists the available presets.]'
  '-v[) too much information.]'
  '-q[) do not show the actual settings used in the export]'
  '-n[) - only prepare the export, do not actually run it. (This is not useful with -q.)]'
  '-prog[) - Show progrss during export (default with --verbose).]'
  '--listPresets[lists all available presets.]'
  '--listTracks[lists the available tracks in the source media. Must be used with the âˆ’s flag.]'
  '-p[) <preset name> - The name of the preset that specifies the output format and default settings. Use --listPresets to get this list.]'
  '-o[) <output file name string> - specifies the name and location for the destination file.]'
  '-s[) <source file name string> - specifies the name and location of the source file. Track specifications can specify]'
  '-ot[) <a list of track types to be included on the output> - only one track of each type will be exported.]'
  '-md[) <file name string> - specifies the name and location a movie file to use as the source for the metadata items]'
  '-vt[(--videoTrack)]'
  '-at[(--audioTrack)]'
  '-sbt[)]'
  '-cht[)]'
  '-tnt[)]'
  '-cct[)]'
  '-txt[)]'
  '-s[) <source file name string> - specifies the name and location of the source file for this track.]'
  '-i[) <track number> specifies the track number in the source container of the track to be used for this track specification.]'
  '-adr[(--dataRate) <number of bits per second> - a limit value for the data rate for the audio track.]'
  '-af[) <4 char code of audio format> - specifies lpcm or the audio format for encoding. e.g. aac]'
  '-sr[) <sample rate in bits per second> e.g. 48000 or 22500.]'
  '-cc[) <specifies the number of channels in output stream. e.g. 1 (for mono) 2 (stereo) 4 quad).]'
  '-vdr[) <number of bits per second> - a limit value for the data rate for the video track.]'
  '-th[) <number of pixels> - specifies the height for the transcoded result. The aspect ratio will be preserved and the image will not be scaled up.]'
  '-tw[) <number of pixels> - specifies the width for the transcoded result. The aspect ratio will be preserved and the image will not be scaled up.]'
  '-vc[) <4 char code of video codec> - specifies the video codec e.g. avc1]'
  '-fr[) <number of frames per second> eg. 15 or 30 or 29.97.]'
  '-kf[) <number frames per keyframe> Specifies how often keyframes should appear in the output stream.]'
  '-fr[) <yes or no>. Tells the export whether it can use frame reordering (B-frames)]'
  '*:filename:_files'
)

_arguments -s $arguments
