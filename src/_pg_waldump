#compdef pg_waldump

local arguments

arguments=(
  {-b,--bkp-details}'[output detailed information about backup blocks]'
  {-e,--end}'[stop reading at WAL location RECPTR]'
  {-f,--follow}'[keep retrying after reaching end of WAL]'
  {-n,--limit}'[number of records to display]'
  {-p,--path}'[directory in which to find log segment files or a]'
  {-r,--rmgr}'[only show records generated by resource manager RMGR;]'
  {-s,--start}'[start reading at WAL location RECPTR]'
  {-t,--timeline}'[timeline from which to read log records]'
  {-V,--version}'[output version information, then exit]'
  {-x,--xid}'[only show records with transaction ID XID]'
  {-z,--stats}'[show statistics instead of records]'
  '*:filename:_files'
)

_arguments -s $arguments
