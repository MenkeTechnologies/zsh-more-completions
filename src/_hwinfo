#compdef hwinfo

local arguments

arguments=(
  '--short[show only a summary. Use this option in addition to a hardware]'
  '--listmd[normally hwinfo does not report RAID devices. Add this option to]'
  '--only[this option can be given more than once. If you add this option]'
  '--save-config[store config for a particular device below /var/lib/hardware.]'
  '--show-config[show saved config data for a particular device.]'
  '--map[if disk names have changed (e.g. after a kernel update) this]'
  '--debug[set debug level to N. The debug info is shown only in the log]'
  '--verbose[increase verbosity. Only together with --map.]'
  '--log[write log info to FILE.]'
  '--dump-db[dump hardware data base. N is either 0 for the external data]'
  '--version[print libhd version.]'
  '--help[print usage.]'
  '*:filename:_files'
)

_arguments -s $arguments
