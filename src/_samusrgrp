#compdef samusrgrp

local arguments

arguments=(
  '-r[remove user from group]'
  '-l[list groups]'
  '-L[list groups and also their members]'
  '-s[print machine SID]'
  {-a,-u,-g}'[220 -> add user named theboss group hex 220 (administrators)]'
  {-a,-u}'[3ea -g 0x221 -> add user with RID (hex) 3ea group hex 221 (users)]'
  {-r,-u}'[3ff -g 0x220 -> remove user RID 0x3ff from grp 0x220]'
  '-H[human readable output, else parsable]'
  '-N[no allocate mode, only allow edit of existing values with same size]'
  '-E[no expand mode, do not expand hive file (safe mode)]'
  '-t[debug trace of allocated blocks]'
  '-v[some more verbose messages/debug]'
  '*:filename:_files'
)

_arguments -s $arguments
