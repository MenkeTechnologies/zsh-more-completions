#compdef jpegtran

local arguments

arguments=(
  '-copy[copy no extra markers from source file]'
  '-copy[copy only comment markers (default)]'
  '-copy[copy all extra markers]'
  '-optimize[optimize Huffman table (smaller file, but slow compression)]'
  '-progressive[create progressive JPEG file]'
  '-crop[+X+Y  Crop to a rectangular subarea]'
  '-flip[mirror image (left-right or top-bottom)]'
  '-grayscale[reduce to grayscale (omit color data)]'
  '-perfect[fail if there is non-transformable edge blocks]'
  '-rotate[90|180|270\]         Rotate image (degrees clockwise)]'
  '-scale[/N     Scale output image by fraction M/N, eg, 1/8]'
  '-transpose[transpose image]'
  '-transverse[transverse transpose image]'
  '-trim[drop non-transformable edge blocks]'
  '-wipe[+X+Y  Wipe (gray out) a rectangular subarea]'
  '-arithmetic[use arithmetic coding]'
  '-restart[set restart interval in rows, or in blocks with B]'
  '-maxmemory[maximum memory to use (in kbytes)]'
  '-outfile[specify name for output file]'
  '-verbose[or  -debug   Emit debug output]'
  '-scans[create multi-scan JPEG per script file]'
  '*:filename:_files'
)

_arguments -s $arguments
