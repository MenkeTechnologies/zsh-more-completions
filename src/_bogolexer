#compdef bogolexer

local arguments

arguments=(
  '-p[print the tokens from stdin.]'
  '-q[quiet mode, no tokens are printed.]'
  '-h[help, this output.]'
  '-n[map non-ascii characters to ?.]'
  '-v[set verbosity level.]'
  '-c[read specified config file.]'
  '-C[dont read standard config files.]'
  '-H[disables header line tagging.]'
  '-I[read message from file instead of stdin.]'
  '-O[write to file instead of stdout.]'
  '-x[set debug flags.]'
  '-D[direct debug output to stdout.]'
  '*:filename:_files'
)

_arguments -s $arguments
