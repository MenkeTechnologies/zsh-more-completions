#compdef makejvf

local arguments

arguments=(
  '-C[長体モ―[ド]'
  '-K[非漢字部用に作成するPSフォントTFM名]'
  '-b[数値> ベ―[スライン補正]'
  '-m[縦書き時にクオ―[ト(’”)の代わりにミニュ―[ト(′″)を使用]'
  '-a[AFMファイル名（かな詰め時に使用）]'
  '-k[数値> かな詰めマ―[ジン指定]'
  '-i[start mapped font ID from No. 0]'
  '-e[enhanced mode; the horizontal shift amount is determined]'
  '-t[use <CNFfile> as a configuration file]'
  '-u[UCS mode]'
  '-J[map single/double quote to another JIS-encoded PSfont TFM]'
  '-U[map single/double quote to another UCS-encoded PSfont TFM]'
  '-3[use set3, that is, enable non-BMP characters support]'
  '-H[use half-width katakana]'
  '*:filename:_files'
)

_arguments -s $arguments
