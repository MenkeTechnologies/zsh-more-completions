#compdef shfmt

local arguments

arguments=(
  '-version[show version and exit]'
  '-l[list files whose formatting differs from shfmts]'
  '-w[write result to file instead of stdout]'
  '-d[error with a diff when the formatting differs]'
  '-s[simplify the code]'
  '-ln[language variant to parse (bash/posix/mksh, default "bash")]'
  '-p[shorthand for -ln=posix]'
  '-i[indent: 0 for tabs (default), >0 for number of spaces]'
  '-bn[binary ops like && and | may start a line]'
  '-ci[switch cases will be indented]'
  '-sr[redirect operators will be followed by a space]'
  '-kp[keep column alignment paddings]'
  '-mn[minify program to reduce its size (implies -s)]'
  '-f[recursively find all shell files and print the paths]'
  '-tojson[print syntax tree to stdout as a typed JSON]'
  '*:filename:_files'
)

_arguments -s $arguments
