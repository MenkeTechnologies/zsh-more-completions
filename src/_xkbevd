#compdef xkbevd

local arguments

arguments=(
  '-cfg[specify a config file]'
  '-sc[specify the command to play sounds]'
  '-sd[specify the root directory for sound files]'
  '-d[<dpy>     Specify the display to watch]'
  '-bg[run in background]'
  '-synch[force synchronization]'
  '-v[print verbose messages]'
  '-version[print program version]'
  '*:filename:_files'
)

_arguments -s $arguments
