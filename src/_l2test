#compdef l2test

local arguments

arguments=(
  '-r[and receive]'
  '-w[and send]'
  '-d[and dump incoming data]'
  '-x[then send, then dump incoming data]'
  '-t[then send and receive at the same time]'
  '-q[then send and receive at the same time]'
  '-s[and send]'
  '-u[and receive]'
  '-n[and be silent]'
  '-y[then send, then dump incoming data]'
  '-c[disconnect, connect, ...]'
  '-m[connects]'
  '-p[dedicated bonding]'
  '-z[request]'
  '*:filename:_files'
)

_arguments -s $arguments
