#compdef dconschat

local arguments

arguments=(
  '-b[translate ctrl-C to CR+~+ctrl-B on gdb port]'
  '-v[verbose]'
  '-w[listen on wildcard address rather than localhost]'
  '-r[replay old buffer on connection]'
  '-R[read-only]'
  '-T[enable Telnet protocol workaround on console port]'
  '-1[one shot: read buffer and exit]'
  '-h[polling rate]'
  '-C[port number for console port]'
  '-G[port number for gdb port]'
  '-M[core file]'
  '-N[system file]'
  '-u[specify unit number of the bus]'
  '-t[EUI64 of target host (must be specified)]'
  '-a[physical address of dcons buffer on target host]'
  '*:filename:_files'
)

_arguments -s $arguments
