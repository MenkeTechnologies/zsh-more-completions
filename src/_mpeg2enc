#compdef mpeg2enc

local arguments

arguments=(
  '--verbose[|-v num]'
  '--format[|-f fmt]'
  '--display-hsize[|-x \[32..16383\]]'
  '--display-vsize[|-y \[32..16383\]]'
  '--aspect[|-a num]'
  '--frame-rate[|-F num]'
  '--video-bitrate[|-b num]'
  '--target-video-bitrate[|-t]'
  '--nonvideo-bitrate[|-B num]'
  '--quantisation[|-q num]'
  '--ratecontroller[|-A \[0..1\] (default:0)]'
  '--output[|-o pathname]'
  '--target-still-size[|-T size]'
  '--interlace-mode[|-I num]'
  '--motion-search-radius[|-r num]'
  '--reduction-4x4[|-4 num]'
  '--reduction-2x2[|-2 num]'
  '--min-gop-size[|-g num]'
  '--max-gop-size[|-G num]'
  '--closed-gop[|-c]'
  '--force-b-b-p[|-P]'
  '--quantisation-reduction[|-Q num]'
  '--quant-reduction-max-var[|-X num]'
  '--video-buffer[|-V num]'
  '--video-norm[|-n n|p|s]'
  '--sequence-length[|-S num]'
  '--3-2-pulldown[|-p]'
  '--intra[_dc_prec|-D \[8..11\]]'
  '--reduce-hf[|-N num]'
  '--keep-hf[|-H]'
  '--sequence-header-every-gop[|-s]'
  '--no-dummy-svcd-SOF[|-d]'
  '--playback-field-order[|-z b|t]'
  '--multi-thread[|-M num]'
  '--correct-svcd-hds[|-C]'
  '--no-constraints[deactivate constraints for maximum video resolution and sample rate.]'
  '--no-altscan-mpeg2[deactivate the use of the alternate block pattern for MPEG-2. This is]'
  '--dualprime-mpeg2[turn ON use of dual-prime motion compensation. Default is OFF unless this option is used]'
  '--custom-quant-matrices[|-K kvcd|tmpgenc|default|hi-res|file=inputfile|help]'
  '--unit-coeff-elim[|-E num]'
  '--b-per-refframe[| -R 0|1|2]'
  '--cbr[|-u]'
  '--chapters[Y\[,...\]\]]'
  '--help[|-\?]'
  '*:filename:_files'
)

_arguments -s $arguments
