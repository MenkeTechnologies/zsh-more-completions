#compdef wifiping

local arguments

arguments=(
  '-b[specify BSSID for injection]'
  '-t[set TTL (default: 64)]'
  '-o[specify interface for injection (default: ath0)]'
  '-i[specify interface for listening (default: ath0)]'
  '-s[specify source MAC address for injected frames]'
  '-w[WEP mode and key]'
  '-k[id> WEP key id (default: 0)]'
  '-d[activate debug]'
  '-v[verbose debugging]'
  '-h[this so helpful output]'
  '*:filename:_files'
)

_arguments -s $arguments
