#compdef colverify

local arguments

arguments=(
  '-v[verbose mode, n >= 2 print each value]'
  '-l[match patches by sample location rather than id]'
  '-n[normalise each files reading to its white Y]'
  '-N[normalise each files reading to its white XYZ]'
  '-m[normalise each files reading to its white X+Y+Z]'
  '-M[normalise both files reading to mean white XYZ]'
  '-D[use D50 100.0 as L*a*b* white reference]'
  '-c[show CIE94 delta E values]'
  '-k[show CIEDE2000 delta E values]'
  '-h[.txt\] Plot a histogram of delta Es \[Optionally save points to .txt\]]'
  '-s[sort patch values by error]'
  '-w[create PCS X3DOM vector visualisation (measured.x3d.html)]'
  '-W[create PCS X3DOM marker visualisation (measured.x3d.html)]'
  '-d[create Device RGB X3DOM marker visualisation (measured.x3d.html)]'
  '-x[use X3DOM axes]'
  '-f[use Fluorescent Whitening Agent compensation \[opt. simulated inst. illum.:]'
  '-i[choose illuminant for computation of CIE XYZ from spectral data & FWA:]'
  '-o[choose CIE Observer for spectral data:]'
  '-L[.icc Skip any first file out of profile gamut patches]'
  '-X[.ccmx Apply Colorimeter Correction Matrix to second file]'
  '*:filename:_files'
)

_arguments -s $arguments
