#compdef luajittex

local arguments

arguments=(
  '--credits[display credits and exit]'
  '--debug-format[enable format debugging]'
  '--draftmode[switch on draft mode (generates no output PDF)]'
  '--fmt[load the format file FORMAT]'
  '--halt-on-error[stop processing at the first error]'
  '--help[display help and exit]'
  '--ini[be iniluajittex, for dumping formats]'
  '--interaction[set interaction mode (STRING=batchmode/nonstopmode/scrollmode/errorstopmode)]'
  '--jobname[set the job name to STRING]'
  '--kpathsea-debug[set path searching debugging flags according to the bits of NUMBER]'
  '--lua[load and execute a lua initialization script]'
  '--nosocket[disable the lua socket library]'
  '--output-comment[use STRING for DVI file comment instead of date (no effect for PDF)]'
  '--output-directory[use existing DIR as the directory to write files in]'
  '--output-format[use FORMAT for job output; FORMAT is dvi or pdf]'
  '--progname[set the program name to STRING]'
  '--recorder[enable filename recorder]'
  '--safer[disable easily exploitable lua commands]'
  '--shell-restricted[restrict system commands to a list of commands given in texmf.cnf]'
  '--synctex[enable synctex (see man synctex)]'
  '--utc[init time to UTC]'
  '--version[display version and exit]'
  '--luaonly[run a lua file, then exit]'
  '--luaconly[byte-compile a lua file, then exit]'
  '--luahashchars[the bits used by current Lua interpreter for strings hashing]'
  '--jiton[turns the JIT compiler on (default off)]'
  '--jithash[choose the hash function for the lua strings (lua51|luajit20: default lua51)]'
  '*:filename:_files'
)

_arguments -s $arguments
