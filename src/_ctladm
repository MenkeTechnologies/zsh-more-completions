#compdef ctladm

local arguments

arguments=(
  '-I[defaults to 7, used to change the initiator id]'
  '-C[specify the number of times to retry this command]'
  '-D[specify the device to operate on]'
  '-l[logical block address]'
  '-d[read/write length, in blocks]'
  '-f[write/read data to/from file or stdout/stdin]'
  '-b[block size, in bytes]'
  '-c[specify minimum cdb size: 6, 10, 12 or 16]'
  '-N[do not copy data to/from userland]'
  '-c[specify minimum cdb size: 10 or 16]'
  '-m[specify the mode page to view]'
  '-l[request a list of supported pages]'
  '-P[specify the page control value: 0-3 (current]'
  '-d[disable block descriptors for mode sense]'
  '-S[specify a subpage]'
  '-c[specify minimum cdb size: 6 or 10]'
  '-a[specify the action value: 0-2 (read key, read]'
  '-a[specify the action value: 0-5 (register, reserve]'
  '-k[key value]'
  '-s[service action value]'
  '-r[specify the reservation type: 0-5(wr ex, ex ac]'
  '-i[set the immediate bit (CTL does not support this)]'
  '-o[set the on/offline bit]'
  '-l[set the starting LBA]'
  '-b[set the length to sync in blocks]'
  '-r[set the relative addressing bit]'
  '-i[set the immediate bit]'
  '-c[specify minimum cdb size: 10 or 16]'
  '-b[backend name ("block", "ramdisk", etc.)]'
  '-B[LUN blocksize in bytes (some backends)]'
  '-d[SCSI VPD page 0x83 ID]'
  '-l[requested LUN number]'
  '-o[value : backend-specific options, multiple allowed]'
  '-s[LUN size in bytes (some backends)]'
  '-S[SCSI VPD page 0x80 serial number]'
  '-t[SCSI device type (0=disk, 3=processor)]'
  '-b[backend name ("block", "ramdisk", etc.)]'
  '-l[LUN number to delete]'
  '-o[value : backend-specific options, multiple allowed]'
  '-b[list devices from specified backend only]'
  '-v[be verbose, show backend attributes]'
  '-x[dump raw XML]'
  '-l[delay command at datamove or done phase]'
  '-T[delay one command, then resume normal completion]'
  '-T[delay all commands]'
  '-t[number of seconds to delay]'
  '-i[action to perform]'
  '-p[command pattern to look for]'
  '-r[len : LBA range for pattern]'
  '-s[fmt \[args\] : sense data for custom sense action]'
  '-c[continuous operation]'
  '-d[error id to delete]'
  '-l[list frontend ports]'
  '-o[turn frontend ports on or off]'
  '-w[set WWNN for one frontend]'
  '-W[set WWPN for one frontend]'
  '-t[specify fc, scsi, ioctl, internal frontend type]'
  '-p[specify target port number]'
  '-q[omit header in list output]'
  '-x[output port list in XML format]'
  '-f[specify frontend type]'
  '-i[report target and initiators addresses]'
  '-l[report LUN mapping]'
  '-p[specify target port number]'
  '-q[omit header in list output]'
  '-v[verbose output (report all port options)]'
  '-x[output port list in XML format]'
  '-p[specify target port number]'
  '-L[specify port-visible LUN]'
  '-L[specify CTL LUN]'
  '*:filename:_files'
)

_arguments -s $arguments
