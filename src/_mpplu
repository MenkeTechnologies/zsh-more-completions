#compdef mpplu

local arguments

arguments=(
  '-v[verbose]'
  '-f[f = forward, b = backwards]'
  '-p[x = XYZ_PCS, l = Lab_PCS, y = Yxy, s = spectral]'
  '-l[override default ink limit, 1 - N00%]'
  '-i[choose illuminant for print/transparency spectral data:]'
  '-o[choose CIE Observer for spectral data:]'
  '-u[use Fluorescent Whitening Agent compensation]'
  '-g[create gamut output]'
  '-w[create gamut X3DOM as well]'
  '-n[dont add X3DOM axes]'
  '-a[gamut transparency level]'
  '-d[gamut surface detail level]'
  '-t[invoke debugging test code "num" 1..n]'
  '*:filename:_files'
)

_arguments -s $arguments
