#compdef pbibtex

local arguments

arguments=(
  '-kanji[set Japanese encoding (STRING=euc|jis|sjis|utf8)]'
  '-min-crossrefs[include item after NUMBER cross-refs; default 2]'
  '-terse[do not print progress reports]'
  '-help[display this help and exit]'
  '-version[output version information and exit]'
  '*:filename:_files'
)

_arguments -s $arguments
