#compdef firecfg

local arguments

arguments=(
  '--add-users[\[user\] - add the users to Firejail user access database.]'
  '--bindir[install in directory instead of /usr/local/bin.]'
  '--clean[remove all firejail symbolic links.]'
  '--debug[print debug messages.]'
  '--fix[fix .desktop files.]'
  '--fix-sound[create ~/.config/pulse/client.conf file.]'
  '--help[-\? - this help screen.]'
  '--list[list all firejail symbolic links.]'
  '--version[print program version and exit.]'
  '*:filename:_files'
)

_arguments -s $arguments
