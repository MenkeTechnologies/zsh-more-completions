#compdef foomatic-addpjloptions

local arguments

arguments=(
  '-a[include all options]'
  '-d[enable debugging output]'
  '-f[do not ask user whether he really wants to add the]'
  '-i[include only important options]'
  '-s[create a single option file]'
  '-q[summary format]'
  '-h[this help message]'
  '-p[printer where to add the PJL options]'
  '-o[directory for saving option files (default ./foomatic-db/opt)]'
  '*:filename:_files'
)

_arguments -s $arguments
