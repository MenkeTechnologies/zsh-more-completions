#compdef sp64

local arguments

arguments=(
  {-V,--version}'[print version]'
  '(- * :)'{-h,--help}'[print help]'
  '--pw-min[start incrementing at NUM]'
  '--pw-max[stop incrementing at NUM]'
  '--markov-disable[emulates maskprocessor output]'
  '--markov-classic[no per-position tables]'
  '--threshold[filter out chars after NUM chars added]'
  '--combinations[calculate number of combinations]'
  '--hex-charset[assume charset is given in hex]'
  {-s,--skip}'[skip number of words (for restore)]'
  {-l,--limit}'[limit number of words (for distributed)]'
  {-o,--output-file}'[output-file]'
  {-1,--custom-charset1}'[user-defineable charsets]'
  {-2,--custom-charset2}'[example:]'
  {-3,--custom-charset3,--custom-charset1}'[]'
  {-4,--custom-charset4}'[sets charset ?1 to 0123456789abcdef]'
  '*:filename:_files'
)

_arguments -s $arguments
