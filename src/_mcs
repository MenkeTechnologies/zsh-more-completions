#compdef mcs

local arguments

arguments=(
  '--about[about the Mono C# compiler]'
  '-addmodule[Adds the module to the generated assembly]:M1\[,Mn\]:'
  '-checked[sets default aritmetic overflow context]'
  '-clscheck[disables CLS Compliance verifications]'
  '-codepage[Sets code page to the one in ID (number, utf8, reset)]:ID:'
  '-define[Defines one or more conditional symbols (short: -d)]:S1\[;S2\]:'
  {-debug,-g}'[generate debugging information]'
  '-delaysign[only insert the public key into the assembly (no signing)]'
  '-doc[Process documentation comments to XML file]:FILE:'
  '-fullpaths[any issued error or warning uses absolute file path]'
  '-help[lists all compiler options (short: -\?)]'
  '-keycontainer[The key pair container used to sign the output assembly]:NAME:'
  '-keyfile[The key file used to strongname the ouput assembly]:FILE:'
  '-langversion[Specifies language version: ISO-1, ISO-2, 3, 4, 5, 6, Default or Experimental]:TEXT:'
  '-lib[Specifies the location of referenced assemblies]:PATH1\[,PATHn\]:'
  '-main[Specifies the class with the Main method (short: -m)]:CLASS:'
  '-noconfig[disables implicitly referenced assemblies]'
  '-nostdlib[does not reference mscorlib.dll library]'
  '-nowarn[Suppress one or more compiler warnings]:W1\[,Wn\]:'
  '-optimize[enables advanced compiler optimizations (short: -o)]'
  '-out[Specifies output assembly name]:FILE:'
  '-pathmap[:K=V\[,Kn=Vn\] Sets a mapping for source path names used in generated output]'
  '-pkg[References packages P1..Pn]:P1\[,Pn\]:'
  '-platform[Specifies the target platform of the output assembly]:ARCH:'
  '-recurse[Recursively compiles files according to SPEC pattern]:SPEC:'
  '-reference[Imports metadata from the specified assembly (short: -r)]:A1\[,An\]:'
  '-reference[Imports metadata using specified extern alias (short: -r)]:ALIAS=A:'
  '-sdk[Specifies SDK version of referenced assemblies]:VERSION:'
  '-target[Specifies the format of the output assembly (short: -t)]:KIND:'
  '-unsafe[allows to compile code which uses unsafe keyword]'
  '-warnaserror[treats all warnings as errors]'
  '-warnaserror[1\[,Wn\] Treats one or more compiler warnings as errors]'
  '-warn[Sets warning level, the default is 4 (short -w:)]:0-4:'
  '-helpinternal[shows internal and advanced compiler options]'
  '-linkresource[:FILE\[,ID\] Links FILE as a resource (short: -linkres)]'
  '-resource[Embed FILE as a resource (short: -res)]:FILE\[,ID\]:'
  '-win32res[Specifies Win32 resource file (.res)]:FILE:'
  '-win32icon[Use this icon for the output]:FILE:'
  '*:filename:_files'
)

_arguments -s $arguments
