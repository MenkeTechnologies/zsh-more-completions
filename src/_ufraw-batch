#compdef ufraw-batch

local arguments

arguments=(
  '--conf[apply the parameters in ID-file to other raw images.]'
  '--wb[white balance setting.]'
  '--temperature[color temperature in Kelvin.]'
  '--green[green color normalization.]'
  '--base-curve[type of base tone curve to use. CURVE can be any]'
  '--base-curve-file[use base tone curve included in specified file.]'
  '--curve[type of luminosity curve to use. CURVE can be any]'
  '--curve-file[use luminosity curve included in specified file.]'
  '--restore[restore details for negative EV.]'
  '--clip[clip highlights for positive EV.]'
  '--gamma[gamma adjustment of the base curve (default 0.45).]'
  '--linearity[linearity of the base curve (default 0.10).]'
  '--saturation[saturation adjustment (default 1.0, 0 for B&W output).]'
  '--wavelet-denoising-threshold[wavelet denoising threshold (default 0.0).]'
  '--hotpixel-sensitivity[sensitivity for detecting and shaving hot pixels (default 0.0).]'
  '--exposure[auto exposure or exposure correction in EV (default 0).]'
  '--black-point[auto black-point or black-point value (default 0).]'
  '--interpolation[interpolation algorithm to use (default ahd).]'
  '--color-smoothing[apply color smoothing.]'
  '--grayscale[grayscale conversion algorithm to use (default none).]'
  '--grayscale-mixer[GREEN,BLUE]'
  '--shrink[shrink the image by FACTOR (default 1).]'
  '--size[downsize max(height,width) to SIZE.]'
  '--out-type[output file format (default ppm).]'
  '--out-depth[16      Output bit depth per channel (default 8).]'
  '--create-id[create no|also|only ID file (default no).]'
  '--compression[JPEG compression (0-100, default 85).]'
  '--embedded-image[extract the preview image embedded in the raw file]'
  '--rotate[rotate image to cameras setting, by ANGLE degrees]'
  '--crop-[(left|right|top|bottom)=PIXELS]'
  '--auto-crop[crop the output automatically.]'
  '--aspect-ratio[set crop area aspect ratio.]'
  '--out-path[PATH for output file (default use input files path).]'
  '--output[output file name, use - to output to stdout.]'
  '--darkframe[use FILE for raw darkframe subtraction.]'
  '--overwrite[overwrite existing files without asking (default no).]'
  '--maximize-window[force window to be maximized.]'
  '--silent[do not display any messages during conversion. This]'
  '*:filename:_files'
)

_arguments -s $arguments
