#compdef xsetroot

local arguments

arguments=(
  '-display[or -d <display>]'
  '-fg[or -foreground <color>]'
  '-bg[or -background <color>]'
  '-rv[or -reverse]'
  '-def[or -default]'
  '-name[]'
  '-cursor[file> <mask file>]'
  '-cursor[_name <cursor-font name>]'
  '-xcf[cursor file> <cursor size>]'
  '-solid[]'
  '-gray[or -grey]'
  '-bitmap[]'
  '-mod[<y>]'
  '-help[]'
  '-version[]'
  '*:filename:_files'
)

_arguments -s $arguments
