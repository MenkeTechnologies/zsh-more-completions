#compdef mausezahn

local arguments

arguments=(
  '-x[interactive mode with telnet CLI, default port: 25542]'
  '-l[listen address to bind to when in interactive mode, default: 0.0.0.0]'
  '-4[IPv4 mode (default)]'
  '-6[IPv6 mode]'
  '-c[send packet count times, default:1, infinite:0]'
  '-d[apply delay between transmissions. The delay value can be]'
  '-r[multiplies the specified delay with a random value]'
  '-p[pad the raw frame to specified length (using random bytes)]'
  '-a[use specified source mac address, no matter what has]'
  '-b[same with destination mac address; keywords:]'
  '-A[use specified source IP address (default is own interface IP)]'
  '-B[send packet to specified destination IP or domain name]'
  '-P[payload> Use the specified ASCII payload]'
  '-f[read the ASCII payload from a file]'
  '-F[read the hexadecimal payload from a file]'
  '-Q[specify 802.1Q VLAN tag and optional Class of Service, you can]'
  '-t[specify packet type for autobuild (you dont need to care for]'
  '-T[specify packet type for server mode, currently only rtp is supported;]'
  '-M[insert a MPLS label, enter -M help for a syntax description]'
  '-V[|VV|... Verbose and more verbose mode]'
  '-q[quiet mode, even omit important standard short messages]'
  '-S[simulation mode: DOES NOT put anything on the wire, this is]'
  '-v[show version]'
  '-h[print this help]'
  '*:filename:_files'
)

_arguments -s $arguments
