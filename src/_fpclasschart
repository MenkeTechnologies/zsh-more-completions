#compdef fpclasschart

local arguments

arguments=(
  '--merge[filename with object tree to merge.]'
  '--help[emit help.]'
  '--input[input file to create skeleton for.]'
  '--kind[specify object kind. One of object, class, interface.]'
  '--lang[use selected language.]'
  '--output[send output to file.]'
  '--format[kind of output to create: XML, PostScript, GraphViz.]'
  '*:filename:_files'
)

_arguments -s $arguments
