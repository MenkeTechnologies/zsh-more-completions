#compdef pmlogger

local arguments

arguments=(
  {-c,--config}'[file to load configuration from]'
  {-h,--host}'[metrics source is PMCD on host]'
  {-l,--log}'[redirect diagnostics and trace output]'
  {-L,--linger}'[run even if not primary logger instance and nothing to log]'
  {-m,--note}'[descriptive note to be added to the port map file]'
  {-n,--namespace}'[use an alternative PMNS]'
  {-P,--primary}'[execute as primary logger instance]'
  {-r,--report}'[report record sizes and archive growth rate]'
  {-s,--size}'[terminate after endsize has been accumulated]'
  {-t,--interval}'[default logging interval \[default 60.0 seconds\]]'
  {-T,--finish}'[end of the time window]'
  '-u[output is unbuffered \[default now, so -u is a no-op\]]'
  {-U,--username}'[in daemon mode, run as named user \[default pcp\]]'
  {-v,--volsize}'[switch log volumes after size has been accumulated]'
  {-V,--version}'[version for archive (default and only version is 2)]'
  '-x[control file descriptor for running from pmRecordControl(3)]'
  '-y[set timezone for times to local time rather than from PMCD host]'
  '*:filename:_files'
)

_arguments -s $arguments
