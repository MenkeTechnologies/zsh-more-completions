#compdef cfonts

local arguments

arguments=(
  {--version,-v}'[use to display the version of cfonts]'
  {--help,-h}'[use to display this help]'
  {--font,-f}'[use to define the font face]'
  {--colors,-c}'[use to define the font color]'
  {--background,-b}'[use to define background color]'
  {--align,-a}'[use to align your text output]'
  {--letter-spacing,-l}'[use to define your letter spacing]'
  {--line-height,-z}'[use to define your line height]'
  {--spaceless,-s}'[use to disable the padding around your output]'
  {--max-length,-m}'[use to define the amount of maximum characters per line]'
  {--debug,-d}'[use to enable debug mode]'
  {--debug-level,-x}'[use to define the debug level. The higher, the less debug infos]'
  '*:filename:_files'
)

_arguments -s $arguments
