#compdef lsof

local arguments

arguments=(
  '-c[cmd c ^c /c/\[bix\] +c w COMMAND width (9) +d s dir s files]'
  '-d[select by FD set +D D dir D tree *SLOW?* +|-e s exempt s *RISKY*]'
  '-i[IPv\[46\] files -K \[i\] list|(i)gn tasKs -l list UID numbers]'
  '-n[host names -N select NFS files -o list file offset]'
  '-O[overhead *RISKY* -P no port names -R list paRent PID]'
  '-s[file size -t terse listing -T disable TCP/TPI info]'
  '-U[unix socket -v list version info -V verbose search]'
  '-E[endpoint info +E display endpoint info and files]'
  '-F[select fields; -F? for help]'
  '-p[exclude(^)|select PIDs -S \[t\] t second stat timeout (15)]'
  '-T[TCP/TPI Q,St (s) info]'
  '-g[exclude(^)|select and print process group IDs]'
  '-i[select by IPv\[46\] address: \[46\]\[proto\]\[@host|addr\]\[:svc_list|port_list\]]'
  '-s[exclude(^)|select protocol (p = TCP|UDP) states by name(s).]'
  '-u[exclude(^)|select login|UID set s]'
  '-x[cross over +d|+D File systems or symbolic Links]'
  '*:filename:_files'
)

_arguments -s $arguments
