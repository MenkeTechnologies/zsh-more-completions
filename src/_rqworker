#compdef rqworker

local arguments

arguments=(
  {-b,--burst}'[run in burst mode (quit after all work is]'
  '--logging[_level TEXT            Set logging level]'
  '--log-format[set the format of the logs]'
  '--date-format[set the date format of the logs]'
  {-n,--name}'[specify a different name]'
  '--results-ttl[default results timeout to be used]'
  '--worker-ttl[default worker timeout to be used]'
  '--job-monitoring-interval[default job monitoring interval to be used]'
  '--disable-job-desc-logging[turn off description logging.]'
  {-v,--verbose}'[show more output]'
  {-q,--quiet}'[show less output]'
  '--sentry-dsn[report exceptions to this Sentry DSN]'
  '--exception-handler[exception handler(s) to use]'
  '--pid[write the process ID number to a file at the]'
  {-d,--disable-default-exception-handler}'[disable RQs default exception handler]'
  '--max-jobs[maximum number of jobs to execute]'
  {-s,--with-scheduler}'[run worker with scheduler]'
  {-P,--path}'[specify the import path.]'
  '--connection-class[redis client class to use]'
  '--queue-class[RQ Queue class to use]'
  {-j,--job-class}'[RQ Job class to use]'
  {-w,--worker-class}'[RQ Worker class to use]'
  {-c,--config}'[module containing RQ settings.]'
  {-u,--url}'[URL describing Redis connection details.]'
  '--help[show this message and exit.]'
  '*:filename:_files'
)

_arguments -s $arguments
