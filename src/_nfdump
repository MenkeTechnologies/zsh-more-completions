#compdef nfdump

local arguments

arguments=(
  '-h[this text you see right here]'
  '-V[print version and exit.]'
  '-a[aggregate netflow data.]'
  '-A[/net\] How to aggregate: , sep list of tags see nfdump(1)]'
  '-b[aggregate netflow records as bidirectional flows.]'
  '-B[aggregate netflow records as bidirectional flows - Guess direction.]'
  '-r[read input from file]'
  '-w[write output to file]'
  '-f[read netflow filter from file]'
  '-n[define number of top N for stat or sorted output.]'
  '-c[limit number of records to read from source(es)]'
  '-D[use nameserver <dns> for host lookup.]'
  '-N[print plain numbers]'
  '-s[/<order>\] Generate statistics for <expr> any valid record element.]'
  '-q[quiet: Do not print the header and bottom stat lines.]'
  '-H[xstat histogram data to flow file.(default no)]'
  '-i[change Ident to <ident> in file given by -r.]'
  '-J[modify file compression: 0: uncompressed - 1: LZO compressed - 2: BZ2 compressed.]'
  '-z[lzo compress flows in output file. Used in combination with -w.]'
  '-j[bz2 compress flows in output file. Used in combination with -w.]'
  '-l[set limit on packets for line and packed output format.]'
  '-L[set limit on bytes for line and packed output format.]'
  '-I[print netflow summary statistics info from file, specified by -r.]'
  '-M[read input from multiple directories.]'
  '-m[deprecated]'
  '-O[sort order for aggregated flows - tstart, tend, flows, packets bps pps bbp etc.]'
  '-R[read input from sequence of files.]'
  '-o[use <mode> to print out netflow records:]'
  '-E[print exporter ans sampling info for collected flows.]'
  '-v[verify netflow data file. Print version and blocks.]'
  '-x[verify extension records in netflow data file.]'
  '-X[dump Filtertable and exit (debug option).]'
  '-Z[check filter syntax and exit.]'
  '-t[time window for filtering packets]'
  '*:filename:_files'
)

_arguments -s $arguments
