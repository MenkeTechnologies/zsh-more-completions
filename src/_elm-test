#compdef elm-test

local arguments

arguments=(
  '--watch[run tests on file changes (default: false)]'
  '--seed[run with a specific fuzzer seed (default: random)]'
  '--fuzz[define how many times each fuzz-test should run (default:]'
  '--report[specify which format to use for reporting test results]'
  '--no-color[disable colored console output (setting FORCE_COLOR=0 also]'
  '--color[force colored console output (setting FORCE_COLOR to]'
  '--compiler[use a custom path to an Elm executable (default: elm)]'
  '--version[print version and exit]'
  {-h,--help}'[show help]'
  '*:filename:_files'
)

_arguments -s $arguments
