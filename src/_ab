#compdef ab

local arguments

arguments=(
  '-n[number of requests to perform]'
  '-c[number of multiple requests to make at a time]'
  '-t[seconds to max. to spend on benchmarking]'
  '-s[seconds to max. wait for each response]'
  '-b[size of TCP send/receive buffer, in bytes]'
  '-B[address to bind to when making outgoing connections]'
  '-p[file containing data to POST. Remember also to set -T]'
  '-u[file containing data to PUT. Remember also to set -T]'
  '-T[content-type header to use for POST/PUT data, eg.]'
  '-v[how much troubleshooting info to print]'
  '-w[print out results in HTML tables]'
  '-i[use HEAD instead of GET]'
  '-x[string to insert as table attributes]'
  '-y[string to insert as tr attributes]'
  '-z[string to insert as td or th attributes]'
  '-C[add cookie, eg. Apache=1234. (repeatable)]'
  '-H[add Arbitrary header line, eg. Accept-Encoding: gzip]'
  '-A[add Basic WWW Authentication, the attributes]'
  '-P[add Basic Proxy Authentication, the attributes]'
  '-X[proxyserver and port number to use]'
  '-V[print version number and exit]'
  '-k[use HTTP KeepAlive feature]'
  '-d[do not show percentiles served table.]'
  '-S[do not show confidence estimators and warnings.]'
  '-q[do not show progress when doing more than 150 requests]'
  '-l[accept variable document length (use this for dynamic pages)]'
  '-g[output collected data to gnuplot format file.]'
  '-e[output CSV file with percentages served]'
  '-r[dont exit on socket receive errors.]'
  '-m[method name]'
  '-h[display usage information (this message)]'
  '-I[disable TLS Server Name Indication (SNI) extension]'
  '-Z[specify SSL/TLS cipher suite (See openssl ciphers)]'
  '-f[specify SSL/TLS protocol]'
  '-E[specify optional client certificate chain and private key]'
  '*:filename:_files'
)

_arguments -s $arguments
