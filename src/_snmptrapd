#compdef snmptrapd

local arguments

arguments=(
  '-a[ignore authentication failure traps]'
  '-A[append to log file rather than truncating it]'
  '-c[read FILE as a configuration file]'
  '-C[do not read the default configuration files]'
  '-d[dump sent and received SNMP packets]'
  '-D[...\]\] turn on debugging output for the specified TOKENs]'
  '-f[do not fork from the shell]'
  '-F[use specified format for logging to standard error]'
  '-g[change to this numeric gid after opening]'
  '(- * :)'{-h,--help}'[display this usage message]'
  '-H[display configuration file directives understood]'
  '-m[use MIBLIST instead of the default MIB list]'
  '-M[use DIRLIST as the list of locations]'
  '-n[use numeric addresses instead of attempting]'
  '-p[store process id in FILE]'
  '-t[prevent traps from being logged to syslog]'
  '-u[change to this uid (numeric or textual) after]'
  {-v,--version}'[display version information]'
  '-x[use ADDRESS as AgentX address]'
  '-O[toggle options controlling output display]'
  '-L[toggle options controlling where to log to]'
  '*:filename:_files'
)

_arguments -s $arguments
