#compdef texi2pdf

local arguments

arguments=(
  {-b,--batch}'[no interaction]'
  {-D,--debug}'[turn on shell debugging (set -x)]'
  '(- * :)'{-h,--help}'[display this help and exit successfully]'
  {-o,--output}'[leave output in OFILE; only one input FILE is allowed]'
  {-q,--quiet}'[no output unless errors (implies --batch)]'
  {-s,--silent}'[same as --quiet]'
  {-v,--version}'[display version information and exit successfully]'
  {-V,--verbose}'[report on what is done]'
  '--max-iterations[dont process files more than N times \[7\]]'
  '--mostly-clean[remove the auxiliary files and directories]'
  '--dvi[output a DVI file \[default\]]'
  '--dvipdf[output a PDF file via DVI (using a dvi-to-pdf program)]'
  '--html[output an HTML file from LaTeX, using HeVeA]'
  '--info[output an Info file from LaTeX, using HeVeA]'
  {-p,--pdf}'[use pdftex or pdflatex for processing]'
  '--ps[output a PostScript file via DVI (using dvips)]'
  '--text[output a plain text file from LaTeX, using HeVeA]'
  {-e,-E,--expand}'[force macro expansion using makeinfo]'
  '-I[search DIR for Texinfo files]'
  {-l,--language}'[specify LANG for FILE, either latex or texinfo]'
  '--no-line-error[do not pass --file-line-error to TeX]'
  '--shell-escape[pass --shell-escape to TeX]'
  '--src-specials[pass --src-specials to TeX]'
  {-t,--command}'[insert CMD in copy of input file]'
  '--translate-file[use given charset translation file for TeX]'
  '--build[specify the treatment of auxiliary files \[local\]]'
  '--tidy[same as --build=tidy]'
  {-c,--clean}'[same as --build=clean]'
  '--build-dir[specify where the tidy compilation is performed;]'
  '*:filename:_files'
)

_arguments -s $arguments
