#compdef javaws

local arguments

arguments=(
  '-verbose[display additional output]'
  '-offline[run the application in offline mode]'
  '-system[run the application from the system cache only]'
  '-Xnosplash[run without showing a splash screen]'
  '-J[supply option to the vm]:option:'
  '-wait[start java process and wait for its exit]'
  '-open[replace arguments in jnlp-file with -open <arg>]'
  '-print[replace arguments in jnlp-file with -print <arg>]'
  '-viewer[show the cache viewer in the java control panel]'
  '-userConfig[clear the specified deployment property]'
  '-userConfig[set the specified deployment property]:value:'
  '-clearcache[remove non-installed applications from the cache]'
  '-uninstall[remove all applications from the cache]'
  '-uninstall[remove the application from the cache]'
  '-import[import the application to the cache]:jnlp-file:'
  '-silent[import silently (with no user interface)]'
  '-system[import application into the system cache]'
  '-codebase[retrieve resources from the given codebase]'
  '-shortcut[install shortcuts as if user allowed prompt]'
  '-association[install associations as if user allowed prompt]'
  '*:filename:_files'
)

_arguments -s $arguments
