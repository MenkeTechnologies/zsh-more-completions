#compdef sg_format

local arguments

arguments=(
  '--cmplst[1]'
  '-C[1 sets CMPLST bit in format cdb (default: 1)]'
  '--count[COUNT number of blocks to report after format or]'
  '--dcrt[|-D disable certification (doesnt verify media)]'
  '--early[|-e exit once format started (user can monitor progress)]'
  '--fmtpinfo[FPI FMTPINFO field value (default: 0)]'
  '--format[|-F format unit (default: report current count and size)]'
  '--help[|-h prints out this usage message]'
  '--long[|-l allow for 64 bit lbas (default: assume 32 bit lbas)]'
  '--pfu[PFU Protection Field Usage value (default: 0)]'
  '--pie[PIE Protection Information Exponent (default: 0)]'
  '--pinfo[|-p set upper bit of FMTPINFO field]'
  '--poll[PT PT is poll type, 0 for test unit ready]'
  '--resize[|-r resize (rather than format) to COUNT value]'
  '--rto[_req|-R set lower bit of FMTPINFO field]'
  '--security[|-S set security initialization (SI) bit]'
  '--six[|-6 use 6 byte MODE SENSE/SELECT to probe disk]'
  '--size[SIZE bytes per block, defaults to DEVICEs current]'
  '--verbose[|-v increase verbosity]'
  '--version[|-V print version details and exit]'
  '--wait[|-w format command waits until format operation completes]'
  '*:filename:_files'
)

_arguments -s $arguments
