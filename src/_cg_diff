#compdef cg_diff

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show this message]'
  {-v,--version}'[show version]'
  '--mod-filename[a Perl search-and-replace expression that is applied]'
  '--mod-funcname[like --mod-filename, but applied to function names]'
  '*:filename:_files'
)

_arguments -s $arguments
