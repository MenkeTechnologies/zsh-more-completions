#compdef googlesearch

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show this help message and exit]'
  '--tld[top level domain to use \[default: com\]]'
  '--lang[produce results in the given language \[default: en\]]'
  '--domains[comma separated list of domains to constrain the search]'
  '--tbs[produce results from period \[default: 0\]]'
  '--safe[kids safe search \[default: off\]]'
  '--num[number of results per page \[default: 10\]]'
  '--start[first result to retrieve \[default: 0\]]'
  '--stop[last result to retrieve \[default: unlimited\]]'
  '--pause[pause between HTTP requests \[default: 2.0\]]'
  '--rua[randomize the User-Agent \[default: no\]]'
  '--all[grab all possible links from result pages \[default: only]'
  '*:filename:_files'
)

_arguments -s $arguments
