#compdef snapper

local arguments

arguments=(
  {--quiet,-q}'[suppress normal output.]'
  {--verbose,-v}'[increase verbosity.]'
  '--utc[display dates and times in UTC.]'
  '--iso[display dates and times in ISO format.]'
  {--table-style,-t}'[table style (integer).]'
  {--config,-c}'[set name of config to use.]'
  '--no-dbus[operate without DBus.]'
  {--root,-r}'[operate on target root (works only without DBus).]'
  '--version[print version and exit.]'
  {--fstype,-f}'[manually set filesystem type.]'
  {--template,-t}'[name of config template to use.]'
  {--type,-t}'[type of snapshots to list.]'
  {--all-configs,-a}'[list snapshots from all accessible configs.]'
  {--type,-t}'[type for snapshot.]'
  '--pre-number[number of corresponding pre snapshot.]'
  {--print-number,-p}'[print number of created snapshot.]'
  {--description,-d}'[description for snapshot.]'
  {--cleanup-algorithm,-c}'[cleanup algorithm for snapshot.]'
  {--userdata,-u}'[userdata for snapshot.]'
  '--command[run command and create pre and post snapshots.]'
  {--description,-d}'[description for snapshot.]'
  {--cleanup-algorithm,-c}'[cleanup algorithm for snapshot.]'
  {--userdata,-u}'[userdata for snapshot.]'
  {--sync,-s}'[sync after deletion.]'
  {--output,-o}'[save status to file.]'
  {--input,-i}'[read files to diff from file.]'
  '--diff-cmd[command used for comparing files.]'
  {--extensions,-x}'[extra options passed to the diff command.]'
  {--input,-i}'[read files for which to undo changes from file.]'
  {--print-number,-p}'[print number of second created snapshot.]'
  {--description,-d}'[description for snapshots.]'
  {--cleanup-algorithm,-c}'[cleanup algorithm for snapshots.]'
  {--userdata,-u}'[userdata for snapshots.]'
  '*:filename:_files'
)

_arguments -s $arguments
