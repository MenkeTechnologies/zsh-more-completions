#compdef systemd-run

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show this help]'
  '--version[show package version]'
  '--no-ask-password[do not prompt for password]'
  '--user[run as user unit]'
  {-H,--host}'[@\]HOST Operate on remote host]'
  {-M,--machine}'[operate on local container]'
  '--scope[run this as scope rather than service]'
  '--unit[run under the specified unit name]'
  {-p,--property}'[VALUE Set service or scope unit property]'
  '--description[description for unit]'
  '--slice[run in the specified slice]'
  '--no-block[do not wait until operation finished]'
  {-r,--remain-after-exit}'[leave service around until explicitly stopped]'
  '--wait[wait until service stopped again]'
  '--send-sighup[send SIGHUP when terminating]'
  '--service-type[service type]'
  '--uid[run as system user]'
  '--gid[run as system group]'
  '--nice[nice level]'
  {-E,--setenv}'[VALUE Set environment]'
  {-t,--pty}'[run service on pseudo tty]'
  {-q,--quiet}'[suppress information messages during runtime]'
  '--on-active[run after SECONDS delay]'
  '--on-boot[run SECONDS after machine was booted up]'
  '--on-startup[run SECONDS after systemd activation]'
  '--on-unit-active[run SECONDS after the last activation]'
  '--on-unit-inactive[run SECONDS after the last deactivation]'
  '--on-calendar[realtime timer]'
  '--timer-property[VALUE Set timer unit property]'
  '*:filename:_files'
)

_arguments -s $arguments
