#compdef dvdisaster

local arguments

arguments=(
  {-d,--device}'[read from given device (default: (null))]'
  {-p,--prefix}'[prefix of .iso/.ecc file (default: medium.* )]'
  {-i,--image}'[imagefile - name of image file (default: medium.iso)]'
  {-e,--ecc}'[eccfile - name of parity file (default: medium.ecc)]'
  {-o,--ecc-target}'[image\] - where to put ecc data in RS03]'
  {-a,--assume}'[y,... - assume image is augmented with codec(s) x,y,...]'
  {-j,--jump}'[jump n sectors forward after a read error (default: 16)]'
  '-m[list/select error correction methods (default: RS01)]'
  {-n,--redundancy}'[% - error correction data redundancy]'
  {-v,--verbose}'[more diagnostic messages]'
  {-x,--threads}'[use n threads for en-/decoding (if supported by codec)]'
  '--adaptive-read[use optimized strategy for reading damaged media]'
  '--auto-suffix[automatically add .iso and .ecc file suffixes]'
  '--cache-size[image cache size in MiB during -c mode (default: 32MiB)]'
  '--dao[assume DAO disc; do not trim image end]'
  '--defective-dump[directory for saving incomplete raw sectors]'
  '--driver[/cdrom - use sg(default) or alternative cdrom driver (see man page!)]'
  '--eject[eject medium after successful read]'
  '--encoding-algorithm[possible values: 32bit,64bit,SSE2,AltiVec]'
  '--encoding-io-strategy[possible values: readwrite, mmap]'
  '--fill-unreadable[fill unreadable sectors with byte n]'
  '--ignore-fatal-sense[continue reading after potentially fatal error conditon]'
  '--ignore-iso-size[ignore image size from ISO/UDF data (dangerous - see man page!)]'
  '--internal-rereads[drive may attempt n rereads before reporting an error]'
  '--medium-info[print info about medium in drive]'
  '--old-ds-marker[mark missing sectors compatible with dvdisaster <= 0.70]'
  '--prefetch-sectors[prefetch n sectors for RS03 encoding (uses ~nMiB)]'
  '--raw-mode[mode for raw reading CD media (20 or 21)]'
  '--read-attempts[attempts n up to m reads of a defective sector]'
  '--read-medium[read the whole medium up to n times]'
  '--read-raw[performs read in raw mode if possible]'
  '--resource-file[get resource file from given path]'
  '--speed-warning[print warning if speed changes by more than n percent]'
  '--spinup-delay[wait n seconds for drive to spin up]'
  '*:filename:_files'
)

_arguments -s $arguments
