#compdef wifiarp

local arguments

arguments=(
  '-b[specify BSSID for injection]'
  '-s[specify source MAC address for 802.11 and ARP headers]'
  '-o[specify interface for injection (default: ath0)]'
  '-w[WEP mode and key]'
  '-k[id> WEP key id (default: 0)]'
  '-d[activate debug]'
  '-v[verbose debugging]'
  '-h[this so helpful output]'
  '*:filename:_files'
)

_arguments -s $arguments
