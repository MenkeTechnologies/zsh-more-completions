#compdef oid2name

local arguments

arguments=(
  '-d[database to connect to]'
  '-f[show info for table with given file node]'
  '-H[database server host or socket directory]'
  '-i[show indexes and sequences too]'
  '-o[show info for table with given OID]'
  '-p[database server port number]'
  '-q[quiet (dont show headers)]'
  '-s[show all tablespaces]'
  '-S[show system objects too]'
  '-t[show info for named table]'
  '-U[connect as specified database user]'
  {-V,--version}'[output version information, then exit]'
  '-x[extended (show additional columns)]'
  '*:filename:_files'
)

_arguments -s $arguments
