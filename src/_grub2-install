#compdef grub2-install

local arguments

arguments=(
  '--compress[xz,gz,lzo\] compress GRUB files \[optional\]]'
  {-d,--directory}'[use images and modules under DIR]'
  '--fonts[install FONTS \[default=unicode\]]'
  '--install-modules[install only MODULES and their dependencies]'
  {-k,--pubkey}'[embed FILE as public key for signature checking]'
  '--locale-directory[use translations under DIR]'
  '--locales[install only LOCALES \[default=all\]]'
  '--modules[pre-load specified modules MODULES]'
  '--themes[install THEMES \[default=starfield\]]'
  {-v,--verbose}'[print verbose messages.]'
  '--allow-floppy[make the drive also bootable as floppy (default]'
  '--boot-directory[install GRUB images under the directory DIR/grub2]'
  '--bootloader-id[the ID of bootloader. This option is only]'
  '--core-compress[choose the compression to use for core image]'
  '--disk-module[disk module to use (biosdisk or native). This]'
  '--efi-directory[use DIR as the EFI System Partition root.]'
  '--force[install even if problems are detected]'
  '--force-file-id[use identifier file even if UUID is available]'
  '--label-bgcolor[use COLOR for label background]'
  '--label-color[use COLOR for label]'
  '--label-font[use FILE as font for label]'
  '--macppc-directory[use DIR for PPC MAC install.]'
  '--no-bootsector[do not install bootsector]'
  '--no-nvram[dont update the `boot-device/`Boot* NVRAM]'
  '--no-rs-codes[do not apply any reed-solomon codes when]'
  '--product-version[use STRING as product version]'
  '--recheck[delete device map if it already exists]'
  '--removable[the installation device is removable. This option]'
  {-s,--skip-fs-probe}'[do not probe for filesystems in DEVICE]'
  '--target[install GRUB for TARGET platform]'
  '--usage[give a short usage message]'
  {-V,--version}'[print program version]'
  '*:filename:_files'
)

_arguments -s $arguments
