#compdef rpcinfo

local arguments

arguments=(
  '--transp[(-T) netid        Use the netid as the transport to use]'
  '--ping-uaddr[(-a) uaddr        ping the universal address over transport specified with -T]'
  '--broadcast[(-b)              Send a broadcast over IPv4, multicast over IPv6 for the given program and version]'
  '--delete[(-d)              Delete registrations for transport. If no transport, delete all]'
  '--h[(-h)              Short help message]'
  '--list[(-l)              list program and version on host over optional netid]'
  '--metrics[(-m)              Print the metrics of rpcbind for host.]'
  '--portnum[(-n) portnum      For the -u and -t options use portnum on host to send ping]'
  '--portmap[(-p)              Dump the list of register programs using the portmapper (vers 2) for the given host]'
  '--summary[(-s)              Print a summary of all programs running on host]'
  '--tcpping[(-t)              Use portmap to ping host for program over tcp]'
  '--udpping[(-u)              Use portmap to ping host for program over udp]'
  '--rpcbvers[version      Use version of the rpcbind protocol if appropriate]'
  '--indirect[make an indirect call]'
  '--help[list long help]'
  '--getaddr[look up address for program and version on host]'
  '--getversaddr[look up address for program and exactly for version on host]'
  '--time[get time from host]'
  '--timeout[secs         Set timeout for client calls]'
  '*:filename:_files'
)

_arguments -s $arguments
