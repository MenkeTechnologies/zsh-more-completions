#compdef tidy_changelog

local arguments

arguments=(
  '--next[if provided, assumes that there is a placeholder header for an upcoming]'
  '--token[regular expression to use to detect the token for an upcoming release if]'
  '--headers[if given, only print out the release header lines, without any of the]'
  '--reverse[prints the releases in reverse order (from the oldest to latest).]'
  '--check[only check if the changelog is formatted properly using the]'
  '--help[this help]'
  '*:filename:_files'
)

_arguments -s $arguments
