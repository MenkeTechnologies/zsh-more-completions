#compdef encryptcli

local arguments

arguments=(
  '-e[|--encrypt          encrypt data]'
  '-d[|--decrypt          decrypt data]'
  '--generate-key[generate key file]'
  '--help[this help]'
  '-o[|--output                           output file (default: stdout)]'
  '-f[|--force                            overwrite output file]'
  '--key-file[key file]'
  '--key-only[key only, no passphrase]'
  '--persist-key[persist key location in the encrypted file]'
  '--key-pwd-fd[file descriptor from which to read the key file passphrase]'
  '--key-pwd-file[file with key passphrase]'
  '--libcurl-path[path to libcurl executable to download a remote key file]'
  '--force-key-pwd[force key passphrase entry]'
  '--plain-text-key[plain text key (not recommended)]'
  '--pwd-fd[passphrase file descriptor]'
  '--pwd-file[file with passphrase]'
  '--cipher-algo[cipher algorithm (CAST5, AES, AES256, 3DES; default: AES256)]'
  '--compress-algo[compression algorithm (ZIP, ZLIB, NONE; default: ZLIB)]'
  '--s2k-digest-algo[2k-digest-algo>   s2k digest algorithm (SHA1, SHA256; SHA512; default: SHA256)]'
  '--s2k-count[2k-count>               s2k iteration count]'
  '--key-file-length[key file random sequence length in bytes. Use with --generate-key. default: 64]'
  '*:filename:_files'
)

_arguments -s $arguments
