#compdef VBoxAudioTest

local arguments

arguments=(
  '--debug-audio[enables (DrvAudio) debugging]'
  '--debug-audio-path[tells DrvAudio where to put its debug output (wav-files)]'
  {-q,--quiet}'[sets verbosity to zero]'
  {-v,--verbose}'[increase verbosity]'
  {-V,--version}'[displays version]'
  '-h[-?, --help]'
  {-b,--backend}'[the audio backend to use]'
  {-d,--drvaudio}'[go via DrvAudio instead of directly interfacing with the backend]'
  {-e,--exclude}'[exclude the given test id from the list]'
  {-a,--exclude-all}'[exclude all tests from the list (useful to enable single tests later with --include)]'
  '--guest-ats-addr[address of guest ATS to connect to]'
  '--guest-ats-port[port of guest ATS to connect to (needs NAT port forwarding)]'
  '--host-ats-address[address of host ATS to connect to]'
  '--host-ats-port[port of host ATS to connect to]'
  {-i,--include}'[include the given test id in the list]'
  '--outdir[output directory to use]'
  '--count[number of test iterations to perform for selected tests]'
  '--device[name of the input/output device to use]'
  '--pause[not yet implemented]'
  '--pcm-bit[PCM sample bits (i.e. 16) to use]'
  '--pcm-chan[PCM channels to use]'
  '--pcm-hz[PCM Hertz (Hz) rate to use]'
  '--pcm-signed[PCM samples to use (signed = true, unsigned = false)]'
  '--probe-backends[probes all (available) backends until a working one is found]'
  '--mode[test mode to use when running the tests]'
  '--no-audio-ok[enables running without any found audio hardware (e.g. servers)]'
  '--no-verify[skips the verification step]'
  '--tag[test set tag to use]'
  '--tempdir[temporary directory to use]'
  '--vol[audio volume (percent) to use]'
  '--tcp-bind-addr[TCP address listening to (server mode)]'
  '--tcp-bind-port[TCP port listening to (server mode)]'
  '--tcp-connect-addr[TCP address to connect to (client mode)]'
  '--tcp-connect-port[TCP port to connect to (client mode)]'
  '--tone-duration[test tone duration to play / record (ms)]'
  '--tone-vol[test tone volume (percent)]'
  '--tcp-conn-mode[0=both|1=client|2=server>]'
  '--tcp-bind-addr[<address>]'
  '--tcp-bind-port[the port to listen to TCP connections on]'
  '--tcp-connect-addr[<address>]'
  '--tcp-connect-port[the port on the server to connect to in client mode]'
  '--max-diff-count[specifies the maximum number of differences]'
  '--max-diff-percent[specifies the maximum difference (percent)]'
  '--max-size-percent[specifies the maximum size difference (percent)]'
  '--normalize[enables / disables audio data normalization]'
  {-b,--backend}'[the audio backend to use]'
  '--probe-backends[probes all (available) backends until a working one is found]'
  {-b,--backend}'[the audio backend to use]'
  {-c,--channels}'[number of backend output channels]'
  {-f,--hz}'[output frequency (Hz)]'
  {-f,--frequency}'[output frequency (Hz)]'
  {-z,--sample-size}'[output sample size (bits)]'
  {-t,--test-tone}'[plays a test tone. Can be specified multiple times]'
  '--tone-dur[test tone duration (ms)]'
  '--tone-freq[test tone frequency (Hz)]'
  '--tone-vol[test tone volume (percent)]'
  {-o,--output-device}'[the ID of the output device to use]'
  {-d,--with-drv-audio}'[go via DrvAudio instead of directly interfacing with the backend]'
  {-m,--with-mixer}'[go via the mixer]'
  '--vol[playback volume (percent)]'
  {-b,--backend}'[the audio backend to use.]'
  {-c,--channels}'[number of backend input channels]'
  {-f,--hz}'[input frequency (Hz)]'
  {-f,--frequency}'[input frequency (Hz)]'
  {-z,--sample-size}'[input sample size (bits)]'
  {-i,--input-device}'[the ID of the input device to use.]'
  {-C,--wav-channels}'[number of wave-file channels]'
  {-F,--wav-hz}'[wave-file frequency (Hz)]'
  {-F,--wav-frequency}'[wave-file frequency (Hz)]'
  {-Z,--wav-sample-size}'[wave-file sample size (bits)]'
  {-d,--with-drv-audio}'[go via DrvAudio instead of directly interfacing with the backend.]'
  {-m,--with-mixer}'[go via the mixer.]'
  {-r,--max-frames}'[max recording duration in frames.]'
  {-s,--max-sec}'[max recording duration in seconds.]'
  {-s,--max-seconds}'[max recording duration in seconds.]'
  {-t,--max-ms}'[max recording duration in milliseconds.]'
  {-t,--max-milliseconds}'[max recording duration in milliseconds.]'
  {-T,--max-ns}'[max recording duration in nanoseconds.]'
  {-T,--max-nanoseconds}'[max recording duration in nanoseconds.]'
  {-a,--exclude-all}'[exclude all tests from the list (useful to enable single tests later with --include)]'
  {-b,--backend}'[the audio backend to use]'
  {-d,--with-drv-audio}'[go via DrvAudio instead of directly interfacing with the backend]'
  {-m,--with-mixer}'[use the internal mixing engine explicitly]'
  {-e,--exclude}'[exclude the given test id from the list]'
  {-i,--include}'[include the given test id in the list]'
  '--tcp-conn-mode[0=both|1=client|2=server>]'
  '--tcp-bind-addr[<address>]'
  '--tcp-bind-port[the port to listen to TCP connections on]'
  '--tcp-connect-addr[<address>]'
  '--tcp-connect-port[the port on the server to connect to in client mode]'
  '*:filename:_files'
)

