#compdef tcpstat

local arguments

arguments=(
  '-a[accounting mode]'
  '-b[bandwidth mode, where bps is bits/second]'
  '-B[dumb bandwidth mode, where bps is bits/second]'
  '-e[do not print empty intervals]'
  '-F[flush stdout after printing each line]'
  '-f[expr - packet filter expression (like in tcpdump)]'
  '-i[do live capture on \[interface\], not from file]'
  '-l[include linklayer in packet size calc]'
  '-o[format for the output of stats (see manpage)]'
  '-p[non-promiscuous mode when doing live capture]'
  '-R[display time relative to \[seconds\]]'
  '-r[read data from \[filename\]]'
  '-s[capture only \[seconds\] long (-1 is infinite)]'
  '*:filename:_files'
)

_arguments -s $arguments
