#compdef sox

local arguments

arguments=(
  {-d,--default-device}'[use the default audio device (where available)]'
  {-n,--null}'[use the `null file handler; e.g. with synth effect]'
  {-p,--sox-pipe}'[alias for `-t sox -]'
  '--buffer[set the size of all processing buffers (default 8192)]'
  '--clobber[dont prompt to overwrite output file (default)]'
  '--combine[concatenate all input files (default for sox, rec)]'
  '--combine[sequence all input files (default for play)]'
  {-D,--no-dither}'[dont dither automatically]'
  '--dft-min[minimum size (log2) for DFT processing (default 10)]'
  '--effects-file[file containing effects and options]'
  {-G,--guard}'[use temporary files to guard against clipping]'
  '(- * :)'{-h,--help}'[display version number and usage information]'
  '--help-effect[show usage of effect NAME, or NAME=all for all]'
  '--help-format[show info on format NAME, or NAME=all for all]'
  {--i,--info}'[behave as soxi(1)]'
  '--input-buffer[override the input buffer size (default: as --buffer)]'
  '--no-clobber[prompt to overwrite output file]'
  {-m,--combine}'[mix multiple input files (instead of concatenating)]'
  '--combine[mix to equal power (instead of concatenating)]'
  {-M,--combine}'[merge multiple input files (instead of concatenating)]'
  '--norm[guard (see --guard) & normalise]'
  '--play-rate-arg[default `rate argument for auto-resample with `play]'
  '--plot[generate script to plot response of filter effect]'
  {-q,--no-show-progress}'[run in quiet mode; opposite of -S]'
  '--replay-gain[default: off (sox, rec), track (play)]'
  '-R[use default random numbers (same on each run of SoX)]'
  {-S,--show-progress}'[display progress while processing audio data]'
  '--single-threaded[disable parallel effects channels processing]'
  '--temp[specify the directory to use for temporary files]'
  {-T,--combine}'[multiply samples of corresponding channels from all]'
  '--version[display version number of SoX and exit]'
  '-V[increment or set verbosity level (default 2); levels:]'
  '-v[|--volume FACTOR Input file volume adjustment factor (real number)]'
  '--ignore-length[ignore input file length given in header; read to EOF]'
  '-t[|--type FILETYPE File type of audio]'
  '-e[|--encoding ENCODING Set encoding (ENCODING may be one of signed-integer]'
  '-b[|--bits BITS Encoded sample size in bits]'
  '-N[|--reverse-nibbles Encoded nibble-order]'
  '-X[|--reverse-bits Encoded bit-order]'
  '--endian[encoded byte-order; swap means opposite to default]'
  '-L[/-B/-x Short options for the above]'
  '-c[|--channels CHANNELS Number of channels of audio data; e.g. 2 = stereo]'
  '-r[|--rate RATE Sample rate of audio]'
  '-C[|--compression FACTOR Compression factor for output format]'
  '--add-comment[append output file comment]'
  '--comment[specify comment text for the output file]'
  '--comment-file[file containing comment text for the output file]'
  '--no-glob[dont `glob wildcard match the following filename]'
  '*:filename:_files'
)

_arguments -s $arguments
