#compdef cdrwtool

local arguments

arguments=(
  '--help[help]'
  '-d[device]'
  '-s[set write parameters]'
  '-g[get write parameters]'
  '-b[blank cdrw disc]'
  '-m[format cdrw disc]'
  '-u[run mkudffs on track]'
  '-v[set mkudffs version]'
  '-t[set cd writing speed]'
  '-p[write fixed packets]'
  '-q[perform quick setup]'
  '-r[reserve track]'
  '-c[close track]'
  '-z[fixed packet size]'
  '-l[border/session setting]'
  '-w[write type]'
  '-f[file to write]'
  '-o[start at this lba for file write]'
  '-i[print detailed disc info]'
  '*:filename:_files'
)

_arguments -s $arguments
