#compdef densityscout

local arguments

arguments=(
  '-d[............. Just output data (Format: density|path)]'
  '-l[...... Just files with density lower than the given value]'
  '-g[...... Just files with density greater than the given value]'
  '-n[....... Maximum number of lines to print]'
  '-m[......... Mode ABS (default) or CHI (for filesize > 100 Kb)]'
  '-o[......... File to write output to]'
  '-p[...... Immediately print if lower than the given density]'
  '-P[...... Immediately print if greater than the given density]'
  '-r[............. Walk recursively]'
  '-s[(es) ... Filetype(s) (i.e.: dll or dll,exe,...)]'
  '-S[(es) ... Filetype(s) to ignore (i.e.: dll or dll,exe)]'
  '-pe[............ Include all portable executables by magic number]'
  '-PE[............ Ignore all portable executables by magic number]'
  '*:filename:_files'
)

_arguments -s $arguments
