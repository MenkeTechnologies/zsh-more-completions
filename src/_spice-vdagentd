#compdef spice-vdagentd

local arguments

arguments=(
  '-h[print this text]'
  '-d[log debug messages (use twice for extra info)]'
  '-s[set virtio serial port \[/dev/virtio-ports/com.redhat.spice.0\]]'
  '-u[set uinput device \[/dev/uinput\]]'
  '-x[dont daemonize]'
  '-X[disable systemd-logind integration]'
  '*:filename:_files'
)

_arguments -s $arguments
