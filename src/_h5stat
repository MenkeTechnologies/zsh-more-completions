#compdef h5stat

local arguments

arguments=(
  '(- * :)'{-h,--help}'[print a usage message and exit]'
  {-V,--version}'[print version number and exit]'
  {-f,--file}'[print file information]'
  {-F,--filemetadata}'[print file space information for files metadata]'
  {-g,--group}'[print group information]'
  {-l,--links}'[set the threshold for the # of links when printing]'
  {-G,--groupmetadata}'[print file space information for groups metadata]'
  {-d,--dset}'[print dataset information]'
  {-m,--dims}'[set the threshold for the dimension sizes when printing]'
  {-D,--dsetmetadata}'[print file space information for datasets metadata]'
  {-T,--dtypemetadata}'[print datasets datatype information]'
  {-A,--attribute}'[print attribute information]'
  {-a,--numattrs}'[set the threshold for the # of attributes when printing]'
  {-S,--summary}'[print summary of file space information]'
  '*:filename:_files'
)

_arguments -s $arguments
