#compdef editcap

local arguments

arguments=(
  '-r[keep the selected packets; default is to delete them.]'
  '-A[time> only output packets whose timestamp is after (or equal]'
  '-B[time> only output packets whose timestamp is before the]'
  '--novlan[remove vlan info from packets before checking for duplicates.]'
  '-d[remove packet if duplicate (window == 5).]'
  '-D[window> remove packet if duplicate; configurable <dup window>.]'
  '-w[time window> remove packet if duplicate packet is found EQUAL TO OR]'
  '-a[add or replace comment for given frame number]'
  '-I[to ignore> ignore the specified number of bytes at the beginning]'
  '-s[truncate each packet to max. <snaplen> bytes of data.]'
  '-C[chop each packet by <choplen> bytes. Positive values]'
  '-L[adjust the frame (i.e. reported) length when chopping]'
  '-t[adjustment> adjust the timestamp of each packet.]'
  '-S[adjustment> adjust timestamp of packets if necessary to ensure]'
  '-E[probability> set the probability (between 0.0 and 1.0 incl.) that]'
  '-o[offset> When used in conjunction with -E, skip some bytes from the]'
  '-c[per file> split the packet output to different files based on]'
  '-i[per file> split the packet output to different files based on]'
  '-F[type> set the output file type; default is pcapng. An empty]'
  '-T[type> set the output file encapsulation type; default is the]'
  '-h[display this help and exit.]'
  '-v[verbose output.]'
  '*:filename:_files'
)

_arguments -s $arguments
