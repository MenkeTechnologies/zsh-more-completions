#compdef auditctl

local arguments

arguments=(
  '-a[a> Append rule to end of <l>ist with <a>ction]'
  '-A[a> Add rule at beginning of <l>ist with <a>ction]'
  '-b[set max number of outstanding audit buffers]'
  '-c[continue through errors in rules]'
  '-C[f Compare collected fields if available:]'
  '-d[a> Delete rule from <l>ist with <a>ction]'
  '-D[delete all rules and watches]'
  '-e[0..2\] Set enabled flag]'
  '-f[0..2\] Set failure flag]'
  '-F[v Build rule: field name, operator(=,!=,<,>,<]'
  '-h[help]'
  '-i[ignore errors when reading rules from file]'
  '-k[set filter key on audit rule]'
  '-l[list rules]'
  '-m[send a user-space message]'
  '-p[set permissions filter on watch]'
  '-q[subtree> make subtree part of mount points dir watches]'
  '-r[set limit in messages/sec (0=none)]'
  '-R[read rules from file]'
  '-s[report status]'
  '-S[build rule: syscall name or number]'
  '-t[trim directory watches]'
  '-v[version]'
  '-w[insert watch at <path>]'
  '-W[remove watch at <path>]'
  '--loginuid-immutable[make loginuids unchangeable once set]'
  '--reset-lost[reset the lost record counter]'
  '*:filename:_files'
)

_arguments -s $arguments
