#compdef hcxpioff

local arguments

arguments=(
  '-h[show this help]'
  '-v[show version]'
  '--gpio[_button=<digit> : Raspberry Pi GPIO pin number of button (2...27)]'
  '--gpio[_statusled=<digit> : Raspberry Pi GPIO number of status LED (2...27)]'
  '--help[show this help]'
  '--version[show version]'
  '*:filename:_files'
)

_arguments -s $arguments
