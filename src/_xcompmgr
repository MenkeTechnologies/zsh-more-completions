#compdef xcompmgr

local arguments

arguments=(
  '-d[specifies which display should be managed.]'
  '-r[specifies the blur radius for client-side shadows. (default 12)]'
  '-o[specifies the translucency for client-side shadows. (default .75)]'
  '-l[specifies the left offset for client-side shadows. (default -15)]'
  '-t[specifies the top offset for clinet-side shadows. (default -15)]'
  '-I[specifies the opacity change between steps while fading in. (default 0.028)]'
  '-O[specifies the opacity change between steps while fading out. (default 0.03)]'
  '-D[specifies the time between steps in a fade in milliseconds. (default 10)]'
  '-a[use automatic server-side compositing. Faster, but no special effects.]'
  '-c[draw client-side shadows with fuzzy edges.]'
  '-C[avoid drawing shadows on dock/panel windows.]'
  '-f[fade windows in/out when opening/closing.]'
  '-F[fade windows during opacity changes.]'
  '-n[normal client-side compositing with transparency support]'
  '-s[draw server-side shadows with sharp edges.]'
  '-S[enable synchronous operation (for debugging).]'
  '*:filename:_files'
)

_arguments -s $arguments
