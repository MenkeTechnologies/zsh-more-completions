#compdef sss_cache

local arguments

arguments=(
  {-E,--everything}'[invalidate all cached entries]'
  {-u,--user}'[invalidate particular user]'
  {-U,--users}'[invalidate all users]'
  {-g,--group}'[invalidate particular group]'
  {-G,--groups}'[invalidate all groups]'
  {-n,--netgroup}'[invalidate particular netgroup]'
  {-N,--netgroups}'[invalidate all netgroups]'
  {-s,--service}'[invalidate particular service]'
  {-S,--services}'[invalidate all services]'
  {-a,--autofs-map}'[invalidate particular autofs map]'
  {-A,--autofs-maps}'[invalidate all autofs maps]'
  {-h,--ssh-host}'[invalidate particular SSH host]'
  {-H,--ssh-hosts}'[invalidate all SSH hosts]'
  {-r,--sudo-rule}'[invalidate particular sudo rule]'
  {-R,--sudo-rules}'[invalidate all cached sudo rules]'
  {-d,--domain}'[only invalidate entries from a particular domain]'
  '--usage[display brief usage message]'
  '*:filename:_files'
)

_arguments -s $arguments
