#compdef emacsclient

local arguments

arguments=(
  {-V,--version}'[just print version info and return]'
  {-H,--help}'[print this usage information message]'
  {-nw,-t,--tty}'[open a new Emacs frame on the current terminal]'
  {-c,--create-frame}'[create a new frame instead of trying to]'
  {-F,--frame-parameters}'[set the parameters of a new frame]'
  {-e,--eval}'[evaluate the FILE arguments as ELisp expressions]'
  {-n,--no-wait}'[dont wait for the server to return]'
  {-q,--quiet}'[dont display messages on success]'
  {-u,--suppress-output}'[dont display return values from the server]'
  {-d,--display}'[visit the file in the given display]'
  '--parent-id[open in parent window ID, via XEmbed]'
  {-s,--socket-name}'[set filename of the UNIX socket for communication]'
  {-f,--server-file}'[set filename of the TCP authentication file]'
  {-a,--alternate-editor}'[editor to fallback to if the server is not running]'
  {-T,--tramp}'[PREFIX to prepend to filenames sent by emacsclient]'
  '*:filename:_files'
)

_arguments -s $arguments
