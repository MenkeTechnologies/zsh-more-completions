#compdef btpand

local arguments

arguments=(
  '-a[remote bluetooth device]'
  '-c[SDP server socket]'
  '-d[local bluetooth device]'
  '-i[tap interface]'
  '-l[limit server sessions]'
  '-m[L2CAP link mode (NOT YET SUPPORTED)]'
  '-p[L2CAP PSM]'
  '-S[service name (no SDP)]'
  '-s[service name]'
  '*:filename:_files'
)

_arguments -s $arguments
