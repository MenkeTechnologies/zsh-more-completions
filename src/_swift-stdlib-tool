#compdef swift-stdlib-tool

local arguments

arguments=(
  '--verbose[print progress.]'
  {--verbose,--verbose}'[print debugging details.]'
  '--help[print usage.]'
  '--scan-executable[scan the executable at <path> for references to Swift libraries.]'
  '--scan-folder[scan any executables inside <path> for references to Swift libraries.]'
  '--platform[use the Swift libraries for <platform>.]'
  '--source-libraries[search <path> for Swift libraries.]'
  '--destination[copy Swift libraries into <path>.]'
  '--unsigned-destination[copy Swift libraries into <path> without signing them.]'
  '--sign[sign copied Swift libraries using <identity>.]'
  '--keychain[search <keychain> for the code signing identity.]'
  '--Xcodesign[pass <option> to the codesign tool.]'
  '--strip-bitcode[remove embedded bitcode from libraries copied to --destination.]'
  '--resource-library[copy <library> and its dependencies as resources without signing]'
  '--resource-destination[the <path> to copy Swift resource libraries to.]'
  '*:filename:_files'
)

_arguments -s $arguments
