#compdef saslauthd

local arguments

arguments=(
  '-a[selects the authentication mechanism to use.]'
  '-c[enable credential caching.]'
  '-d[debugging (dont detach from tty, implies -V)]'
  '-r[combine the realm with the login before passing to authentication mechanism]'
  '-O[optional argument to pass to the authentication]'
  '-l[disable accept() locking. Increases performance, but]'
  '-m[alternate path for the saslauthd working directory]'
  '-n[number of worker processes to create.]'
  '-s[size of the credential cache (in kilobytes)]'
  '-t[timeout for items in the credential cache (in seconds)]'
  '-v[display version information and available mechs]'
  '-V[enable verbose logging]'
  '-h[display this message.]'
  '*:filename:_files'
)

_arguments -s $arguments
