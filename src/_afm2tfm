#compdef afm2tfm

local arguments

arguments=(
  '-a[omit heuristic adjustment of heights for accents]'
  '-c[use REAL for height of small caps made with -V \[0.8\]]'
  '-e[widen (extend) characters by a factor of REAL]'
  '-O[use octal for all character codes in the vpl file]'
  '-p[read/download ENCFILE for the PostScript encoding]'
  '-s[oblique (slant) characters by REAL, generally <<1]'
  '-t[read ENCFILE for the encoding of the vpl file]'
  '-T[equivalent to -p ENCFILE -t ENCFILE]'
  '-u[output only characters from encodings, nothing extra]'
  '-v[.vpl\] make a VPL file for conversion to VF]'
  '-V[.vpl\] like -v, but synthesize smallcaps as lowercase]'
  '--help[print this message and exit.]'
  '--version[print version number and exit.]'
  '*:filename:_files'
)

_arguments -s $arguments
