#compdef ifparse

local arguments

arguments=(
  {-h,--help}'[this help]'
  {-V,--version}'[show this programs version]'
  {-a,--auto}'[only match against interfaces hinted as auto]'
  {-I,--include}'[only match against interfaces matching PATTERN]'
  {-X,--exclude}'[never match against interfaces matching PATTERN]'
  {-f,--force}'[force (de)configuration]'
  {-i,--interfaces}'[use FILE for interface definitions]'
  {-l,--no-lock}'[do not use a lockfile to serialize state changes]'
  {-n,--no-act}'[do not actually run any commands]'
  {-v,--verbose}'[show what commands are being run]'
  {-E,--executor-path}'[use PATH for executor directory]'
  {-S,--state-file}'[use FILE for state]'
  {-F,--format}'[output format to use]'
  {-A,--all}'[show all interfaces]'
  {-U,--allow-undefined}'[allow querying undefined (virtual) interfaces]'
  '*:filename:_files'
)

_arguments -s $arguments
