#compdef tracker-tag

local arguments

arguments=(
  {-t,--list}'[list all tags. Results include the number of files associated with that tag]'
  {-s,--show-files}'[show the files associated with each tag. This option is ONLY available WITH]'
  {-a,--add}'[add a tag with the name TAG. If no FILE arguments are specified, the tag is]'
  {-d,--delete}'[delete a tag with the name TAG. If no FILE arguments are specified, the tag]'
  {-e,--description}'[this option ONLY applies when using --add and provides a description to go]'
  {-l,--limit}'[limit search to N results. The default is 512.]'
  {-o,--offset}'[offset the search results by N. For example, start at item number 10 in the]'
  {-r,--and-operator}'[use AND operator for search terms instead of OR (the default). For example:]'
  '*:filename:_files'
)

_arguments -s $arguments
