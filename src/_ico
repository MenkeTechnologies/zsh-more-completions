#compdef ico

local arguments

arguments=(
  '-display[X server to use]'
  '-geometry[geometry of window to use]'
  '-size[size of object to rotate]'
  '-delta[+Y amount by which to move object]'
  '-r[draw in the root window]'
  '-d[dashed line pattern for wire frames]'
  '-bg[background color]'
  '-colors[... codes to use on sides]'
  '-p[# use # (1 through 8) primary colors]'
  '-dbl[use double buffering (software only)]'
  '-softdbl[use software double buffering]'
  '-noedges[dont draw wire frame edges]'
  '-faces[draw faces]'
  '-copy[use multibuffer update action Copied]'
  '-untouched[use multibuffer update action Untouched]'
  '-undefined[use multibuffer update action Undefined]'
  '-lw[line width to use]'
  '-i[invert]'
  '-sleep[seconds to sleep in between draws]'
  '-obj[type of polyhedral object to draw]'
  '-objhelp[list polyhedral objects available]'
  '-threads[number of windows, each its own thread]'
  '-version[print program version]'
  '*:filename:_files'
)

_arguments -s $arguments
