#compdef klist

local arguments

arguments=(
  {-c,--cache}'[credential cache to list]'
  '-f[list flags]'
  {-t,--test}'[test for having tickets]'
  {-T,--tokens}'[display AFS tokens]'
  {-5,--v5}'[display v5 credential tokens]'
  {-A,--all-content}'[list all caches with their content]'
  {-l,--list-all}'[list all caches]'
  {-v,--verbose}'[verbose output]'
  '--json[JSON formated output]'
  '--hidden[verbose output]'
  '*:filename:_files'
)

_arguments -s $arguments
