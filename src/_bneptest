#compdef bneptest

local arguments

arguments=(
  '-i[dev number <hci number>, def. 0]'
  '-b[name <string>]'
  '-n[name <string>]'
  '-c[<dst_addr>]'
  '-r[role <16 bit svc value>]'
  '-l[role <16 bit svc valu>]'
  '-s[server listening]'
  '-t[message type <control msg type>, def. 0]'
  '-e[network protocol type range <16 bit val>, def. 0]'
  '-d[network protocol type range <16 bit val>, def. 1500]'
  '-g[multicast addr range <xx:xx:xx:xx:xx:xx>, def. 0]'
  '-j[multicast addr range <xx:xx:xx:xx:xx:xx>, def. f]'
  '-y[of ctrl frame retransmission <integer>, def. 0]'
  '-u[of bnep frame retransmission <integer>, def. 0]'
  '-w[bnep generic frame <bnep generic type>, def. 0]'
  '-k[src mac addr <xx:xx:xx:xx:xx:xx>, def. 0]'
  '-f[dst mac addr <xx:xx:xx:xx:xx:xx>, def. 0]'
  '-T[message timeout after setup <seconds>]'
  '-N[t close bneptest after disconnect]'
  '*:filename:_files'
)

_arguments -s $arguments
