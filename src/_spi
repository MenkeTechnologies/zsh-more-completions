#compdef spi

local arguments

arguments=(
  '-f[the device (default is spigen0.0)]'
  '-d[the operation (r, w, or rw; default is rw)]'
  '-m[the mode (0, 1, 2, or 3)]'
  '-s[the maximum speed (default is 0, device default)]'
  '-c[the number of data bytes to transfer (default 0, i.e. none)]'
  '-C[command bytes to be sent, as 2 byte hexadecimal values]'
  '-L[LSB order on the SPI bus (default is MSB)]'
  '-i[information about the device]'
  '-A[ASCII for input/output as 2-digit hex values]'
  '-b[output format as binary (only valid with -A)]'
  '-v[output]'
  '-h[this message]'
  '*:filename:_files'
)

_arguments -s $arguments
