#compdef lefty

local arguments

arguments=(
  '-x[exit after processing the input file.]'
  '-e[parse and execute expression E.]'
  '-el[set error reporting level. (0)]'
  '-sd[how much of the stack to show if error is printed. (2)]'
  '-sb[how much of each function in the stack show if error is printed. (2)]'
  '-df[set default font.]'
  '-ps[specify a default file name for postscript files.]'
  '-V[print version.]'
  '*:filename:_files'
)

_arguments -s $arguments
