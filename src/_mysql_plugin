#compdef mysql_plugin

local arguments

arguments=(
  {-b,--basedir}'[the basedir for the server.]'
  {-d,--datadir}'[the datadir for the server.]'
  {-p,--plugin-dir}'[the plugin dir for the server.]'
  {-i,--plugin-ini}'[read plugin information from configuration file specified]'
  {-n,--no-defaults}'[do not read values from configuration file.]'
  {-P,--print-defaults}'[show default values from configuration file.]'
  {-m,--mysqld}'[path to mysqld executable. Example: /sbin/temp1/mysql/bin]'
  {-f,--my-print-defaults}'[path to my_print_defaults executable. Example:]'
  {-v,--verbose}'[more verbose output; you can use this multiple times to]'
  {-V,--version}'[output version information and exit.]'
  '*:filename:_files'
)

_arguments -s $arguments
