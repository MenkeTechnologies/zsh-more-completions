#compdef eslint

local arguments

arguments=(
  '--no-eslintrc[disable use of configuration from .eslintrc.*]'
  {-c,--config}'[use this configuration, overriding .eslintrc.* config options if present]'
  '--env[specify environments]'
  '--ext[specify JavaScript file extensions]'
  '--global[define global variables]'
  '--parser[specify the parser to be used]'
  '--parser-options[specify parser options]'
  '--resolve-plugins-relative-to[A folder where plugins should be resolved from, CWD by default]'
  '--rulesdir[use additional rules from this directory]'
  '--plugin[specify plugins]'
  '--rule[specify rules]'
  '--fix[automatically fix problems]'
  '--fix-dry-run[automatically fix problems without saving the changes to the file system]'
  '--fix-type[specify the types of fixes to apply (problem, suggestion, layout)]'
  '--ignore-path[specify path of ignore file]'
  '--no-ignore[disable use of ignore files and patterns]'
  '--ignore-pattern[pattern of files to ignore (in addition to those in .eslintignore)]'
  '--stdin[lint code provided on <STDIN> - default: false]'
  '--stdin-filename[specify filename to process STDIN as]'
  '--quiet[report errors only - default: false]'
  '--max-warnings[number of warnings to trigger nonzero exit code - default: -1]'
  {-o,--output-file}'[specify file to write report to]'
  {-f,--format}'[use a specific output format - default: stylish]'
  {--color,--no-color}'[force enabling/disabling of color]'
  '--no-inline-config[prevent comments from changing config or rules]'
  '--report-unused-disable-directives[adds reported errors for unused eslint-disable directives]'
  '--cache[only check changed files - default: false]'
  '--cache-file[path to the cache file. Deprecated: use --cache-location - default: .eslintcache]'
  '--cache-location[path to the cache file or directory]'
  '--cache-strategy[strategy to use for detecting changed files in the cache - either: metadata or content - default: metadata]'
  '--init[run config initialization wizard - default: false]'
  '--env-info[output execution environment information - default: false]'
  '--no-error-on-unmatched-pattern[prevent errors when pattern is unmatched]'
  '--debug[output debugging information]'
  '(- * :)'{-h,--help}'[show help]'
  {-v,--version}'[output the version number]'
  '--print-config[print the configuration for the given file]'
  '*:filename:_files'
)

_arguments -s $arguments
