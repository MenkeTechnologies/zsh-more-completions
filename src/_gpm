#compdef gpm

local arguments

arguments=(
  '-a[sets the acceleration (default 2)]'
  '-A[start with selection disabled (`aged)]'
  '-b[sets the baud rate (default 1200)]'
  '-B[allows changing the buttons (default 123)]'
  '-d[sets the delta value (default 25) (must be 2 or more)]'
  '-D[debug mode: dont auto-background]'
  '-g[sets the button (1-3) that is emulated by tapping on]'
  '-i[max time interval for multiple clicks (default 250)]'
  '-k[kill a running gpm, to start X with a busmouse]'
  '-l[loads the inword() LUT (default -a-zA-Z0-9_./À-ÖØ-öø-ÿ)]'
  '-m[sets mouse device]'
  '-M[enable multiple mice. Following options refer to]'
  '-o[decoder-specific options (e.g.: "dtr", "rts")]'
  '-p[draw the pointer while striking a selection]'
  '-q[quit after changing mouse behaviour]'
  '-r[sets the responsiveness (default 10)]'
  '-R[enter repeater mode. X should read /dev/gpmdata]'
  '-s[sets the sample rate (default 100)]'
  '-S[enable special commands (see man page)]'
  '-t[sets mouse type (default ms)]'
  '-T[test: read mouse, no clients]'
  '-v[print version and exit]'
  '*:filename:_files'
)

_arguments -s $arguments
