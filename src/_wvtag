#compdef wvtag

local arguments

arguments=(
  '--allow-huge-tags[allow tag data up to 16 MB (embedding > 1 MB is not]'
  '-c[extract cuesheet only to stdout]'
  '-cc[extract cuesheet file (.cue)]'
  {--clean,--clear}'[clean all items from tag (done first)]'
  '-d[" delete specified metadata item (text or binary)]'
  '(- * :)'{-h,--help}'[this help display]'
  '--import-id3[import ID3v2 tags from the trailer of DSF files only]'
  {-l,--list}'[list all tag items (done last)]'
  '--no-utf8-convert[dont recode passed tags from local encoding to]'
  '-q[quiet (keep console output to a minimum)]'
  {-v,--version}'[write the version to stdout]'
  '-w[" delete specified metadata item (text or binary)]'
  '-w[value" write specified text metadata to APEv2 tag]'
  '-w[@file.ext" write specified text metadata from file to APEv2]'
  '--write-binary-tag[@file.ext"]'
  '-x[" extract specified tag field only to stdout]'
  '-xx[file\]" extract specified tag field to file, optional]'
  '-y[yes to overwrite warning (use with caution!)]'
  '*:filename:_files'
)

_arguments -s $arguments
