#compdef virt-sparsify

local arguments

arguments=(
  '--check-tmpdir[...>         Check there is enough space in $TMPDIR]'
  {--color,--colors,--colour,--colours}'[use ANSI colour sequences even if not tty]'
  '--compress[compressed output format]'
  '--convert[format of output disk (default: same as input)]'
  '--echo-keys[dont turn off echo for passphrases]'
  '--format[format of input disk]'
  '--help[display brief help]'
  '--ignore[ignore filesystem]'
  {--in-place,--inplace}'[modify the disk image in-place]'
  '--keys-from-stdin[read passphrases from stdin]'
  '--machine-readable[make output machine readable]'
  '-o[add qemu-img options]'
  {-q,--quiet}'[dont print progress messages]'
  '--tmp[set temporary block device, directory or prebuilt file]'
  {-V,--version}'[display version and exit]'
  {-v,--verbose}'[enable libguestfs debugging messages]'
  '-x[enable tracing of libguestfs calls]'
  '--zero[zero filesystem]'
  '*:filename:_files'
)

_arguments -s $arguments
