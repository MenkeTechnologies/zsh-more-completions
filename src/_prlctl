#compdef prlctl

local arguments

arguments=(
  '--device-connect[]'
  '--device-disconnect[]'
  '--device-set[<<--enable | --disable> | <--connect | --disconnect>>]'
  '--device-del[\[--detach-only | --destroy-image | --destroy-image-force\]]'
  '--device-add[| cdrom | net | fdd | serial | parallel | sound | usb> \[Device options\]]'
  '--device-add[\[--image <image>\]]'
  {--device-add,--device}'[\[--iface <ide | scsi | sata | nvme>\] \[--passthr <yes | no>\] \[--position <n>\]]'
  '--device-add[{--device <name> | --image <image>}]'
  {--device-add,--image}'[\[--recreate\]]'
  '--device-add[\[--device <real_name>\]]'
  {--device-add,--type}'[| bridged | host-only>]'
  '--device-add[{--device <name> | --output <file>]'
  '--device-add[{--device <name> | --output <file>}]'
  {--device-add,--output,--input}'[]'
  '--device-add[shared folder options are:]'
  {--shf-host-add,--path}'[\[--mode <ro | rw>\]]'
  '--shf-host-del[]'
  '--shf-host-set[\[--mode <ro | rw>\] \[--path <path>\]]'
  '--shf-host-defined[| alldisks | home>]'
  '--shf-guest[| off>]'
  '--shf-guest-automount[| off>]'
  '*:filename:_files'
)

_arguments -s $arguments
