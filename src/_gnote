#compdef gnote

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show help options]'
  '--note-path[specify the path of the directory containing the notes.]'
  '--search[open the search all notes window with the search text.]'
  '--version[print version information.]'
  '--new-note[create and display a new note, with a optional title.]'
  '--open-note[/url Display the existing note matching title.]'
  '--start-here[display the Start Here note.]'
  '--highlight-search[search and highlight text in the opened note.]'
  '*:filename:_files'
)

_arguments -s $arguments
