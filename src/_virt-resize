#compdef virt-resize

local arguments

arguments=(
  '--align-first[align first partition (default: auto)]'
  '--alignment[set partition alignment (default: 128 sectors)]'
  {--color,--colors,--colour,--colours}'[use ANSI colour sequences even if not tty]'
  {-d,--debug}'[enable debugging messages]'
  '--delete[delete partition]'
  {-n,--dry-run,--dryrun}'[dont perform changes]'
  '--expand[expand partition]'
  '--format[format of input disk]'
  '--help[display brief help]'
  '--ignore[ignore partition]'
  {--lv-expand,--LV-expand,--lvexpand,--LVexpand}'[expand logical volume]'
  '--machine-readable[make output machine readable]'
  '--no-copy-boot-loader[dont copy boot loader]'
  '--no-expand-content[dont expand content]'
  '--no-extra-partition[dont create extra partition]'
  '--no-sparse[turn off sparse copying]'
  '--ntfsresize-force[force ntfsresize]'
  '--output-format[format of output disk]'
  {-q,--quiet}'[dont print progress messages]'
  '--resize[size>                Resize partition]'
  '--resize-force[size>          Forcefully resize partition]'
  '--shrink[shrink partition]'
  '--unknown-filesystems[behaviour on expand unknown filesystems (default: warn)]'
  {-V,--version}'[display version and exit]'
  {-v,--verbose}'[enable libguestfs debugging messages]'
  '-x[enable tracing of libguestfs calls]'
  '*:filename:_files'
)

_arguments -s $arguments
