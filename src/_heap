#compdef heap

local arguments

arguments=(
  '-s[/--sortBySize sort output by total size of class instances, rather than by count]'
  '-z[/--zones show output per-zone instead of an aggregated summary of all zones]'
  '--addresses[prints the addresses of matching objects found on the heap in ascending address order]'
  '--forkCorpse[generate a corpse fork from process and run heap on it]'
  '--guessNonObjects[try to identify non-object malloc nodes which are referenced by fields of other objects]'
  '--layouts[show the object layout for types matching the specified pattern]'
  '--noContent[do not show object content in -addresses mode]'
  '--showSizes[show distribution of each malloc size for each object, instead of summing and averaging]'
  '--sumObjectFields[accumulate those fields into the entry for that object]'
  '*:filename:_files'
)

_arguments -s $arguments
