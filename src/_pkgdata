#compdef pkgdata

local arguments

arguments=(
  {-O,--bldopt}'[the directory where the ICU is located (e.g. <ICUROOT> which contains the bin directory)]'
  {-m,--mode}'[specify the mode of building (see below; default: common)]'
  '(- * :)'{-h,--help}'[this usage text]'
  {-v,--verbose}'[make the output verbose]'
  {-c,--copyright}'[use the standard ICU copyright]'
  {-C,--comment}'[use a custom comment (instead of the copyright)]'
  {-d,--destdir}'[specify the destination directory for files]'
  {-F,--rebuild}'[force rebuilding of all data]'
  {-T,--tempdir}'[specify temporary dir (default: output dir)]'
  {-I,--install}'[install the data (specify target)]'
  {-s,--sourcedir}'[specify a custom source directory]'
  {-e,--entrypoint}'[specify a custom entrypoint name (default: short name)]'
  {-r,--revision}'[specify a version when packaging in dll or static mode]'
  {-f,--force-prefix}'[add package to all file names if not present]'
  {-L,--libname}'[library name to build (if different than package name)]'
  {-q,--quiet}'[quiet mode. (e.g. Do not output a readme file for static libraries)]'
  {-w,--without-assembly}'[build the data without assembly code]'
  {-z,--zos-pds-build}'[build PDS dataset (zOS build only)]'
  {-u,--windows-uwp-build}'[build for Universal Windows Platform (Windows build only)]'
  {-a,--windows-uwp-arm-build}'[set DLL machine type for UWP to target windows ARM (Windows UWP build only)]'
  '*:filename:_files'
)

_arguments -s $arguments
