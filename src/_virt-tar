#compdef virt-tar

local arguments

arguments=(
  '--help[display brief help.]'
  '--version[display version number and exit.]'
  '-c[]'
  '--connect[if using libvirt, connect to the given URI. If omitted, then we]'
  '--format[specify the format of disk images given on the command line. If this]'
  '-x[]'
  '--extract[]'
  '--download[]'
  '-u[]'
  '--upload[use -x to extract (download) a directory from a virtual machine to a]'
  '-z[]'
  '--gzip[specify that the input or output tarball is gzip-compressed.]'
  '*:filename:_files'
)

_arguments -s $arguments
