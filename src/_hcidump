#compdef hcidump

local arguments

arguments=(
  {-i,--device}'[HCI device]'
  {-l,--snap-len}'[snap len (in bytes)]'
  {-p,--psm}'[default PSM]'
  {-m,--manufacturer}'[default manufacturer]'
  {-w,--save-dump}'[save dump to a file]'
  {-r,--read-dump}'[read dump from a file]'
  {-t,--ts}'[display time stamps]'
  {-a,--ascii}'[dump data in ascii]'
  {-x,--hex}'[dump data in hex]'
  {-X,--ext}'[dump data in hex and ascii]'
  {-R,--raw}'[dump raw data]'
  {-C,--cmtp}'[PSM for CMTP]'
  {-H,--hcrp}'[PSM for HCRP]'
  {-O,--obex}'[channel/PSM for OBEX]'
  {-P,--ppp}'[channel for PPP]'
  {-S,--sap}'[channel for SAP]'
  {-D,--pppdump}'[extract PPP traffic]'
  {-A,--audio}'[extract SCO audio data]'
  {-Y,--novendor}'[no vendor commands or events]'
  '(- * :)'{-h,--help}'[give this help list]'
  {-v,--version}'[give version information]'
  '--usage[give a short usage message]'
  '*:filename:_files'
)

_arguments -s $arguments
