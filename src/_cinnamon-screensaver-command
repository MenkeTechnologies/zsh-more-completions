#compdef cinnamon-screensaver-command

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show this help message and exit]'
  {--exit,-e}'[causes the screensaver to exit gracefully]'
  {--query,-q}'[query the state of the screensaver]'
  {--time,-t}'[query the length of time the screensaver has been active]'
  {--lock,-l}'[tells the running screensaver process to lock the screen]'
  {--activate,-a}'[turn the screensaver on (blank the screen)]'
  {--deactivate,-d}'[if the screensaver is active then deactivate it (un-blank the]'
  {--version,-V}'[version of this application]'
  {--away-message,-m}'[message to be displayed in lock screen]'
  '*:filename:_files'
)

_arguments -s $arguments
