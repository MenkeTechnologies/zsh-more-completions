#compdef mkisofs

local arguments

arguments=(
  '-find[... \[find expr.\] Option separator: Use find command line to the right]'
  '-posix-H[follow symbolic links encountered on command line]'
  '-posix-L[follow all symbolic links]'
  '-posix-P[do not follow symbolic links (default)]'
  '-abstract[set Abstract filename]'
  {-A,-appid}'[set Application ID]'
  '-biblio[set Bibliographic filename]'
  '-cache-inodes[cache inodes (needed to detect hard links)]'
  '-no-cache-inodes[do not cache inodes (if filesystem has no unique inodes)]'
  '-rrip110[create old Rock Ridge V 1.10]'
  '-rrip112[create new Rock Ridge V 1.12 (default)]'
  '-duplicates-once[optimize storage by encoding duplicate files once]'
  '-check-oldnames[check all imported ISO9660 names from old session]'
  '-check-session[check all ISO9660 names from previous session]'
  '-copyright[set Copyright filename]'
  '-debug[set debug flag]'
  '-ignore-error[ignore errors]'
  {-b,-eltorito-boot}'[set El Torito boot image name]'
  '-eltorito-alt-boot[start specifying alternative El Torito boot parameters]'
  '-eltorito-platform[set El Torito platform id for the next boot entry]'
  {-B,-sparc-boot}'[set sparc boot image names]'
  '-sunx86-boot[set sunx86 boot image names]'
  {-G,-generic-boot}'[set generic boot image name]'
  '-sparc-label[text Set sparc boot disk label]'
  '-sunx86-label[text Set sunx86 boot disk label]'
  {-c,-eltorito-catalog}'[set El Torito boot catalog name]'
  {-C,-cdrecord-params}'[magic paramters from cdrecord]'
  {-d,-omit-period}'[omit trailing periods from filenames (violates ISO9660)]'
  '-data-change-warn[treat data/size changes as warning only]'
  '-dir-mode[make the mode of all directories this mode.]'
  {-D,-disable-deep-relocation}'[disable deep directory relocation (violates ISO9660)]'
  '-file-mode[make the mode of all plain files this mode.]'
  '-errctl[read error control defs from file or inline.]'
  {-f,-follow-links}'[follow symbolic links]'
  '-gid[make the group owner of all files this gid.]'
  '-graft-points[allow to use graft points for filenames]'
  '-root[set root directory for all new files and directories]'
  '-old-root[set root directory in previous session that is searched for files]'
  '-help[print option help]'
  '-hide[hide ISO9660/RR file]'
  '-hide-list[file with list of ISO9660/RR files to hide]'
  '-hidden[set hidden attribute on ISO9660 file]'
  '-hidden-list[file with list of ISO9660 files with hidden attribute]'
  '-hide-joliet[hide Joliet file]'
  '-hide-joliet-list[file with list of Joliet files to hide]'
  '-hide-udf[hide UDF file]'
  '-hide-udf-list[file with list of UDF files to hide]'
  '-hide-joliet-trans-tbl[hide TRANS.TBL from Joliet tree]'
  '-hide-rr-moved[rename RR_MOVED to .rr_moved in Rock Ridge tree]'
  '-gui[switch behaviour for GUI]'
  '-input-charset[local input charset for file name conversion]'
  '-output-charset[output charset for file name conversion]'
  '-iso-level[set ISO9660 conformance level (1..3) or 4 for ISO9660 version 2]'
  {-J,-joliet}'[generate Joliet directory information]'
  '-joliet-long[allow Joliet file names to be 103 Unicode characters]'
  '-jcharset[local charset for Joliet directory information]'
  {-l,-full-iso9660-filenames}'[full 31 character filenames for ISO9660 names]'
  '-max-iso9660-filenames[allow 37 character filenames for ISO9660 names (violates ISO9660)]'
  '-allow-leading-dots[allow ISO9660 filenames to start with . (violates ISO9660)]'
  '-ldots[allow ISO9660 filenames to start with . (violates ISO9660)]'
  '-log-file[re-direct messages to LOG_FILE]'
  '-long-rr-time[use long Rock Ridge time format]'
  {-m,-exclude}'[exclude file name]'
  '-exclude-list[file with list of file names to exclude]'
  {-hide-ignorecase,-exclude-ignorecase}'[ignore case with -exclude-list and -hide* options]'
  '-modification-date[set the modification date field of the PVD]'
  '-nobak[do not include backup files]'
  '-no-bak[do not include backup files]'
  '-pad[pad output to a multiple of 32k (default)]'
  '-no-pad[do not pad output to a multiple of 32k]'
  '-no-limit-pathtables[allow more than 65535 parent directories (violates ISO9660)]'
  '-no-long-rr-time[use short Rock Ridge time format]'
  {-M,-prev-session}'[set path to previous session to merge]'
  '-dev[set path to previous session to merge]'
  {-N,-omit-version-number}'[omit version number from ISO9660 filename (violates ISO9660)]'
  '-new-dir-mode[mode used when creating new directories.]'
  '-force-rr[inhibit automatic Rock Ridge detection for previous session]'
  '-no-rr[inhibit reading of Rock Ridge attributes from previous session]'
  '-no-split-symlink-components[inhibit splitting symlink components]'
  '-no-split-symlink-fields[inhibit splitting symlink fields]'
  {-o,-output}'[set output file name]'
  '-path-list[file with list of pathnames to process]'
  {-p,-preparer}'[set Volume preparer]'
  '-print-size[print estimated filesystem size and exit]'
  '-publisher[set Volume publisher]'
  '-quiet[run quietly]'
  {-r,-rational-rock}'[generate rationalized Rock Ridge directory information]'
  {-R,-rock}'[generate Rock Ridge directory information]'
  {-s,-sectype}'[set output sector type to e.g. data/xa1/raw]'
  '-short-rr-time[use short Rock Ridge time format]'
  '-sort[sort file content locations according to rules in FILE]'
  '-isort[sort file content locations according to rules in FILE (ignore case)]'
  '-split-output[split output into files of approx. 1GB size]'
  '-stream-file-name[set the stream file ISO9660 name (incl. version)]'
  '-stream-media-size[set the size of your CD media in sectors]'
  '-sysid[set System ID]'
  {-T,-translation-table}'[generate translation tables for systems that dont understand long filenames]'
  '-table-name[translation table file name]'
  '-ucs-level[set Joliet UCS level (1..3)]'
  '-udf[generate rationalized UDF file system]'
  '-UDF[generate UDF file system]'
  '-udf-symlinks[create symbolic links on UDF image (default)]'
  '-no-udf-symlinks[do not reate symbolic links on UDF image]'
  '-dvd-audio[generate DVD-Audio compliant UDF file system]'
  '-dvd-hybrid[generate a hybrid (DVD-Audio and DVD-Video) compliant UDF file system]'
  '-dvd-video[generate DVD-Video compliant UDF file system]'
  '-uid[make the owner of all files this uid.]'
  {-U,-untranslated-filenames}'[untranslated filenames (for HPUX & AIX - violates ISO9660). Forces -l, -d, -N, -allow-leading-dots, -relaxed-filenames, -allow-lowercase, -allow-multidot]'
  '-relaxed-filenames[allow 7 bit ASCII except lower case characters (violates ISO9660)]'
  '-no-iso-translate[do not translate illegal ISO characters ~, - and # (violates ISO9660)]'
  '-allow-lowercase[allow lower case characters in addition to the current character set (violates ISO9660)]'
  '-no-allow-lowercase[+allow-lowercase]'
  '-allow-multidot[allow more than one dot in filenames (e.g. .tar.gz) (violates ISO9660)]'
  '-use-fileversion[use file version # from filesystem]'
  {-v,-verbose}'[verbose]'
  '-version[print the current version]'
  {-V,-volid}'[set Volume ID]'
  '-volset[set Volume set ID]'
  '-volset-size[set Volume set size]'
  '-volset-seqno[set Volume set sequence number]'
  {-x,-old-exclude}'[exclude file name(depreciated)]'
  '-hard-disk-boot[boot image is a hard disk image]'
  '-no-emul-boot[boot image is no emulation image]'
  '-no-boot[boot image is not bootable]'
  '-boot-load-seg[set load segment for boot image]'
  '-boot-load-size[set numbers of load sectors]'
  '-boot-info-table[patch boot image with info table]'
  '-XA[generate XA directory attributes]'
  '-xa[generate rationalized XA directory attributes]'
  {-z,-transparent-compression}'[enable transparent compression of files]'
  '-hfs-type[set HFS default TYPE]'
  '-hfs-creator[set HFS default CREATOR]'
  {-g,-apple}'[add Apple ISO9660 extensions]'
  {-h,-hfs}'[create ISO9660/HFS hybrid]'
  '-map[map file extensions to HFS TYPE/CREATOR]'
  '-magic[magic file for HFS TYPE/CREATOR]'
  '-probe[probe all files for Apple/Unix file types]'
  '-mac-name[use Macintosh name for ISO9660/Joliet/RockRidge file name]'
  '-no-mac-files[do not look for Unix/Mac files (depreciated)]'
  '-boot-hfs-file[set HFS boot image name]'
  '-part[generate HFS partition table]'
  '-cluster-size[cluster size for PC Exchange Macintosh files]'
  '-auto[set HFS AutoStart file name]'
  '-no-desktop[do not create the HFS (empty) Desktop files]'
  '-hide-hfs[hide HFS file]'
  '-hide-hfs-list[list of HFS files to hide]'
  '-hfs-volid[volume name for the HFS partition]'
  '-icon-position[keep HFS icon position]'
  '-root-info[finderinfo for root folder]'
  '-input-hfs-charset[local input charset for HFS file name conversion]'
  '-output-hfs-charset[output charset for HFS file name conversion]'
  '-hfs-unlock[leave HFS Volume unlocked]'
  '-hfs-bless[name of Folder to be blessed]'
  '-hfs-parms[comma separated list of HFS parameters]'
  '-prep-boot[PReP boot image file -- up to 4 are allowed]'
  '-chrp-boot[add CHRP boot header]'
  '--cap[look for AUFS CAP Macintosh files]'
  '--netatalk[look for NETATALK Macintosh files]'
  '--double[look for AppleDouble Macintosh files]'
  '--ethershare[look for Helios EtherShare Macintosh files]'
  '--exchange[look for PC Exchange Macintosh files]'
  '--sgi[look for SGI Macintosh files]'
  '--macbin[look for MacBinary Macintosh files]'
  '--single[look for AppleSingle Macintosh files]'
  '--ushare[look for IPT UShare Macintosh files]'
  '--xinet[look for XINET Macintosh files]'
  '--dave[look for DAVE Macintosh files]'
  '--sfm[look for SFM Macintosh files]'
  '--osx-double[look for MacOS X AppleDouble Macintosh files]'
  '--osx-hfs[look for MacOS X HFS Macintosh files]'
  '-no-hfs[do not create ISO9660/HFS hybrid]'
  '*:filename:_files'
)

_arguments -s $arguments
