#compdef tracker-sparql

local arguments

arguments=(
  {-f,--file}'[use a file with SPARQL content to query]'
  {-q,--query}'[use a sparql string to query the data‐]'
  {-u,--update}'[this has to be used with --query. This]'
  {-c,--list-classes}'[returns a list of classes which]'
  {-x,--list-class-prefixes}'[returns a list of classes and their]'
  {-p,--list-properties}'[returns a list of properties which per‐]'
  {-n,--list-notifies}'[returns a list of classes which are]'
  {-i,--list-indexes}'[returns a list of properties which are]'
  {-t,--tree}'[prints a tree showing all parent]'
  '--get-longhand[for details). For exam‐]'
  {-s,--search}'[returns a list of classes and proper‐]'
  '--get-shorthand[returns the shorthand for a class given]'
  '--get-longhand[returns the longhand for a class given]'
  '*:filename:_files'
)

_arguments -s $arguments
