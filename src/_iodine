#compdef iodine

local arguments

arguments=(
  '-T[dns type: NULL, PRIVATE, TXT, SRV, MX, CNAME, A (default: autodetect)]'
  '-O[downstream encoding for -T other than NULL: Base32, Base64, Base64u]'
  '-I[interval between requests (default 4 sec) to prevent DNS timeouts]'
  '-L[use lazy mode for low-latency (default). 0: dont (implies -I1)]'
  '-m[size of downstream fragments (default: autodetect)]'
  '-M[size of upstream hostnames (~100-255, default: 255)]'
  '-r[skip raw UDP mode attempt]'
  '-P[used for authentication (max 32 chars will be used)]'
  '-v[print version info and exit]'
  '-h[print this help and exit]'
  '-f[keep running in foreground]'
  '-u[to drop privileges and run as user name]'
  '-t[to chroot to directory dir]'
  '-d[to set tunnel device name]'
  '-z[to apply specified SELinux context after initialization]'
  '-F[to write pid to a file]'
  '*:filename:_files'
)

_arguments -s $arguments
