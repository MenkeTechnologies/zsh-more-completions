#compdef newfs_exfat

local arguments

arguments=(
  '-N[t create file system: just print out parameters]'
  '-I[ID]'
  '-S[/sector]'
  '-P[bytes/sector]'
  '-a[/FAT]'
  '-b[size (in bytes)]'
  '-c[/cluster]'
  '-n[of FATs]'
  '-s[system size (in sectors)]'
  '-v[/volume name]'
  '*:filename:_files'
)

_arguments -s $arguments
