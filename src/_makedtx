#compdef makedtx

local arguments

arguments=(
  '-src[1>=><expr2>"]'
  '-doc[the name of the documentation source code. This should be a LaTeX2e document]'
  '-dir[search for source files in <directory>]'
  '-op[set the pattern matching operator (default =)]'
  '-askforoverwrite[set askforoverwrite switch in INS file to true]'
  '-noaskforoverwrite[set askforoverwrite switch in INS file to false (default)]'
  '-preamble[set the preamble. Standard one inserted if omitted]'
  '-postamble[set the postamble.]'
  '-setambles[><text>" : set pre- and postambles to <text> if file matches pattern]'
  '-author[name of author (inserted into standard preamble. User name inserted if omitted)]'
  '-date[copyright date]'
  '-ins[create the ins file (default)]'
  '-noins[dont create the ins file]'
  '-prefinale[add <text> immediately prior to \Finale]'
  '-macrocode[surround any file which matches <expr> in a macrocode environment]'
  '-comment[surround any file which matches <expr> with \iffalse \fi pair]'
  '-codetitle[The title for the documented code section (default: The Code)]'
  '-section[The sectioning command to use for the documented code section (default: section)]'
  '-license[use the given license for the preamble.]'
  '-h[help message]'
  '-v[verbose]'
  '*:filename:_files'
)

_arguments -s $arguments
