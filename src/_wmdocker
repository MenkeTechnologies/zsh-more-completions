#compdef wmdocker

local arguments

arguments=(
  '-help[show this help.]'
  '-display[the X display to connect to.]'
  '-border[the width of the border to put around the]'
  '-vertical[line up the icons vertically. Defaults to]'
  '-wmaker[windowMaker mode. This makes docker a]'
  '-iconsize[the size (width and height) to display]'
  '-color[the background color to use for the tray.]'
  '*:filename:_files'
)

_arguments -s $arguments
