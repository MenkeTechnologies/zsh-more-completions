#compdef exiv2

local arguments

arguments=(
  '-r[timestamp options are controlled with -t and -T.]'
  '-h[display this help and exit.]'
  '-V[show the program version and exit.]'
  '-v[be verbose during the program run.]'
  '-q[silence warnings and error messages during the program run (quiet).]'
  '-Q[set log-level to d(ebug), i(nfo), w(arning), e(rror) or m(ute).]'
  '-b[show large binary values.]'
  '-u[show unknown tags.]'
  '-g[only output info for this key (grep).]'
  '-K[only output info for this key (exact match).]'
  '-n[charset to use to decode UNICODE Exif user comments.]'
  '-k[preserve file timestamps (keep).]'
  '-t[also set the file timestamp in rename action (overrides -k).]'
  '-T[only set the file timestamp in rename action, do not rename]'
  '-f[do not prompt before overwriting existing files (force).]'
  '-F[do not prompt before renaming files (Force).]'
  '-a[time adjustment in the format \[-\]HH\[:MM\[:SS\]\]. This option]'
  '-Y[year adjustment with the adjust action.]'
  '-O[month adjustment with the adjust action.]'
  '-D[day adjustment with the adjust action.]'
  '-p[print mode for the print action. Possible modes are:]'
  '-P[print flags for fine control of tag lists (print action):]'
  '-d[delete target(s) for the delete action. Possible targets are:]'
  '-i[insert target(s) for the insert action. Possible targets are]'
  '-e[extract target(s) for the extract action. Possible targets]'
  '-r[filename format for the rename action. The format string]'
  '-c[JPEG comment string to set in the image.]'
  '-m[command file for the modify action. The format for commands is]'
  '-M[command line for the modify action. The format for the]'
  '-l[location (directory) for files to be inserted from or extracted to.]'
  '-S[use suffix .suf for source files for insert command.]'
  '*:filename:_files'
)

_arguments -s $arguments
