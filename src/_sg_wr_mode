#compdef sg_wr_mode

local arguments

arguments=(
  '--contents[H... | -c H,H... comma separated string of hex numbers]'
  '--contents[| -c - read stdin for mode page contents to write]'
  {--dbd,-d}'[disable block descriptors (DBD bit in cdb)]'
  {--force,-f}'[force the contents to be written]'
  {--help,-h}'[print out usage message]'
  '--len[0|6 | -l 10|6 use 10 byte (def) or 6 byte variants of]'
  '--mask[M... | -m M,M... comma separated string of hex]'
  '--page[| -p PG page_code to be written (in hex)]'
  '--page[SPG | -p PG,SPG page and subpage code to be]'
  {--save,-s}'[set save page (SP) bit; default dont so]'
  {--verbose,-v}'[increase verbosity]'
  {--version,-V}'[print version string and exit]'
  '*:filename:_files'
)

_arguments -s $arguments
