#compdef collink

local arguments

arguments=(
  '-v[verbose]'
  '-A[manufacturer description string]'
  '-M[model description string]'
  '-D[profile Description string (Default "inoutfile")]'
  '-C[copyright string]'
  '-V[verify existing profile, rather than link]'
  '-q[quality - Low, Medium (def), High, Ultra]'
  '-r[override clut res. set by -q]'
  '-n[dont preserve device linearization curves in result]'
  '-f[special :- Force neutral colors to be K only output]'
  '-fk[special :- Force K only neutral colors to be K only output]'
  '-F[special :- Force all colors to be K only output]'
  '-fcmy[special :- Force 100% C,M or Y only to stay pure]'
  '-p[include abstract profile in link]'
  '-a[.cal Apply calibration curves to link output and append linear]'
  '-H[.cal Append calibration curves to 3dlut]'
  '-s[simple Mode (default)]'
  '-g[.gam\] Gamut Mapping Mode \[optional source image gamut\]]'
  '-G[.gam\] Gamut Mapping Mode using inverse outprofile A2B]'
  '-i[p = perceptual, r = relative colorimetric]'
  '-o[p = perceptual, r = relative colorimetric]'
  '-i[set linking intent from the following choice:]'
  '-w[a,b\] Use forced whitepoint hack \[optional target point\]]'
  '-b[use RGB->RGB forced black point hack]'
  '-c[set source viewing conditions for CIECAM02]'
  '-d[set destination viewing conditions for CIECAM02]'
  '-t[set source total ink limit, 0 - 400% (estimate by default)]'
  '-T[set source black ink limit, 0 - 100% (estimate by default)]'
  '-k[CMYK Black generation]'
  '-k[stle stpo enpo enle shape]'
  '-k[stle0 stpo0 enpo0 enle0 shape0 stle2 stpo2 enpo2 enle2 shape2]'
  '-K[same as -k, but target is K locus rather than K value itself]'
  '-l[set destination total ink limit, 0 - 400% (estimate by default)]'
  '-L[set destination black ink limit, 0 - 100% (estimate by default)]'
  '-3[create "3DLut" output file as well as devlink]'
  '-I[use BT.1886 source EOTF with technical gamma 2.4]'
  '-I[.g Use BT.1886-like source EOTF with effective gamma g.g]'
  '-I[.p:g.g Use effective gamma g.g source EOTF with p.p prop. output black point offset]'
  '-I[.g Use effective gamma g.g source EOTF with all output black point offset]'
  '-e[video encode input as:]'
  '-E[video encode output as:]'
  '-P[create gamut gammap.x3d.html diagostic]'
  '*:filename:_files'
)

_arguments -s $arguments
