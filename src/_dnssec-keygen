#compdef dnssec-keygen

local arguments

arguments=(
  '-K[write keys into directory]'
  '-a[RSA | RSAMD5 | DSA | RSASHA1 | NSEC3RSASHA1 | NSEC3DSA |]'
  '-3[use NSEC3-capable algorithm]'
  '-b[size in bits>:]'
  '-n[ZONE | HOST | ENTITY | USER | OTHER]'
  '-c[(default: IN)]'
  '-d[bits> (0 => max, default)]'
  '-E[name of an OpenSSL engine to use]'
  '-f[KSK | REVOKE]'
  '-g[use specified generator (DH only)]'
  '-L[default key TTL]'
  '-p[(default: 3 \[dnssec\])]'
  '-r[a file containing random data]'
  '-s[strength value this key signs DNS records with (default: 0)]'
  '-T[DNSKEY | KEY (default: DNSKEY; use KEY for SIG(0))]'
  '-t[AUTHCONF | NOAUTHCONF | NOAUTH | NOCONF (default: AUTHCONF)]'
  '-h[print usage and exit]'
  '-m[debugging mode>:]'
  '-v[set verbosity level (0 - 10)]'
  '-V[print version information]'
  '-P[/\[+-\]offset/none: set key publication date (default: now)]'
  '-P[date/\[+-\]offset/none: set CDS and CDNSKEY publication date]'
  '-A[/\[+-\]offset/none: set key activation date (default: now)]'
  '-R[/\[+-\]offset/none: set key revocation date]'
  '-I[/\[+-\]offset/none: set key inactivation date]'
  '-D[/\[+-\]offset/none: set key deletion date]'
  '-D[date/\[+-\]offset/none: set CDS and CDNSKEY deletion date]'
  '-G[generate key only; do not set -P or -A]'
  '-C[generate a backward-compatible key, omitting all dates]'
  '-S[generate a successor to an existing key]'
  '-i[prepublication interval for successor key (default: 30 days)]'
  '*:filename:_files'
)

_arguments -s $arguments
