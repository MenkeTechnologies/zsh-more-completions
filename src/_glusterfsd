#compdef glusterfsd

local arguments

arguments=(
  {-f,--volfile}'[file to use as VOLUME_FILE]'
  {-l,--log-file}'[file to use for logging \[default:]'
  '--log-buf-size[set logging buffer size, \[default: 5\]]'
  '--log-flush-timeout[set log flush timeout, \[default: 2 minutes\]]'
  '--log-format[set log format, valid options are: no-msg-id]'
  '--logger[set which logging sub-system to log to, valid]'
  {-L,--log-level}'[logging severity. Valid options are DEBUG, INFO]'
  {-s,--volfile-server}'[server to get the volume file from. Unix domain]'
  '--acl[mount the filesystem with POSIX ACL support]'
  '--aux-gfid-mount[enable access to filesystem through gfid directly]'
  '--capability[enable Capability (extended attributes) support on]'
  '--debug[run in debug mode. This option sets --no-daemon]'
  '--log-level[DEBUG and --log-file to console]'
  {-e,--print-exports}'[validate the exports file and print it out]'
  '--enable-ino32[use 32-bit inodes when mounting to workaround]'
  '--fopen-keep-cache[do not purge the cache on file open]'
  '--global-timer-wheel[instantiate process global timer-wheel]'
  '--mac-compat[provide stubs for attributes needed for seamless]'
  {-n,--print-netgroups}'[validate the netgroups file and print it out]'
  {-N,--no-daemon}'[run in foreground]'
  {-p,--pid-file}'[file to use as pid file]'
  '--read-only[mount the filesystem in read-only mode]'
  '--selinux[enable SELinux label (extended attributes) support]'
  '--subdir-mount[mount subdirectory given \[default: NULL\]]'
  {-S,--socket-file}'[file to use as unix-socket]'
  '--volfile-id[key of the volfile to be fetched from server]'
  '--volfile-server-port[listening port number of volfile server]'
  '--volfile-server-transport[transport type to get volfile from server]'
  '--volume-name[translator name to be used for MOUNT-POINT]'
  '--worm[mount the filesystem in worm mode]'
  '--xlator-option[.OPTION=VALUE]'
  '--attribute-timeout[set attribute timeout to SECONDS for inodes in]'
  '--background-qlen[set fuse modules background queue length to N]'
  '--congestion-threshold[set fuse modules congestion threshold to N]'
  '--direct-io-mode[use direct I/O mode in fuse kernel module]'
  '--dump-fuse[dump fuse traffic to PATH]'
  '--entry-timeout[set entry timeout to SECONDS in fuse kernel]'
  '--gid-timeout[set auxiliary group list timeout to SECONDS for]'
  '--negative-timeout[set negative timeout to SECONDS in fuse]'
  '--no-root-squash[disable/enable root squashing for the trusted]'
  '--oom-score-adj[set oom_score_adj value for process\[default: 0\]]'
  '--resolve-gids[resolve all auxiliary groups in fuse translator]'
  '--secure-mgmt[override default for secure (SSL) management]'
  '--use-readdirp[use readdirp mode in fuse kernel module \[default:]'
  '--volfile-check[enable strict volume file checking]'
  '--usage[give a short usage message]'
  {-V,--version}'[print program version]'
  '*:filename:_files'
)

_arguments -s $arguments
