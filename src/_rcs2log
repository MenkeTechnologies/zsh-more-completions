#compdef rcs2log

local arguments

arguments=(
  '-c[output a change log prefix to CHANGELOG (default ChangeLog).]'
  '-h[use HOSTNAME in change log entries (default current host).]'
  '-i[indent change log lines by INDENT spaces (default 8).]'
  '-l[try to limit log lines to LENGTH characters (default 79).]'
  '-L[use rlog-format FILE for source of logs.]'
  '-R[if no FILEs are given and RCS is used, recurse through working directory.]'
  '-r[pass OPTION to subsidiary log command.]'
  '-t[tab stops are every TABWIDTH characters (default 8).]'
  '-u[" Assume LOGIN has FULLNAME and MAILADDR.]'
  '-v[append RCS revision to file names in log lines.]'
  '--help[output help.]'
  '--version[output version number.]'
  '*:filename:_files'
)

_arguments -s $arguments
