#compdef icesound

local arguments

arguments=(
  {-d,--display}'[display used by IceWM (default: $DISPLAY).]'
  {-s,--sample-dir}'[specifies the directory which contains]'
  {-i,--interface}'[specifies the sound output target]'
  {-D,--device}'[(ALSA & OSS only) specifies the device to use]'
  {-S,--server}'[(ESD and YIFF) specifies server address and]'
  {-m,--audio-mode}'[(YIFF only) specifies the Audio mode (leave]'
  '--audio-mode-auto[(YIFF only) change Audio mode on the fly to]'
  '--audio-mode[).]'
  {-v,--verbose}'[be verbose (prints out each sound event to]'
  {-V,--version}'[prints version information and exits.]'
  '(- * :)'{-h,--help}'[prints (this) help screen and exits.]'
  '*:filename:_files'
)

_arguments -s $arguments
