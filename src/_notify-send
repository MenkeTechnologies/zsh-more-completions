#compdef notify-send

local arguments

arguments=(
    {-u,--urgency=-}'[specifies the urgency level (low, normal, critical).]:level:(low normal critical)'
  {-t,--expire-time=-}'[specifies the timeout in milliseconds at which to expire the notification.]:time'
  {-a,--app-name=-}'[specifies the app name for the icon]:app name:'
  {-i,--icon=}'[specifies an icon filename or stock icon to display.]:icon'
  {-c,--category=-}'[specifies the notification category.]:type'
  {-h,--hint=}'[specifies basic extra data to pass. Valid types are int, double, string and byte.]:type\:name\:value:'
  '(- * :)'{-v,--version}'[version of the package.]'
  '(- * :)'{-\?,--help}'[show help options.]'
  '1:title:'
  '2:message:'
)

_arguments -s $arguments
