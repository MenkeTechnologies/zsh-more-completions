#compdef extundelete

local arguments

arguments=(
  '--version[-\[vV\] Print version and exit successfully.]'
  '--help[print this help and exit successfully.]'
  '--superblock[print contents of superblock in addition to the rest.]'
  '--journal[show content of journal.]'
  '--after[only process entries deleted on or after dtime.]'
  '--before[only process entries deleted before dtime.]'
  '--inode[show info on inode ino.]'
  '--block[show info on block blk.]'
  '--restore-inode[ino,...\]]'
  '--restore-file[ Will restore file path. path is relative to root]'
  '--restore-files[ Will restore files which are listed in the file path.]'
  '--restore-directory[]'
  '--restore-all[attempts to restore everything.]'
  '-j[reads an external journal from the named file.]'
  '-b[uses the backup superblock at blocknumber when opening]'
  '-B[uses blocksize as the block size when opening the file]'
  '--log[make the program silent.]'
  '--log[logs all messages to filename.]'
  '--log[1=0,D2=filename Custom control of log messages with comma-separated]'
  '--log[error error. Omission of the =name results in messages]'
  '--log[0 with the specified level to be logged to the console.]'
  '--log[filename If the parameter is =0, logging for the specified]'
  '-o[save the recovered files to the named directory.]'
  '*:filename:_files'
)

_arguments -s $arguments
