#compdef typer

local arguments

arguments=(
  '-r[*]'
  '--show[prints type specifications for all functions on stdout.]'
  {--show-exported,--show}'[_exported)]'
  '--annotate[annotates the specified files with type specifications]'
  '--annotate-inc-files[same as --annotate but annotates all -include() files as well as]'
  '--edoc[prints type information as Edoc @spec comments, not as type specs]'
  '--plt[use the specified dialyzer PLT file rather than the default one]'
  '-T[*]'
  {-Dname,-Dname}'[)]'
  '-I[pass the include_dir to TypEr]'
  '-pa[]'
  '-pz[set code path options to TypEr]'
  {--version,-v}'[)]'
  {--help,-h}'[)]'
  '*:filename:_files'
)

_arguments -s $arguments
