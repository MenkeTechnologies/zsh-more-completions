#compdef jnettop

local arguments

arguments=(
  '(- * :)'{-h,--help}'[display this help message]'
  {-v,--version}'[display version information]'
  {-c,--content-filter}'[disable content filtering]'
  {-d,--debug}'[write debug information into file (or syslog)]'
  '--display[type of display (curses, text, uia)]'
  {-f,--config-file}'[reads configuration from file. defaults to ~/.jnettop]'
  '--format[list of fields to list in text output]'
  {-i,--interface}'[capture packets on specified interface]'
  '--local-aggr[set local aggregation to none/host/port/host+port]'
  {-n,--no-resolver}'[disable resolving of addresses]'
  {-p,--promiscuous}'[enable promisc mode on the devices]'
  '--remote-aggr[set remote aggregation to none/host/port/host+port]'
  {-s,--select-rule}'[selects one of the rules defined in config file]'
  {-t,--timeout}'[timeout in seconds after which jnettop ends (text display)]'
  {-x,--filter}'[allows for specification of custom filtering rule]'
  '*:filename:_files'
)

_arguments -s $arguments
