#compdef veritysetup

local arguments

arguments=(
  '--version[print package version]'
  {-v,--verbose}'[shows more detailed error messages]'
  '--debug[show debug messages]'
  '--no-superblock[do not use verity superblock]'
  '--format[format type (1 - normal, 0 - original Chrome]'
  '--data-block-size[block size on the data device]'
  '--hash-block-size[block size on the hash device]'
  '--fec-roots[FEC parity bytes]'
  '--data-blocks[the number of blocks in the data file]'
  '--fec-device[path to device with error correction data]'
  '--hash-offset[starting offset on the hash device]'
  '--fec-offset[starting offset on the FEC device]'
  {-h,--hash}'[hash algorithm]'
  {-s,--salt}'[string Salt]'
  '--uuid[UUID for device to use]'
  '--restart-on-corruption[restart kernel if corruption is detected]'
  '--ignore-corruption[ignore corruption, log it only]'
  '--ignore-zero-blocks[do not verify zeroed blocks]'
  '--check-at-most-once[verify data block only the first time it is]'
  '--usage[display brief usage]'
  '*:filename:_files'
)

_arguments -s $arguments
