#compdef jasmine

local arguments

arguments=(
  '--no-color[turn off color in spec output]'
  '--color[force turn on color in spec output]'
  '--filter[specs to run only those that match the given string]'
  '--helper[helper files that match the given string]'
  '--require[module that match the given string]'
  '--stop-on-failure[stop spec execution on expectation failure]'
  '--fail-fast[stop Jasmine execution on spec failure]'
  '--config[to your optional jasmine.json]'
  '--reporter[to reporter to use instead of the default Jasmine reporter]'
  '*:filename:_files'
)

_arguments -s $arguments
