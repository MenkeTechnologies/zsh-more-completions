#compdef file

local arguments

arguments=(
    '--help[display this help and exit]'
    {-v,--version}'[output version information and exit]'
    {-m,--magic-file}'[use LIST as a colon-separated list of magic]'
    {-z,--uncompress}'[try to look inside compressed files]'
    {-b,--brief}'[do not prepend filenames to output lines]'
    {-c,--checking-printout}'[print the parsed form of the magic file, use in]'
    {-e,--exclude}'[exclude TEST from the list of test to be]'
    {-f,--files-from}'[read the filenames to be examined from FILE]'
    {-F,--separator}'[use string as separator instead of `:]'
    {-i,--mime}'[output MIME type strings (--mime-type and]'
    '--mime-encoding[)]'
    '--apple[output the Apple CREATOR/TYPE]'
    '--mime-type[output the MIME type]'
    '--mime-encoding[output the MIME encoding]'
    {-k,--keep-going}'[do not stop at the first match]'
    {-l,--list}'[list magic strength]'
    {-L,--dereference}'[follow symlinks (default if POSIXLY_CORRECT is set)]'
    {-h,--no-dereference}'[do not follow symlinks (default if POSIXLY_CORRECT is not set)]'
    {-n,--no-buffer}'[do not buffer output]'
    {-N,--no-pad}'[do not pad output]'
    {-0,--print0}'[terminate filenames with ASCII NUL]'
    {-p,--preserve-date}'[preserve access times on files]'
    {-P,--parameter}'[set file engine parameter limits]'
    {-r,--raw}'[do not translate unprintable chars to \ooo]'
    {-s,--special-files}'[treat special (block/char devices) files as]'
    {-C,--compile}'[compile file specified by -m]'
    {-d,--debug}'[print debugging messages]'
    '*:filename:_files'
)

_arguments -s $arguments
