#compdef mimetype

local arguments

arguments=(
  {-a,--all}'[show output of all rules that match the file.]'
  {-b,--brief}'[do not prepend filenames to output lines (brief mode).]'
  '--database[...]'
  {-d,--describe}'[print file descriptions instead of mime types, this is the default]'
  {-D,--debug}'[print debug information about how the mimetype was determined.]'
  {-f,--namefile}'[read the names of the files to be examined from the file namefile]'
  '--file-compat[make mimetype behave a little more file(1) compatible. This is]'
  {-F,--separator}'[use string as custom separator between the file name and its]'
  '(- * :)'{-h,--help}'[]'
  {-u,--usage}'[print a help message and exits.]'
  {-i,--mimetype}'[use mime types, opposite to "--describe", this is the default when]'
  {-L,--dereference}'[follow symbolic links.]'
  {-l,--language}'[the language attribute specifies a two letter language code, this]'
  {-M,--magic-only}'[do not check for extensions, globs or inode type, only look at the]'
  {-N,--noalign}'[do not align output fields.]'
  '--output-format[if you want an alternative output format, you can specify a format]'
  '--stdin[determine type of content from STDIN, less powerful then normal file]'
  {-v,--version}'[print the version of the program and exit.]'
  '*:filename:_files'
)

_arguments -s $arguments
