#compdef lstopo-no-graphics

local arguments

arguments=(
  {-l,--logical}'[display hwloc logical object indexes]'
  {-p,--physical}'[display physical object indexes]'
  '--output-format[]'
  '--of[force the output to use the given format]'
  {-f,--force}'[overwrite the output file if it exists]'
  '--only[only show objects of the given type in the textual output]'
  {-v,--verbose}'[include additional details]'
  {-s,--silent}'[reduce the amount of details to show]'
  {-c,--cpuset}'[show the cpuset of each object]'
  {-C,--cpuset-only}'[only show the cpuset of each object]'
  '--taskset[show taskset-specific cpuset strings]'
  '--ignore[ignore objects of the given type]'
  '--no-caches[do not show caches]'
  '--no-useless-caches[do not show caches which do not have a hierarchical]'
  '--no-icaches[do not show instruction caches]'
  '--merge[do not show levels that do not have a hierarchical]'
  '--no-collapse[do not collapse identical PCI devices]'
  '--restrict[restrict the topology to processors listed in <cpuset>]'
  '--restrict[restrict the topology to the current process binding]'
  '--restrict-flags[set the flags to be used during restrict]'
  '--no-io[do not show any I/O device or bridge]'
  '--no-bridges[do not any I/O bridge except hostbridges]'
  '--whole-io[show all I/O devices and bridges]'
  '--input[file>]'
  '-i[file> Read topology from XML file <path>]'
  '--input[]'
  '-i[read topology from chroot containing the /proc and /sys]'
  '--input[2 2"]'
  '-i[2 2" Simulate a fake hierarchy, here with 2 NUMA nodes of 2]'
  '--input-format[]'
  '--if[enforce input format among xml, fsroot, synthetic]'
  '--thissystem[assume that the input topology provides the topology]'
  '--pid[detect topology as seen by process <pid>]'
  '--whole-system[do not consider administration limitations]'
  '--fontsize[0 Set size of text font]'
  '--gridsize[0 Set size of margin between elements]'
  '--horiz[...>\] Horizontal graphical layout instead of nearly 4/3 ratio]'
  '--vert[...>\] Vertical graphical layout instead of nearly 4/3 ratio]'
  '--rect[...>\] Rectangular graphical layout with nearly 4/3 ratio]'
  '--index[...>\] Display indexes for the given object types]'
  '--no-index[.>\] Do not display indexes for the given object types]'
  '--attrs[...>\] Display attributes for the given object types]'
  '--no-attrs[.>\] Do not display attributes for the given object types]'
  '--no-legend[remove the text legend at the bottom]'
  '--append-legend[append a new line of text at the bottom of the legend]'
  '--export-synthetic-flags[set flags during the synthetic topology export]'
  {--ps,--top}'[display processes within the hierarchy]'
  '--version[report version and exit]'
  '*:filename:_files'
)

_arguments -s $arguments
