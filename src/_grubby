#compdef grubby

local arguments

arguments=(
    '--add-kernel[add an entry for the specified kernel]'
    '--add-multiboot[add an entry for the specified]'
    '--args[default arguments for the new kernel]'
    '--mbargs[default arguments for the new]'
    '--bad-image-okay[do not sanity check images in boot]'
    '--boot-filesystem[filestystem which contains /boot]'
    {-c,--config-file}'[path to grub config file to update]'
    '--copy-default[use the default boot entry as a]'
    '--debug[print debugging information for]'
    '--default-kernel[display the path of the default]'
    '--default-index[display the index of the default]'
    '--default-title[display the title of the default]'
    '--devtree[device tree file for new stanza]'
    '--devtreedir[device tree directory for new stanza]'
    '--elilo[configure elilo bootloader]'
    '--efi[force grub2 stanzas to use efi]'
    '--env[path for environment data]'
    '--extlinux[configure extlinux bootloader (from]'
    '--grub[configure grub bootloader]'
    '--grub2[configure grub2 bootloader]'
    '--info[display boot information for]'
    '--initrd[initrd image for the new kernel]'
    {-i,--extra-initrd}'[auxiliary initrd image for things]'
    '--lilo[configure lilo bootloader]'
    '--make-default[make the newly added entry the]'
    {-o,--output-file}'[path to output updated config file]'
    '--remove-args[remove kernel arguments]'
    '--remove-mbargs[remove multiboot kernel arguments]'
    '--remove-kernel[remove all entries for the specified]'
    '--remove-multiboot[remove all entries for the specified]'
    '--set-default[make the first entry referencing the]'
    '--set-default-index[make the given entry index the]'
    '--silo[configure silo bootloader]'
    '--title[title to use for the new kernel entry]'
    '--update-kernel[updated information for the]'
    {-v,--version}'[print the version of this program]'
    '--yaboot[configure yaboot bootloader]'
    '--zipl[configure zipl bootloader]'
    '--usage[Display brief usage message]'
    '*:filename:_files'
)

_arguments -s $arguments
