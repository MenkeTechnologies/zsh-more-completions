#compdef xml2po

local arguments

arguments=(
  {-a,--automatic-tags}'[automatically decides if tags are to be considered]'
  {-k,--keep-entities}'[dont expand entities]'
  {-e,--expand-all-entities}'[expand ALL entities (including SYSTEM ones)]'
  {-m,--mode}'[treat tags as type TYPE (default: docbook)]'
  {-o,--output}'[print resulting text (XML or POT) to FILE]'
  {-p,--po-file}'[specify PO file containing translation, and merge]'
  {-r,--reuse}'[specify translated XML file with the same structure]'
  {-t,--translation}'[specify MO file containing translation, and merge]'
  {-u,--update-translation}'[.po Updates a PO file using msgmerge program]'
  {-l,--language}'[set language of the translation to LANG]'
  '--mark-untranslated[set xml:lang="C" on untranslated tags]'
  {-v,--version}'[output version of the xml2po program]'
  '(- * :)'{-h,--help}'[output this message]'
  '*:filename:_files'
)

_arguments -s $arguments
