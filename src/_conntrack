#compdef conntrack

local arguments

arguments=(
  '-L[\[options\] List conntrack or expectation table]'
  '-G[parameters Get conntrack or expectation]'
  '-D[parameters Delete conntrack or expectation]'
  '-I[parameters Create a conntrack or expectation]'
  '-U[parameters Update a conntrack]'
  '-E[\[options\] Show events]'
  '-F[flush table]'
  '-C[show counter]'
  '-S[show statistics]'
  {-n,--src-nat}'[source NAT ip]'
  {-g,--dst-nat}'[destination NAT ip]'
  {-j,--any-nat}'[source or destination NAT ip]'
  {-m,--mark}'[set mark]'
  {-c,--secmark}'[set selinux secmark]'
  {-e,--event-mask}'[event mask, eg. NEW,DESTROY]'
  {-z,--zero}'[zero counters while listing]'
  {-o,--output}'[...\] Output format, eg. xml]'
  {-l,--label}'[...\] conntrack labels]'
  '--tuple-src[source address in expect tuple]'
  '--tuple-dst[destination address in expect tuple]'
  '--label-add[add label]'
  '--label-del[delete label]'
  {-s,--src,--orig-src}'[source address from original direction]'
  {-d,--dst,--orig-dst}'[destination address from original direction]'
  {-r,--reply-src}'[source addres from reply direction]'
  {-q,--reply-dst}'[destination address from reply direction]'
  {-p,--protonum}'[layer 4 Protocol, eg. tcp]'
  {-f,--family}'[layer 3 Protocol, eg. ipv6]'
  {-t,--timeout}'[set timeout]'
  {-u,--status}'[set status, eg. ASSURED]'
  {-w,--zone}'[set conntrack zone]'
  '--orig-zone[set zone for original direction]'
  '--reply-zone[set zone for reply direction]'
  {-b,--buffer-size}'[netlink socket buffer size]'
  '--mask-src[source mask address]'
  '--mask-dst[destination mask address]'
  '*:filename:_files'
)

_arguments -s $arguments
