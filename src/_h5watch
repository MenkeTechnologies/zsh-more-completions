#compdef h5watch

local arguments

arguments=(
  '--help[print a usage message and exit.]'
  '--version[print version number and exit.]'
  '--label[label members of compound typed dataset.]'
  '--simple[use a machine-readable output format.]'
  '--dim[monitor changes in size of dataset dimensions only.]'
  '--width[set the number of columns to N for output.]'
  '--polling[set the polling interval to N (in seconds) when the]'
  '--fields[display data for the fields specified in <list_of_fields>]'
  '*:filename:_files'
)

_arguments -s $arguments
