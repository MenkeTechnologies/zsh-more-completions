#compdef mongorestore

local arguments

arguments=(
  '--help[print usage]'
  '--version[print the tool]'
  {-v,--verbose}'[more detailed log]'
  '--verbose[)]'
  '--quiet[hide all log output]'
  {-h,--host}'[mongodb host to]'
  '--port[server port (can]'
  '--gssapiServiceName[service name to use]'
  '--gssapiHostName[hostname to use]'
  '--ssl[connect to a mongod]'
  '--sslCAFile[the .pem file]'
  '--sslPEMKeyFile[the .pem file]'
  '--sslPEMKeyPassword[the password to]'
  '--sslCRLFile[the .pem file]'
  '--sslAllowInvalidCertificates[bypass the]'
  '--sslAllowInvalidHostnames[bypass the]'
  '--sslFIPSMode[use FIPS mode of]'
  {-u,--username}'[username for]'
  {-p,--password}'[password for]'
  '--authenticationDatabase[database that holds]'
  '--authenticationMechanism[authentication]'
  '--uri[mongodb uri]'
  {-d,--db}'[database to use]'
  {-c,--collection}'[collection to use]'
  '--excludeCollection[DEPRECATED;]'
  '--excludeCollectionsWithPrefix[DEPRECATED;]'
  '--nsExclude[exclude matching]'
  '--nsInclude[include matching]'
  '--nsFrom[rename matching]'
  '--nsTo[rename matched]'
  '--objcheck[validate all]'
  '--oplogReplay[replay oplog for]'
  '--oplogLimit[only include oplog]'
  '--oplogFile[oplog file to use]'
  '--archive[restore dump from]'
  '--restoreDbUsersAndRoles[restore user and]'
  '--dir[input directory]'
  '--gzip[decompress gzipped]'
  '--drop[drop each]'
  '--dryRun[view summary]'
  '--writeConcern[write concern]'
  '--writeConcern[majority]'
  '--writeConcern[{w:]'
  '--noIndexRestore[dont restore]'
  '--noOptionsRestore[dont restore]'
  '--keepIndexVersion[dont update index]'
  '--maintainInsertionOrder[preserve order of]'
  {-j,--numParallelCollections}'[number of]'
  '--numInsertionWorkersPerCollection[number of insert]'
  '--stopOnError[stop restoring if]'
  '--bypassDocumentValidation[bypass document]'
  '*:filename:_files'
)

_arguments -s $arguments
