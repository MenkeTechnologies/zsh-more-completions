#compdef dpv

local arguments

arguments=(
  '-a[append text. Displayed below file progress indicators.]'
  '-b[string to be displayed on the backdrop, at top-left.]'
  '-d[debug. Write to standard output instead of dialog.]'
  '-D[use dialog(1) instead of dialog(3) \[default\].]'
  '-h[produce this output on standard error and exit.]'
  '-i[customize status line format. See fdpv(1) for details.]'
  '-I[customize status line format. See fdpv(1) for details.]'
  '-L[label size. Must be a number greater than 0, or -1.]'
  '-m[enable processing of multiple file argiments.]'
  '-n[display at-most num files per screen. Default is -1.]'
  '-N[no overrun. Stop reading input at stated length, if any.]'
  '-o[output data to file. First %s replaced with label text.]'
  '-p[prefix text. Displayed above file progress indicators.]'
  '-P[mini-progressbar size. Must be a number greater than 3.]'
  '-t[title string to be displayed at top of dialog(1) box.]'
  '-T[test mode. Dont actually read any data, but fake it.]'
  '-U[update status line num times per-second. Default is 2.]'
  '-w[wide. Width of `-p and `-a text bump dialog(1) width.]'
  '-x[send data to executed cmd. First %s replaced with label.]'
  '-X[X11. Use Xdialog(1) instead of dialog(1).]'
  '*:filename:_files'
)

_arguments -s $arguments
