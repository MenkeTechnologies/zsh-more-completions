#compdef rakudo-m

local arguments

arguments=(
  '-c[check syntax only (runs BEGIN and CHECK blocks)]'
  '--doc[extract documentation and print it as text]'
  '-e[one line of program, strict is enabled by default]'
  {-h,--help}'[display this help text]'
  '-n[run program once for each line of input]'
  '-p[same as -n, but also print $_ at the end of lines]'
  '-I[adds the path to the module search path]'
  '-M[loads the module prior to running the program]'
  '--target[specify compilation stage to emit]'
  '--optimize[use the given level of optimization (0..3)]'
  '--rakudo-home[override the path of the Rakudo runtime files]'
  {-o,--output}'[specify name of output file]'
  {-v,--version}'[display version information]'
  '-V[print configuration summary]'
  '--stagestats[display time spent in the compilation stages]'
  '--ll-exception[display a low level backtrace on errors]'
  '--doc[use Pod::To::\[module\] to render inline documentation]'
  '--repl-mode[when running without "-e" or filename arguments]'
  '--profile[write profile information to a file]'
  '--profile-compile[write compile-time profile information to a file]'
  '--profile-kind[choose the type of profile to generate]'
  '--profile-filename[provide a different filename for profile.]'
  '--profile-stage[write profile information for the given compilation]'
  '--full-cleanup[try to free all memory and exit cleanly]'
  '--debug-port[listen for incoming debugger connections]'
  '--debug-suspend[pause execution at the entry point]'
  '--tracing[output a line to stderr on every interpreter instr (only if]'
  '*:filename:_files'
)

_arguments -s $arguments
