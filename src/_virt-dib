#compdef virt-dib

local arguments

arguments=(
  '--arch[output architecture]'
  '-B[base path of diskimage-builder library]'
  '--checksum[generate MD5 and SHA256 checksum files]'
  {--color,--colors,--colour,--colours}'[use ANSI colour sequences even if not tty]'
  '--debug[set debug level]'
  '--docker-target[repo and tag for docker]'
  '--drive[optional drive for caches]'
  '--drive-format[format of optional drive]'
  {-p,--element-path}'[add new a elements location]'
  '--envvar[value\]>           Carry/set this environment variable]'
  '--exclude-element[exclude the specified element]'
  '--exclude-script[exclude the specified script]'
  '--extra-packages[...>          Add extra packages to install]'
  '--formats[2,tgz,...>           Output formats]'
  '--fs-type[filesystem for the image]'
  '--help[display brief help]'
  '--image-cache[location for cached images]'
  '--install-type[installation type]'
  {-m,--memsize}'[set memory size]'
  '--machine-readable[make output machine readable]'
  '--mkfs-options[add mkfs options]'
  '--name[name of the image]'
  '--network[enable appliance network (default)]'
  '--no-delete-on-failure[dont delete output file on failure]'
  '--no-network[disable appliance network]'
  {-q,--quiet}'[dont print progress messages]'
  '--qemu-img-options[add qemu-img options]'
  '--ramdisk[switch to a ramdisk build]'
  '--ramdisk-element[main element for building ramdisks]'
  '--root-label[label for the root fs]'
  '--size[set output disk size]'
  '--skip-base[skip the inclusion of the base element]'
  '--smp[set number of vCPUs]'
  '-u[do not compress the qcow2 image]'
  {-V,--version}'[display version and exit]'
  {-v,--verbose}'[enable libguestfs debugging messages]'
  '-x[enable tracing of libguestfs calls]'
  '*:filename:_files'
)

_arguments -s $arguments
