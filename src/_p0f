#compdef p0f

local arguments

arguments=(
  '-i[listen on the specified network interface]'
  '-r[read offline pcap data from a given file]'
  '-p[put the listening interface in promiscuous mode]'
  '-L[list all available interfaces]'
  '-f[read fingerprint database from file (/etc/p0f/p0f.fp)]'
  '-o[write information to the specified log file]'
  '-s[answer to API queries at a named unix socket]'
  '-u[switch to the specified unprivileged account and chroot]'
  '-d[fork into background (requires -o or -s)]'
  '-S[limit number of parallel API connections (20)]'
  '-t[h - set connection / host cache age limits (30s,120m)]'
  '-m[h - cap the number of active connections / hosts (1000,10000)]'
  '*:filename:_files'
)

_arguments -s $arguments
