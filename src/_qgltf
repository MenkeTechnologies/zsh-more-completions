#compdef qgltf

local arguments

arguments=(
  {-h,--help}'[displays this help.]'
  {-v,--version}'[displays version information.]'
  '-d[place all output data into <dir>]'
  '-b[store binary JSON data in the .qgltf file]'
  '-m[store compact JSON in the .qgltf file]'
  '-c[qCompress() vertex/index data in the .bin file]'
  '-t[generate tangent vectors]'
  '-n[use non-interleaved buffer layout]'
  '-e[scale vertices by the float scale factor <factor>]'
  '-g[generate OpenGL 3.2+ core profile shaders too]'
  '-1[generate ETC1 compressed textures by invoking etc1tool (PNG]'
  '-T[do not generate KHR_materials_common block]'
  '-S[do not generate shaders/programs/techniques]'
  '-s[silence debug output]'
  '*:filename:_files'
)

_arguments -s $arguments
