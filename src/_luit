#compdef luit

local arguments

arguments=(
  '-V[show version]'
  '-alias[location of the locale alias file]'
  '-argv0[set childs name]'
  '-c[simple converter stdin/stdout]'
  '-encoding[use this encoding rather than current locales encoding]'
  '-fill-fontenc[fill in one-one mapping in -show-fontenc report]'
  '-g0[set output G0 charset (default ASCII)]'
  '-g1[set output G1 charset]'
  '-g2[set output G2 charset]'
  '-g3[set output G3 charset]'
  '-gl[set output GL charset]'
  '-gr[set output GR charset]'
  '-h[show this message]'
  '-ilog[log all input to this file]'
  '-k7[generate 7-bit characters for input]'
  '-kg0[set input G0 charset]'
  '-kg1[set input G1 charset]'
  '-kg2[set input G2 charset]'
  '-kg3[set input G3 charset]'
  '-kgl[set input GL charset]'
  '-kgr[set input GR charset]'
  '-kls[generate locking shifts SI/SO]'
  '-list[list encodings recognized by this program]'
  '-list-builtin[list built-in encodings]'
  '-list-fontenc[list available ".enc" encoding files]'
  '-list-iconv[list iconv-supported encodings]'
  '-olog[log all output to this file]'
  '-p[do parent/child handshake]'
  '-prefer[override preference between fontenc/iconv lookups]'
  '-show-builtin[show details of a given built-in encoding]'
  '-show-fontenc[show details of an ".enc" encoding file]'
  '-show-iconv[show iconv encoding in ".enc" format]'
  '-t[testing (initialize locale but no terminal)]'
  '-v[verbose (repeat to increase level)]'
  '-x[exit as soon as child dies]'
  '*:filename:_files'
)

_arguments -s $arguments
