#compdef pbmtojbg

local arguments

arguments=(
  '-q[sequential coding, no differential layers (like -d 0)]'
  '-x[maximum width of lowest resolution layer (default 640)]'
  '-y[maximum height of lowest resolution layer (default 480)]'
  '-l[lowest layer written to output file (default 0)]'
  '-h[highest layer written to output file (default max)]'
  '-b[use binary code for multiple bitplanes (default: Gray code)]'
  '-d[total number of differential layers (overrides -x and -y)]'
  '-s[height of a stripe in layer 0]'
  '-m[maximum adaptive template pixel horizontal offset (default 8)]'
  '-t[encode only that many most significant planes]'
  '-o[order byte value: add 1=SMID, 2=ILEAVE, 4=SEQ, 8=HITOLO]'
  '-p[options byte value: add DPON=4, TPBON=8, TPDON=16, LRLTWO=64]'
  '-C[add the provided string as a comment marker segment]'
  '-c[delay adaptive template changes to first line of next stripe]'
  '-r[terminate each stripe with SDRST marker]'
  '-Y[announce in header initially this larger image height]'
  '-f[chose encoding options for T.85 fax profile complianance]'
  '-v[verbose output]'
  '*:filename:_files'
)

_arguments -s $arguments
