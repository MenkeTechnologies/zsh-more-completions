#compdef animalsay

local arguments

arguments=(
  {-b,-d,-g,-s,-t,-w}'[and -y activate Borg, dead, greedy, sleepy, tired, wired, and]'
  '-f[selects an alternate cow picture. <cowfile> may be either the name of a]'
  '-r[a random cowfile from those present on the cowpath. If -C is also given]'
  '-e[defines a custom eye appearance. <eyes> should be a two-character string.]'
  '-T[defines a custom tongue appearance.]'
  '-n[word wrapping, to support messages with arbitrary whitespace. Must be the]'
  '-W[controls where line wrapping occurs. Default is 40 columns.]'
  '*:filename:_files'
)

_arguments -s $arguments
