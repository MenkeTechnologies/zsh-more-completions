local arguments

arguments=(
  '--help[show help about options]'
  '--help-qt[show Qt specific options]'
  '--help-kde[show KDE specific options]'
  '--help-all[show all options]'
  '--author[show author information]'
  {-v,--version}'[show version information]'
  '--license[show license information]'
  {-m,--merge}'[merge the input.]'
  {-b,--base}'[explicit base file. For compatibility with certain tools.]'
  {-o,--output}'[output file. Implies -m. E.g.: -o newfile.txt]'
  '--out[output file, again. (For compatibility with certain tools.)]'
  '--auto[no GUI if all conflicts are auto-solvable. (Needs -o file)]'
  '--qall[dont solve conflicts automatically.]'
  '--L1[1 Visible name replacement for input file 1 (base).]'
  '--L2[2 Visible name replacement for input file 2.]'
  '--L3[3 Visible name replacement for input file 3.]'
  {-L,--fname}'[alternative visible name replacement. Supply this once for every input.]'
  '--cs[override a config setting. Use once for every setting. E.g.: --cs "AutoAdvance=1"]'
  '--confighelp[show list of config settings and current values.]'
  '--config[use a different config file.]'
  {-u,--ignore}'[ignored. (User defined.)]'
  '--query[ignored. (User defined.)]'
  '--html[ignored. (User defined.)]'
  '--abort[ignored. (User defined.)]'
  '*:filename:_files'
)

_arguments -s $arguments
