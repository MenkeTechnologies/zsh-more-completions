#compdef sass-convert

local arguments

arguments=(
  {-F,--from}'[the format to convert from. Can be css, scss, sass.]'
  {-T,--to}'[the format to convert to. Can be scss or sass.]'
  {-i,--in-place}'[convert a file to its own syntax.]'
  {-R,--recursive}'[convert all the files in a directory. Requires --from and --to.]'
  {-v,--version}'[print the Sass version.]'
  '--dasherize[convert underscores to dashes.]'
  '--indent[how many spaces to use for each level of indentation. Defaults to 2.]'
  '--old[output the old-style ":prop val" property syntax.]'
  {-s,--stdin}'[read input from standard input instead of an input file.]'
  {-E,--default-encoding}'[specify the default encoding for input files.]'
  '--unix-newlines[use Unix-style newlines in written files.]'
  '--cache-location[the path to save parsed Sass files. Defaults to .sass-cache.]'
  {-C,--no-cache}'[dont cache to sassc files.]'
  {-q,--quiet}'[silence warnings and status messages during conversion.]'
  '--trace[show a full Ruby stack trace on error]'
  '*:filename:_files'
)

_arguments -s $arguments
