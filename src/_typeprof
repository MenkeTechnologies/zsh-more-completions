#compdef typeprof

local arguments

arguments=(
  '-o[output to OUTFILE instead of stdout]'
  {-q,--quiet}'[do not display progress indicator]'
  {-v,--verbose}'[alias to --show-errors]'
  '--version[display typeprof version]'
  '-I[add DIR to the load/require path]'
  '-r[require RBS of the FEATURE gem]'
  '--collection[file path of collection configuration]'
  '--no-collection[ignore collection configuration]'
  '--lsp[LSP mode]'
  '--include-dir[include the analysis result of .rb file in DIR]'
  '--exclude-dir[exclude the analysis result of .rb file in DIR]'
  '--exclude-untyped[exclude (comment out) all entries including untyped]'
  '--max-second[limit the maxium time of analysis (in second)]'
  '--max-iteration[limit the maxium instruction count of analysis]'
  '--type-depth-limit[limit the maximum depth of nested types]'
  '--union-width-limit[limit the maximum count of class instances in one union type]'
  '--debug[display analysis log (for debugging purpose)]'
  '--port[specify a port number to listen for requests on]'
  '--stdio[use stdio for LSP transport]'
  '*:filename:_files'
)

_arguments -s $arguments
