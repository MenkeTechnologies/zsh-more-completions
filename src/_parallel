#compdef parallel

local arguments

arguments=(
  '-j[run n jobs in parallel]:number of jobs:'
  '-k[keep same order]'
  '-X[multiple arguments with context replace]'
  '--colsep[split input on regexp for positional replacements]:regexp:'
  '-S[ssh login example: foo@server.example.com]:ssh login:'
  '--slf[Use ~/.parallel/sshloginfile as the list of sshlogins]:hosts file:_files'
  '--trc[Shorthand for --transfer --return {}.bar --cleanup]:{}.bar:'
  '--onall[run the given command with argument on all sshlogins]'
  '--nonall[run the given command with no arguments on all sshlogins]'
  '--pipe[split stdin (standard input) to multiple jobs.]'
  '--recend[record end separator for --pipe.]:end separator:'
  '--recstart[record start separator for --pipe.]:start separator:'
  '*:command:'
)

_arguments -s $arguments
