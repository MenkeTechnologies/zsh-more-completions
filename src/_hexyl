#compdef hexyl

local arguments

arguments=(
  {-n,--length}'[only read N bytes from the input. The N argument can also]'
  {-c,--bytes}'[an alias for -n/--length]'
  {-s,--skip}'[skip the first N bytes of the input. The N argument can]'
  '--block-size[sets the size of the `block` unit to SIZE.]'
  {-v,--no-squeezing}'[displays all input data. Otherwise any number of groups of]'
  '--color[when to use colors. The auto-mode only displays colors if]'
  '--border[whether to draw a border with Unicode characters, ASCII]'
  {-o,--display-offset}'[add N bytes to the displayed file position. The N argument]'
  {-h,--help}'[prints help information]'
  {-V,--version}'[prints version information]'
  '*:filename:_files'
)

_arguments -s $arguments
