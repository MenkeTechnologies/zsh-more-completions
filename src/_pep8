#compdef pep8

local arguments

arguments=(
    '(- * :)--version[show programs version number and exit]'
    '(- * :)'{-h,--help}'[show this help message and exit]'
  {-v,--verbose}'[print status messages, or debug with -vv]'
  {-q,--quiet}'[report only file names, or nothing with -qq]'
  {-r,--repeat}'[(obsolete) show all occurrences of the same error]'
  '--first[show first occurrence of each error]'
  '--exclude[exclude files or directories which match these comma]'
  '--filename[when parsing directories, only check filenames matching]'
  '--select[select errors and warnings (e.g. E,W6)]'
  '--ignore[skip errors and warnings (e.g. E4,W) (default:]'
  '--show-source[show source code for each error]'
  '--show-pep8[show text of PEP 8 for each error (implies --first)]'
  '--statistics[count errors and warnings]'
  '--count[print total number of errors and warnings to standard]'
  '--max-line-length[set maximum allowed line length (default: 79)]'
  '--hang-closing[hang closing bracket instead of matching indentation of]'
  '--format[set the error format \[default|pylint|<custom>\]]'
  '--diff[report changes only within line number ranges in the]'
  '--benchmark[measure processing speed]'
  '--config[user config file location]'
  '*:filename:_files'
)

_arguments -s $arguments
