#compdef otftotfm

local arguments

arguments=(
  {-s,--script}'[.LANG\] Use features for script SCRIPT\[.LANG\] \[latn\].]'
  {-f,--feature}'[activate feature FEAT.]'
  {--lf,--letter-feature}'[activate feature FEAT for letters.]'
  '--subs-filter[substitute only characters matching PAT.]'
  '--include-subs[same, but cumulative.]'
  '--exclude-subs[dont substitute characters matching PAT.]'
  '--clear-subs[clear included/excluded substitutions.]'
  {-E,--extend}'[widen characters by a factor of F.]'
  {-S,--slant}'[oblique characters by AMT, generally <<1.]'
  {-L,--letterspacing}'[letterspace each character by AMT units.]'
  '--math-spacing[use letterspacing appropriate for math.]'
  {-k,--min-kern}'[omit kerns with absolute value < N \[2.0\].]'
  '--space-factor[scale wordspace by a factor of F.]'
  '--design-size[set font design size to SIZE.]'
  '--fixed-width[set fixed width (no space stretch).]'
  '--italic-angle[set font italic angle (for positioning accents).]'
  '--x-height[set x-height to AMT units.]'
  {-e,--encoding}'[use DVIPS encoding FILE as a base encoding.]'
  '--boundary-char[set the boundary character to CHAR.]'
  '--altselector-char[set the alternate selector character to CHAR.]'
  '--altselector-feature[activate feature F for --altselector-char.]'
  '--alternates-filter[include only alternate characters matching PAT.]'
  '--include-alternates[same as --alternates-filter, but cumulative.]'
  '--exclude-alternates[ignore alternate characters matching PAT.]'
  '--clear-alternates[clear included/excluded alternates.]'
  '--ligkern[add a ligature or kern.]'
  '--position[add a POSITION command.]'
  '--unicoding[add a UNICODING command.]'
  '--no-encoding-commands[ignore encoding files LIGKERN/UNICODINGs.]'
  '--no-default-ligkern[dont include default LIGKERNs.]'
  '--coding-scheme[set the output coding scheme to SCHEME.]'
  '--warn-missing[warn about characters not supported by font.]'
  '--literal-encoding[use DVIPS encoding FILE verbatim.]'
  '--base-encodings[output can refer to base fonts named in FILE.]'
  {-a,--automatic}'[install in a TeX Directory Structure.]'
  {-v,--vendor}'[set font vendor for TDS \[lcdftools\].]'
  '--typeface[set typeface name for TDS \[<font family>\].]'
  '--no-type1[do not generate Type 1 fonts.]'
  '--no-dotlessj[do not generate dotless-j fonts.]'
  '--no-updmap[do not run updmap.]'
  '--no-truetype[do not install TrueType-flavored input fonts.]'
  {-n,--name}'[generated font name is NAME.]'
  {-p,--pl}'[output human-readable PL/VPLs, not TFM/VFs.]'
  '--no-virtual[do not generate VFs or VPLs.]'
  '--no-encoding[do not generate an encoding file.]'
  '--no-map[do not generate a psfonts.map line.]'
  '--output-encoding[only generate an encoding file.]'
  '--tfm-directory[put TFM files in DIR \[.|automatic\].]'
  '--pl-directory[put PL files in DIR \[.|automatic\].]'
  '--vf-directory[put VF files in DIR \[.|automatic\].]'
  '--vpl-directory[put VPL files in DIR \[.|automatic\].]'
  '--encoding-directory[put encoding files in DIR \[.|automatic\].]'
  '--type1-directory[put Type 1 fonts in DIR \[automatic\].]'
  '--truetype-directory[put TrueType fonts in DIR \[automatic\].]'
  '--map-file[update FILE with psfonts.map information \[-\].]'
  '--glyphlist[use FILE to map Adobe glyph names to Unicode.]'
  {-V,--verbose}'[print progress information to standard error.]'
  '--no-create[print messages, dont modify any files.]'
  '--force[generate files even if versions already exist.]'
  '--kpathsea-debug[set path searching debug flags to MASK.]'
  '(- * :)'{-h,--help}'[print this message and exit.]'
  {-q,--quiet}'[do not generate any error messages.]'
  '--version[print version number and exit.]'
  '*:filename:_files'
)

_arguments -s $arguments
