#compdef t1reencode

local arguments

arguments=(
  {-e,--encoding}'[read the encoding from FILE (in DVIPS format).]'
  {-E,--encoding-text}'[the ENC argument is the encoding text.]'
  {-n,--name}'[set output fonts PostScript name.]'
  {-N,--full-name}'[set output fonts full name.]'
  {-a,--pfa}'[output PFA font.]'
  {-b,--pfb}'[output PFB font. This is the default.]'
  {-o,--output}'[write output to FILE instead of standard out.]'
  '(- * :)'{-h,--help}'[print this message and exit.]'
  '--version[print version number and exit.]'
  '*:filename:_files'
)

_arguments -s $arguments
