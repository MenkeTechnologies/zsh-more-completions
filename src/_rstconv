#compdef rstconv

local arguments

arguments=(
  '-i[use specified file instead of stdin as input .rsj/.rst (OPTIONAL)]'
  '-o[write output to specified file (REQUIRED)]'
  '-f[specifies the output format:]'
  '-c[set Adds a header specifying the given character set (OPTIONAL).]'
  '-c[specifies the component identifier (REQUIRED).]'
  '-n[specifies the first message number \[1-9999\] (OPTIONAL).]'
  '-s[use STRINGTABLE instead of MESSAGETABLE]'
  '-c[use identifier as ID base (ID+n) (OPTIONAL)]'
  '-n[specifies the first ID number (OPTIONAL)]'
  '-p[convert the string data to the specified code page before]'
  '*:filename:_files'
)

_arguments -s $arguments
