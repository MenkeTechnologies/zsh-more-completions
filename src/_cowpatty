#compdef cowpatty

local arguments

arguments=(
  '-f[file]'
  '-d[file (genpmk)]'
  '-r[capture file]'
  '-s[SSID (enclose in quotes if SSID includes spaces)]'
  '-c[for valid 4-way frames, does not crack]'
  '-h[this help information and exit]'
  '-v[verbose information (more -v for more verbosity)]'
  '-V[program version and exit]'
  '*:filename:_files'
)

_arguments -s $arguments
