#compdef rustc

local arguments

arguments=(
  {-h,--help}'[display this message]'
  '--cfg[configure the compilation environment]'
  '-L[\]PATH      Add a directory to the library search path. The]'
  '-l[\]NAME\[:RENAME\]]'
  '--crate-type[comma separated list of types of crates]'
  '--crate-name[specify the name of the crate being built]'
  '--edition[015|2018|2021]'
  '--emit[comma separated list of types of output for the]'
  '--print[compiler information to print on stdout]'
  '-g[equivalent to -C debuginfo=2]'
  '-O[equivalent to -C opt-level=2]'
  '-o[write output to <filename>]'
  '--out-dir[write output to compiler-chosen filename in <dir>]'
  '--explain[provide a detailed explanation of an error message]'
  '--test[build a test harness]'
  '--target[target triple for which the code is compiled]'
  {-A,--allow}'[set lint allowed]'
  {-W,--warn}'[set lint warnings]'
  '--force-warn[set lint force-warn]'
  {-D,--deny}'[set lint denied]'
  {-F,--forbid}'[set lint forbidden]'
  '--cap-lints[set the most restrictive lint level. More restrictive]'
  {-C,--codegen}'[VALUE\]]'
  {-V,--version}'[print version info and exit]'
  {-v,--verbose}'[use verbose output]'
  '-C[print codegen options]'
  '-W[print lint options and default settings]'
  {--help,-v}'[print the full set of options rustc accepts]'
  '*:filename:_files'
)

_arguments -s $arguments
