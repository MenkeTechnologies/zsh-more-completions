#compdef colprof

local arguments

arguments=(
  '-v[verbose mode]'
  '-A[manufacturer description string]'
  '-M[model description string]'
  '-D[profile Description string (Default "inoutfile")]'
  '-C[copyright string]'
  '-Z[attributes: Transparency, Matte, Negative, BlackAndWhite]'
  '-Z[default intent: Perceptual, Rel. Colorimetric, Saturation, Abs. Colorimetric]'
  '-q[quality - Low, Medium (def), High, Ultra]'
  '-b[low quality B2A table - or specific B2A quality or none for input device]'
  '-ni[dont create input (Device) shaper curves]'
  '-np[dont create input (Device) grid position curves]'
  '-no[dont create output (PCS) shaper curves]'
  '-nc[dont put the input .ti3 data in the profile]'
  '-k[black Ink generation target: z = zero K]'
  '-k[stle stpo enpo enle shape]'
  '-K[same as -k, but target is K locus rather than K value itself]'
  '-l[override total ink limit, 0 - 400% (default from .ti3)]'
  '-L[override black ink limit, 0 - 100% (default from .ti3)]'
  '-a[algorithm type override]'
  '-u[if input profile, auto scale WP to allow extrapolation]'
  '-uc[if input profile, clip cLUT values above WP]'
  '-U[if input profile, scale media white point by scale]'
  '-R[restrict white <= 1.0, black and primaries to be +ve]'
  '-V[degree of dark region cLUT grid emphasis 1.0-4.0 (default 1.00 = none)]'
  '-f[use Fluorescent Whitening Agent compensation \[opt. simulated inst. illum.:]'
  '-i[choose illuminant for computation of CIE XYZ from spectral data & FWA:]'
  '-o[choose CIE Observer for spectral data:]'
  '-r[average deviation of device+instrument readings as a percentage (default 0.50%)]'
  '-s[.icc|cperc Apply gamut mapping to output profile perceptual B2A table]'
  '-S[.icc|experc Apply gamut mapping to output profile perceptual and]'
  '-nP[use colormetric source gamut to make output profile perceptual table]'
  '-nS[use colormetric source gamut to make output profile saturation table]'
  '-g[.gam Use source image gamut as well for output profile gamut mapping]'
  '-p[... Incorporate abstract profile(s) into output tables]'
  '-t[override gamut mapping intent for output profile perceptual table:]'
  '-T[override gamut mapping intent for output profile saturation table:]'
  '-c[set input viewing conditions for output profile CIECAM02 gamut mapping]'
  '-d[set output viewing conditions for output profile CIECAM02 gamut mapping]'
  '-P[create gamut gammap_p.wrl and gammap_s.wrl diagostics]'
  '-O[override the default output filename.]'
  '*:filename:_files'
)

_arguments -s $arguments
