#compdef reporter-ureport

local arguments

arguments=(
  {-v,--verbose}'[be verbose]'
  {-d,--problem-dir}'[problem directory]'
  {-u,--url}'[specify server URL]'
  {-k,--insecure}'[allow insecure connection to ureport server]'
  {-t,--auth}'[use client authentication]'
  {-h,--http-auth}'[use HTTP Authentication]'
  {-i,--auth}'[_items AUTH_ITEMS]'
  '-c[configuration file]'
  {-a,--attach}'[bthash of uReport to attach (conflicts with -A)]'
  {-A,--attach-rt}'[attach to a bthash from reported_to (conflicts with -a)]'
  {-e,--email}'[contact e-mail address (requires -a|-A, conflicts with -E)]'
  {-E,--email-env}'[contact e-mail address from environment or configuration file (requires -a|-A, conflicts with -e)]'
  {-b,--bug-id}'[attach RHBZ bug (requires -a|-A, conflicts with -B)]'
  {-B,--bug-id-rt}'[attach last RHBZ bug from reported_to (requires -a|-A, conflicts with -b)]'
  {-l,--value}'[attach value (requires -a|-A and -T, conflicts with -L)]'
  {-L,--value-rt}'[attach data of FIELD \[URL\] of the last report result (requires -a|-A, -r and -T, conflicts with -l)]'
  {-r,--report-result-type}'[use REPORT_RESULT_TYPE when looking for FIELD in reported_to (used only with -L)]'
  {-T,--type}'[attach DATA as ureporte attachment ATTACHMENT_TYPE (used only with -l|-L)]'
  '*:filename:_files'
)

_arguments -s $arguments
