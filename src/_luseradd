#compdef luseradd

local arguments

arguments=(
  {-i,--interactive}'[prompt for all information]'
  {-r,--reserved}'[create a system user]'
  {-c,--gecos}'[GECOS information for new user]'
  {-d,--directory}'[home directory for new user]'
  {-k,--skeleton}'[directory with files for the new user]'
  {-s,--shell}'[shell for new user]'
  {-u,--uid}'[uid for new user]'
  {-g,--gid}'[group for new user]'
  {-M,--nocreatehome}'[dont create home directory for user]'
  {-n,--nocreategroup}'[dont create group with same name as user]'
  {-P,--plainpassword}'[plaintext password for use with group]'
  {-p,--password}'[pre-hashed password for use with group]'
  '--commonname[common name for new user]'
  '--givenname[given name for new user]'
  '--surname[surname for new user]'
  '--roomnumber[room number for new user]'
  '--telephonenumber[telephone number for new user]'
  '--homephone[home telephone number for new user]'
  '--usage[display brief usage message]'
  '*:filename:_files'
)

_arguments -s $arguments
