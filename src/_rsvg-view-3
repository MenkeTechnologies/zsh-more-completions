#compdef rsvg-view-3

local arguments

arguments=(
  '--help-all[show all help options]'
  '--help-gtk[show GTK+ Options]'
  {-s,--stdin}'[read from stdin instead of a file]'
  {-d,--dpi-x}'[set the # of Pixels Per Inch]'
  {-p,--dpi-y}'[set the # of Pixels Per Inch]'
  {-x,--x-zoom}'[set the x zoom factor]'
  {-y,--y-zoom}'[set the y zoom factor]'
  {-w,--width}'[set the images width]'
  {-h,--height}'[set the images height]'
  {-b,--bg-color}'[set the image background color (default: transparent)]'
  {-u,--base-uri}'[set the base URI (default: none)]'
  '--id[only show one node (default: all)]'
  {-k,--keep-aspect}'[preserve the images aspect ratio]'
  '--unlimited[allow huge SVG files]'
  {-v,--version}'[show version information]'
  '--display[X display to use]'
  '*:filename:_files'
)

_arguments -s $arguments
