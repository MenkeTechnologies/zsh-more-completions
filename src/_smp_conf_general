#compdef smp_conf_general

local arguments

arguments=(
  '--connect[CO STP maximum connect time limit (100 us)]'
  '--expected[EX set expected expander change count to EX]'
  '--help[|-h print out usage message then exit]'
  '--hex[|-H print response in hexadecimal]'
  '--inactivity[IN STP bus inactivity time limit (100 us)]'
  '--interface[PARAMS specify or override interface]'
  '--nexus[NE STP SMP I_T nexus loss time (ms)]'
  '--open[OP STP reject to open limit (10 us)]'
  '--power[PD power done timeout (unit: second)]'
  '--raw[|-r output response in binary]'
  '--reduced[RE initial time to reduced functionality (100 ms)]'
  '--sa[SAS_ADDR SAS address of SMP target (use leading]'
  '--verbose[|-v increase verbosity]'
  '--version[|-V print version string and exit]'
  '*:filename:_files'
)

_arguments -s $arguments
