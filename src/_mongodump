#compdef mongodump

local arguments

arguments=(
  '--help[print usage]'
  '--version[print the tool]'
  {-v,--verbose}'[more detailed log]'
  '--verbose[)]'
  '--quiet[hide all log output]'
  {-h,--host}'[mongodb host to]'
  '--port[server port (can]'
  '--gssapiServiceName[service name to use]'
  '--gssapiHostName[hostname to use]'
  '--ssl[connect to a mongod]'
  '--sslCAFile[the .pem file]'
  '--sslPEMKeyFile[the .pem file]'
  '--sslPEMKeyPassword[the password to]'
  '--sslCRLFile[the .pem file]'
  '--sslAllowInvalidCertificates[bypass the]'
  '--sslAllowInvalidHostnames[bypass the]'
  '--sslFIPSMode[use FIPS mode of]'
  {-u,--username}'[username for]'
  {-p,--password}'[password for]'
  '--authenticationDatabase[database that holds]'
  '--authenticationMechanism[authentication]'
  {-d,--db}'[database to use]'
  {-c,--collection}'[collection to use]'
  '--uri[mongodb uri]'
  {-q,--query}'[query filter, as a]'
  '--queryFile[path to a file]'
  '--readPreference[specify either a]'
  '--forceTableScan[force a table scan]'
  {-o,--out}'[output directory]'
  '--gzip[compress archive]'
  '--repair[try to recover]'
  '--oplog[use oplog for]'
  '--archive[dump as an archive]'
  '--dumpDbUsersAndRoles[dump user and role]'
  '--excludeCollection[collection to]'
  '--excludeCollectionsWithPrefix[exclude all]'
  {-j,--numParallelCollections}'[number of]'
  '--viewsAsCollections[dump views as]'
  '*:filename:_files'
)

_arguments -s $arguments
