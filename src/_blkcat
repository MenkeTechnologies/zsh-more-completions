#compdef blkcat

local arguments

arguments=(
  '-a[displays in all ASCII]'
  '-h[displays in hexdump-like fashion]'
  '-i[the format of the image file (use -i list for supported types)]'
  '-b[the size (in bytes) of the device sectors]'
  '-o[the offset of the file system in the image (in sectors)]'
  '-f[file system type (use -f list for supported types)]'
  '-s[display basic block stats such as unit size, fragments, etc.]'
  '-v[verbose output to stderr]'
  '-V[display version]'
  '-w[displays in web-like (html) fashion]'
  '-u[size of each data unit in image (for raw, blkls, swap)]'
  '*:filename:_files'
)

_arguments -s $arguments
