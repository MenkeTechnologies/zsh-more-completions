#compdef kbroadcastnotification

local arguments

arguments=(
  '(- * :)'{-h,--help}'[displays this help.]'
  {-v,--version}'[displays version information.]'
  '--application[name of the application that should be]'
  '--summary[A brief one-line summary of the notification]'
  '--icon[icon for the notification]'
  '--uids[A comma-separated list of user IDs this]'
  '--timeout[timeout for the notification]'
  '--persistent[keep the notification in the history until the]'
  '--author[show author information.]'
  '--license[show license information.]'
  '--desktopfile[name> The base file name of the desktop entry for this]'
  '*:filename:_files'
)

_arguments -s $arguments
