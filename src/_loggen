#compdef loggen

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show help options]'
  '--help-all[show all help options]'
  '--help-file[show file options]'
  {-r,--rate}'[/sec/active connection> Number of messages to generate per second]'
  {-i,--inet}'[use IP-based transport (TCP, UDP)]'
  {-x,--unix}'[use UNIX domain socket transport]'
  {-S,--stream}'[use stream socket (TCP and unix-stream)]'
  {-6,--ipv6}'[use AF_INET6 sockets instead of AF_INET (can use both IPv4 & IPv6)]'
  {-D,--dgram}'[use datagram socket (UDP and unix-dgram)]'
  {-s,--size}'[specify the size of the syslog message]'
  {-I,--interval}'[number of seconds to run the test for]'
  {-T,--permanent}'[send logs without time limit]'
  {-P,--syslog-proto}'[use the new syslog-protocol message format (see also framing)]'
  {-p,--sdata}'[send the given sdata (e.g. "\[test name=\"value\"\]") in case of syslog-proto]'
  {-F,--no-framing}'[dont use syslog-protocol style framing, even if syslog-proto is set]'
  '--active-connections[number of active connections to the server (default = 1)]'
  '--idle-connections[number of inactive connections to the server (default = 0)]'
  {-U,--use-ssl}'[use ssl layer]'
  {-R,--read-file}'[read log messages from file]'
  {-l,--loop-reading}'[read the file specified in read-file option in loop (it will restart the reading if reached the end of the file)]'
  '--skip-tokens[skip the given number of tokens (delimined by a space) at the beginning of each line (default value: 3)]'
  {-C,--csv}'[produce CSV output]'
  {-n,--number}'[number of messages to generate]'
  {-Q,--quiet}'[dont print the msg/sec data]'
  {-V,--version}'[display version number (syslog-ng 3.8.1)]'
  '*:filename:_files'
)

_arguments -s $arguments
