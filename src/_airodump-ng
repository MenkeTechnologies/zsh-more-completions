#compdef airodump-ng

local arguments

arguments=(
  '--ivs[Save only captured IVs]'
  '--gpsd[Use GPSd]'
  '--write[Dump file prefix]:prefix:'
  '-w[same as --write]'
  '--beacons[Record all beacons in dump file]'
  '--update[Display update delay in seconds]:secs:'
  '--showack[Prints ack/cts/rts statistics]'
  '-h[Hides known stations for --showack]'
  '-f[Time in ms between hopping channels]:msecs:'
  '--berlin[Time before removing the AP/client]:secs:'
  '-r[Read packets from that file]:file:'
  '-x[Active Scanning Simulation]:msecs:'
  '--manufacturer[Display manufacturer from IEEE OUI list]'
  '--uptime[Display AP Uptime from Beacon Timestamp]'
  '--wps[Display WPS information (if any)]'
  '--output-format[Output format. Possible values:]:formats:'
  '--ignore-negative-one[removes the message that says]'
  '--write-interval[Output file(s) write interval in seconds]:seconds:'
  '--background[Override background detection.]'
  '--encrypt[Filter APs by cipher suite]:suite:'
  '--netmask[Filter APs by mask]'
  '--bssid[Filter APs by BSSID]:bssid:'
  '--essid[Filter APs by ESSID]:essid:'
  '--essid-regex[Filter APs by ESSID using a regular]'
  '-a[Filter unassociated clients]'
  '--ht20[Set channel to HT20 (802.11n)]'
  '--ht40-[Set channel to HT40- (802.11n)]'
  '--ht40[+ : Set channel to HT40+ (802.11n)]'
  '--channel[Capture on specific channels]'
  '--band[Band on which airodump-ng should hop]'
  '-C[Uses these frequencies in MHz to hop]:frequencies:'
  '--cswitch[Set channel switching method]:method:'
  '-s[same as --cswitch]'
  '--help[Displays this usage screen]'
  '*:filename:_files'
)

_arguments -s $arguments
