#compdef bettercap

local arguments

arguments=(
  '-autostart[comma separated list of modules to auto start. (default "events.stream, net.recon")]'
  '-caplet[read commands from this file and execute them in the interactive session.]'
  '-cpu-profile[write cpu profile file.]'
  '-debug[print debug messages.]'
  '-env-file[load environment variables from this file if found, set to empty to disable environment persistence.]'
  '-eval[run one or more commands separated by ; in the interactive session, used to set variables via command line.]'
  '-gateway-override[use the provided IP address instead of the default gateway. If not specified or invalid, the default gateway will be used.]'
  '-iface[network interface to bind to, if empty the default interface will be auto selected.]'
  '-mem-profile[write memory profile to file.]'
  '-no-colors[disable output color effects.]'
  '-no-history[disable interactive session history file.]'
  '-silent[suppress all logs which are not errors.]'
  '-version[print the version and exit.]'
  '*:filename:_files'
)

_arguments -s $arguments
