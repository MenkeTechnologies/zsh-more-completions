#compdef icupkg

local arguments

arguments=(
  '-h[-\? or --help print this message and exit]'
  {-tl,--type}'[output for little-endian/ASCII charset family]'
  {-tb,--type}'[output for big-endian/ASCII charset family]'
  {-te,--type}'[output for big-endian/EBCDIC charset family]'
  {-c,--copyright}'[the ICU copyright notice]'
  '-C[or --comment comment include a comment string]'
  '-a[or --add list add items to the package]'
  '-r[or --remove list remove items from the package]'
  '-x[or --extract list extract items from the package]'
  {-w,--writepkg}'[write the output package even if no items are removed]'
  '-m[or --matchmode mode set the matching mode for item names with]'
  '--auto[_toc_prefix automatic ToC entries prefix]'
  '--auto[_toc_prefix_with_type auto_toc_prefix + adjust platform type]'
  '--toc[_prefix prefix ToC prefix to be used in the output package]'
  '-s[or --sourcedir path directory for the --add items]'
  '-d[or --destdir path directory for the --extract items]'
  {-l,--list}'[list the package items]'
  '-o[or --outlist path path/filename for the --list output]'
  '*:filename:_files'
)

_arguments -s $arguments
