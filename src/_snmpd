#compdef snmpd

local arguments

arguments=(
  '-a[log addresses]'
  '-A[append to the logfile rather than truncating it]'
  '-c[...\] read FILE(s) as configuration file(s)]'
  '-C[do not read the default configuration files]'
  '-d[dump sent and received SNMP packets]'
  '-D[...\]\] turn on debugging output for the given TOKEN(s)]'
  '-f[do not fork from the shell]'
  '-g[change to this numeric gid after opening]'
  '(- * :)'{-h,--help}'[display this usage message]'
  '-H[display configuration file directives understood]'
  '-I[list of mib modules to initialize (or not)]'
  '-L[toggle options controlling where to log to]'
  '-m[use MIBLIST instead of the default MIB list]'
  '-M[use DIRLIST as the list of locations to look for MIBs]'
  '-p[store process id in FILE]'
  '-q[print information in a more parsable format]'
  '-r[do not exit if files only accessible to root]'
  '-u[change to this uid (numeric or textual) after]'
  {-v,--version}'[display version information]'
  '-V[verbose display]'
  '-x[use ADDRESS as AgentX address]'
  '-X[run as an AgentX subagent rather than as an]'
  '-l[use -Lf <FILE> instead]'
  '-P[use -p instead]'
  '-s[use -Lsd instead]'
  '-S[0-7 use -Ls <facility> instead]'
  '*:filename:_files'
)

_arguments -s $arguments
