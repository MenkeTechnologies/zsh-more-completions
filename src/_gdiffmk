#compdef gdiffmk

local arguments

arguments=(
  '-a[mark for added groff source lines. Default: `+.]'
  '-c[mark for changed groff source lines. Default: `|.]'
  '-d[mark for deleted groff source lines. Default: `*.]'
  '-D[show the deleted portions from changed and deleted text.]'
  '-B[by default, the deleted texts marked by the `-D option end]'
  '-M[1 MARK2 Change the delimiting marks for the `-D option.]'
  '-x[use a different diff(1) command;]'
  '--version[print version information on the standard output and exit.]'
  '--help[print this message on the standard error.]'
  '*:filename:_files'
)

_arguments -s $arguments
