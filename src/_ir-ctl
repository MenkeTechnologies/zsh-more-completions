#compdef ir-ctl

local arguments

arguments=(
  {-d,--device}'[lirc device to use]'
  {-f,--features}'[list lirc device features]'
  {-K,--keycode}'[send IR keycode from keymap]'
  {-r,--receive}'[receive IR to stdout or file]'
  {-s,--send}'[send IR pulse and space file]'
  {-S,--scancode}'[send IR scancode in protocol specified]'
  {-v,--verbose}'[verbose output]'
  {-1,--one-shot}'[end receiving after first message]'
  '--mode2[output in mode2 format]'
  {-m,--measure-carrier}'[report carrier frequency]'
  {-M,--no-measure-carrier}'[disable reporting carrier frequency]'
  {-n,--narrowband}'[use narrowband receiver, disable learning mode]'
  {-R,--carrier-range}'[set receiver carrier range]'
  {-t,--timeout}'[set receiving timeout]'
  {-w,--wideband}'[use wideband receiver aka learning mode]'
  {-c,--carrier}'[set send carrier]'
  {-D,--duty-cycle}'[set send duty cycle]'
  {-e,--emitters}'[set send emitters]'
  {-g,--gap}'[set gap between files or scancodes]'
  {-k,--keymap}'[use keymap to send key from]'
  '--usage[give a short usage message]'
  {-V,--version}'[print program version]'
  '*:filename:_files'
)

_arguments -s $arguments
