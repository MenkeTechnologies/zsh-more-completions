#compdef sncfgquery

local arguments

arguments=(
  '-f[find information based on config file location]'
  '-n[find information based on file system name]'
  '-d[dump config]'
  '-l[list keywords]'
  '-q[query config]'
  '-h[print this help info]'
  '-k[keyword]'
  '-s[section]'
  '*:filename:_files'
)

_arguments -s $arguments
