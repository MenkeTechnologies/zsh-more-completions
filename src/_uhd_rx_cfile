#compdef uhd_rx_cfile

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show this help message and exit]'
  {-a,--args}'[UHD device address args , \[default=\]]'
  '--spec[subdevice of UHD device where appropriate]'
  {-c,--channels}'[select receive channels]'
  {-A,--antenna}'[select Rx Antenna(s) where appropriate. Use a comma-]'
  {-r,--samp-rate}'[set sample rate (bandwidth) \[default=1000000.0\]]'
  {-f,--freq}'[set frequency to FREQ]'
  '--lo-offset[set daughterboard LO offset to OFFSET \[default=hw]'
  {-g,--gain}'[set gain in dB (default is midpoint)]'
  '--normalized-gain[specify gain as normalized value (in \[0, 1\])]'
  {-m,--metafile}'[output metadata to file \[default=False\]]'
  {-s,--output-shorts}'[output interleaved shorts instead of complex floats]'
  {-N,--nsamples}'[number of samples to collect \[default=+inf\]]'
  {-v,--verbose}'[verbose output]'
  '--wire-format[set wire format from USRP \[default=sc16]'
  '--stream-args[set additional stream arguments]'
  '--show-async-msg[show asynchronous message notifications from UHD]'
  '--sync[set to pps to sync devices to PPS instead of]'
  '*:filename:_files'
)

_arguments -s $arguments
