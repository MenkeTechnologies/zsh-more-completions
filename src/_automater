#compdef automater

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show this help message and exit]'
  {-o,--output}'[this option will output the results to a file.]'
  {-b,--bot}'[this option will output minimized results for a bot.]'
  {-f,--cef}'[this option will output the results to a CEF formatted]'
  {-w,--web}'[this option will output the results to an HTML file.]'
  {-c,--csv}'[this option will output the results to a CSV file.]'
  {-d,--delay}'[this will change the delay to the inputted seconds.]'
  {-s,--source}'[this option will only run the target against a]'
  '--proxy[this option will set a proxy to use (eg.]'
  {-a,--useragent}'[this option allows the user to set the user-agent seen]'
  {-V,--vercheck}'[this option checks and reports versioning for]'
  {-r,--refreshxml}'[this option refreshes the tekdefense.xml file from the]'
  {-v,--verbose}'[this option prints messages to the screen. Default (no]'
  '-v[) is False.]'
  '*:filename:_files'
)

_arguments -s $arguments
