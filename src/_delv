#compdef delv

local arguments

arguments=(
  '-x[(shortcut for reverse lookups)]'
  '-d[(set debugging level)]'
  '-a[(specify root and dlv trust anchors)]'
  '-b[(bind to source address/port)]'
  '-p[(specify port number)]'
  '-q[(specify query name)]'
  '-t[(specify query type)]'
  '-c[(option included for compatibility;]'
  '-4[(use IPv4 query transport only)]'
  '-6[(use IPv6 query transport only)]'
  '-i[(disable DNSSEC validation)]'
  '-m[(enable memory usage debugging)]'
  '-h[(print help and exit)]'
  '-v[(print version and exit)]'
  '*:filename:_files'
)

_arguments -s $arguments
