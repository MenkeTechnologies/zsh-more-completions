#compdef mcpp

local arguments

arguments=(
  '-C[output also comments.]'
  '-D[<value>\] Define <macro> as <value> (default:1).]'
  '-D[(args)>\[=<replace>\] Define <macro(args)> as <replace>.]'
  '-e[change the default multi-byte character encoding to one of:]'
  '-I[add <directory> to the #include search list.]'
  '-I-[unset system or site specific include directories.]'
  '-j[dont output the source line in diagnostics.]'
  {-M,-MM,-MD,-MMD,-MP,-MQ,-MT,-MF}'[output source file dependency line for makefile.]'
  '-m32[change target CPU from x86_64, ppc64 to i386, ppc, respectively.]'
  '-m64[change target CPU from i386, ppc to x86_64, ppc64, respectively.]'
  '-N[dont predefine any non-standard macros.]'
  '-o[output to <file>.]'
  '-P[dont output #line lines.]'
  '-Q[output diagnostics to "mcpp.err" (default:stderr).]'
  '-U[undefine <macro>.]'
  '-v[show version and include directories of mcpp.]'
  '-W[set warning level to <level> (OR of {0,1,2,4,8,16}, default:1).]'
  '-z[dont output the included file, only defining macros.]'
  '-2[enable digraphs.]'
  '-h[re-define the pre-defined macro __STDC_HOSTED__ as <n>.]'
  '-S[redefine __STDC__ to <n>, undefine old style macros.]'
  '-V[redefine __STDC_VERSION__ or __cplusplus to <n>.]'
  '-3[enable trigraphs.]'
  '-K[output macro annotations embedding in comments.]'
  '-a[process "assembler" source.]'
  '-k[keep white spaces of input lines as they are.]'
  '*:filename:_files'
)

_arguments -s $arguments
