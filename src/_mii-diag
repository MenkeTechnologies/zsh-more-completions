#compdef mii-diag

local arguments

arguments=(
  {-A,--advertise}'[]'
  {-F,--fixed-speed}'[speed is one of: 100baseT4, 100baseTx, 100baseTx-FD, 100baseTx-HD]'
  {-s,--status}'[return exit status 2 if there is no link beat.]'
  {-a,--all-interfaces}'[show the status all interfaces]'
  {-D,--debug}'[]'
  {-g,--read-parameters}'[driver-specific parameters.]'
  {-G,--set-parameters}'[set driver-specific parameters.]'
  {-M,--msg-level}'[set the driver message bit map.]'
  {-p,--phy}'[set the PHY (MII address) to report.]'
  {-r,--restart}'[restart the link autonegotiation.]'
  {-R,--reset}'[reset the transceiver.]'
  {-v,--verbose}'[report each action taken.]'
  {-V,--version}'[emit version information.]'
  {-w,--watch}'[continuously monitor the transceiver and report changes.]'
  '*:filename:_files'
)

_arguments -s $arguments
