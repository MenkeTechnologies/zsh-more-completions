#compdef sg_reassign

local arguments

arguments=(
    {--address,-A}'[comma separated logical block addresses]'
    {--address,-a}'[read stdin for logical block addresses]'
    {-d,--dummy}'[prepare but do not execute REASSIGN BLOCKS command]'
    {-e,--eight}'[force eight byte (64 bit) lbas when 1]'
    {-g,--grown}'[fetch grown defect list length, dont reassign]'
    '(- * :)'{-h,--help}'[print out usage message]'
    {--hex,-H}'[print response in hex (for -g or -p)]'
    {-l,--longlist}'[use 4 byte list length when 1, safe to ignore]'
    {--primary,-p}'[fetch primary defect list length, dont reassign]'
    {--verbose,-v}'[increase verbosity]'
    {--version,-V}'[print version string and exit]'
  '*:filename:_files'
)

_arguments -s $arguments
