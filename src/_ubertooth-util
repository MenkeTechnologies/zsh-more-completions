#compdef ubertooth-util

local arguments

arguments=(
  '-v[firmware revision number]'
  '-V[compile info]'
  '-I[ubertooth device by flashing all LEDs]'
  '-d[1\] get/set all LEDs]'
  '-l[1\] get/set USR LED]'
  '-S[current operation]'
  '-r[reset]'
  '-U[set ubertooth device to use]:0-7:'
  '-N[total number of Uberteeth and exit]'
  '-a[7\] get/set power amplifier level]'
  '-c[400-2483\] get/set channel in MHz]'
  '-C[78\] get/set channel]'
  '-q[225 (RSSI threshold)\] start LED spectrum analyzer]'
  '-t[continuous transmit test]'
  '-z[squelch level]'
  '-e[repeater mode]'
  '-m[range test result]'
  '-n[range test]'
  '-f[flash programming (DFU) mode]'
  '-i[in-System Programming (ISP) mode]'
  '-b[hardware board id number]'
  '-p[microcontroller Part ID]'
  '-s[microcontroller serial number]'
  '*:filename:_files'
)

_arguments -s $arguments
