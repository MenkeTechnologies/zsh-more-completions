#compdef alpine

local arguments

arguments=(
    '-attach[Go directly into composer with given file]'
    '-attachlist[]'
    '-attach[_and_delete <file>]'
    '-bail[Exit if pinerc file doesnt already exist]'
    '-f[Folder - give folder name to open]'
    '-c[Context - which context to apply to -f arg]'
    '-F[File - give file name to open and page through and]'
    '-h[Help - give this list of options]'
    '-k[Keys - Force use of function keys]'
    '-z[Suspend - allow use of ^Z suspension]'
    '-r[Restricted - can only send mail to oneself]'
    '-sort[Sort - Specify sort order of folder:]'
    '-i[Index - Go directly to index, bypassing main menu]'
    '-I[Initial keystrokes to be executed]'
    '-n[Entry in index to begin on]'
    '-o[ReadOnly - Open first folder read-only]'
    '-conf[Configuration - Print out fresh global configuration. The]'
    '-pinerc[Configuration - Put fresh pinerc configuration in <file>]'
    '-p[Use alternate .pinerc file]'
    '-P[.conf> Use alternate pine.conf file]'
    '-smimedir[directory where smime personal certificates are saved]'
    '-passfile[Set the password file to something other]'
    '-pwdcertdir[Set the directory to store a personal]'
    '-nowrite[_password_cache Read from a password cache if there is one, but]'
    '-x[Use configuration exceptions in <config>.]'
    '-v[Version - show version information]'
    '-version[Version - show version information]'
    '-supported[List supported options]'
    '-url[Open the given URL]'
    '-copy[_pinerc <local_pinerc> <remote_pinerc> copy local pinerc to remote]'
    '-copy[_abook <local_abook> <remote_abook> copy local addressbook to remote]'
    '-convert[_sigs -p <pinerc> convert signatures to literal signatures]'
    '*:filename:_files'
)

_arguments -s $arguments
