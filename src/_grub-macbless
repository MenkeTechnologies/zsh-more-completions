#compdef grub-macbless

local arguments

arguments=(
  {-p,--ppc}'[bless for ppc-based macs]'
  {-v,--verbose}'[print verbose messages.]'
  {-x,--x86}'[bless for x86-based macs]'
  '--usage[give a short usage message]'
  {-V,--version}'[print program version]'
  '*:filename:_files'
)

_arguments -s $arguments
