#compdef sg_write_verify

local arguments

arguments=(
  '--16[|-S do WRITE AND VERIFY(16) (default: 10)]'
  '--bytchk[BC set BYTCHK field (default: 0)]'
  '--dpo[|-d set DPO bit (default: 0)]'
  '--group[GN GN is group number (default: 0)]'
  '--help[|-h print out usage message]'
  {--ilen,-I}'[input (file) length in bytes, becomes data-out]'
  '--in[IF IF is a file containing the data to be written]'
  '--lba[LBA LBA of the first block to write and verify;]'
  '--num[NUM logical blocks to write and verify (def: 1)]'
  '--repeat[|-R while IF still has data to read, send another]'
  '--timeout[TO command timeout in seconds (def: 60)]'
  '--verbose[|-v increase verbosity]'
  '--version[|-V print version string then exit]'
  '--wrprotect[|-w WPR WPR is the WRPROTECT field value (def: 0)]'
  '*:filename:_files'
)

_arguments -s $arguments
