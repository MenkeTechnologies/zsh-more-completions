#compdef btrfsck

local arguments

arguments=(
  {-s,--super}'[use this superblock copy]:superblock'
  {-b,--backup}'[use the first valid backup root copy]'
  '--repair[try to repair the filesystem]'
  '--readonly[run in read-only mode (default)]'
  '--init-csum-tree[create a new CRC tree]'
  '--init-extent-tree[create a new extent tree]'
  '--mode[allows choice of memory/IO trade-offs]'
  '--check-data-csum[verify checksums of data blocks]'
  {-Q,--qgroup-report}'[print a report on qgroup consistency]'
  {-E,--subvol-extents}'[subvolid]'
  {-r,--tree-root}'[use the given bytenr for the tree root]:bytenr'
  '--chunk-root[use the given bytenr for the chunk tree root]'
  {-p,--progress}'[indicate progress]'
  '--clear-space-cache[clear space cache for v1 or v2]:version:(v1 v2)'
  '*:filename:_files'
)

_arguments -s $arguments
