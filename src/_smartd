#compdef smartd

local arguments

arguments=(
  {-A,--attributelog}'[log ATA attribute information to {PREFIX}MODEL-SERIAL.ata.csv]'
  '-B[+\]FILE, --drivedb=\[+\]FILE]'
  {-c,--configfile}'[read configuration file NAME or stdin]'
  {-C,--capabilities}'[drop unneeded Linux process capabilities.]'
  {-d,--debug}'[start smartd in debug mode]'
  {-D,--showdirectives}'[print the configuration file Directives and exit]'
  {-h,--help,--usage}'[display this help and exit]'
  {-i,--interval}'[set interval between disk checks to N seconds, where N >= 10]'
  '-l[0-7\], --logfacility=local\[0-7\]]'
  {-n,--no-fork}'[do not fork into background]'
  {-p,--pidfile}'[write PID file NAME]'
  {-q,--quit}'[quit on one of: nodev, errors, nodevstartup, never, onecheck, showtests]'
  {-r,--report}'[report transactions for one of: ioctl\[,N\], ataioctl\[,N\], scsiioctl\[,N\], nvmeioctl\[,N\]]'
  {-s,--savestates}'[save disk states to {PREFIX}MODEL-SERIAL.TYPE.state]'
  {-w,--warnexec}'[run executable NAME on warnings]'
  {-V,--version,--license,--copyright}'[print License, Copyright, and version information]'
  '*:filename:_files'
)

_arguments -s $arguments
