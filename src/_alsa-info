#compdef alsa-info

local arguments

arguments=(
  '--with-aplay[the output of aplay -l)]'
  '--with-amixer[the output of amixer)]'
  '--with-alsactl[the output of alsactl)]'
  '--with-configs[the output of ~/.asoundrc and]'
  '--with-devices[the device nodes in /dev/snd/)]'
  '--with-dmesg[the ALSA/HDA kernel messages)]'
  '--output[(specify the file to output for no-upload mode)]'
  '--update[server for script updates)]'
  '--upload[contents to remote server)]'
  '--no-upload[not upload contents to remote server)]'
  '--pastebin[http://pastebin.ca) as remote server]'
  '--stdout[alsa information to standard output]'
  '--about[some information about the script)]'
  '--debug[run the script as normal, but will not]'
  '*:filename:_files'
)

_arguments -s $arguments
