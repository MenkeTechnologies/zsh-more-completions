#compdef xbiff

local arguments

arguments=(
  '-display[X server to contact]'
  '-geometry[size of mailbox]'
  '-file[file to watch]'
  '-update[how often to check for mail]'
  '-volume[how loud to ring the bell]'
  '-bg[background color]'
  '-fg[foreground color]'
  '-rv[reverse video]'
  '-shape[shape the window]'
  '*:filename:_files'
)

_arguments -s $arguments
