#compdef opj_compress

local arguments

arguments=(
  '-i[input file]'
  '-o[file>]'
  '-ImgDir[image file Directory path (example ../Images)]'
  '-OutFor[2K|J2C|JP2>]'
  '-F[<height>,<ncomp>,<bitdepth>,{s,u}@<dx1>x<dy1>:...:<dxn>x<dyn>]'
  '-h[display the help information.]'
  '-r[ratio>,<compression ratio>,...]'
  '-q[value>,<psnr value>,<psnr value>,...]'
  '-n[of resolutions>]'
  '-b[width>,<cblk height>]'
  '-c[width>,<prec height>\],\[<prec width>,<prec height>\],...]'
  '-t[width>,<tile height>]'
  '-p[progression order.]'
  '-s[<subX,subY>]'
  '-POC[order change>/<progression order change>/...]'
  '-SOP[write SOP marker before each packet.]'
  '-EPH[write EPH marker after each header packet.]'
  '-M[value>]'
  '-TP[divide packets of every tile into tile-parts.]'
  '-ROI[<component index>,U=<upshifting value>]'
  '-d[offset X,image offset Y>]'
  '-T[offset X,tile offset Y>]'
  '-I[use the irreversible DWT 9-7.]'
  '-mct[0|1|2>]'
  '-m[use array-based MCT, values are coma separated, line by line]'
  '-cinema2K[24|48>]'
  '-cinema4K[digital Cinema 4K profile compliant codestream.]'
  '-jpip[write jpip codestream index box in JP2 output file.]'
  '-C[add <comment> in the comment marker segment.]'
  '*:filename:_files'
)

_arguments -s $arguments
