#compdef xreader

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show help options]'
  '--help-all[show all help options]'
  '--help-sm-client[show session management options]'
  '--help-gtk[show GTK+ Options]'
  {-p,--page-label}'[the page label of the document to display.]'
  {-i,--page-index}'[the page number of the document to display.]'
  {-f,--fullscreen}'[run xreader in fullscreen mode]'
  {-n,--named-dest}'[named destination to display.]'
  {-s,--presentation}'[run xreader in presentation mode]'
  {-w,--preview}'[run xreader as a previewer]'
  {-l,--find}'[the word or phrase to find in the document]'
  '--display[X display to use]'
  '*:filename:_files'
)

_arguments -s $arguments
