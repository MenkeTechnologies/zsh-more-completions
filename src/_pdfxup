#compdef pdfxup

local arguments

arguments=(
  '-x[n columns per page \[default: "2"\]]'
  '-y[n lines per page \[default: "1"\]]'
  '-l[0|1\] landscape-mode \[default: "1"\]]'
  '-b[0|1|le|se\] booklet-mode \[default: "0"\]]'
  '-im[inner margins \[default: "5pt"\]]'
  '-m[margins \[default: "5pt"\]]'
  '-is[interm. spaces \[default: "1pt"\]]'
  '-fw[frame width \[default: ".4pt"\]]'
  '-o[write output to file \[default: "pdfxup.pdf"\]]'
  '-p[restrict to range of pages \[default: "-"\]]'
  '-nobb[page range to omit for computing bbox \[default: ""\]]'
  '-bb[page range to use for computing bbox \[default: "-"\]]'
  '-g[0|1\] only computes bounding box \[default: "0"\]]'
  '-s[y X Y force bounding box \[default: unset\]]'
  '-V[0-3\] select verbosity \[default: "1"\]]'
  '-q[run quietly (equiv. -V=0)]'
  '-i[ask before overwriting/removing files]'
  '-d[debug mode: keep intermediary files]'
  '-v[show version number and exit]'
  '-h[show this help message]'
  '*:filename:_files'
)

_arguments -s $arguments
