#compdef cpio

local arguments

arguments=(
  {-i,--extract}'[extract files from an archive (run in copy-in]'
  {-o,--create}'[create the archive (run in copy-out mode)]'
  {-p,--pass-through}'[run in copy-pass mode]'
  {-t,--list}'[print a table of contents of the input]'
  '--block-size[set the I/O block size to BLOCK-SIZE * 512]'
  '-B[set the I/O block size to 5120 bytes]'
  '-c[use the old portable (ASCII) archive format]'
  {-C,--io-size}'[set the I/O block size to the given NUMBER of]'
  {-D,--directory}'[change to directory DIR]'
  '--force-local[archive file is local, even if its name contains]'
  {-H,--format}'[use given archive FORMAT]'
  '--quiet[do not print the number of blocks copied]'
  {-R,--owner}'[.\]\[GROUP\] Set the ownership of all files created to the]'
  {-v,--verbose}'[verbosely list the files processed]'
  {-V,--dot}'[print a "." for each file processed]'
  {-W,--warning}'[control warning display. Currently FLAG is one of]'
  {-F,--file}'[@\]HOST:\]FILE-NAME]'
  {-M,--message}'[print STRING when the end of a volume of the]'
  '--rsh-command[use COMMAND instead of rsh]'
  {-b,--swap}'[swap both halfwords of words and bytes of]'
  {-f,--nonmatching}'[only copy files that do not match any of the given]'
  '-I[@\]HOST:\]FILE-NAME Archive filename to use instead of standard input.]'
  {-n,--numeric-uid-gid}'[in the verbose table of contents listing, show]'
  {-r,--rename}'[interactively rename files]'
  {-s,--swap-bytes}'[swap the bytes of each halfword in the files]'
  {-S,--swap-halfwords}'[swap the halfwords of each word (4 bytes) in the]'
  '--to-stdout[extract files to standard output]'
  {-E,--pattern-file}'[read additional patterns specifying filenames to]'
  '--only-verify-crc[when reading a CRC format archive, only verify the]'
  {-A,--append}'[append to an existing archive.]'
  {--device-independent,--reproducible}'[create device-independent (reproducible) archives]'
  '--ignore-devno[dont store device numbers]'
  '-O[@\]HOST:\]FILE-NAME Archive filename to use instead of standard]'
  '--renumber-inodes[renumber inodes]'
  {-l,--link}'[link files instead of copying them, when]'
  '--absolute-filenames[do not strip file system prefix components from]'
  '--no-absolute-filenames[create all files relative to the current]'
  {-0,--null}'[filenames in the list are delimited by null]'
  {-a,--reset-access-time}'[reset the access times of files after reading]'
  {-L,--dereference}'[dereference symbolic links (copy the files]'
  {-d,--make-directories}'[create leading directories where needed]'
  '--extract-over-symlinks[force writing over symbolic links]'
  {-m,--preserve-modification-time}'[retain previous file modification times when]'
  '--no-preserve-owner[do not change the ownership of the files]'
  '--sparse[write files with large blocks of zeros as sparse]'
  {-u,--unconditional}'[replace all files unconditionally]'
  '--usage[give a short usage message]'
  '--version[print program version]'
  '*:filename:_files'
)

_arguments -s $arguments
