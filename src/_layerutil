#compdef layerutil

local arguments

arguments=(
  {--convert,-c}'[convert to an lcr file. Input can be either a psd file or an lsr file.]'
  {--flattened-image,-f}'[output flattened image.]'
  {--lossy-compression,-l}'[set the lossy compression factor used for image content to a value between 0 and 1.0]'
  {--gpu-compression,-g}'[best/smallest, gpu based image compression best is the default value]'
  {--scale,-s}'[scale factor of the input file.]'
  {--display-gamut,-p}'[sRGB/P3 display gamut, if value is P3 then if the input file contains wide assets they will be processed.]'
  {--palette-image,-t}'[turn on palette image compression (Defaults to off).]'
  {--output,-o}'[output file name. Defaults to basename of input file.]'
  '--help[print this usage message.]'
  '--version[print version information.]'
  '*:filename:_files'
)

_arguments -s $arguments
