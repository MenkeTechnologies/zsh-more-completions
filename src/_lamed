#compdef lamed

local arguments

arguments=(
  '-etex[enable e-TeX extensions]'
  '-fmt[use FMTNAME instead of program name or a %& line]'
  '-halt-on-error[stop processing at the first error]'
  '-ini[be inialeph, for dumping formats; this is implicitly]'
  '-interaction[set interaction mode (STRING=batchmode/nonstopmode/]'
  '-ipc[send DVI output to a socket as well as the usual]'
  '-ipc-start[as -ipc, and also start the server at the other end]'
  '-jobname[set the job name to STRING]'
  '-kpathsea-debug[set path searching debugging flags according to the]'
  '-output-comment[use STRING for DVI file comment instead of date]'
  '-output-directory[use existing DIR as the directory to write files in]'
  '-progname[set program (and fmt) name to STRING]'
  '-recorder[enable filename recorder (always on)]'
  '-shell-restricted[enable restricted \write18]'
  '-src-specials[insert source specials into the DVI file]'
  '-src-specials[insert source specials in certain places of]'
  '-help[display this help and exit]'
  '-version[output version information and exit]'
  '*:filename:_files'
)

_arguments -s $arguments
