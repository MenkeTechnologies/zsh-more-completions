#compdef groonga-httpd

local arguments

arguments=(
  '-v[show version and exit]'
  '-V[show version and configure options then exit]'
  '-t[test configuration and exit]'
  '-T[test configuration, dump it and exit]'
  '-q[suppress non-error messages during configuration testing]'
  '-s[send signal to a master process: stop, quit, reopen, reload]'
  '-p[set prefix path (default: /usr/local/Cellar/groonga/9.1.2/etc/groonga/httpd/)]'
  '-c[set configuration file (default: /usr/local/Cellar/groonga/9.1.2/etc/groonga/httpd/groonga-httpd.conf)]'
  '-g[set global directives out of configuration file]'
  '*:filename:_files'
)

_arguments -s $arguments
