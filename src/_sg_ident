#compdef sg_ident

local arguments

arguments=(
  '--ascii[|-A report identifying information as ASCII (or UTF8) string]'
  '--clear[|-C clear (set to zero length) identifying information]'
  '--help[|-h print out usage message]'
  '--itype[IT specify information type]'
  '--raw[|-r output identifying information to stdout]'
  '--set[|-S invoke set identifying information with data from stdin]'
  '--verbose[|-v increase verbosity of output]'
  '--version[|-V print version string and exit]'
  '*:filename:_files'
)

_arguments -s $arguments
