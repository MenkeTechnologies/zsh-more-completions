#compdef ipmi-dcmi

local arguments

arguments=(
  {-D,--driver-type}'[specify the driver type to use instead of]'
  '--disable-auto-probe[do not probe in-band IPMI devices for default]'
  '--driver-address[specify the in-band driver address to be used]'
  '--driver-device[specify the in-band driver device path to be used]'
  '--register-spacing[specify the in-band driver register spacing]'
  '--target-channel-number[specify an in-band driver target channel number to]'
  '--target-slave-address[specify an in-band driver target slave address to]'
  {-h,--hostname}'[specify the remote host(s) to communicate with.]'
  {-u,--username}'[specify the username to use when authenticating]'
  {-p,--password}'[specify the password to use when authenticationg]'
  {-P,--password-prompt}'[prompt for password to avoid possibility of]'
  {-k,--k-g}'[specify the K_g BMC key to use when authenticating]'
  {-K,--k-g-prompt}'[prompt for k-g to avoid possibility of listing it]'
  '--session-timeout[specify the session timeout in milliseconds.]'
  '--retransmission-timeout[specify the packet retransmission timeout in]'
  {-a,--authentication-type}'[specify the IPMI 1.5 authentication type to use.]'
  {-I,--cipher-suite-id}'[specify the IPMI 2.0 cipher suite ID to use.]'
  {-l,--privilege-level}'[specify the privilege level to be used.]'
  '--config-file[specify alternate configuration file.]'
  {-W,--workaround-flags}'[specify workarounds to vendor compliance issues.]'
  '--utc-to-localtime[assume times stored UTC, convert to localtime.]'
  '--localtime-to-utc[assume times stored in localtime, convert to UTC.]'
  '--utc-offset[specify a specific UTC offset to be added to]'
  {-B,--buffer-output}'[buffer hostranged output.]'
  {-C,--consolidate-output}'[consolidate hostranged output.]'
  {-F,--fanout}'[specify multiple host fanout.]'
  {-E,--eliminate}'[eliminate undetected nodes.]'
  '--always-prefix[always prefix output.]'
  '--debug[turn on debugging.]'
  '--get-dcmi-capability-info[get DCMI capability information.]'
  '--get-asset-tag[get asset tag.]'
  '--set-asset-tag[set asset tag.]'
  '--get-management-controller-identifier-string[get management controller identifier string.]'
  '--set-management-controller-identifier-string[set management controller identifier string.]'
  '--get-dcmi-sensor-info[DCMI sensor information.]'
  '--get-system-power-statistics[get system power statistics.]'
  '--get-enhanced-system-power-statistics[get enhanced system power statistics.]'
  '--get-power-limit[get power limit information.]'
  '--set-power-limit[set power limit configuration.]'
  '--exception-actions[specify exception actions for set power limit]'
  '--power-limit-requested[specify power limit for set power limit]'
  '--correction-time-limit[specify correction time limit for set power limit]'
  '--statistics-sampling-period[specify management application statistics sampling]'
  '--activate-deactivate-power-limit[activate or deactivate power limit.]'
  '--interpret-oem-data[attempt to interpret OEM data.]'
  '--usage[give a short usage message]'
  {-V,--version}'[print program version]'
  '*:filename:_files'
)

_arguments -s $arguments
