#compdef term_display

local arguments

arguments=(
  '-m[for distance (METRIC = CIEXYZ|NTSC|CompuPhase|YUV|CIELab|Euclidean)]'
  '-g[use/dont use gray values, defaults to yes]'
  '-s[scaling strategy, defaults to xyfit]'
  '-a[x:y aspect, defaults to 2.2]'
  '-C[number of columns for rendering with aspect, defaults to max]'
  '-R[number of rows for rendering with aspect, defaults to max - 1]'
  '-h[this help]'
  '*:filename:_files'
)

_arguments -s $arguments
