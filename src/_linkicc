#compdef linkicc

local arguments

arguments=(
  '-o[<profile> - Output devicelink profile. \[defaults to devicelink.icc\]]'
  '-t[<n> rendering intent:]'
  '-c[<0,1,2> - Precision (0=LowRes, 1=Normal, 2=Hi-res) \[defaults to 1\]]'
  '-n[<gridpoints> - Alternate way to set precision, number of CLUT points]'
  '-d[<description> - description text (quotes can be used)]'
  '-y[<copyright> - copyright notice (quotes can be used)]'
  '-k[<0..400> - Ink-limiting in % (CMYK only)]'
  '-8[Creates 8-bit devicelink]'
  '-x[Creatively, guess deviceclass of resulting profile.]'
  '-b[Black point compensation]'
  '-a[<0..1> - Observer adaptation state (abs.col. only)]'
  '-l[Use linearization curves (may affect accuracy)]'
  '-r[<v.r> - Profile version. (CAUTION: may change the profile implementation)]'
  '-h[<0,1,2,3> - More help]'
  '*:filename:_files'
)

_arguments -s $arguments
