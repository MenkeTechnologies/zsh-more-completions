#compdef textutil

local arguments

arguments=(
  '-help[show this message and exit]'
  '-info[display information about each file]'
  '-convert[convert each input file to format (txt, rtf, rtfd]'
  '-cat[concatenate input files into one output file]'
  '-extension[alternate extension for all output files]'
  '-output[alternate file name for first output file]'
  '-stdin[read from stdin instead of files]'
  '-stdout[send first output file to stdout]'
  '-encoding[encoding used for plain text or html output files]'
  '-inputencoding[encoding used to interpret plain text input files]'
  '-format[force input files to be interpreted in this format]'
  '-font[specify font used for converting plain to rich text]'
  '-fontsize[specify font size for converting plain to rich text]'
  '-noload[do not load subsidiary resources for html files]'
  '-nostore[do not write out subsidiary resources for html files]'
  '-baseurl[base URL for subsidiary resources in html files]'
  '-timeout[time in seconds to wait for html resources to load]'
  '-textsizemultiplier[factor to apply to font sizes in html files]'
  '-excludedelements[(tag1, tag2, ...)"]'
  '-prefixspaces[number of spaces to indent nested html output]'
  '-strip[do not copy metadata attributes to output files]'
  '-title[title metadata attribute for output files]'
  '-author[author metadata attribute for output files]'
  '-subject[subject metadata attribute for output files]'
  '-keywords[(val1, val2, ...)"]'
  '-comment[comment metadata attribute for output files]'
  '-editor[last editor metadata attribute for output files]'
  '-company[company metadata attribute for output files]'
  '-creationtime[creation time metadata attribute for output files]'
  '-modificationtime[modification time metadata attribute for output files]'
  '*:filename:_files'
)

_arguments -s $arguments
