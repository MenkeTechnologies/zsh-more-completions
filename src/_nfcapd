#compdef nfcapd

local arguments

arguments=(
  '-h[this text you see right here]'
  '-u[change user to username]'
  '-g[change group to groupname]'
  '-w[sync file rotation with next 5min (default) interval]'
  '-t[set the interval to rotate nfcapd files]'
  '-b[bind socket to host/IP addr]'
  '-J[join multicast group <mcastgroup>]'
  '-p[listen on port portnum]'
  '-l[set the output directory. (no default)]'
  '-S[sub directory format. see nfcapd(1) for format]'
  '-I[set the ident string for stat file. (default none)]'
  '-H[port histogram data to flow file.(default no)]'
  '-n[IP,logdir Add this flow source - multiple streams]'
  '-P[set the PID file]'
  '-R[/port\] Repeat incoming packets to IP address/port]'
  '-s[set default sampling rate (default 1)]'
  '-x[launch process after a new file becomes available]'
  '-j[BZ2 compress flows in output file.]'
  '-z[LZO compress flows in output file.]'
  '-B[set socket buffer to bufflen bytes]'
  '-e[expire data at each cycle.]'
  '-D[fork to background]'
  '-E[print extended format of netflow data. for debugging purpose only.]'
  '-T[include extension tags in records.]'
  '-4[listen on IPv4 (default).]'
  '-6[listen on IPv6.]'
  '-V[print version and exit.]'
  '-Z[add timezone offset to filenamet.]'
  '*:filename:_files'
)

_arguments -s $arguments
