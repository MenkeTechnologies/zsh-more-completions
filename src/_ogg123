#compdef ogg123

local arguments

arguments=(
  {-d,--device}'[use output device "dev". Available devices:]'
  {-f,--file}'[set the output filename for a file device]'
  '--audio-buffer[use an output audio buffer of n kilobytes]'
  {-o,--device-option}'[pass special option k with value v to the]'
  {-r,--repeat}'[repeat playlist indefinitely]'
  {-R,--remote}'[use remote control interface]'
  {-z,--shuffle}'[shuffle list of files before playing]'
  {-Z,--random}'[play files randomly until interrupted]'
  {-b,--buffer}'[use an input buffer of n kilobytes]'
  {-p,--prebuffer}'[load n% of the input buffer before playing]'
  {-k,--skip}'[skip the first n seconds (or hh:mm:ss format)]'
  {-K,--end}'[end at n seconds (or hh:mm:ss format)]'
  {-x,--nth}'[play every nth block]'
  {-y,--ntimes}'[repeat every played block n times]'
  {-l,--delay}'[set termination timeout in milliseconds. ogg123]'
  '(- * :)'{-h,--help}'[display this help]'
  {-q,--quiet}'[dont display anything (no title)]'
  {-v,--verbose}'[display progress and other status information]'
  {-V,--version}'[display ogg123 version]'
  '*:filename:_files'
)

_arguments -s $arguments
