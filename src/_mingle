#compdef mingle

local arguments

arguments=(
  '-a[max. turning angle \[0-180\] (40)]'
  '-c[compatability measure; 0 : distance, 1: full (default)]'
  '-i[number of outer iterations/subdivisions (4)]'
  '-k[number of neighbors in the nearest neighbor graph of edges (10)]'
  '-K[the force constant]'
  '-m[method used. 0 (force directed), 1 (agglomerative ink saving, default), 2 (cluster+ink saving)]'
  '-o[write output to file fname (stdout)]'
  '-p[balance for avoiding sharp angles]'
  '-r[max. recursion level with agglomerative ink saving method (100)]'
  '-T[output format: gv (default) or simple]'
  '-v[verbose]'
  '*:filename:_files'
)

_arguments -s $arguments
