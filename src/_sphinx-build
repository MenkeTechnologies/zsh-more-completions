#compdef sphinx-build

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show this help message and exit]'
  '--version[show programs version number and exit]'
  '-b[builder to use (default: html)]'
  '-a[write all files (default: only write new and changed]'
  '-E[dont use a saved environment, always read all files]'
  '-d[path for the cached environment and doctree files]'
  '-j[build in parallel with N processes where possible (special]'
  '-c[path where configuration file (conf.py) is located]'
  '-C[use no config file at all, only -D options]'
  '-D[value override a setting in configuration file]'
  '-A[value pass a value into HTML templates]'
  '-t[define tag: include "only" blocks with TAG]'
  '-n[nit-picky mode, warn about all missing references]'
  '-v[increase verbosity (can be repeated)]'
  '-q[no output on stdout, just warnings on stderr]'
  '-Q[no output at all, not even warnings]'
  '--color[do emit colored output (default: auto-detect)]'
  {-N,--no-color}'[do not emit colored output (default: auto-detect)]'
  '-w[write warnings (and errors) to given file]'
  '-W[turn warnings into errors]'
  '--keep-going[with -W, Keep going when getting warnings]'
  '-T[show full traceback on exception]'
  '-P[run Pdb on exception]'
  '*:filename:_files'
)

_arguments -s $arguments
