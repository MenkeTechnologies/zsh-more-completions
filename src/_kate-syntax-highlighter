#compdef kate-syntax-highlighter

local arguments

arguments=(
  '(- * :)'{-h,--help}'[displays this help.]'
  {-v,--version}'[displays version information.]'
  {-l,--list}'[list all available syntax definitions.]'
  '--list-themes[list all available themes.]'
  {-u,--update}'[download new/updated syntax definitions.]'
  {-o,--output}'[file to write HTML output to (default: stdout).]'
  {-s,--syntax}'[highlight using this syntax definition (default:]'
  {-t,--theme}'[color theme to use for highlighting.]'
  '*:filename:_files'
)

_arguments -s $arguments
