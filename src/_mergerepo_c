#compdef mergerepo_c

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show help options]'
  '--version[show programs version number and exit]'
  {-r,--repo}'[repo url]'
  {-a,--archlist}'[defaults to all arches - otherwise specify arches]'
  {-d,--database}'[]'
  '--no-database[]'
  {-v,--verbose}'[]'
  {-o,--outputdir}'[location to create the repository]'
  '--nogroups[do not merge group (comps) metadata]'
  '--noupdateinfo[do not merge updateinfo metadata]'
  '--compress-type[which compression type to use]'
  '--method[specify merge method for packages with the same name and arch (available merge methods: repo (default), ts, nvr)]'
  '--all[include all packages with the same name and arch if version or release is different. If used --method argument is ignored!]'
  '--noarch-repo[packages with noarch architecture will be replaced by package from this repo if exists in it.]'
  '--unique-md-filenames[include the files checksum in the metadata filename, helps HTTP caching (default).]'
  '--simple-md-filenames[do not include the files checksum in the metadata filename.]'
  '--omit-baseurl[dont add a baseurl to packages that dont have one before.]'
  {-k,--koji}'[enable koji mergerepos behaviour.]'
  {-g,--groupfile}'[path to groupfile to include in metadata.]'
  {-b,--blocked}'[A file containing a list of srpm names to exclude from the merged repo. Only works with combination with --koji/-k.]'
  '*:filename:_files'
)

_arguments -s $arguments
