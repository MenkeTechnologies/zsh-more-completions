#compdef mariadb-dumpslow

local arguments

arguments=(
  '--verbose[verbose]'
  '--debug[debug]'
  '--help[write this text to standard output]'
  '-v[verbose]'
  '-d[debug]'
  '-s[what to sort by (aa, ae, al, ar, at, a, c, e, l, r, t), at is default]'
  '-r[reverse the sort order (largest last instead of first)]'
  '-t[just show the top n queries]'
  '-a[dont abstract all numbers to N and strings to S]'
  '-n[abstract numbers with at least n digits within names]'
  '-g[grep: only consider stmts that include this string]'
  '-h[hostname of db server for *-slow.log filename (can be wildcard)]'
  '-i[name of server instance (if using mysql.server startup script)]'
  '-l[dont subtract lock time from total time]'
  '*:filename:_files'
)

_arguments -s $arguments
