#compdef ntp-keygen

local arguments

arguments=(
  {-b,--imbits}'[identity modulus bits]'
  {-c,--certificate}'[certificate scheme]'
  {-C,--cipher}'[privatekey cipher]'
  {-d,--debug-level}'[Increase debug verbosity level]'
  {-D,--set-debug-level}'[Set the debug verbosity level]'
  {-e,--id-key}'[Write IFF or GQ identity keys]'
  {-G,--gq-params}'[Generate GQ parameters and keys]'
  {-H,--host-key}'[generate RSA host key]'
  {-I,--iffkey}'[generate IFF parameters]'
  {-i,--ident}'[set Autokey group name]'
  {-l,--lifetime}'[set certificate lifetime]'
  {-m,--modulus}'[prime modulus]'
  {-M,--md5key}'[generate symmetric keys]'
  {-P,--pvt-cert}'[generate PC private certificate]'
  {-p,--password}'[local private password]'
  {-q,--export-passwd}'[export IFF or GQ group keys with password]'
  {-s,--subject-name}'[set host and optionally group name]'
  {-S,--sign-key}'[generate sign key (RSA or DSA)]'
  {-T,--trusted-cert}'[trusted certificate (TC scheme)]'
  {-V,--mv-params}'[generate <num> MV parameters]'
  {-v,--mv-keys}'[update <num> MV keys]'
  '*:filename:_files'
)

_arguments -s $arguments
