#compdef zuluMount-cli

local arguments

arguments=(
  {-m,--}'[a volume : arguments: -d volume_path -z mount_point -e mode(rw/ro)]'
  {-z,--}'[point component to append to "/run/media/private/$USER/"]'
  {-Y,--}'[system options]'
  {-e,--}'[options]'
  {-u,--}'[a volume: arguments: -d volume_path]'
  {-s,--}'[properties of a volume: arguments: -d partition_path]'
  {-M,--}'[option will create a mount point in "/run/media/private/$USER" and a publicly accessible "mirror" in "/run/media/public/]'
  {-l,--}'[expanded list of all volumes]'
  {-L,--}'[be used with -d,print properties of a volume specified by d option]'
  {-P,--}'[a list of all volumes]'
  {-D,--}'[a device node address from its mapper path( mapper paths are usually located in /dev/mapper ). Required argument: -d]'
  {-A,--}'[a list of all volumes]'
  {-S,--}'[a list of system volumes]'
  {-N,--}'[a list of non system volumes]'
  {-E,--}'[a list of mounted volumes]'
  {-t,--}'[unlock a volume as VeraCrypt volume,use "-t vera"]'
  {-o,--}'[in sectors on where the volume starts in the volume.The volume is assumed to be plain type with this option and the option must be given when -u or -s arguments are used with a volume opened with this option]'
  {-F,--}'[to truecrypt multiple keyfiles.Keyfiles are separated by ":" character]'
  '*:filename:_files'
)

_arguments -s $arguments
