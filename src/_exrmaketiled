#compdef exrmaketiled

local arguments

arguments=(
  '-o[produces a ONE_LEVEL image (default)]'
  '-m[produces a MIPMAP_LEVELS multiresolution image]'
  '-r[produces a RIPMAP_LEVELS multiresolution image]'
  '-f[when a MIPMAP_LEVELS or RIPMAP_LEVELS image]'
  '-e[y when a MIPMAP_LEVELS or RIPMAP_LEVELS image]'
  '-t[y sets the tile size in the output image to]'
  '-d[sets level size rounding to ROUND_DOWN (default)]'
  '-u[sets level size rounding to ROUND_UP]'
  '-z[sets the data compression method to x]'
  '-v[verbose mode]'
  '-h[prints this message]'
  '-p[part number, default is 0]'
  '*:filename:_files'
)

_arguments -s $arguments
