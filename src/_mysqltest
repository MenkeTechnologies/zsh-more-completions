#compdef mysqltest

local arguments

arguments=(
  {-b,--basedir}'[basedir for tests.]'
  '--character-sets-dir[directory for character set files.]'
  '--default-character-set[set the default character set.]'
  {-C,--compress}'[use the compressed server/client protocol.]'
  '--cursor-protocol[use cursors for prepared statements.]'
  {-D,--database}'[database to use.]'
  '--debug-check[this is a non-debug version. Catch this and exit.]'
  '--debug-info[this is a non-debug version. Catch this and exit.]'
  {-h,--host}'[connect to host.]'
  {-i,--include}'[include SQL before each test case.]'
  '--logdir[directory for log files]'
  '--mark-progress[write line number and elapsed time to]'
  '--max-connect-retries[maximum number of attempts to connect to server.]'
  '--max-connections[max number of open connections to server]'
  {-p,--password}'[password to use when connecting to server.]'
  '--protocol[the protocol of connection (tcp,socket,pipe,memory).]'
  {-P,--port}'[port number to use for connection or 0 for default to, in]'
  '--ps-protocol[use prepared-statement protocol for communication.]'
  {-s,--quiet}'[suppress all normal output.]'
  {-r,--record}'[record output of test_file into result file.]'
  {-R,--result-file}'[read/store result from/in this file.]'
  '--result-format-version[version of the result file format to use]'
  '--shared-memory-base-name[base name of shared memory.]'
  {-s,--silent}'[suppress all normal output. Synonym for --quiet.]'
  {-T,--sleep}'[always sleep this many seconds on sleep commands.]'
  {-S,--socket}'[the socket file to use for connection.]'
  '--sp-protocol[use stored procedures for select.]'
  '--no-skip[force the test to run without skip.]'
  '--server-public-key-path[file path to the server public RSA key in PEM format.]'
  '--get-server-public-key[get server public key]'
  '--ssl-mode[SSL connection mode.]'
  '--ssl-ca[CA file in PEM format.]'
  '--ssl-capath[CA directory.]'
  '--ssl-cert[X509 cert in PEM format.]'
  '--ssl-cipher[SSL cipher to use.]'
  '--ssl-key[X509 key in PEM format.]'
  '--ssl-crl[certificate revocation list.]'
  '--ssl-crlpath[certificate revocation list path.]'
  '--tls-version[TLS version to use, permitted values are: TLSv1, TLSv1.1]'
  '--ssl-fips-mode[SSL FIPS mode to use, permitted values are: OFF, ON]'
  '--tail-lines[number of lines of the result to include in a failure]'
  {-x,--test-file}'[read test from/in this file (default stdin).]'
  {-n,--no-skip-exclude-list}'[contains comma seperated list of to be excluded inc]'
  {-m,--timer-file}'[file where the timing in microseconds is stored.]'
  {-t,--tmpdir}'[temporary directory where sockets are put.]'
  '--trace-exec[print output from exec to stdout.]'
  {-u,--user}'[user for login.]'
  {-v,--verbose}'[write more.]'
  {-V,--version}'[output version information and exit.]'
  '--view-protocol[use views for select.]'
  '--opt-trace-protocol[trace DML statements with optimizer trace]'
  '--explain-protocol[explain all SELECT/INSERT/REPLACE/UPDATE/DELETE]'
  '--json-explain-protocol[explain all SELECT/INSERT/REPLACE/UPDATE/DELETE]'
  '--connect-timeout[number of seconds before connection timeout.]'
  '--plugin-dir[directory for client-side plugins.]'
  '--no-defaults[dont read default options from any options file.]'
  '*:filename:_files'
)

_arguments -s $arguments
