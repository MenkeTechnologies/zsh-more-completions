#compdef aptd

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show this help message and exit]'
  {-t,--disable-timeout}'[do not shutdown the daemon because of inactivity]'
  '--disable-plugins[do not load any plugins]'
  {-d,--debug}'[show internal processing information]'
  {-r,--replace}'[quit and replace an already running daemon]'
  '--session-bus[listen on the DBus session bus (Only required for]'
  '--chroot[perform operations in the given chroot]'
  {-p,--profile}'[store profile stats in the specified file]'
  '--dummy[do not make any changes to the system (Only of use to]'
  '*:filename:_files'
)

_arguments -s $arguments
