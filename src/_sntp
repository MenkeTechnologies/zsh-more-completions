#compdef sntp

local arguments

arguments=(
  '-4[ipv4 Force IPv4 DNS name resolution]'
  '-6[ipv6 Force IPv6 DNS name resolution]'
  '-a[authentication Enable authentication with the key auth-keynumber]'
  '-b[broadcast Listen to the address specified for broadcast time sync]'
  '-c[concurrent Concurrently query all IPs returned for host-name]'
  '-d[debug-level Increase debug verbosity level]'
  '-D[set-debug-level Set the debug verbosity level]'
  '-g[gap The gap (in milliseconds) between time requests]'
  '-K[kod KoD history filename]'
  '-k[keyfile Look in this file for the key specified with -a]'
  '-l[logfile Log to specified logfile]'
  '-M[steplimit Adjustments less than steplimit msec will be slewed]'
  '-o[ntpversion Send int as our NTP protocol version]'
  '-r[usereservedport Use the NTP Reserved Port (port 123)]'
  '-S[step OK to step the time with settimeofday(2)]'
  '-s[slew OK to slew the time with adjtime(2)]'
  '-t[timeout The number of seconds to wait for responses]'
  '*:filename:_files'
)

_arguments -s $arguments
