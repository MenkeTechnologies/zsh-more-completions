#compdef ntlm_auth

local arguments

arguments=(
  '--helper-protocol[protocol to use operate as a stdio-based]'
  '--username[username]'
  '--domain[domain name]'
  '--workstation[workstation]'
  '--challenge[challenge (HEX encoded)]'
  '--lm-response[LM Response to the]'
  '--nt-response[NT or NTLMv2 Response to]'
  '--password[users plaintext password]'
  '--request-lm-key[retrieve LM session key]'
  '--request-nt-key[retrieve User (NT) session]'
  '--use-cached-creds[use cached credentials if]'
  '--allow-mschapv2[explicitly allow MSCHAPv2]'
  '--offline-logon[use cached passwords when]'
  '--diagnostics[perform diagnostics on the]'
  '--require-membership-of[require that a user be a]'
  '--pam-winbind-conf[require that request must]'
  '--target-service[target service (eg http)]'
  '--target-hostname[target hostname]'
  '--usage[display brief usage message]'
  '--configfile[use alternate configuration]'
  {-V,--version}'[print version]'
  '--option[value Set smb.conf option from]'
  '*:filename:_files'
)

_arguments -s $arguments
