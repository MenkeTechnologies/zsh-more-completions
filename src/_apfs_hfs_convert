#compdef apfs_hfs_convert

local arguments

arguments=(
  '-D[convert all former and current directory hard links to files/aliases.]'
  '-e[estimate apfs metadata size.]'
  '-v[enable verbose output.]'
  '-s[force the APFS volume to be case-sensitive.]'
  '-S[print statistics and information about the converson to the given <path>.]'
  '-n[dont finalize conversion (dry run). Volume remains HFS.]'
  '-f[force conversion if volume is dirty.]'
  '-F[slice #n (0-based) should be fixed size.]'
  '-g[change GPT GUID to APFS at end of conversion (relevant only for raw hfs volumes, and hfs volumes inside core storage).]'
  '-k[change GPT GUID to Apple_KFS during conversion (relevant only for core storage).]'
  '-x[changes standard output to contain statistics in XML format. All error messages and non statistics output is redirected to /var/log/hfs_convert.log]'
  '-M[use the given path to mount APFS during conversion.]'
  '-o[format options passed through to nx_format and apfs_newfs.]'
  '--watchdog[conversion will abort after <seconds> seconds. Default is 600 seconds for dry run, unlimited otherwise.]'
  '--efi[driver file name>]'
  '--preboot[directory full path>]'
  '--bootefi[efi driver directory full path>]'
  '*:filename:_files'
)

_arguments -s $arguments
