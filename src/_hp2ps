#compdef hp2ps

local arguments

arguments=(
  '-d[sort by standard deviation]'
  '-ef[produce Encapsulated PostScript f units wide (f > 2 inches)]'
  '-g[produce output suitable for GHOSTSCRIPT previever]'
  '-i[sort by identifier string (-i+ gives greatest on top)]'
  '-M[multi-page output (key separate from graph)]'
  '-mn[maximum of n bands (default & max 20)]'
  '-m0[the band limit altogether]'
  '-p[use previous scaling, shading and ordering]'
  '-s[use small title box]'
  '-tf[trace bands which sum below f% (default 1%, max 5%)]'
  '-y[traditional]'
  '-c[colour output]'
  '*:filename:_files'
)

_arguments -s $arguments
