#compdef anaconda

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show this help message and exit]'
  '--version[show programs version number and exit]'
  {-C,--cmdline}'[force command line installation mode. This mode simply prints out text]'
  {-G,--graphical}'[force graphical installation. A graphical installation implies that the]'
  {-T,--text}'[force text mode installation. This also implies that the installed]'
  '--proxy[use the given proxy settings when performing an installation from a]'
  '--waitfornet[wait for network connectivity at the beginning of the installation with]'
  {-d,--debug}'[show debug level messages in the log watching consoles. This basically a]'
  '--ks[gives the location of the kickstart file to be used for installation.]'
  '--kickstart[gives the local file path to use for kickstart. Normally only used when]'
  '--rescue[start the rescue environment instead of installation.]'
  '--armplatform[can be used to specify the ARM platform for the installation by passing]'
  '--multilib[enable yums multlib_policy of "all" instead of the default of "best".]'
  {-m,--method}'[this option is deprecated in favor of the repo option. For now, it does]'
  '--askmethod[do not automatically configure the Installation Source spoke, but]'
  '--repo[this option tells Anaconda where to find the packages for installation.]'
  '--stage2[2_URL]'
  '--noverifyssl[prevents Anaconda from verifying the ssl certificate for all HTTPS]'
  '--noverifyssl[be set per repo).]'
  '--liveinst[run in live installation mode.]'
  '--resolution[run GUI installer in the resolution specified, "1024x768" for example.]'
  '--usefbx[use the framebuffer X driver instead of attempting to use a hardware-]'
  '--vnc[enable VNC-based installation. You will need to connect to the machine]'
  '--vncconnect[once installation is up and running, connect to the VNC client named]'
  '--vncpassword[enable a password for the VNC connection. This will prevent someone from]'
  '--xdriver[use DRIVER as the X driver to use during installation as well as on the]'
  '--xtimeout[]'
  '--keymap[keyboard layout to use during installation and on the installed system.]'
  '--lang[language to use for the installation. LANG should be a language code]'
  '--singlelang[install in single language mode - no interactive options for language]'
  '--loglevel[set the minimum level required for messages to be logged on a terminal]'
  '--syslog[once installation is up and running, send log messages to the syslog]'
  '--noselinux[disable SELinux usage on the installed system.]'
  '--selinux[enable SELinux usage in the installed system (default). Note that when]'
  '--nompath[disable support for multipath devices. This is for systems on which a]'
  '--mpath[enable multipath support during the installation (default)]'
  '--nodmraid[disable dmraid usage during the installation.]'
  '--dmraid[enable dmraid (Device Mapper software RAID) usage during the]'
  '--noibft[disable iBFT usage during the installation.]'
  '--ibft[enable iBFT (iSCSI Boot Firmware Table) usage during the installation]'
  '--geoloc[configure geolocation usage in Anaconda. Geolocation is used to pre-set]'
  '--geoloc-use-with-ks[enable geolocation even during a kickstart installation (both partial]'
  '--nosave[this option controls what installation results should not be saved to]'
  '--nomount[dont automatically mount any installed Linux partitions in rescue mode.]'
  '--updates[path to an updates image that is on local filesystem or available over]'
  '--image[specification of disk image file to be used as installation destination.]'
  '--dirinstall[use the device mounted at /mnt/sysimage as the installation destination.]'
  '--memcheck[check if the system has enough RAM to complete the installation and]'
  '--nomemcheck[do not check if the system has enough RAM to complete the installation.]'
  '--leavebootorder[boot the drives in their existing order, to override the default of]'
  '--noeject[dont eject the installation CD/DVD (if any) once the installation has]'
  '--extlinux[use extlinux as the bootloader. Note that theres no attempt to validate]'
  '--nombr[]'
  '--mpathfriendlynames[tell multipathd to use user friendly names when naming devices during]'
  '--kexec[reboot the system using kexec with the new kernel and initrd. This will]'
  '*:filename:_files'
)

_arguments -s $arguments
