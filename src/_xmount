#compdef xmount

local arguments

arguments=(
  '-d[enable FUSEs and xmounts debug mode.]'
  '-h[display this help message.]'
  '-s[run single threaded.]'
  '-o[Disable automatic addition of FUSEs allow_other option.]'
  '-o[Specify fuse mount options. Will also disable automatic addition of FUSEs allow_other option!]'
  '--cache[Enable virtual write support.]'
  '--in[Input image format and source file(s). May be specified multiple times.]:ifile:'
  '--inopts[Specify input library specific options.]'
  '--info[print out infos about used compiler and libraries.]'
  '--morph[Morphing function to apply to input image(s). If not specified, defaults to "combine".]'
  '--morphopts[Specify morphing library specific options.]'
  '--offset[Move the output image data start <off> bytes into the input image(s).]'
  '--out[Output image format. If not specified, defaults to "raw".]'
  '--owcache[Same as --cache <file> but overwrites existing cache file.]'
  '--sizelimit[The data end of input image(s) is set to no more than <size> bytes after the data start.]'
  '--version[same as --info.]'
  '*:filename:_files'
)

_arguments -s $arguments
