#compdef ctan-o-mat

local arguments

arguments=(
  '-h[]'
  '--help[print this short summary about the usage and exit the program.]'
  '-i[]'
  '--init[create an empty template for a configuration.]'
  '--list[list the known licenses of CTAN to the standard output stream. Each]'
  '--config[configuration>]'
  '--pkg[configuration>]'
  '--package[configuration>]'
  '-s[]'
  '--submit[upload the submission, validate it and officially submit it to CTAN]'
  '-v[]'
  '--verbose[print some more information during the processing (verbose mode).]'
  '--version[print the version number of this program and exit.]'
  '--validate[]'
  '-n[]'
  '--noaction[do not perform the final upload. The package is validated and the]'
  '*:filename:_files'
)

_arguments -s $arguments
