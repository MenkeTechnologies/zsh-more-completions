#compdef ocamldebug

local arguments

arguments=(
  '-c[set max number of checkpoints kept]'
  '-cd[change working directory]'
  '-emacs[running the debugger under emacs; implies -machine-readable]'
  '-I[add <dir> to the list of include directories]'
  '-machine-readable[information in a format more suitable for machines]'
  '-s[set the name of the communication socket]'
  '-version[print version and exit]'
  '-vnum[print version number and exit]'
  '-no-version[do not print version at startup]'
  '-no-prompt[suppress all prompts]'
  '-no-time[do not print times]'
  '-no-breakpoint-message[do not print message at breakpoint setup and removal]'
  '-topdirs-path[set path to the directory containing topdirs.cmi]'
  '-help[display this list of options]'
  '--help[display this list of options]'
  '*:filename:_files'
)

_arguments -s $arguments
