#compdef smtp-user-enum

local arguments

arguments=(
  '-m[maximum number of processes (default: 5)]'
  '-M[method to use for username guessing EXPN, VRFY or RCPT (default: VRFY)]'
  '-u[check if user exists on remote system]'
  '-f[MAIL FROM email address. Used only in "RCPT TO" mode (default: user@example.com)]'
  '-D[domain to append to supplied user list to make email addresses (Default: none)]'
  '-U[file of usernames to check via smtp service]'
  '-t[server host running smtp service]'
  '-T[file of hostnames running the smtp service]'
  '-p[TCP port on which smtp service runs (default: 25)]'
  '-d[debugging output]'
  '-t[wait a maximum of n seconds for reply (default: 5)]'
  '-v[verbose]'
  '-h[this help message]'
  '*:filename:_files'
)

_arguments -s $arguments
