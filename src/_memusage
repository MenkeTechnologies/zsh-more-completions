#compdef memusage

local arguments

arguments=(
  {-n,--progname}'[name of the program file to profile]'
  {-p,--png}'[generate PNG graphic and store it in FILE]'
  {-d,--data}'[generate binary data file and store it in FILE]'
  {-u,--unbuffered}'[dont buffer output]'
  {-b,--buffer}'[collect SIZE entries before writing them out]'
  '--no-timer[dont collect additional information through timer]'
  {-m,--mmap}'[also trace mmap & friends]'
  '--usage[give a short usage message]'
  {-V,--version}'[print version information and exit]'
  {-t,--time-based}'[make graph linear in time]'
  {-T,--total}'[also draw graph of total memory use]'
  '--title[use STRING as title of the graph]'
  {-x,--x-size}'[make graphic SIZE pixels wide]'
  {-y,--y-size}'[make graphic SIZE pixels high]'
  '*:filename:_files'
)

_arguments -s $arguments
