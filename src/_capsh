#compdef capsh

local arguments

arguments=(
  '--help[this message (or try man capsh)]'
  '--print[display capability relevant state]'
  '--decode[decode a hex string to a list of caps]'
  '--supports[exit 1 if capability xxx unsupported]'
  '--drop[remove xxx,.. capabilities from bset]'
  '--caps[set caps as per cap_from_text()]'
  '--inh[set xxx,.. inheritiable set]'
  '--secbits[write a new value for securebits]'
  '--keep[set keep-capabability bit to <n>]'
  '--uid[set uid to <n> (hint: id <username>)]'
  '--gid[set gid to <n> (hint: id <username>)]'
  '--groups[... set the supplemental groups]'
  '--user[set uid,gid and groups to that of user]'
  '--chroot[chroot(2) to this path]'
  '--killit[send signal(n) to child]'
  '--forkfor[fork and make child sleep for <n> sec]'
  '*:filename:_files'
)

_arguments -s $arguments
