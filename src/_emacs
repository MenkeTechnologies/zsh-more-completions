#compdef emacs

local arguments

arguments=(
    '--batch[do not do interactive display; implies -q]'
    '--debug-init[enable Emacs Lisp debugger for init file]'
    {--display,-d}'[use X server DISPLAY]'
    {--multibyte,--no-unibyte}'[inhibit the effect of EMACS_UNIBYTE]'
    '--no-desktop[do not load a saved desktop]'
    {--no-init-file,-q}'[load neither ~/.emacs nor default.el]'
    {--no-shared-memory,-nl}'[do not use shared memory]'
    '--no-site-file[do not load site-start.el]'
    '--no-splash[do not display a splash screen on startup]'
    {--no-window-system,-nw}'[do not communicate with X, ignoring $DISPLAY]'
    {--quick,-Q}'[equivalent to -q --no-site-file --no-splash]'
    '--script[run FILE as an Emacs Lisp script]'
    {--terminal,-t}'[use DEVICE for terminal I/O]'
    {--unibyte,--no-multibyte}'[run Emacs in unibyte mode]'
    {--user,-u}'[load ~USER/.emacs instead of your own]'
    {--directory,-L}'[add DIR to variable load-path]'
    '--eval[evaluate Emacs Lisp expression EXPR]'
    '--execute[evaluate Emacs Lisp expression EXPR]'
    '--file[visit FILE using find-file]'
    '--find-file[visit FILE using find-file]'
    {--funcall,-f}'[call Emacs Lisp function FUNC with no arguments]'
    '--insert[insert contents of FILE into current buffer]'
    '--kill[exit without asking for confirmation]'
    {--load,-l}'[load Emacs Lisp FILE using the load function]'
    '--visit[visit FILE using find-file]'
    {--background-color,-bg}'[window background color]'
    {--basic-display,-D}'[disable many display features;]'
    {--border-color,-bd}'[main border color]'
    {--border-width,-bw}'[width of main border]'
    {--color,--color}'[override color mode for character terminals;]'
    {--cursor-color,-cr}'[color of the Emacs cursor indicating point]'
    {--font,-fn}'[default font; must be fixed-width]'
    {--foreground-color,-fg}'[window foreground color]'
    {--fullheight,-fh}'[make the first frame high as the screen]'
    {--fullscreen,-fs}'[make first frame fullscreen]'
    {--fullwidth,-fw}'[make the first frame wide as the screen]'
    {--geometry,-g}'[window geometry]'
    {--no-bitmap-icon,-nbi}'[do not use picture of gnu for Emacs icon]'
    '--iconic[start Emacs in iconified state]'
    {--internal-border,-ib}'[width between text and main border]'
    {--line-spacing,-lsp}'[additional space to put between lines]'
    {--mouse-color,-ms}'[mouse cursor color in Emacs window]'
    '--name[title for initial Emacs frame]'
    {--no-blinking-cursor,-nbc}'[disable blinking cursor]'
    {--reverse-video,-r,-rv}'[switch foreground and background]'
    {--title,-T}'[title for initial Emacs frame]'
    {--vertical-scroll-bars,-vb}'[enable vertical scroll bars]'
    '--xrm[set additional X resources]'
    '--help[display this help and exit]'
    '--version[output version information and exit]'
    '*:filename:_files'
)

_arguments -s $arguments
