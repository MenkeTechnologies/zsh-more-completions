#compdef mysql_ldb

local arguments

arguments=(
  '--key[_hex : Keys are input/output as hex]'
  '--value[_hex : Values are input/output as hex]'
  '--hex[both keys and values are input/output as hex]'
  '--column[_family=<string> : name of the column family to operate on. default: default column family]'
  '--ttl[put,get,scan,dump,query,batchput : DB supports ttl and value is internally timestamp-suffixed]'
  '--try[_load_options : Try to load option file from DB.]'
  '--ignore[_unknown_options : Ignore unknown options when loading option file.]'
  '--bloom[_bits=<int,e.g.:14>]'
  '--fix[_prefix_len=<int,e.g.:14>]'
  '--compression[_type=<no|snappy|zlib|bzip2|lz4|lz4hc|xpress|zstd>]'
  '--compression[_max_dict_bytes=<int,e.g.:16384>]'
  '--block[_size=<block_size_in_bytes>]'
  '--auto[_compaction=<true|false>]'
  '--db[_write_buffer_size=<int,e.g.:16777216>]'
  '--write[_buffer_size=<int,e.g.:4194304>]'
  '--file[_size=<int,e.g.:2097152>]'
  '*:filename:_files'
)

_arguments -s $arguments
