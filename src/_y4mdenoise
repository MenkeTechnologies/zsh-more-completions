#compdef y4mdenoise

local arguments

arguments=(
  '-p[parallelism: 0=no threads, 1=r/w thread only, 2=do color in]'
  '-r[radius for motion-search (default: 16)]'
  '-R[radius for color motion-search (default: -r setting)]'
  '-t[error tolerance (default: 3)]'
  '-T[color error tolerance (default: -t setting)]'
  '-z[error tolerance for zero-motion pass (default: 2)]'
  '-Z[error tolerance for colors zero-motion pass (default: -z setting)]'
  '-m[match-count throttle (keep this many of the best pixel-group]'
  '-M[match-size throttle (apply first match whose flood-fill is the]'
  '-f[number of reference frames (default: 10)]'
  '-B[black-and-white mode; denoise intensity, set color to white]'
  '-I[interlacing type: 0=frame, 1=top-field-first, 2=bottom-field-first]'
  '-v[verbosity (0=none, 1=normal 2=debug)]'
  '-h[-\? Help]'
  '*:filename:_files'
)

_arguments -s $arguments
