#compdef mkbundle

local arguments

arguments=(
  '--config[bundle system config file `F]'
  '--config-dir[set MONO_CFG_DIR to `D]'
  '--deps[turns on automatic dependency embedding (default on simple)]'
  '-L[adds `path to the search path for assemblies]'
  '--machine-config[use the given file as the machine.config for the application.]'
  '-o[specifies output filename]'
  '--nodeps[turns off automatic dependency embedding (default on custom)]'
  '--skip-scan[skip scanning assemblies that could not be loaded (but still embed them).]'
  '--i18n[none, all or comma separated list of CJK, MidWest, Other, Rare, West.]'
  '-v[verbose output]'
  '--bundled-header[do not attempt to include mono-config.h. Define the entry points directly in the generated code]'
  '--simple[simple mode does not require a C toolchain and can cross compile]'
  '--cross[generates a binary for the given TARGET]'
  '--env[VALUE Hardcodes an environment variable for the target]'
  '--fetch-target[downloads the target SDK from the remote server]'
  '--library[\]PATH Bundles the specified dynamic library to be used at runtime]'
  '--list-targets[lists available targets on the remote server]'
  '--local-targets[lists locally available targets]'
  '--options[embed the specified Mono command line options on target]'
  '--runtime[manually specifies the Mono runtime to use]'
  '--sdk[use a Mono SDK root location instead of a target]'
  '--target-server[specified a server to download targets from, default is https://download.mono-project.com/runtimes/raw/]'
  '--custom[builds a custom launcher, options for --custom]'
  '-c[produce stub only, do not compile]'
  '-oo[specifies output filename for helper object file]'
  '--dos2unix[when no value provided, or when `true` specified]'
  '--keeptemp[keeps the temporary files]'
  '--static[statically link to mono libs]'
  '--nomain[dont include a main() function, for libraries]'
  '--custom-main[link the specified compilation unit (.c or .obj) with entry point/init code]'
  '-z[compress the assemblies before embedding.]'
  '--static-ctor[add a constructor call to the supplied function.]'
  '*:filename:_files'
)

_arguments -s $arguments
