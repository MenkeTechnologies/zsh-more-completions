#compdef prl_nettool

local arguments

arguments=(
  '--dhcp[- switch to DHCP]'
  '--dhcpv6[- switch IPv6 to DHCP]'
  '--gateway[<IP>      - set default gateway]'
  '--dns[<IPs>         - set dns servers]'
  '--ip[<IP/MASK>      - set ip addresses to adapter]'
  '--search-domain[- set search domain]'
  '--hostname[- set hostname]'
  '--route[<IP>        - set route via <IP> dev <MAC>]'
  '*:filename:_files'
)

_arguments -s $arguments
