#compdef xo

local arguments

arguments=(
  '--close[close tags for the given path]'
  '--depth[set the depth for pretty printing]'
  '--help[display this help text]'
  {--html,-H}'[generate HTML output]'
  {--json,-J}'[generate JSON output]'
  {--leading-xpath,-l}'[Add a prefix to generated XPaths (HTML)]'
  '--open[open tags for the given path]'
  {--option,-O}'[give formatting options]'
  {--pretty,-p}'[make pretty output (add indent, newlines)]'
  {-s,--style}'[Generate given style (xml, json, text, html)]'
  {--text,-T}'[generate text output (the default style)]'
  '--version[display version information]'
  {--warn,-W}'[display warnings in text on stderr]'
  '--warn-xml[display warnings in xml on stdout]'
  '--wrap[wrap output in a set of containers]'
  {--xml,-X}'[generate XML output]'
  '--xpath[add XPath data to HTML output]'
  '*:filename:_files'
)

_arguments -s $arguments
