#compdef xload

local arguments

arguments=(
  '-display[X server on which to display]'
  '-geometry[size and location of window]'
  '-fn[font to use in label]'
  '-scale[minimum number of scale lines]'
  '-update[interval between updates]'
  '-label[annotation text]'
  '-bg[background color]'
  '-fg[graph color]'
  '-hl[scale and text color]'
  '-nolabel[removes the label from above the chart.]'
  '-jumpscroll[number of pixels to scroll on overflow]'
  '-lights[use keyboard leds to display current load]'
  '*:filename:_files'
)

_arguments -s $arguments
