#compdef arecordmidi

local arguments

arguments=(
  '(- * :)'{-h,--help}'[this help]'
  {-V,--version}'[show version]'
  {-l,--list}'[list input ports]'
  {-p,--port}'[... source port(s)]'
  {-b,--bpm}'[tempo in beats per minute]'
  {-f,--fps}'[resolution in frames per second (SMPTE)]'
  {-t,--ticks}'[resolution in ticks per beat or frame]'
  {-s,--split-channels}'[create a track for each channel]'
  {-m,--metronome}'[play a metronome signal]'
  {-i,--timesig}'[time signature]'
  '*:filename:_files'
)

_arguments -s $arguments
