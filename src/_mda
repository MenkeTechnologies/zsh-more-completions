#compdef mda

local arguments

arguments=(
  '--stderr[log to standard error]'
  '--debug-level[set Mailutils debugging level]'
  '--log-facility[output logs to syslog FACILITY]'
  {-M,--mailer}'[use specified URL as the default mailer]'
  '--clear-include-path[clear Sieve include path]'
  {--clear-library-path,--clearpath}'[clear Sieve library path]'
  {-I,--includedir}'[append DIR to the list of directories searched for]'
  {-L,--libdir}'[append DIR to the list of directories searched for]'
  '--libdir-prefix[add DIR to the beginning of the list of]'
  {-f,-r,--from}'[specify the senders name]'
  {-l,--language}'[define scripting language for the next --script]'
  '--message-id-header[use this header to identify messages when logging]'
  {-s,--script}'[set name pattern for user-defined mail filter]'
  {-x,--script-debug}'[enable script debugging; FLAGS are:]'
  '--config-lint[check configuration file syntax and exit]'
  '--config-verbose[verbosely log parsing of the configuration files]'
  '--config-help[show configuration file summary]'
  '--show-config-options[show compilation options]'
  '--usage[give a short usage message]'
  {-V,--version}'[print program version]'
  '*:filename:_files'
)

_arguments -s $arguments
