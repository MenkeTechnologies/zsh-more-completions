#compdef pod2texi

local arguments

arguments=(
  '--appendix-sections[use appendix-like sections.]'
  '--base-level[level of the head1 commands; default 0.]'
  '--debug[set debugging level.]'
  '--help[display this help and exit.]'
  '--no-fill-section-gaps[do not fill sectioning gaps.]'
  '--no-section-nodes[use anchors for sections instead of nodes.]'
  '--output[output to NAME for the first or main manual]'
  '--preamble[insert STR as beginning boilerplate.]'
  '--subdir[put files included in the main manual in NAME.]'
  '--top[top for the main manual.]'
  '--unnumbered-sections[use unumbered sections.]'
  '--version[display version information and exit.]'
  '*:filename:_files'
)

_arguments -s $arguments
