#compdef httrack

local arguments

arguments=(
  '--mirror[*make a mirror of site(s) (default)]:URLs:'
  '--get[get the files indicated, do not seek other URLs (-qg)]:URLs:'
  '--list[add all URL located in this text file (-%L)]:text file:'
  '--mirrorlinks[mirror all links in 1st level pages (-Y)]'
  '--testlinks[test links in pages (-r1p0C0I0t)]:URLs:'
  '--spider[spider site(s), to test links: reports Errors & Warnings (-p0C0I0t)]:URLs:'
  '--testsite[identical to --spider]:URLs:'
  '--skeleton[make a mirror, but gets only html files (-p1)]:URLs:'
  '--update[update a mirror, without confirmation (-iC2)]'
  '--continue[continue a mirror, without confirmation (-iC1)]'
  '--catchurl[create a temporary proxy to capture an URL or a form post URL]'
  '--clean[erase cache & log files]'
  '--http10[force http/1.0 requests (-%h)]'
  '*:filename:_files'
)

_arguments -s $arguments
