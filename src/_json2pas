#compdef json2pas

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show this help]'
  {-i,--input}'[use file as JSON input. The file must contain a valid JSON object.]'
  {-i,--json}'[use json as JSON input. The value must contain a valid JSON object.]'
  {-u,--unit}'[use name as the name of the unit.]'
  {-o,--output}'[set the output filename. Sets the unit name if none is given]'
  {-d,--generate-delphi}'[use Delphi 10 JSON routines]'
  {-l,--generate-load}'[create LoadFromJSON routine]'
  {-s,--generate-save}'[create SaveToJSON routine]'
  {-c,--load-ignores-case}'[loadFromJSON routine will ignore case]'
  {-e,--use-setter}'[property setters use a routine instead of writing to field]'
  {-n,--classname}'[set the name of the top-level class (default: TMyObject)]'
  {-r,--load-with-error}'[load will raise an exception if an unknown property is met]'
  '*:filename:_files'
)

_arguments -s $arguments
