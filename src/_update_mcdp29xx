arguments=(
  {-c,-check,--check}'[check that the firmware bundle versions match what is currently programmed in Madea]'
  {-f,-factory,--factory}'[]'
  {-l,-local,--local}'[these options change the default firmware bundle path, disable retries on failure]'
  '*:filename:_files'
)

_arguments -s $arguments
