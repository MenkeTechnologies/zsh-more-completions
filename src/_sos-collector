local arguments

arguments=(
    {-a,--alloptions}'[Enables all sosreport options.]'
    {-b,--become}'[Become the root user on the remote node when connecting as a non-root user.]'
    '--batch[Run in non-interactive mode.]'
    '--all-logs[Sosreport option. Collects all logs regardless of size. Default: no.]'
    '-c[Specify options used by cluster profiles. The format is \profile.]:CLUSTER_OPTIONS'
    '--chroot[Sosreport option. Set the chroot mode.]:CHROOT'
    '--case-id[Sosreport option. Specifies a case number identifier.]:CASE_ID'
    '--cluster-type[When run by itself, sos collect will attempt to identify the type of cluster …]:CLUSTER_TYPE'
    {-e,--enable-plugins}'[Sosreport option.]'
    '--encrypt-key[Encrypts the resulting archive that sos collect produces using GPG.]:KEY'
    '--encrypt-pass[The same as --encrypt-key, but use the provided PASS for symmetric encryption…]:PASS'
    '--group[Specify an existing host group definition to use.]:GROUP'
    '--save-group[Save the results of this run of sos collect to a host group definition.]:GROUP'
    {-j,--jobs}'[Specify the number of concurrent node collections that should be run.]'
    '--nopasswd-sudo[Use this option when connecting as a non-root user that has passwordless sudo…]'
    {-k,--plugin-option}'[Sosreport option. Set a plugin option to a particular value.]'
    '--label[Specify a label to be added to the archive names.]:LABEL'
    {-n,--skip-plugins}'[Sosreport option.]'
    '--nodes[Provide a comma-delimited list of nodes to collect sosreports from, or a rege…]:NODES'
    '--no-pkg-check[Do not perform package checks.]'
    '--no-local[Do not collect a sosreport from the local system.]'
    '--master[Specify a master node for the cluster.]:MASTER'
    {-o,--only-plugins}'[Sosreport option. Run ONLY the plugins listed.]'
    '--password[Specifying this option will cause sos collect to prompt the user for an SSH p…]'
    '--password-per-node[When using this option, sos collect will prompt the user for the SSH password…]'
    '--preset[Specify a sos preset to use, note that this requires sos-3.]:PRESET'
    {-p,--ssh-port}'[Specify SSH port for all nodes.]'
    '--skip-commands[A comma delimited list of commands to skip execution of, but still allowing t…]:COMMANDS'
    '--skip-files[A comma delimited list of files or filepath wildcard matches to skip collecti…]:FILES'
    '--ssh-user[Specify an SSH user for sos collect to connect to nodes with.]:SSH_USER'
    {-s,--sysroot}'[Sosreport option. Specify an alternate root file system path.]'
    '--sos-cmd[Define all options that sosreport should be run with on the nodes.]:SOS_CMD'
    {-t,--threads}'[Report option. Specify the number of collection threads to run.]'
    '--timeout[Timeout for sosreport generation on each node, in seconds.]:TIMEOUT'
    '--tmp-dir[Specify a temporary directory to save sos archives to.]:TMP_DIR'
    {-v,--verbose}'[Print debug information to screen.]'
    '--verfiy[Sosreport option.]'
    {-z,--compression-type}'[Sosreport option. Override the default compression type.]'
    '*:filename:_files'
)
