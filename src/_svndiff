#compdef svndiff

local arguments

arguments=(
  {-x,--exclude}'[exclude files matching PAT]'
  {-X,--exclude-from-file}'[exclude files that match any pattern in FILE]'
  {-i,--include}'[include only files matching PAT]'
  {-I,--include-from-file}'[include only files that match any pattern in FILE]'
  '--lines[include only hunks with (original) lines in range L, if range begins with x show all excluding range L]'
  {-F,--files}'[include only files in range F, if range begins with x show all excluding range F]'
  '--annotate[annotate each hunk with the filename and hunk number]'
  '--as-numbered-lines[display lines as they would look before, or after, the]'
  '--format[set output format]'
  '--remove-timestamps[dont show timestamps from output]'
  {-z,--decompress}'[decompress .gz and .bz2 files]'
  {-p,--strip-match}'[initial pathname components to ignore]'
  '--strip[initial pathname components to strip]'
  '--addprefix[prefix pathnames with PREFIX]'
  '--addoldprefix[prefix pathnames in old files with PREFIX]'
  '--addnewprefix[prefix pathnames in new files with PREFIX]'
  {-v,--verbose}'[verbose output -- use more than once for extra verbosity]'
  '--filter[run as filterdiff]'
  '--list[run as lsdiff]'
  '--grep[run as grepdiff]'
  '*:filename:_files'
)

_arguments -s $arguments
