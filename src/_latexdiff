#compdef latexdiff

local arguments

arguments=(
  '--type[]'
  '-t[add code to preamble for selected markup style]'
  '--subtype[]'
  '-s[add code to preamble for selected style for bracketing]'
  '--floattype[]'
  '-f[add code to preamble for selected style which]'
  '--encoding[]'
  '-e[specify encoding of old.tex and new.tex. Typical encodings are]'
  '--preamble[]'
  '-p[insert file at end of preamble instead of auto-generating]'
  '--exclude-safecmd[]'
  '--exclude-safecmd[1,cmd2,..."]'
  '-A[]'
  '--replace-safecmd[]'
  '--append-safecmd[]'
  '--append-safecmd[1,cmd2,..."]'
  '-a[exclude from, replace or append to the list of regex]'
  '--exclude-textcmd[]'
  '--exclude-textcmd[1,cmd2,..."]'
  '-X[]'
  '--replace-textcmd[]'
  '--append-textcmd[]'
  '--append-textcmd[1,cmd2,..."]'
  '-x[exclude from, replace or append to the list of regex]'
  '--replace-context1cmd[]'
  '--append-context1cmd[]'
  '--append-context1cmd[1,cmd2,..."]'
  '--replace-context2cmd[]'
  '--append-context2cmd[]'
  '--append-context2cmd[1,cmd2,..."]'
  '--exclude-mboxsafecmd[]'
  '--exclude-mboxsafecmd[1,cmd2,..."]'
  '--append-mboxsafecmd[]'
  '--append-mboxsafecmd[1,cmd2,..."]'
  '--config[1=val1,var2=val2,...]'
  '-c[1=val1,.. Set configuration variables.]'
  '-c[available variables:]'
  '--packages[1,pkg2,..]'
  '--show-preamble[print generated or included preamble commands to stdout.]'
  '--show-safecmd[print list of regex matching and excluding safe commands.]'
  '--show-textcmd[print list of regex matching and excluding commands with text argument.]'
  '--show-config[show values of configuration variables]'
  '--show-all[show all of the above]'
  '--allow-spaces[allow spaces between bracketed or braced arguments to commands]'
  '--math-markup[determine granularity of markup in displayed math environments:]'
  '--graphics-markup[change highlight style for graphics embedded with \includegraphics commands]'
  '--disable-citation-markup[]'
  '--disable-auto-mbox[suppress citation markup and markup of other vulnerable commands in styles]'
  '--enable-citation-markup[]'
  '--enforce-auto-mbox[protect citation commands and other vulnerable commands in changed sections]'
  '--label[]'
  '-L[sets the labels used to describe the old and new files. The first use]'
  '--no-label[suppress inclusion of old and new file names as comment in output file]'
  '--visible-label[include old and new filenames (or labels set with --label option) as]'
  '--flatten[replace \input and \include commands within body by the content]'
  '--flatten[applied recursively, so inputted files can contain further]'
  '--help[]'
  '-h[show this help text.]'
  '--ignore-warnings[suppress warnings about inconsistencies in length between input]'
  '--verbose[]'
  '-V[output various status information to stderr during processing.]'
  '--version[show version number.]'
  '*:filename:_files'
)

_arguments -s $arguments
