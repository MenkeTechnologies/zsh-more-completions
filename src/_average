#compdef average

local arguments

arguments=(
  '-v[verbose]'
  '-e[median rather than average]'
  '-g[geometric Median of PCS in encoded space]'
  '-L[geometric Median of PCS in L*a*b* space]'
  '-X[geometric Median of PCS in XYZ space]'
  '-m[merge rather than average]'
  '*:filename:_files'
)

_arguments -s $arguments
