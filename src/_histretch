#compdef histretch

local arguments

arguments=(
  '--help[display this message]'
  '--version[display the HINT version]'
  '-l[redirect stderr to a log file]'
  '-o[specify an output file name]'
  '-a[write auxiliary files]'
  '-g[do not use localized names (implies -a)]'
  '-f[force overwriting existing auxiliary files]'
  '-u[enable writing utf8 character codes]'
  '-x[enable writing hexadecimal character codes]'
  '*:filename:_files'
)

_arguments -s $arguments
