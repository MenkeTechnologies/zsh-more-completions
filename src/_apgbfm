#compdef apgbfm

local arguments

arguments=(
  '-a[add word to filter]'
  '-A[add words from dictfile to filter]'
  '-c[check word against filter]'
  '-C[check dictfile against filter]'
  '-n[create new empty filter]'
  '-d[create new filter and add all words from dictfile]'
  '-f[use filtername as the name for filter]'
  '-q[quiet mode (do not print dots for -A and -d)]'
  '-s[create case insentive filter]'
  '-i[print filter information]'
  '-v[print version information]'
  '-h[print help (this screen)]'
  '*:filename:_files'
)

_arguments -s $arguments
