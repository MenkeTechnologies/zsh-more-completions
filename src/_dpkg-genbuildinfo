#compdef dpkg-genbuildinfo

local arguments

arguments=(
  '--build[...\]     specify the build <type>: full, source, binary]'
  '-c[<control-file>         get control info from this file.]'
  '-l[<changelog-file>       get per-version info from this file.]'
  '-f[<files-list-file>      get .deb files list from this file.]'
  '-F[<changelog-format>     force changelog format.]'
  '-O[write to stdout (or <buildinfo-file>).]'
  '-u[<upload-files-dir>     directory with files (default is ..).]'
  '--always-include-path[always include Build-Path.]'
  '--admindir[change the administrative directory.]'
  '--version[show the version.]'
  '*:filename:_files'
)

_arguments -s $arguments
