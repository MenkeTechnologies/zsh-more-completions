#compdef dpkg-genbuildinfo

local arguments

arguments=(
  '--build[...\] specify the build <type>: full, source, binary]'
  '-c[get control info from this file.]:control-file:'
  '-l[get per-version info from this file.]:changelog-file:'
  '-f[get .deb files list from this file.]:files-list-file:'
  '-F[force changelog format.]:changelog-format:'
  '-O[write to stdout (or <buildinfo-file>).]'
  '-u[directory with files (default is ..).]:upload-files-dir:'
  '--always-include-path[always include Build-Path.]'
  '--admindir[change the administrative directory.]'
  '--version[show the version.]'
  '*:filename:_files'
)

_arguments -s $arguments
