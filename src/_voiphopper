#compdef voiphopper

local arguments

arguments=(
  '-l[available interfaces for CDP sniffing, then exit)]'
  '-m[the MAC Address, then exit)]'
  '-d[the VLAN Interface, then exit)]'
  '-V[the VoIP Hopper version, then exit)]'
  '-m[the MAC Address of existing interface, and new Interface)]'
  {-D,-m}'[the MAC Address of only new Voice Interface)]'
  '-E[(Device ID)]'
  '-P[(Port ID)]'
  '-C[(Capabilities)]'
  '-L[(Platform)]'
  '-S[(Software)]'
  '-U[(Duplex)]'
  '*:filename:_files'
)

_arguments -s $arguments
