#compdef hiutil

local arguments

arguments=(
  '-a[index anchors (default is not to)]'
  '-g[generate page summaries if they arent provided (slow)]'
  '-s[to use a built-in stopwords list, pass the two-character]'
  '-m[minimum term length. Can be 1, 2 or 3]'
  '-x[external plist file containing the html page data]'
  '-r[the indexs remote URL. Only necessary for indices deployed in Type 1 & 2 help books.]'
  '-l[the locale to use for the index. Should be a locale identifier recognized by NSLocale.]'
  '-v[verbose logging of warnings. Once for warnings, twice for warnings and notes.]'
  '-h[print this message and quit]'
  '*:filename:_files'
)

_arguments -s $arguments
