#compdef firemon

local arguments

arguments=(
  '--apparmor[print AppArmor confinement status for each sandbox.]'
  '--arp[print ARP table for each sandbox.]'
  '--caps[print capabilities configuration for each sandbox.]'
  '--cgroup[print control group information for each sandbox.]'
  '--cpu[print CPU affinity for each sandbox.]'
  '--help[-\? - this help screen.]'
  '--interface[print network interface information for each sandbox.]'
  '--list[list all sandboxes.]'
  '--name[print information only about named sandbox.]'
  '--netstats[monitor network statistics for sandboxes creating a new]'
  '--nowrap[enable line wrapping in terminals.]'
  '--route[print route table for each sandbox.]'
  '--seccomp[print seccomp configuration for each sandbox.]'
  '--tree[print a tree of all sandboxed processes.]'
  '--top[monitor the most CPU-intensive sandboxes.]'
  '--version[print program version and exit.]'
  '--x11[print X11 display number.]'
  '*:filename:_files'
)

_arguments -s $arguments
