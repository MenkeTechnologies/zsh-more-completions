#compdef ldns-dane

local arguments

arguments=(
  '-h[show this text]'
  '-4[TLS connect IPv4 only]'
  '-6[TLS connect IPv6 only]'
  '-a[dont resolve <name>, but connect to <address>(es)]'
  '-b[print "<name>. TYPE52 \#<size> <hex data>" form]'
  '-c[verify or create TLSA records for the]'
  '-d[assume DNSSEC validity even when insecure or bogus]'
  '-f[use CAfile to validate]'
  '-i[interact after connecting]'
  '-k[use DNSKEY/DS rr(s) in <keyfile> to validate TLSAs]'
  '-n[do *not* verify server name in certificate]'
  '-o[select <offset>th certificate from the end of]'
  '-p[use certificates in the <CApath> directory to validate]'
  '-s[assume PKIX validity]'
  '-S[chase signature(s) to a known key]'
  '-t[do not use DNS, but read TLSA record(s) from <tlsafile>]'
  '-u[use UDP transport instead of TCP]'
  '-v[show version and exit]'
  '*:filename:_files'
)

_arguments -s $arguments
