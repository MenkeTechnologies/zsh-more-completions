#compdef redis-commander

local arguments

arguments=(
  '--redis-port[the port to find redis on.]'
  '--redis-host[the host to find redis on.]'
  '--redis-socket[the unix-socket to find redis on.]'
  '--redis-password[the redis password.]'
  '--redis-db[the redis database.]'
  '--sentinel-port[the port to find sentinel on.]'
  '--sentinel-host[the host to find sentinel on.]'
  '--sentinels[comma separated list of sentinels with host:port.]'
  '--sentinel-name[the sentinel group name to use.]'
  '--sentinel-password[the sentinel password to use.]'
  '--redis-tls[use TLS for connection to redis server or sentinel. \[default: false\]]'
  {--noload,--nl}'[do not load connections from config.]'
  {--clear-config,--cc}'[clear configuration file.]'
  '--migrate-config[migrate old configuration file in $HOME to new style.]'
  {--test,-t}'[test final configuration (file, env-vars, command line)]'
  '--open[open web-browser with Redis-Commander. \[default: false\]]'
  '--redis-label[the label to display for the connection. \[default: "local"\]]'
  '--read-only[start app in read-only mode. \[default: false\]]'
  {--http-auth-username,--http-u}'[the http authorisation username. \[default: ""\]]'
  {--http-auth-password,--http-p}'[the http authorisation password. \[default: ""\]]'
  {--http-auth-password-hash,--http-h}'[the http authorisation password hash. \[default: ""\]]'
  {--address,-a}'[the address to run the server on. \[default: "0.0.0.0"\]]'
  {--port,-p}'[the port to run the server on. \[default: 8081\]]'
  {--url-prefix,-u}'[the url prefix to respond on. \[default: ""\]]'
  '--trust-proxy[app is run behind proxy (enable Express "trust proxy") \[default: false\]]'
  {--nosave,--ns}'[do not save new connections to config file. \[default: false\]]'
  '--no-log-data[do not log data values from redis store. \[default: false\]]'
  {--folding-char,--fc}'[character to fold keys at for tree view. \[default: ":"\]]'
  {--root-pattern,--rp}'[default root pattern for redis keys. \[default: "*"\]]'
  {--use-scan,--sc}'[use SCAN instead of KEYS. \[default: true\]]'
  '--scan-count[the size of each separate scan. \[default: 100\]]'
  '*:filename:_files'
)

_arguments -s $arguments
