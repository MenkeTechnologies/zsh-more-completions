#compdef fiwalk

local arguments

arguments=(
  '-c[.txt read config.txt for metadata extraction tools]'
  '-C[only process nn files, then do a clean exit]'
  '-n[only match files for which the filename matches]'
  '-I[NTFS system files]'
  '-g[report the file objects - dont get the data]'
  '-O[walk allocated files]'
  '-b[not report byte runs if data not accessed]'
  '-z[not calculate MD5 or SHA1 values]'
  '-Gnn[Only process the contents of files smaller than nn gigabytes (default 2)]'
  '-M[report MD5 for each file (default on)]'
  '-1[report SHA1 for each file (default on)]'
  '-S[perform sector hashes every nnnn bytes]'
  '-f[report the output of the file command for each]'
  '-m[output in SleuthKit Body file format]'
  '-A[= ARFF output to <file>]:file:'
  '-X[= XML output to a <file> (full DTD)]:file:'
  '-X0[write output to filename.xml]'
  '-Z[zap (erase) the output file]'
  '-x[XML output to stdout (no DTD)]'
  '-T[= Walkfile output to <file>]:file:'
  '-a[.txt> = Read the scalpel audit.txt file]'
  '-d[debug this program]'
  '-v[enable SleuthKit verbose flag]'
  '*:filename:_files'
)

_arguments -s $arguments
