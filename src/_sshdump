#compdef sshdump

local arguments

arguments=(
  '--extcap-interfaces[list the extcap Interfaces]'
  '--extcap-dlts[list the DLTs]'
  '--extcap-interface[specify the extcap interface]'
  '--extcap-config[list the additional configuration for an interface]'
  '--capture[run the capture]'
  '--extcap-capture-filter[the capture filter]'
  '--fifo[dump data to file or fifo]'
  '--extcap-version[print tool version]'
  '--debug[print additional messages]'
  '--debug-file[print debug messages to file]'
  '--help[print this help]'
  '--version[print the version]'
  '--remote-host[the remote SSH host]'
  '--remote-port[the remote SSH port]'
  '--remote-username[the remote SSH username]'
  '--remote-password[the remote SSH password. If not specified, ssh-agent and ssh-key are used]'
  '--sshkey[key path>: the path of the ssh key]'
  '--sshkey-passphrase[key passphrase>: the passphrase to unlock public ssh]'
  '--proxycommand[command>: the command to use as proxy the the ssh connection]'
  '--remote-interface[the remote capture interface]'
  '--remote-capture-command[command>: the remote capture command]'
  '--remote-sudo[use sudo on the remote machine to capture]'
  '--remote-noprom[dont use promiscuous mode on the remote machine]'
  '--remote-filter[a filter for remote capture (default: dont listen on local interfaces IPs)]'
  '--remote-count[the number of packets to capture]'
  '*:filename:_files'
)

_arguments -s $arguments
