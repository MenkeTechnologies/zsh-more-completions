#compdef numfmt

local arguments

arguments=(
    '--debug[print warnings about invalid input]'
    {-d,--delimiter}'[use X instead of whitespace for field delimiter]'
    '--field[replace the number in input field N (default is 1)]'
    '--format[use printf style floating-point FORMAT;]'
    '--from[auto-scale input numbers to UNITs; default is none;]'
    '--from-unit[specify the input unit size (instead of the default 1)]'
    '--grouping[use locale-defined grouping of digits, e.g. 1,000,000]'
    '--header[print (without converting) the first N header lines;]'
    '--invalid[failure mode for invalid numbers: MODE can be:]'
    '--padding[pad the output to N characters; positive N will]'
    '--round[use METHOD for rounding when scaling; METHOD can be:]'
    '--suffix[add SUFFIX to output numbers, and accept optional]'
    '--to[auto-scale output numbers to UNITs; see UNIT below]'
    '--to-unit[the output unit size (instead of the default 1)]'
    '--help[display this help and exit]'
    '--version[output version information and exit]'
    '*:filename:_files'
)

_arguments -s $arguments
