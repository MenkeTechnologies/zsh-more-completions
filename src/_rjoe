#compdef rjoe

local arguments

arguments=(
  '-left[left scroll amount]'
  '-right[right scroll amount]'
  '-pg[no. PgUp/PgDn lines]'
  '-undo[_keep nnn No. undo records]'
  '-backpath[path to backup files]'
  '-lines[no. screen lines (if no window size ioctl)]'
  '-baud[baud rate]'
  '-columns[no. screen columns (if no window size ioctl)]'
  '-skiptop[no. screen lines to skip]'
  '-xmsg[exit message]'
  '-aborthint[abort hint]'
  '-helphint[help hint]'
  '-lmsg[left side status line format]'
  '-rmsg[right side status line format]'
  '-smsg[status command format]'
  '-zmsg[status command format EOF]'
  '-keymap[keymap to use]'
  '-mnew[macro to execute for new files]'
  '-mfirst[macro to execute on first change]'
  '-mold[macro to execute on existing files]'
  '-msnew[macro to execute when new files are saved]'
  '-msold[macro to execute when existing files are saved]'
  '-text[_color sss Text color]'
  '-help[_color sss Help color]'
  '-status[_color sss Status bar color]'
  '-menu[_color sss Menu color]'
  '-prompt[_color sss Prompt color]'
  '-msg[_color sss Message color]'
  '-tab[tab width]'
  '-lmargin[left margin]'
  '-rmargin[right margin]'
  '-indentc[indent char]'
  '-istep[indent step]'
  '-syntax[syntax]'
  '-encoding[encoding]'
  '-type[file type]'
  '-text[_delimiters sss Text delimiters]'
  '-language[language]'
  '-cpara[paragraph indent chars]'
  '-cnotpara[non-paragraph chars]'
  '*:filename:_files'
)

_arguments -s $arguments
