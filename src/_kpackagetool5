#compdef kpackagetool5

local arguments

arguments=(
  {-v,--version}'[displays version information.]'
  '(- * :)'{-h,--help}'[displays this help.]'
  '--hash[generate a SHA1 hash for the package at]'
  {-g,--global}'[for install or remove, operates on]'
  {-t,--type}'[the type of package, corresponding to the]'
  {-i,--install}'[install the package at <path>]'
  {-s,--show}'[show information of package <name>]'
  {-u,--upgrade}'[upgrade the package at <path>]'
  {-l,--list}'[list installed packages]'
  '--list-types[list all known package types that can be]'
  {-r,--remove}'[remove the package named <name>]'
  {-p,--packageroot}'[absolute path to the package root. If not]'
  '--generate-index[recreate the plugin index. To be used in:]'
  '-g[. Recreates the index for the given type]'
  '--remove-index[remove the plugin index. To be used in:]'
  '-g[. Recreates the index for the given type]'
  '--appstream-metainfo[outputs the metadata for the package]'
  '--appstream-metainfo-output[outputs the metadata for the package into]'
  '*:filename:_files'
)

_arguments -s $arguments
