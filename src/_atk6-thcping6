#compdef atk6-thcping6

local arguments

arguments=(
  '-T[ICMPv6 type to send (default: 128 = ping)]'
  '-C[ICMPv6 code to send (default: 0)]'
  '-S[use a TCP SYN packet on the defined port instead of ping]'
  '-U[use a UDP packet on the defined port instead of ping]'
  '-n[how often to send the packet (default: 1)]'
  '-h[show more command line options (help!)]'
  '*:filename:_files'
)

_arguments -s $arguments
