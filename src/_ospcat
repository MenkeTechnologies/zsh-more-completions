#compdef ospcat

local arguments

arguments=(
  {-b,--bctf}'[use bctf NAME for output.]'
  {-f,--error-file}'[append error messages to file FILE.]'
  {-v,--version}'[display the program version.]'
  '(- * :)'{-h,--help}'[show this help text.]'
  {-c,--catalog}'[use catalog SYSID.]'
  {-C,--catalogs}'[arguments are catalogs, use DOCUMENT entry.]'
  {-D,--directory}'[search files in directory DIRECTORY.]'
  {-R,--restricted}'[restrict file reading (for use in Web apps).]'
  {-P,--public-id}'[print the effective system id for the public id LITERAL.]'
  {-S,--system-id}'[print the effective system id for system id LITERAL.]'
  {-p,--parameter-entity}'[print the effective system id for parameter entity NAME.]'
  {-d,--doctype}'[print the effective system id for the doctype NAME.]'
  {-l,--linktype}'[print the effective system id for the linktype NAME.]'
  {-e,--entity}'[print the effective system id for entity NAME.]'
  {-n,--notation}'[print the effective system id for notation NAME.]'
  {-s,--declaration}'[print the effective system id for the SGML declaration for doctype NAME.]'
  '*:filename:_files'
)

_arguments -s $arguments
