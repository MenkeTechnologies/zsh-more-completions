#compdef couchdb

local arguments

arguments=(
  '-os[_mon start_memsup false start_cpu_sup false disk_space_check_interval 1 disk_almost_full_threshold 1 -sasl errlog_type error +K true +A 4]'
  '-h[display a short help message and exit]'
  '-V[display version information and exit]'
  '-a[add configuration FILE to chain]'
  '-A[add configuration DIR to chain]'
  '-n[reset configuration file chain (including system default)]'
  '-c[print configuration file chain and exit]'
  '-i[use the interactive Erlang shell]'
  '-b[spawn as a background process]'
  '-p[set the background PID FILE (overrides system default)]'
  '-r[respawn background process after SECONDS (defaults to no respawn)]'
  '-o[redirect background stdout to FILE (defaults to couchdb.stdout)]'
  '-e[redirect background stderr to FILE (defaults to couchdb.stderr)]'
  '-s[display the status of the background process]'
  '-k[kill the background process, will respawn if needed]'
  '-d[shutdown the background process]'
  '*:filename:_files'
)

_arguments -s $arguments
