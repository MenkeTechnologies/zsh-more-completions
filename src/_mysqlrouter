#compdef mysqlrouter

local arguments

arguments=(
  {-V,--version}'[display version information and exit.]'
  {-B,--bootstrap}'[bootstrap and configure Router for operation with a MySQL InnoDB]'
  '--bootstrap-socket[bootstrap and configure Router via a Unix socket]'
  {-d,--directory}'[creates a self-contained directory for a new instance of the]'
  '--conf-use-sockets[whether to use Unix domain sockets. (bootstrap)]'
  '--conf-skip-tcp[whether to disable binding of a TCP port for incoming]'
  '--conf-base-port[base port to use for listening router ports. (bootstrap)]'
  '--conf-bind-address[IP address of the interface to which routers listening sockets]'
  '--master-key-reader[the tool that can be used to read master key, it has to be used]'
  '--master-key-writer[the tool that can be used to store master key, it has to be used]'
  '--connect-timeout[<VALUE>\]]'
  '--read-timeout[<VALUE>\]]'
  {-u,--user}'[run the mysqlrouter as the user having the name user_name.]'
  '--name[<name>\]]'
  '--force-password-validation[when autocreating database account do not use HASHED password.]'
  '--password-retries[<password-retries>\]]'
  '--account-host[host pattern to be used when creating Routers database user]'
  '--report-host[host name of this computer (it will be queried from OS if not]'
  '--force[force reconfiguration of a possibly existing instance of the]'
  '--ssl-mode[SSL connection mode for use during bootstrap and normal]'
  '--ssl-mode[mysql client. One of]'
  '--ssl-cipher[separated list of SSL ciphers to allow, if SSL is enabeld.]'
  '--tls-version[separated list of TLS versions to request, if SSL is enabled.]'
  '--ssl-ca[path to SSL CA file to verify servers certificate against.]'
  '--ssl-capath[path to directory containing SSL CA files to verify servers]'
  '--ssl-crl[path to SSL CRL file to use when verifying server certificate.]'
  '--ssl-crlpath[path to directory containing SSL CRL files to use when verifying]'
  '--ssl-cert[path to client SSL certificate, to be used if client certificate]'
  '--ssl-key[path to private key for client SSL certificate, to be used if]'
  {-c,--config}'[only read configuration from given file.]'
  {-a,--extra-config}'[read this file after configuration files are read from either]'
  '*:filename:_files'
)

_arguments -s $arguments
