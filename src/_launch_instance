#compdef launch_instance

local arguments

arguments=(
  '--version[show programs version number and exit]'
  {-h,--help}'[show this help message and exit]'
  {-c,--max-count}'[maximum number of this type of instance to launch]'
  '--min-count[minimum number of this type of instance to launch]'
  '--cloud-init[indicates that this is an instance that uses]'
  {-g,--groups}'[security Groups to add this instance to]'
  {-a,--ami}'[AMI to launch]'
  {-t,--type}'[type of Instance (default m1.small)]'
  {-k,--key}'[keypair]'
  {-z,--zone}'[zone (default us-east-1a)]'
  {-r,--region}'[region (default us-east-1)]'
  {-i,--ip}'[elastic IP]'
  {-n,--no-add-cred}'[dont add a credentials section]'
  '--save-ebs[save the EBS volume on shutdown, instead of deleting]'
  {-w,--wait}'[wait until instance is running]'
  {-d,--dns}'[returns public and private DNS (implicates --wait)]'
  {-T,--tag}'[set tag]'
  {-s,--scripts}'[pass in a script or a folder containing scripts to be]'
  '--role[IAM Role to use, this implies --no-add-cred]'
  '*:filename:_files'
)

_arguments -s $arguments
