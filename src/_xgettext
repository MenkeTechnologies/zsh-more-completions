#compdef xgettext

local arguments

arguments=(
  {-f,--files-from}'[get list of input files from FILE]'
  {-D,--directory}'[add DIRECTORY to list for input files search]'
  {-d,--default-domain}'[use NAME.po for output (instead of messages.po)]'
  {-o,--output}'[write output to specified file]'
  {-p,--output-dir}'[output files will be placed in directory DIR]'
  {-L,--language}'[recognise the specified language]'
  {-C,--c}'[++ shorthand for --language=C++]'
  '--from-code[encoding of input files]'
  {-j,--join-existing}'[join messages with existing file]'
  {-x,--exclude-file}'[.po entries from FILE.po are not extracted]'
  {-cTAG,--add-comments}'[place comment blocks starting with TAG and]'
  {-c,--add-comments}'[place all comment blocks preceding keyword lines]'
  '--check[perform syntax check on messages]'
  '--sentence-end[type describing the end of sentence]'
  {-a,--extract-all}'[extract all strings]'
  {-kWORD,--keyword}'[look for WORD as an additional keyword]'
  {-k,--keyword}'[do not to use default keywords]'
  '--flag[additional flag for strings inside the argument]'
  {-T,--trigraphs}'[understand ANSI C trigraphs for input]'
  '--its[apply ITS rules from FILE]'
  '--qt[recognize Qt format strings]'
  '--kde[recognize KDE 4 format strings]'
  '--boost[recognize Boost format strings]'
  '--debug[more detailed formatstring recognition result]'
  '--color[use colors and other text attributes always]'
  '--color[use colors and other text attributes if WHEN.]'
  '--style[specify CSS style rule file for --color]'
  {-e,--no-escape}'[do not use C escapes in output (default)]'
  {-E,--escape}'[use C escapes in output, no extended chars]'
  '--force-po[write PO file even if empty]'
  {-i,--indent}'[write the .po file using indented style]'
  '--no-location[do not write #: filename:line lines]'
  {-n,--add-location}'[generate #: filename:line lines (default)]'
  '--strict[write out strict Uniforum conforming .po file]'
  '--properties-output[write out a Java .properties file]'
  '--stringtable-output[write out a NeXTstep/GNUstep .strings file]'
  '--itstool[write out itstool comments]'
  {-w,--width}'[set output page width]'
  '--no-wrap[do not break long message lines, longer than]'
  {-s,--sort-output}'[generate sorted output]'
  {-F,--sort-by-file}'[sort output by file location]'
  '--omit-header[dont write header with msgid "" entry]'
  '--copyright-holder[set copyright holder in output]'
  '--foreign-user[omit FSF copyright in output for foreign user]'
  '--package-name[set package name in output]'
  '--package-version[set package version in output]'
  '--msgid-bugs-address[@ADDRESS set report address for msgid bugs]'
  {-m,--msgstr-prefix}'[use STRING or "" as prefix for msgstr]'
  {-M,--msgstr-suffix}'[use STRING or "" as suffix for msgstr]'
  '(- * :)'{-h,--help}'[display this help and exit]'
  {-V,--version}'[output version information and exit]'
  '*:filename:_files'
)

_arguments -s $arguments
