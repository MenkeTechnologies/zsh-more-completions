#compdef medusa

local arguments

arguments=(
  '-h[Target hostname or IP address]'
  '-H[File containing target hostnames or IP addresses]'
  '-u[Username to test]'
  '-U[File containing usernames to test]'
  '-p[Password to test]'
  '-P[File containing passwords to test]'
  '-C[File containing combo entries. See README for more information.]'
  '-O[File to append log information to]'
  '-e[/s/ns\] : Additional password checks (\[n\] No Password, \[s\] Password = Username)]'
  '-M[Name of the module to execute (without the .mod extension)]'
  '-m[Parameter to pass to the module. This can be passed multiple times with a]'
  '-m[1 -m Param2, etc.)]'
  '-d[Dump all known modules]'
  '-n[Use for non-default TCP port number]'
  '-s[Enable SSL]'
  '-g[Give up after trying to connect for NUM seconds (default 3)]'
  '-r[Sleep NUM seconds between retry attempts (default 3)]'
  '-R[Attempt NUM retries before giving up. The total number of attempts will be NUM + 1.]'
  '-c[Time to wait in usec to verify socket is available (default 500 usec).]'
  '-t[Total number of logins to be tested concurrently]'
  '-T[Total number of hosts to be tested concurrently]'
  '-L[Parallelize logins using one username per thread. The default is to process]'
  '-f[Stop scanning host after first valid username/password found.]'
  '-F[Stop audit after first valid username/password found on any host.]'
  '-b[Suppress startup banner]'
  '-q[Display modules usage information]'
  '-v[Verbose level \[0 - 6 (more)\]]'
  '-w[Error debug level \[0 - 10 (more)\]]'
  '-V[Display version]'
  '-Z[Resume scan based on map of previous scan]'
  '*:filename:_files'
)

_arguments -s $arguments
