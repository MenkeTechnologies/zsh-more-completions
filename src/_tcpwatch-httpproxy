#compdef tcpwatch-httpproxy

local arguments

arguments=(
  '-L[set up a local forwarded connection]'
  '-L[set up a forwarded connection to a specified host]'
  '-L[set up a forwarded connection to a specified host, bound to an interface]'
  {-h,--http}'[) Split forwarded HTTP persistent connections]'
  '-p[run an HTTP proxy]'
  '-s[output to stdout instead of a Tkinter window]'
  '-n[no color in GUI (faster and consumes less RAM)]'
  '-c[extra color (colorizes escaped characters)]'
  '--cr[show carriage returns (ASCII 13)]'
  '--help[show usage information]'
  '-r[(synonyms: -R, --record-directory)]'
  '--record-prefix[use <prefix> as the file prefix for logged request / response / error]'
  '--no-record-responses[suppress writing .response files.]'
  '--no-record-errors[suppress writing .error files.]'
  '*:filename:_files'
)

_arguments -s $arguments
