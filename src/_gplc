#compdef gplc

local arguments

arguments=(
  {-o,--output}'[set output file name (see below)]'
  {-W,--wam-for-native}'[stop after producing WAM file(s)]'
  {-w,--wam-for-byte-code}'[stop after producing WAM for byte-code file(s) (force --no-call-c)]'
  {-M,--mini-assembly}'[stop after producing mini-assembly file(s)]'
  {-S,--assembly}'[stop after producing assembly file(s)]'
  {-F,--fd-to-c}'[stop after producing C file(s) from FD file(s)]'
  {-c,--object}'[stop after producing object file(s)]'
  '--temp-dir[use PATH as directory for temporary files]'
  '--no-del-temp-files[do not delete temporary files]'
  '--no-demangling[do not decode hexadecimal predicate names]'
  '--no-decode-hexa[same as --no-demanling (deprecated)]'
  {-v,--verbose}'[print executed commands]'
  '(- * :)'{-h,--help}'[print this help and exit]'
  '--version[print version number and exit]'
  '--pl-state[read FILE to set the initial Prolog state]'
  '--wam-comment[emit COMMENT as a comment in the WAM file]'
  '--no-susp-warn[do not show warnings for suspicious predicates]'
  '--no-singl-warn[do not show warnings for named singleton variables]'
  '--no-redef-error[do not show errors for built-in redefinitions]'
  '--foreign-only[only compile foreign/1-2 directives]'
  '--no-call-c[do not allow the use of fd_tell, $call_c,...]'
  '--no-inline[do not inline predicates]'
  '--no-reorder[do not reorder predicate arguments]'
  '--no-reg-opt[do not optimize registers]'
  '--min-reg-opt[minimally optimize registers]'
  '--no-opt-last-subterm[do not optimize last subterm compilation]'
  '--fast-math[fast mathematical mode (assume integer arithmetics)]'
  '--keep-void-inst[keep void instructions in the output file]'
  '--compile-msg[print a compile message]'
  '--statistics[print statistics information]'
  '--comment[include comments in the output file]'
  '--comment[include comments in the output file]'
  '--pic[produce position independent code (PIC)]'
  '--inline-asm[inline some C calls as asm instructions]'
  '--full-inline-asm[inline most C calls as asm instructions]'
  '--c-compiler[use FILE as C compiler/linker]'
  '-C[pass OPTION to the C compiler]'
  '-A[pass OPTION to the assembler]'
  '--linker[use FILE as linker]'
  '--local-size[set default local stack size to N Kb]'
  '--global-size[set default global stack size to N Kb]'
  '--trail-size[set default trail stack size to N Kb]'
  '--cstr-size[set default cstr stack size to N Kb]'
  '--max-atom[set default atom table size to N atoms]'
  '--fixed-sizes[do not consult environment variables at run-time]'
  '--gui-console[link the Win32 GUI console]'
  '--new-top-level[link the top-level main (to recognize top-level command-line options)]'
  '--no-top-level[do not link the top-level (force --no-debugger)]'
  '--no-debugger[do not link the Prolog/WAM debugger]'
  '--min-pl-bips[link only used Prolog built-in predicates]'
  '--min-fd-bips[link only used FD solver built-in predicates]'
  '--min-bips[same as: --no-top-level --min-pl-bips --min-fd-bips --no-debugger]'
  '--min-size[same as: --min-bips --strip]'
  '--no-pl-lib[do not look for the Prolog and FD libraries (maintenance only)]'
  '--no-fd-lib[do not look for the FD library (maintenance only)]'
  '--no-fd-lib-warn[do not warn about inexistent FD library (maintenance only)]'
  {-s,--strip}'[strip the executable]'
  '-L[pass OPTION to the linker]'
  '*:filename:_files'
)

_arguments -s $arguments
