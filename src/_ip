  '-o[| -t\[imestamp\] | -ts\[hort\] | -b\[atch\] \[filename\] |]'
  '-rc[\[size\] | -n\[etns\] name | -a\[ll\] |Â -c\[olor\]}]'
  '*:filename:_files'
)

_arguments -s $arguments
