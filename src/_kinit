#compdef kinit

local arguments

arguments=(
  '--afslog[obtain afs tokens]'
  {-c,--cache}'[credentials cache]'
  {-f,--forwardable}'[get forwardable tickets]'
  {-t,--keytab}'[keytab to use]'
  {-l,--lifetime}'[lifetime of tickets]'
  {-p,--proxiable}'[get proxiable tickets]'
  {-R,--renew}'[renew TGT]'
  '--renewable[get renewable tickets]'
  {-r,--renewable-life}'[renewable lifetime of tickets]'
  {-S,--server}'[server to get ticket for]'
  {-s,--start-time}'[when ticket gets valid]'
  '--kdc-hostname[redirect the request to specific KDC]'
  {-k,--use-keytab}'[get key from keytab]'
  {-v,--validate}'[validate TGT]'
  {-e,--enctypes}'[encryption types to use]'
  '--fcache-version[file cache version to create]'
  {-A,--no-addresses}'[request a ticket with no addresses]'
  '-a[request a ticket with addresses]'
  '--extra-addresses[include these extra addresses]'
  '--anonymous[request an anonymous ticket]'
  '--request-pac[request a Windows PAC]'
  '--password-file[read the password from a file]'
  '--canonicalize[canonicalize client principal]'
  '--enterprise[parse principal as a KRB5-NT-ENTERPRISE name]'
  '--pk-enterprise[use enterprise name from certificate]'
  {-C,--pk-user}'[principals public/private/certificate identifier]'
  {-D,--x509-anchors}'[directory with CA certificates]'
  '--pk-use-enckey[use RSA encrypted reply (instead of DH)]'
  '--no-change-default[switch the default cache to the new credentials cache]'
  '--ok-as-delegate[honor ok-as-delegate on tickets]'
  '--fast-armor-cache[use this credential cache as FAST armor cache]'
  '--use-referrals[only use referrals, no dns canalisation]'
  {-V,--verbose}'[verbose output]'
  '--no-home-directory[dont touch home directory]'
  '--keychain[save password in keychain if successful]'
  '--bundle-acl[signing id allowed to use this credential]'
  '--windows[get windows behavior]'
  '*:filename:_files'
)

_arguments -s $arguments
