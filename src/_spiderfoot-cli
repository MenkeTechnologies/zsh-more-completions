#compdef spiderfoot-cli

local arguments

arguments=(
  {-h,--help}'[show this help message and exit]'
  {-d,--debug}'[enable debug output.]'
  '-s[connect to SpiderFoot server on URL. By default, a connection]'
  '-u[username to authenticate to SpiderFoot server.]'
  '-p[password to authenticate to SpiderFoot server. Consider using]'
  '-P[instead so that your password isnt visible in your]'
  '-P[file containing password to authenticate to SpiderFoot server.]'
  '-e[execute commands from FILE.]'
  '-l[log command history to FILE. By default, history is stored to]'
  '-n[disable history logging.]'
  '-o[spool commands and output to FILE.]'
  '-i[allow insecure server connections when using SSL]'
  '-q[silent output, only errors reported.]'
  '-k[turn off color-coded output.]'
  {-b,-v}'[print the banner w/ version and exit.]'
  '*:filename:_files'
)

_arguments -s $arguments
