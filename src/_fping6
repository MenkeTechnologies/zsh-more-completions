#compdef fping6

local arguments

arguments=(
  {-4,--ipv4}'[only ping IPv4 addresses]'
  {-6,--ipv6}'[only ping IPv6 addresses]'
  {-b,--size}'[amount of ping data to send, in bytes (default: 56)]'
  {-B,--backoff}'[set exponential backoff factor to N (default: 1.5)]'
  {-c,--count}'[count mode: send N pings to each target]'
  {-f,--file}'[read list of targets from a file ( - means stdin)]'
  {-g,--generate}'[generate target list (only if no -f specified)]'
  {-H,--ttl}'[set the IP TTL value (Time To Live hops)]'
  {-I,--iface}'[bind to a particular interface]'
  {-l,--loop}'[loop mode: send pings forever]'
  {-m,--all}'[use all IPs of provided hostnames (e.g. IPv4 and IPv6), use with -A]'
  {-M,--dontfrag}'[set the Dont Fragment flag]'
  {-O,--tos}'[set the type of service (tos) flag on the ICMP packets]'
  {-p,--period}'[interval between ping packets to one target (in ms)]'
  {-r,--retry}'[number of retries (default: 3)]'
  {-R,--random}'[random packet data (to foil link data compression)]'
  {-S,--src}'[set source address]'
  {-t,--timeout}'[individual target initial timeout (default: 500 ms]'
  {-a,--alive}'[show targets that are alive]'
  {-A,--addr}'[show targets by address]'
  {-C,--vcount}'[same as -c, report results in verbose format]'
  {-D,--timestamp}'[print timestamp before each output line]'
  {-e,--elapsed}'[show elapsed time on return packets]'
  {-i,--interval}'[interval between sending ping packets (default: 10 ms)]'
  {-n,--name}'[show targets by name (-d is equivalent)]'
  {-N,--netdata}'[output compatible for netdata (-l -Q are required)]'
  {-o,--outage}'[show the accumulated outage time (lost packets * packet interval)]'
  {-q,--quiet}'[quiet (dont show per-target/per-ping results)]'
  {-Q,--squiet}'[same as -q, but show summary every n seconds]'
  {-s,--stats}'[print final stats]'
  {-u,--unreach}'[show targets that are unreachable]'
  {-v,--version}'[show version]'
  '*:filename:_files'
)

_arguments -s $arguments
