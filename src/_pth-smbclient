#compdef pth-smbclient

local arguments

arguments=(
  {-R,--name-resolve}'[use these name resolution services]'
  {-M,--message}'[send message]'
  {-I,--ip-address}'[use this IP to connect to]'
  {-E,--stderr}'[write messages to stderr instead]'
  {-L,--list}'[get a list of shares available on]'
  {-m,--max-protocol}'[set the max protocol level]'
  {-T,--tar}'[command line tar]'
  {-D,--directory}'[start from directory]'
  {-c,--command}'[execute semicolon separated]'
  {-b,--send-buffer}'[changes the transmit/send buffer]'
  {-t,--timeout}'[changes the per-operation timeout]'
  {-p,--port}'[port to connect to]'
  {-g,--grepable}'[produce grepable output]'
  {-q,--quiet}'[suppress help message]'
  {-B,--browse}'[browse SMB servers using DNS]'
  '--usage[display brief usage message]'
  {-d,--debuglevel}'[set debug level]'
  {-s,--configfile}'[use alternate configuration file]'
  {-l,--log-basename}'[base name for log files]'
  {-V,--version}'[print version]'
  '--option[value Set smb.conf option from command]'
  {-O,--socket-options}'[socket options to use]'
  {-n,--netbiosname}'[primary netbios name]'
  {-W,--workgroup}'[set the workgroup name]'
  {-i,--scope}'[use this Netbios scope]'
  {-U,--user}'[set the network username]'
  {-N,--no-pass}'[dont ask for a password]'
  {-k,--kerberos}'[use kerberos (active directory)]'
  {-A,--authentication-file}'[get the credentials from a file]'
  {-S,--signing}'[set the client signing state]'
  {-P,--machine-pass}'[use stored machine account password]'
  {-e,--encrypt}'[encrypt SMB transport]'
  {-C,--use-ccache}'[use the winbind ccache for]'
  '--pw-nt-hash[the supplied password is the NT]'
  '*:filename:_files'
)

_arguments -s $arguments
