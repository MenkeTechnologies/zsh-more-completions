#compdef giskismet

local arguments

arguments=(
  '--csv[parse the input from Kismet-devel CSV]'
  {-x,--xml}'[parse the input from Kismet-newcore NETXML]'
  '--bssid[| list Filter based on BSSID]'
  '--essid[| list Filter based on ESSID]'
  '--encryption[| list Filter based on Encryption]'
  '--channel[| list Filter based on Channel]'
  {-a,--ap}'[insert only the APs]'
  {-q,--query}'[SQL query]'
  {-m,--manual}'[CSV output of manual SQL query]'
  {-o,--output}'[output filename]'
  {-n,--name}'[name of the KML layer]'
  '--desc[description of the KML layer]'
  '--ignore-gps[import data even when GPS fields are missing]'
  '--database[SQLite3 database name \[default: wireless.dbl\]]'
  {-d,--debug}'[display debug information]'
  {-s,--silent}'[no output when adding APs]'
  {-v,--version}'[display version]'
  '(- * :)'{-h,--help}'[display this information]'
  '*:filename:_files'
)

_arguments -s $arguments
