#compdef lavvideo

local arguments

arguments=(
  '-h[help]'
  '-v[verbose operation]'
  '-d[debug information]'
  '-c[specify device \[/dev/video0\]]'
  '-t[the time the video window shows \[infinite\]]'
  '-s[specify size \[400x300\]]'
  '-o[displacement on screen \[5x5\]]'
  '-x[screen x resolution \[800\]]'
  '-b[bits per pixel (15,16,24,32) \[32\]]'
  '-n[set pal/ntsc/secam \[pal\]]'
  '-i[set input source (int) \[0\]]'
  '-C[channel list]'
  '*:filename:_files'
)

_arguments -s $arguments
