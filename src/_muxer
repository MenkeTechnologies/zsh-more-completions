#compdef muxer

local arguments

arguments=(
  '--help[display help]'
  '--version[display version information]'
  '--optimize-pd[optimize for progressive download]'
  '--interleave[specify time interval for media interleaving in milliseconds]'
  '--file-format[specify output file format]'
  '--isom-version[specify maximum compatible ISO Base Media version]'
  '--shift-timeline[enable composition to decode timeline shift]'
  '--chapter[set chapters from the file.]'
  '--chpl-with-bom[add UTF-8 BOM to the chapter strings]'
  '--chapter-track[set which track the chapter applies to.]'
  '--copyright-notice[specify copyright notice with or without language (latter string)]'
  '--language[specify the default language for all the output tracks.]'
  '--compact-size-table[compress sample size tables if possible.]'
  '--movie-timescale[specify movie timescale.]'
  '-i[1\],\[track_option2\]...]'
  '--album-name[album name]'
  '--artist[artist]'
  '--comment[user comment]'
  '--release-date[release date (YYYY-MM-DD)]'
  '--encoder[person or company that encoded the recording]'
  '--genre[genre]'
  '--lyrics[lyrics]'
  '--title[title or song name]'
  '--composer[composer]'
  '--album-artist[artist for the whole album (if different than the individual tracks)]'
  '--copyright[copyright]'
  '--description[description]'
  '--grouping[grouping]'
  '--tempo[beats per minute]'
  '*:filename:_files'
)

_arguments -s $arguments
