#compdef ipmitool

local arguments

arguments=(
  '-h[this help]'
  '-V[show version information]'
  '-v[verbose (can use multiple times)]'
  '-c[display output in comma separated format]'
  '-d[specify a /dev/ipmiN device to use (default=0)]'
  '-I[interface to use]'
  '-H[remote host name for LAN interface]'
  '-p[remote RMCP port \[default=623\]]'
  '-U[remote session username]'
  '-f[read remote session password from file]'
  '-z[change Size of Communication Channel (OEM)]'
  '-S[use local file for remote SDR cache]'
  '-D[specify the serial device, baud rate to use]'
  '-4[use only IPv4]'
  '-6[use only IPv6]'
  '-a[prompt for remote password]'
  '-Y[prompt for the Kg key for IPMIv2 authentication]'
  '-e[set SOL escape character]'
  '-C[cipher suite to be used by lanplus interface]'
  '-k[use Kg key for IPMIv2 authentication]'
  '-y[use hexadecimal-encoded Kg key for IPMIv2 authentication]'
  '-L[remote session privilege level \[default=ADMINISTRATOR\]]'
  '-A[force use of auth type NONE, PASSWORD, MD2, MD5 or OEM]'
  '-P[remote session password]'
  '-E[read password from IPMI_PASSWORD environment variable]'
  '-K[read kgkey from IPMI_KGKEY environment variable]'
  '-m[set local IPMB address]'
  '-b[set destination channel for bridged request]'
  '-t[bridge request to remote target address]'
  '-B[set transit channel for bridged request (dual bridge)]'
  '-T[set transit address for bridge request (dual bridge)]'
  '-l[set destination lun for raw commands]'
  '-o[setup for OEM (use list to see available OEM types)]'
  '-O[use file for OEM SEL event descriptions]'
  '-N[specify timeout for lan \[default=2\] / lanplus \[default=1\] interface]'
  '-R[set the number of retries for lan/lanplus interface \[default=4\]]'
  '*:filename:_files'
)

_arguments -s $arguments
