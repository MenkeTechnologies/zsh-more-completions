#compdef mongos

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show this usage information]'
  '--version[show version information]'
  {-f,--config}'[arg configuration file specifying]'
  {-v,--verbose}'[\[=arg(=v)\] be more verbose (include multiple times]'
  '--quiet[quieter output]'
  '--port[specify port number - 27017 by default]'
  '--bind[_ip arg comma separated list of ip addresses to]'
  '--ipv6[enable IPv6 support (disabled by]'
  '--maxConns[max number of simultaneous connections]'
  '--logpath[log file to send write to instead of]'
  '--syslog[log to systems syslog facility instead]'
  '--syslogFacility[syslog facility used for mongodb syslog]'
  '--logappend[append to logpath instead of]'
  '--logRotate[set the log rotation behavior]'
  '--timeStampFormat[desired format for timestamps in log]'
  '--pidfilepath[full path to pidfile (if not set, no]'
  '--keyFile[private key for cluster authentication]'
  '--noauth[run without security]'
  '--setParameter[set a configurable parameter]'
  '--httpinterface[enable http interface]'
  '--clusterAuthMode[authentication mode used for cluster]'
  '--nounixsocket[disable listening on unix sockets]'
  '--unixSocketPrefix[alternative directory for UNIX domain]'
  '--filePermissions[permissions to set on UNIX domain]'
  '--fork[fork server process]'
  '--configdb[connection string for communicating]'
  '--localThreshold[ping time (in ms) for a node to be]'
  '--test[just run unit tests]'
  '--chunkSize[maximum amount of data per chunk]'
  '--jsonp[allow JSONP access via http (has]'
  '--noscripting[disable scripting engine]'
  '--sslOnNormalPorts[use ssl on configured ports]'
  '--sslMode[set the SSL operation mode]'
  '--sslPEMKeyFile[PEM file for ssl]'
  '--sslPEMKeyPassword[PEM file password]'
  '--sslClusterFile[key file for internal SSL]'
  '--sslClusterPassword[internal authentication key file]'
  '--sslCAFile[certificate Authority file for SSL]'
  '--sslCRLFile[certificate Revocation List file for]'
  '--sslDisabledProtocols[comma separated list of TLS protocols]'
  '--sslWeakCertificateValidation[allow client to connect without]'
  '--sslAllowConnectionsWithoutCertificates[allow client to connect without]'
  '--sslAllowInvalidHostnames[allow server certificates to provide]'
  '--sslAllowInvalidCertificates[allow connections to servers with]'
  '--sslFIPSMode[activate FIPS 140-2 mode at startup]'
  '*:filename:_files'
)

_arguments -s $arguments
