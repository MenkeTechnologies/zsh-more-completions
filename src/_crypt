#compdef crypt

local arguments

arguments=(
  '-e[encrypt the inputFile and store it in the outputFile]'
  '-d[decrypt the inputFile and store it in the outputFile]'
  '-u[update Bash-Snippet Tools]'
  '-h[show the help]'
  '-v[get the tool version]'
  '*:filename:_files'
)

_arguments -s $arguments
