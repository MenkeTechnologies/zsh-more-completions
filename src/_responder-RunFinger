#compdef responder-RunFinger

local arguments

arguments=(
  '--version[show programs version number and exit]'
  '(- * :)'{-h,--help}'[show this help message and exit]'
  '-i[0.10.10.224, --ip=10.10.10.224]'
  {-g,--grep}'[output in grepable format]'
  '*:filename:_files'
)

_arguments -s $arguments
