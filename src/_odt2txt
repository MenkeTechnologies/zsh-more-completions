#compdef odt2txt

local arguments

arguments=(
  {-c,--connection}'[use a custom connection string]'
  {-d,--doctype}'[specify document type]'
  {-e,--export}'[value set export filter options]'
  {-f,--format}'[specify the output format]'
  {-F,--field}'[value replace user-defined text field with value]'
  {-i,--import}'[set import filter option string]'
  {-l,--listener}'[start a permanent listener to use by unoconv clients]'
  {-n,--no-launch}'[fail if no listener is found (default: launch one)]'
  {-o,--output}'[output basename, filename or directory]'
  '--pipe[alternative method of connection using a pipe]'
  {-p,--port}'[specify the port (default: 2002)]'
  '--password[provide a password to decrypt the document]'
  '--preserve[keep timestamp and permissions of the original document]'
  {-s,--server}'[specify the server address (default: 127.0.0.1)]'
  '--show[list the available output formats]'
  '--stdin[read from stdin (filenames are ignored if provided)]'
  '--stdout[write output to stdout]'
  {-t,--template}'[import the styles from template (.ott)]'
  {-T,--timeout}'[timeout after secs if connection to listener fails]'
  {-v,--verbose}'[be more and more verbose (-vvv for debugging)]'
  '--version[display version number of unoconv, OOo/LO and platform details]'
  '*:filename:_files'
)

_arguments -s $arguments
