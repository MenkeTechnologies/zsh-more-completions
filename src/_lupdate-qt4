#compdef lupdate-qt4

local arguments

arguments=(
  '-help[display this information and exit.]'
  '-no-obsolete[drop all obsolete strings.]'
  '-extensions[<ext>\]...]'
  '-pluralonly[only include plural form messages.]'
  '-silent[do not explain what is being done.]'
  '-no-sort[do not sort contexts in TS files.]'
  '-no-recursive[do not recursively scan the following directories.]'
  '-recursive[recursively scan the following directories (default).]'
  '-I[or -I<includepath>]'
  '-locations[}]'
  '-no-ui-lines[do not record line numbers in references to UI files.]'
  '-disable-heuristic[}]'
  '-pro[name of a .pro file. Useful for files with .pro file syntax but]'
  '-source-language[specify the language of the source strings for new files.]'
  '-target-language[specify the language of the translations for new files.]'
  '-ts[...]'
  '-codecfortr[specify the codec assumed for tr() calls. Effective only with -ts.]'
  '-version[display the version of lupdate and exit.]'
  '*:filename:_files'
)

_arguments -s $arguments
