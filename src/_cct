#compdef cct

local arguments

arguments=(
  '-c[y,z,t Specify input columns for (up to) 4 input parameters.]'
  '-d[specify number of decimals in output.]'
  '-I[do the inverse transformation]'
  '-o[/to/file Specify output file name]'
  '-t[provide a fixed t value for all input data (e.g. -t 0)]'
  '-z[provide a fixed z value for all input data (e.g. -z 0)]'
  '-s[skip n first lines of a infile]'
  '-v[verbose: Provide non-essential informational output.]'
  '--output[alias for -o]'
  '--columns[alias for -c]'
  '--decimals[alias for -d]'
  '--height[alias for -z]'
  '--time[alias for -t]'
  '--verbose[alias for -v]'
  '--inverse[alias for -I]'
  '--skip-lines[alias for -s]'
  '--help[alias for -h]'
  '--version[print version number]'
  '*:filename:_files'
)

_arguments -s $arguments
