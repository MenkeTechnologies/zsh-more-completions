#compdef monodocs2html

local arguments

arguments=(
  '--default-template[writes the default XSLT to stdout.]'
  '--ext[the file EXTENSION to use for created files. This]'
  '--force-update[always generate new files. If not specified, will]'
  {-o,--out}'[the DIRECTORY to place the generated files and]'
  '--template[an XSLT FILE to use to generate the created files.]'
  '--default-template[.]'
  '--with-profile[the .NET PROFILE to generate documentation for.]'
  '--with-version[the assembly VERSION to generate documentation for.]'
  '-h[-\?, --help Show this message and exit.]'
  '*:filename:_files'
)

_arguments -s $arguments
