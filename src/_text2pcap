#compdef text2pcap

local arguments

arguments=(
  '-o[parse offsets as (h)ex, (o)ctal or (d)ecimal;]'
  '-t[treat the text before the packet as a date/time code;]'
  '-D[the text before the packet starts with an I or an O]'
  '-a[enable ASCII text dump identification.]'
  '-l[link-layer type number; default is 1 (Ethernet). See]'
  '-m[max packet length in output; default is 262144]'
  '-e[3pid> prepend dummy Ethernet II header with specified L3PID]'
  '-i[prepend dummy IP header with specified IP protocol]'
  '-4[prepend dummy IPv4 header with specified]:destip:'
  '-6[replace IPv6 header with specified]:destip:'
  '-u[prepend dummy UDP header with specified]:destp:'
  '-T[prepend dummy TCP header with specified]:destp:'
  '-s[<dstp>,<tag> prepend dummy SCTP header with specified]'
  '-S[<dstp>,<ppi> prepend dummy SCTP header with specified]'
  '-h[display this help and exit.]'
  '-d[show detailed debug of parser states.]'
  '-q[generate no output at all (automatically disables -d).]'
  '-n[use pcapng instead of pcap as output format.]'
  '*:filename:_files'
)

_arguments -s $arguments
