#compdef spooftooph

local arguments

arguments=(
  '-a[Specify new BD_ADDR]'
  '-b[Number of Bluetooth profiles to display per page]'
  '-B[Disable banner for smaller screens (like phones)]'
  '-c[Specify new CLASS]'
  '-h[Help]'
  '-i[Specify interface]'
  '-m[Specify multiple interfaces during selection]'
  '-n[Specify new NAME]'
  '-r[Read in CSV logfile]'
  '-R[Assign random NAME, CLASS, and ADDR]'
  '-s[Scan for devices in local area]'
  '-t[Time interval to clone device in range]'
  '-u[USB delay. Interactive delay for reinitializing interface]'
  '-w[Write to CSV logfile]'
  '*:filename:_files'
)

_arguments -s $arguments
