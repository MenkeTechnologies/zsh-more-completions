#compdef gpgsplit

local arguments

arguments=(
  {-v,--verbose}'[verbose]'
  {-p,--prefix}'[prepend filenames with STRING]'
  '--uncompress[uncompress a packet]'
  '--secret-to-public[convert secret keys to public keys]'
  '--no-split[write to stdout and dont actually split]'
  '*:filename:_files'
)

_arguments -s $arguments
