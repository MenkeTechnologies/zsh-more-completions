#compdef sginfo

local arguments

arguments=(
  '-6[do 6 byte mode sense and select commands (def: 10 bytes).]'
  '-a[display inquiry info, serial # and all mode pages.]'
  '-A[similar to -a but displays all subpages as well.]'
  '-c[access Caching Page.]'
  '-C[access Control Mode Page.]'
  '-d[display defect lists (default format: index).]'
  '-D[access Disconnect-Reconnect Page.]'
  '-e[access Read-Write Error Recovery page.]'
  '-E[access Control Extension page.]'
  '-f[access Format Device Page.]'
  '-Farg[of the defect list:]'
  '-Flogical[logical block addresses (32 bit)]'
  '-Flba64[logical block addresses (64 bit)]'
  '-Fphysical[physical blocks]'
  '-Findex[defect bytes from index]'
  '-Fhead[sort by head]'
  '-g[access Rigid Disk Drive Geometry Page.]'
  '-G[display grown defect list (default format: index).]'
  '-i[display information from INQUIRY command.]'
  '-I[access Informational Exception page.]'
  '-l[list known scsi devices on the system \[DEPRECATED\]]'
  '-n[access Notch and Partition Page.]'
  '-N[negate (stop) storing to saved page (active with -R).]'
  '-P[access Power Condition Page.]'
  '-r[list known raw scsi devices on the system]'
  '-s[display serial number (from INQUIRY VPD page).]'
  '-t[Access mode page <pn> \[subpage <sp>\] and decode.]:pn\[,sp\]:'
  '-T[trace commands (for debugging, double for more)]'
  '-u[Access mode page <pn> \[subpage <sp>\], output in hex]:pn\[,sp\]:'
  '-v[show version number]'
  '-V[access Verify Error Recovery Page.]'
  '-z[single fetch mode pages (rather than double fetch)]'
  '-m[access modifiable fields instead of current values]'
  '-M[access manufacturer defaults instead of current values]'
  '-S[access saved defaults instead of current values]'
  '-X[use list (space separated values) rather than table.]'
  '-R[replace parameters - best used with -X (expert use only)]'
  '*:filename:_files'
)

_arguments -s $arguments
