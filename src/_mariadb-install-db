#compdef mariadb-install-db

local arguments

arguments=(
  '--auth-root-authentication-method[chooses the authentication method for the created]'
  '--auth-root-socket-user[used with --auth-root-authentication-method=socket. It]'
  '--basedir[the path to the MariaDB installation directory.]'
  '--builddir[if using --srcdir with out-of-directory builds, you]'
  '--cross-bootstrap[for internal use.  Used when building the MariaDB system]'
  '--datadir[the path to the MariaDB data directory.]'
  '--defaults-extra-file[read this file after the global files are read.]'
  '--defaults-file[only read default options from the given file name.]'
  '--defaults-group-suffix[in addition to the given groups, read also groups with]'
  '--force[causes mysql_install_db to run even if DNS does not]'
  '--help[display this help and exit.]'
  '--ldata[the path to the MariaDB data directory. Same as]'
  '--datadir[.]'
  '--no-defaults[dont read default options from any option file.]'
  '--defaults-file[read only this configuration file.]'
  '--rpm[for internal use.  This option is used by RPM files]'
  '--skip-name-resolve[use IP addresses rather than hostnames when creating]'
  '--skip-test-db[dont install a test database.]'
  '--srcdir[the path to the MariaDB source directory.  This option]'
  '--user[the login username to use for running mysqld.  Files]'
  '*:filename:_files'
)

_arguments -s $arguments
