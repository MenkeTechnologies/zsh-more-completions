#compdef tal

local arguments

arguments=(
  '-c[fill character \[def.: \]]'
  '-e[use str as trailer (no auto-detection)]'
  '-f[force preferred trailer length \[def.: off\]]'
  '-h[usage info]'
  '-i[ignore case when matching trailers \[def.: match case\]]'
  '-k[align trailers to end at this column (0 == disable) \[def.: 0\]]'
  '-l[preferred trailer length (0 == disable) \[def.: 0\]]'
  '-m[maximum allowed line length (0 == disable) \[def.: 0\]]'
  '-p[number of chars inserted before trailer \[def.: 1\]]'
  '-t[distance between tab stops \[def.: 8\]]'
  '-v[print out current version number]'
  '*:filename:_files'
)

_arguments -s $arguments
