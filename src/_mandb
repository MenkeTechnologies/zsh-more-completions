#compdef mandb

local arguments

arguments=(
    {-c,--create}'[create dbs from scratch, rather than updating]'
    {-C,--config-file}'[use this user configuration file]'
    {-d,--debug}'[emit debugging messages]'
    {-f,--filename}'[update just the entry for this filename]'
    {-p,--no-purge}'[do not purge obsolete entries from the dbs]'
    {-q,--quiet}'[work quietly, except for bogus warning]'
    {-s,--no-straycats}'[do not look for or add stray cats to the dbs]'
    {-t,--test}'[check manual pages for correctness]'
    {-u,--user-db}'[produce user databases only]'
    '--usage[give a short usage message]'
    {-V,--version}'[print program version]'
    '*:filename:_files'
)

_arguments -s $arguments
