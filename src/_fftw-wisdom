#compdef fftw-wisdom

local arguments

arguments=(
  '(- * :)'{-h,--help}'[print this help]'
  {-V,--version}'[print version/copyright info]'
  {-v,--verbose}'[verbose output]'
  {-c,--canonical}'[plan/optimize canonical set of sizes]'
  {-t,--time-limit}'[time limit in hours (default: 0, no limit)]'
  {-o,--output-file}'[output to FILE instead of stdout]'
  {-m,--measure}'[plan in MEASURE mode (PATIENT is default)]'
  {-e,--estimate}'[plan in ESTIMATE mode (not recommended)]'
  {-x,--exhaustive}'[plan in EXHAUSTIVE mode (may be slow)]'
  {-n,--no-system-wisdom}'[dont read /etc/fftw/ system wisdom file]'
  {-w,--wisdom-file}'[read wisdom from FILE (stdin if -)]'
  {-T,--threads}'[plan with N threads]'
  '*:filename:_files'
)

_arguments -s $arguments
