#compdef plaympeg

local arguments

arguments=(
  '--noaudio[dont play audio stream]'
  '--novideo[dont play video stream]'
  '--fullscreen[play MPEG in fullscreen mode]'
  {--double,-2}'[play MPEG at double size]'
  {--loop,-l}'[play MPEG over and over]'
  '--bilinear[use software bilinear filtering]'
  '--volume[or -v N Set audio volume to N (0-100)]'
  '--title[or -t T Set windows title to T]'
  '--scale[or -s wxh Play MPEG at given resolution]'
  '--seek[or -S N Skip N bytes]'
  {--help,-h}'[]'
  {--version,-V}'[specifying - as filename will use stdin for input]'
  '*:filename:_files'
)

_arguments -s $arguments
