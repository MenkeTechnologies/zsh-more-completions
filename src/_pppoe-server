#compdef pppoe-server

local arguments

arguments=(
  {-I,--}'[interface (default eth0.)]'
  {-T,--}'[inactivity timeout in seconds.]'
  {-C,--}'[access concentrator name.]'
  {-m,--}'[incoming and outgoing MSS options.]'
  {-L,--}'[local IP address.]'
  {-l,--}'[local IP address for each session.]'
  {-R,--}'[start address of remote IP pool.]'
  {-D,--}'[the allocation of IP addresses to pppd.]'
  {-S,--}'[specified service-name.]'
  {-O,--}'[PPPD options from specified file]'
  {-p,--}'[IP address pool from specified file.]'
  {-N,--}'[num concurrent sessions.]'
  {-o,--}'[session numbers starting at offset+1.]'
  {-f,--}'[ethernet frame types (hex).]'
  {-s,--}'[synchronous PPP mode.]'
  {-X,--}'[PID and lock pidfile.]'
  '-q[/pppd -- Specify full path to pppd.]'
  '-Q[/pppoe -- Specify full path to pppoe.]'
  {-k,--}'[kernel-mode PPPoE.]'
  {-u,--}'[unit option to pppd.]'
  {-r,--}'[session numbers.]'
  {-d,--}'[session creation.]'
  {-x,--}'[to n sessions/MAC address.]'
  {-P,--}'[pool file for correctness and exit.]'
  {-i,--}'[PADI if no free sessions.]'
  {-h,--}'[usage information.]'
  '*:filename:_files'
)

_arguments -s $arguments
