#compdef ccze

local arguments

arguments=(
    {-a,--argument}'[ARGS... Add ARGUMENTS to PLUGIN]'
    {-A,--raw-ansi}'[Generate raw ANSI output]'
    {-c,--color}'[COLOR,... Set the color of KEY to COLOR]'
    {-C,--convert-date}'[Convert UNIX timestamps to readable format]'
    {-F,--rcfile}'[Read configuration from FILE]'
    {-h,--html}'[Generate HTML output]'
    {-l,--list-plugins}'[List available plugins]'
    {-m,--mode}'[Change the output mode]'
    {-o,--options}'[... Toggle some options]'
    {-p,--plugin}'[Load PLUGIN]'
    {-r,--remove-facility}'[remove syslog-ngs facility from start of the]'
    '--usage[Give a short usage message]'
    {-V,--version}'[Print program version]'
    '*:filename:_files'
)

_arguments -S $arguments
