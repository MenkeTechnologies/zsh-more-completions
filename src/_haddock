#compdef haddock

local arguments

arguments=(
  '-B[path to a GHC lib dir, to override the default path]'
  {-o,--odir}'[directory in which to put the output files]'
  {-l,--lib}'[location of Haddocks auxiliary files]'
  {-i,--read-interface}'[read an interface from FILE]'
  {-D,--dump-interface}'[write the resulting interface to FILE]'
  '--show-interface[print the interface in a human readable form]'
  {-h,--html}'[output in HTML (XHTML 1.0)]'
  '--latex[use experimental LaTeX rendering]'
  '--latex-style[provide your own LaTeX style in FILE]'
  '--mathjax[URL FOR mathjax]'
  {-U,--use-unicode}'[use Unicode in HTML output]'
  '--hoogle[output for Hoogle; you may want --package-name and --package-version too]'
  '--quickjump[generate an index for interactive documentation navigation]'
  '--hyperlinked-source[generate highlighted and hyperlinked source code (for use with --html)]'
  '--source-css[use custom CSS file instead of default one in hyperlinked source]'
  '--source-base[URL for a source code link on the contents]'
  {-s,--source-module}'[URL for a source code link for each module]'
  '--source-entity[URL for a source code link for each entity]'
  '--source-entity-line[URL for a source code link for each entity.]'
  '--comments-base[URL for a comments link on the contents]'
  '--comments-module[URL for a comments link for each module]'
  '--comments-entity[URL for a comments link for each entity]'
  {-c,--css,--theme}'[the CSS file or theme directory to use for HTML output]'
  '--built-in-themes[include all the built-in haddock themes]'
  {-p,--prologue}'[file containing prologue text]'
  {-t,--title}'[page heading]'
  {-q,--qual}'[qualification of names, one of]'
  {-V,--version}'[output version information and exit]'
  '--compatible-interface-versions[output compatible interface file versions and exit]'
  '--interface-version[output interface file version and exit]'
  '--bypass-interface-version-check[bypass the interface file version check (dangerous)]'
  {-v,--verbosity}'[set verbosity level]'
  '--use-contents[use a separately-generated HTML contents page]'
  '--gen-contents[generate an HTML contents from specified]'
  '--use-index[use a separately-generated HTML index]'
  '--gen-index[generate an HTML index from specified]'
  '--ignore-all-exports[behave as if all modules have the]'
  '--hide[behave as if MODULE has the hide attribute]'
  '--show[behave as if MODULE does not have the hide attribute]'
  '--show-all[behave as if not modules have the hide attribute]'
  '--show-extensions[behave as if MODULE has the show-extensions attribute]'
  '--optghc[option to be forwarded to GHC]'
  '--ghc-version[output GHC version in numeric format]'
  '--print-ghc-path[output path to GHC binary]'
  '--print-ghc-libdir[output GHC lib dir]'
  {-w,--no-warnings}'[turn off all warnings]'
  '--no-tmp-comp-dir[do not re-direct compilation output to a temporary directory]'
  '--pretty-html[generate html with newlines and indenting (for use with --html)]'
  '--no-print-missing-docs[dont print information about any undocumented entities]'
  '--reexport[reexport the module MOD, adding it to the index]'
  '--package-name[name of the package being documented]'
  '--package-version[version of the package being documented in usual x.y.z.w format]'
  '--since-qual[package qualification of @since, one of]'
  '*:filename:_files'
)

_arguments -s $arguments
