#compdef nfreplay

local arguments

arguments=(
  '-h[this text you see right here]'
  '-V[print version and exit.]'
  '-H[/ip> Target IP address default: 127.0.0.1]'
  '-j[send packets to multicast group]'
  '-4[force IPv4 protocol.]'
  '-6[force IPv6 protocol.]'
  '-L[log to syslog facility <log>]'
  '-p[target port default 9995]'
  '-d[delay in usec between packets. default 10]'
  '-c[packet count. default send all packets]'
  '-b[send buffer size.]'
  '-r[read from file. default: stdin]'
  '-f[filter syntaxfile]'
  '-t[time window for sending packets]'
  '*:filename:_files'
)

_arguments -s $arguments
