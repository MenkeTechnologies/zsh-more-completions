#compdef gst-install

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show this help message and exit]'
  '--transient-for[the X Window ID of the calling application]'
  '--interaction[whether to ask the user to confirm installation or not]'
  '--desktop-id[the .desktop file of the calling application]'
  '--startup-notification-id[an X11-style startup notification ID]'
  '*:filename:_files'
)

_arguments -s $arguments
