#compdef mkreiserfs

local arguments

arguments=(
  {-b,--block-size}'[size of file-system block, in bytes]'
  {-j,--journal-device}'[path to separate device to hold journal]'
  {-s,--journal-size}'[size of the journal in blocks]'
  {-o,--journal-offset}'[offset of the journal from the start of]'
  {-t,--transaction-max-size}'[maximal size of transaction, in blocks]'
  {-B,--badblocks}'[store all bad blocks given in file on the fs]'
  {-h,--hash}'[5 hash function to use by default]'
  {-u,--uuid}'[store UUID in the superblock]'
  {-l,--label}'[store LABEL in the superblock]'
  '--format[.5|3.6 old 3.5 format or newer 3.6]'
  {-f,--force}'[specified once, make mkreiserfs the whole]'
  {-q,--quiet}'[quiet work without messages, progress and]'
  {-d,--debug}'[print debugging information during mkreiser]'
  '-V[print version and exit]'
  '*:filename:_files'
)

_arguments -s $arguments
