#compdef yuvcorrect

local arguments

arguments=(
  '-M[keyword concerning the correction MODE of yuvcorrect]'
  '-T[keyword concerning spatial, temporal or header corrections to be applied]'
  '-Y[keyword concerning color corrections in the yuv space]'
  '-R[keyword concerning color corrections in the RGB space]'
  '-v[specifies the degree of verbosity: 0=quiet, 1=normal, 2=verbose/debug]'
  '-h[print this lot!]'
  '*:filename:_files'
)

_arguments -s $arguments
