#compdef dnssec-keymgr

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show this help message and exit]'
  '-K[directory containing keys]'
  '-c[policy definition file]'
  '-g[path to dnssec-keygen]'
  '-r[path to a file containing random data to pass to dnssec-]'
  '-s[path to dnssec-settime]'
  '-k[only apply policy to key-signing keys (KSKs)]'
  '-z[only apply policy to zone-signing keys (ZSKs)]'
  {-f,--force}'[force updates to key events even if they are in the past]'
  {-q,--quiet}'[update keys silently]'
  {-v,--version}'[show programs version number and exit]'
  '*:filename:_files'
)

_arguments -s $arguments
