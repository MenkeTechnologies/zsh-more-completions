#compdef ponythink

local arguments

arguments=(
  '(- * :)'{-h,--help}'[print this help message.]'
  {-v,--version}'[print the version of the program.]'
  {-l,--list}'[list pony names.]'
  {-L,--altlist}'[list pony names with alternatives.]'
  {-A,--all}'[list all pony names.]'
  {-B,--balloonlist}'[list balloon styles.]'
  {-c,--compact}'[compress messages.]'
  {-o,--ponyonly}'[print only the pony.]'
  {-W,--wrap}'[specify column where the message should be wrapped.]'
  {-b,--balloon}'[select a balloon style.]'
  {-f,--pony}'[select a pony.]'
  {-F,--anypony}'[select a pony, that can be a non-MLP:FiM pony.]'
  {-q,--quote}'[select a pony which will quote herself.]'
  '*:filename:_files'
)

_arguments -s $arguments
