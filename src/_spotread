#compdef spotread

local arguments

arguments=(
  '-v[verbose mode]'
  '-s[print spectrum for each reading]'
  '-S[plot spectrum for each reading]'
  '-c[set communication port from the following list (default 1)]'
  '-t[use transmission measurement mode]'
  '-e[use emissive measurement mode (absolute results)]'
  '-eb[use display white brightness relative measurement mode]'
  '-ew[use display white point relative chromatically adjusted mode]'
  '-p[use telephoto measurement mode (absolute results)]'
  '-pb[use projector white brightness relative measurement mode]'
  '-pw[use projector white point relative chromatically adjusted mode]'
  '-a[use ambient measurement mode (absolute results)]'
  '-f[use ambient flash measurement mode (absolute results)]'
  '-I[set simulated instrument illumination using FWA (def -i illum):]'
  '-i[choose illuminant for computation of CIE XYZ from spectral reflectance & FWA:]'
  '-Q[choose CIE Observer for spectral data or CCSS instrument:]'
  '-F[set filter configuration (if aplicable):]'
  '-E[apply extra filter compensation file]'
  '-A[XRGA conversion (default N)]'
  '-x[display Yxy instead of Lab]'
  '-h[display LCh instead of Lab]'
  '-V[show running average and std. devation from ref.]'
  '-T[display correlated color temperatures, CRI and TLCI]'
  '-N[disable auto calibration of instrument]'
  '-O[do one cal. or measure and exit]'
  '-H[start in high resolution spectrum mode (if available)]'
  '-X[.ccmx Apply Colorimeter Correction Matrix]'
  '-X[.ccss Use Colorimeter Calibration Spectral Samples for calibration]'
  '-R[.sp Preset reference to spectrum]'
  '-Y[override refresh, non-refresh display mode]'
  '-Y[override measured refresh rate with rate Hz]'
  '-Y[use non-adaptive integration time mode (if available).]'
  '-Y[test for i1Pro Lamp Drift (l), and remediate it (L)]'
  '-Y[.sp Save white tile ref. spectrum to file]'
  '-W[override serial port flow control: n = none, h = HW, x = Xon/Xoff]'
  '-D[print debug diagnostics to stderr]'
  '*:filename:_files'
)

_arguments -s $arguments
