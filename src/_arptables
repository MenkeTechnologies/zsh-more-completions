#compdef arptables

local arguments

arguments=(
  {--append,-A}'[append to chain]'
  {--delete,-D}'[delete matching rule from chain]'
  {--delete,-D}'[rulenum]'
  {--insert,-I}'[\[rulenum\]]'
  {--replace,-R}'[rulenum]'
  {--list,-L}'[list the rules in a chain or all chains]'
  {--flush,-F}'[delete all rules in chain or all chains]'
  {--zero,-Z}'[zero counters in chain or all chains]'
  {--new,-N}'[create a new user-defined chain]'
  '--delete-chain[]'
  '-X[delete a user-defined chain]'
  {--policy,-P}'[target]'
  '--rename-chain[]'
  '-E[new-chain]'
  {--source-ip,-s}'[!\] address\[/mask\]]'
  {--destination-ip,-d}'[!\] address\[/mask\]]'
  '--source-mac[!\] address\[/mask\]]'
  '--destination-mac[!\] address\[/mask\]]'
  {--h-length,-l}'[length\[/mask\] hardware length (nr of bytes)]'
  '--opcode[/mask\] operation code (2 bytes)]'
  '--h-type[type\[/mask\] hardware type (2 bytes, hexadecimal)]'
  '--proto-type[type\[/mask\] protocol type (2 bytes)]'
  {--in-interface,-i}'[!\] input name\[+\]]'
  {--out-interface,-o}'[!\] output name\[+\]]'
  {--jump,-j}'[target for rule (may load target extension)]'
  {--match,-m}'[extended match (may load extension)]'
  {--numeric,-n}'[numeric output of addresses and ports]'
  {--table,-t}'[table to manipulate (default: `filter)]'
  {--verbose,-v}'[verbose mode]'
  '--line-numbers[print line numbers when listing]'
  {--exact,-x}'[expand numbers (display exact values)]'
  '--modprobe[try to insert modules using this command]'
  '--set-counters[BYTES set the counter during insert/append]'
  '*:filename:_files'
)

_arguments -s $arguments
