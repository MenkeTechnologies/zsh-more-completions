#compdef svnserve

local arguments

arguments=(
  '-d[daemon mode]'
  '-i[inetd mode]'
  '-t[tunnel mode]'
  '-X[listen-once mode (useful for debugging)]'
  '-r[ARG : root of directory to serve]'
  '-R[force read only, overriding repository config file]'
  '--config-file[read configuration from file ARG]'
  '--listen-port[listen port. The default port is 3690.]'
  '--listen-host[listen hostname or IP address]'
  '-6[6\] : prefer IPv6 when resolving the listen hostname]'
  '-c[ARG : compression level to use for network transmissions]'
  '-M[ARG : size of the extra in-memory cache in MB used to]'
  '--cache-txdeltas[enable or disable caching of deltas between older]'
  '--cache-fulltexts[enable or disable caching of file contents]'
  '--cache-revprops[enable or disable caching of revision properties.]'
  '--cache-nodeprops[enable or disable caching of node properties]'
  '--client-speed[Optimize network handling based on the assumption]'
  '--block-read[Parse and cache all data found in block instead]'
  '-T[use threads instead of fork \[mode: daemon\]]'
  '--min-threads[Minimum number of server threads, even if idle.]'
  '--max-threads[Maximum number of server threads, even if there]'
  '--max-request-size[Maximum acceptable size of a client request in MB.]'
  '--max-response-size[Maximum acceptable server response size in MB.]'
  '--foreground[run in foreground (useful for debugging)]'
  '--single-thread[handle one connection at a time in the parent]'
  '--log-file[svnserve log file]'
  '--pid-file[write server process ID to file ARG]'
  '--tunnel-user[tunnel username (default is current uids name)]'
  '-h[display this help]'
  '--virtual-host[virtual host mode (look for repo in directory]'
  '--version[show program version information]'
  '-q[no progress (only errors) to stderr]'
  '*:filename:_files'
)

_arguments -s $arguments
