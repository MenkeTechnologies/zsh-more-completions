#compdef texi2any

local arguments

arguments=(
  '--document-language[locale to use in translating Texinfo keywords]'
  '--error-limit[quit after NUM errors (default 100).]'
  '--force[preserve output even if errors.]'
  '--help[display this help and exit.]'
  '--no-validate[suppress node cross-reference validation.]'
  '--no-warn[suppress warnings (but not errors).]'
  '--conf-dir[search also for initialization files in DIR.]'
  '--init-file[load FILE to modify the default behavior.]'
  {-c,--set-customization-variable}'[VAL set customization variable VAR]'
  {-v,--verbose}'[explain what is being done.]'
  '--version[display version information and exit.]'
  '--docbook[output Docbook XML rather than Info.]'
  '--html[output HTML rather than Info.]'
  '--plaintext[output plain text rather than Info.]'
  '--xml[output Texinfo XML rather than Info.]'
  {--dvi,--dvipdf,--ps,--pdf}'[call texi2dvi to generate given output]'
  {-E,--macro-expand}'[output macro-expanded source to FILE]'
  '--no-headers[suppress node separators, Node: lines, and menus]'
  '--no-split[suppress any splitting of the output;]'
  {-o,--output}'[output to DEST.]'
  '--disable-encoding[do not output accented and special characters]'
  '--enable-encoding[override --disable-encoding (default).]'
  '--fill-column[break Info lines at NUM characters (default 72).]'
  '--footnote-style[output footnotes in Info according to STYLE:]'
  '--paragraph-indent[indent Info paragraphs by VAL spaces (default 3).]'
  '--split-size[split Info files at size NUM (default 300000).]'
  '--css-include[include FILE in HTML <style> output;]'
  '--css-ref[generate CSS reference to URL.]'
  '--internal-links[produce list of internal links in FILE.]'
  '--split[split at SPLIT, where SPLIT may be `chapter]'
  '--transliterate-file-names[use file names in ASCII transliteration.]'
  '--node-files[produce redirection files for nodes and]'
  '--output-indent[does nothing, retained for compatibility.]'
  '--Xopt[pass OPT to texi2dvi; can be repeated.]'
  '--commands-in-node-names[does nothing, retained for compatibility.]'
  '-D[define the variable VAR, as with @set.]'
  '-D[VAL define VAR to VAL (one shell argument).]'
  '-I[append DIR to the @include search path.]'
  '-P[prepend DIR to the @include search path.]'
  '-U[undefine the variable VAR, as with @clear.]'
  '--ifdocbook[process @ifdocbook and @docbook even if]'
  '--ifhtml[process @ifhtml and @html even if not generating HTML.]'
  '--ifinfo[process @ifinfo even if not generating Info.]'
  '--ifplaintext[process @ifplaintext even if not generating plain text.]'
  '--iftex[process @iftex and @tex.]'
  '--ifxml[process @ifxml and @xml.]'
  '--no-ifdocbook[do not process @ifdocbook and @docbook text.]'
  '--no-ifhtml[do not process @ifhtml and @html text.]'
  '--no-ifinfo[do not process @ifinfo text.]'
  '--no-ifplaintext[do not process @ifplaintext text.]'
  '--no-iftex[do not process @iftex and @tex text.]'
  '--no-ifxml[do not process @ifxml and @xml text.]'
  '*:filename:_files'
)

_arguments -s $arguments
