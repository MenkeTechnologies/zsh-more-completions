#compdef systool

local arguments

arguments=(
  '-a[show attributes]'
  '-b[show a specific bus]'
  '-c[show a specific class]'
  '-d[show only devices]'
  '-h[show usage]'
  '-m[show a specific module]'
  '-p[show path to device/driver]'
  '-v[show all attributes with values]'
  '-A[show attribute value]'
  '-D[show only drivers]'
  '-P[show devices parent]'
  '*:filename:_files'
)

_arguments -s $arguments
