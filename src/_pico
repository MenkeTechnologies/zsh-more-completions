#compdef pico

local arguments

arguments=(
    '-e[Complete - allow file name completion]'
    '-k[Cut - let ^K cut from cursor position to end of line]'
    '-a[ShowDot - show dot files in file browser]'
    '-j[Goto - allow Goto command in file browser]'
    '-g[Show - show cursor in file browser]'
    '-m[Mouse - turn on mouse support]'
    '-x[NoKeyhelp - suppress keyhelp]'
    '-p[PreserveStartStop - preserve "start"(^Q) and "stop"(^S) characters]'
    '-q[TermdefWins - termcap or terminfo takes precedence over defaults]'
    '-Q[Set quote string (eg. "> ") esp. for composing email]'
    '-d[Rebind - let delete key delete current character]'
    '-f[Keys - force use of function keys]'
    '-b[Replace - allow search and replace]'
    '-h[Help - give this list of options]'
    '-r[Fill - set fill column to #cols columns, default=72]'
    '-n[Mail - notify about new mail every #s seconds, default=180]'
    '-s[Speller - specify alternative speller]'
    '-t[Shutdown - enable special shutdown mode]'
    '-o[Operation - specify the operating directory]'
    '-z[Suspend - allow use of ^Z suspension]'
    '-w[NoWrap - turn off word wrap]'
    '-W[Set word separators other than whitespace]'
    '-dcs[default uses LANG or LC_CTYPE from environment]'
    '-kcs[defaults to display_character_set]'
    '-syscs[use system-supplied translation routines]'
    '-color[_code display number codes for different colors]'
    '-ncolors[number of colors for screen (8, 16, or 256)]'
    '-ntfc[number of color of foreground text]'
    '-ntbc[number of color of the background]'
    '-rtfc[number of color of reverse text]'
    '-rtbc[number of color of reverse background]'
    '-tbfc[number of color of foreground (text) of the title bar]'
    '-tbbc[number of color of background of the title bar]'
    '-klfc[number of color of foreground (text) of the key label]'
    '-klbc[number of color of background of the key label]'
    '-knfc[number of color of foreground (text) of the key name]'
    '-knbc[number of color of background of the key name]'
    '-stfc[number of color of foreground (text) of the status line]'
    '-stbc[number of color of background of the status line]'
    '-prfc[number of color of foreground (text) of a prompt]'
    '-prbc[number of color of background of a prompt]'
    '-q1fc[number of color of foreground (text) of level one of quoted text]'
    '-q1bc[number of color of background of level one of quoted text]'
    '-q2fc[number of color of foreground (text) of level two of quoted text]'
    '-q2bc[number of color of background of level two of quoted text]'
    '-q3fc[number of color of foreground (text) of level three of quoted text]'
    '-q3bc[number of color of background of level three of quoted text]'
    '-sbfc[number of color of foreground of signature block text]'
    '-sbbc[number of color of background of signature block text]'
    '-v[View - view file]'
    '-no[_setlocale_collate do not do setlocale(LC_COLLATE)]'
    '-version[Pico version number]'
    '*:filename:_files'
)

_arguments -s $arguments
