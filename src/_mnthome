#compdef mnthome

local arguments

arguments=(
  '-v[print version]'
  '-d[print debugging info]'
  '-p[use the supplied password]'
  '-s[skip preflight check to see if home dir already mounted properly]'
  '-m[use path as automount point instead of /Network/Servers]'
  '-n[do not force the unmount]'
  '-b[exec users shell after mount of home]'
  '-u[attempt to unmount current home mount point]'
  '-x[print AFP mount info for given mount point]'
  '-i[print AFP mount info for home mount point]'
  '*:filename:_files'
)

_arguments -s $arguments
