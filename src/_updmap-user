#compdef updmap-user

local arguments

arguments=(
  '--cnffile[read FILE for the updmap configuration]'
  '--dvipdfmxoutputdir[specify output directory (dvipdfm(x) syntax)]'
  '--dvipsoutputdir[specify output directory (dvips syntax)]'
  '--pdftexoutputdir[specify output directory (pdftex syntax)]'
  '--pxdvioutputdir[specify output directory (pxdvi syntax)]'
  '--outputdir[specify output directory (for all files)]'
  '--copy[cp generic files rather than using symlinks]'
  '--force[recreate files even if config hasnt changed]'
  '--nomkmap[do not recreate map files]'
  '--nohash[do not run texhash]'
  '--sys[affect system-wide files (equivalent to updmap-sys)]'
  '--user[affect personal files (equivalent to updmap-user)]'
  {-n,--dry-run}'[only show the configuration, no output]'
  {--quiet,--silent}'[reduce verbosity]'
  '--help[show this message and exit]'
  '--version[show version information and exit]'
  '--showoption[show the current setting of OPTION]'
  '--showoptions[show possible settings for OPTION]'
  '--setoption[VALUE set OPTION to value; option names below]'
  '--setoption[VALUE as above, just different syntax]'
  '--enable[MAPFILE add "MAPTYPE MAPFILE" to updmap.cfg]'
  '--enable[MAPFILE add "Map MAPFILE" to updmap.cfg]'
  '--enable[MAPFILE add "MixedMap MAPFILE" to updmap.cfg]'
  '--enable[MAPFILE add "KanjiMap MAPFILE" to updmap.cfg]'
  '--disable[disable MAPFILE, of whatever type]'
  '--listmaps[list all maps (details below)]'
  '--listavailablemaps[list available maps (details below)]'
  '--syncwithtrees[disable unavailable map files in updmap.cfg]'
  '*:filename:_files'
)

_arguments -s $arguments
