#compdef sg_logs

local arguments

arguments=(
  '--all[|-a fetch and decode all log pages]'
  '--brief[|-b shorten the output of some log pages]'
  '--control[PC page control(PC) (default: 1)]'
  '--help[|-h print usage message then exit]'
  '--hex[|-H output response in hex (default: decode if known)]'
  '--list[|-l list supported log page names (equivalent to -p 0)]'
  '--maxlen[LEN max response length (def: 0 -> everything)]'
  '--name[|-n decode some pages into multiple name=value lines]'
  '--page[PG page code (in decimal)]'
  '--page[SPG|-p PG,SPG]'
  '--paramp[PP parameter pointer (decimal) (def: 0)]'
  '--pcb[|-q show parameter control bytes in decoded output]'
  '--ppc[|-Q set the Parameter Pointer Control (PPC) bit (def: 0)]'
  '--raw[|-r output response in binary to stdout]'
  '--reset[|-R reset log parameters (takes PC and SP into account)]'
  '--select[|-S perform LOG SELECT using SP and PC values]'
  '--sp[|-s set the Saving Parameters (SP) bit (def: 0)]'
  '--temperature[|-t decode temperature (log page 0xd or 0x2f)]'
  '--transport[|-T decode transport (protocol specific port 0x18) log page]'
  '--verbose[|-v increase verbosity]'
  '--version[|-V output version string then exit]'
  '*:filename:_files'
)

_arguments -s $arguments
