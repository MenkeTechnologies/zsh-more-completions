#compdef gdbus-codegen

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show this help message and exit]'
  '--interface-prefix[string to strip from D-Bus interface names for code]'
  '--c-namespace[the namespace to use for generated C code]'
  '--c-generate-object-manager[generate a GDBusObjectManagerClient subclass when]'
  '--c-generate-autocleanup[objects,all}]'
  '--generate-docbook[generate Docbook in OUTFILES-org.Project.IFace.xml]'
  '--pragma-once[use "pragma once" as the inclusion guard]'
  '--annotate[KEY VALUE WHAT KEY VALUE WHAT KEY VALUE]'
  '--generate-c-code[generate C code in OUTFILES.\[ch\]]'
  '--header[generate C headers]'
  '--body[generate C code]'
  '--interface-info-header[generate GDBusInterfaceInfo C header]'
  '--interface-info-body[generate GDBusInterfaceInfo C code]'
  '--output[write output into the specified file]'
  '--output-directory[location to output generated files]'
  '*:filename:_files'
)

_arguments -s $arguments
