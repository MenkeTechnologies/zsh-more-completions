#compdef restorecon_xattr

local arguments

arguments=(
  '-v[display digest generated by specfile set.]'
  '-n[do not append "Match" or "No Match" to displayed digests.]'
  '-r[recursively descend directories.]'
  '-m[do not read /proc/mounts for entries to be excluded.]'
  '-d[delete non-matching digest entries.]'
  '-D[delete all digest entries.]'
  '-e[directory to exclude (repeat option for more than one directory).]'
  '-f[optional specfile for calculating the digest.]'
  '*:filename:_files'
)

_arguments -s $arguments
