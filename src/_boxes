#compdef boxes

local arguments

arguments=(
    '-a[alignment/positioning of text inside box \[default: hlvt\]]'
    '-c[use single shape box design where str is the W shape]'
    '-d[box design \[default: first one in file\]]'
    '-f[configuration file]'
    '-h[print usage information]'
    '-i[indentation mode \[default: box\]]'
    '-k[leading/trailing blank line retention on removal]'
    '-l[list available box designs w/ samples]'
    '-m[mend box, i.e. remove it and redraw it afterwards]'
    '-p[padding \[default: none\]]'
    '-r[remove box]'
    '-s[box size (width w and/or height h)]'
    '-t[tab stop distance and expansion \[default: 8e\]]'
    '-v[print version information]'
    '*:filename:_files'
)

_arguments -s $arguments
