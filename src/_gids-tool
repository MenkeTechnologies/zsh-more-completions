#compdef gids-tool

local arguments

arguments=(
  {-X,--initialize}'[initialize token]'
  '--admin-key[define the administrator key]'
  '--pin[define user PIN]'
  '--serial-number[define serial number]'
  {-U,--unblock}'[unblock the user PIN after an administrator authentication]'
  {-C,--change-admin-key}'[change the administrator key]'
  '--new-admin-key[define the new administrator key]'
  {-r,--reader}'[uses reader number <arg> \[0\]]'
  {-w,--wait}'[wait for a card to be inserted]'
  {-v,--verbose}'[verbose operation. Use several times to enable debug output.]'
  '*:filename:_files'
)

_arguments -s $arguments
