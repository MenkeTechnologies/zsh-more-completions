#compdef wfuzz

local arguments

arguments=(
  '-h[/--help : This help]'
  '--help[Advanced help]'
  '--filter-help[Filter language specification]'
  '--version[Wfuzz version details]'
  '-e[List of available encoders/payloads/iterators/printers/scripts]'
  '--recipe[Reads options from a recipe. Repeat for various recipes.]'
  '--dump-recipe[Prints current options as a recipe]'
  '--oF[Saves fuzz results to a file. These can be consumed later using the wfuzz payload.]'
  '-c[Output with colors]'
  '-v[Verbose information.]'
  '-f[printer : Store results in the output file using the specified printer (raw printer if omitted).]'
  '-o[Show results using the specified printer.]'
  '--interact[: (beta) If selected,all key presses are captured. This allows you to interact with the program.]'
  '--dry-run[Print the results of applying the requests without actually making any HTTP request.]'
  '--prev[Print the previous HTTP requests (only when using payloads generating fuzzresults)]'
  '--efield[Show the specified language expression together with the current payload]'
  '--field[Do not show the payload but only the specified language expression]'
  '-p[Use Proxy in format ip:port:type. Repeat option for using various proxies.]'
  '-t[Specify the number of concurrent connections (10 default)]'
  '-s[Specify time delay between requests (0 default)]'
  '-R[Recursive path discovery being depth the maximum recursion level.]'
  {-L,--follow}'[: Follow HTTP redirections]'
  '--ip[Specify an IP to connect to instead of the URLs host in the format ip:port]'
  '-Z[Scan mode (Connection errors will be ignored).]'
  '--req-delay[Sets the maximum time in seconds the request is allowed to take (CURLOPT_TIMEOUT). Default 90.]'
  '--conn-delay[Sets the maximum time in seconds the connection phase to the server to take (CURLOPT_CONNECTTIMEOUT). Default 90.]'
  {-A,--AA,--AAA}'[: Alias for --script=default,verbose,discovery -v -c]'
  '--no-cache[Disable plugins cache. Every request will be scanned.]'
  '--script[Equivalent to --script=default]'
  '--script[Runs scripts scan. <plugins> is a comma separated list of plugin-files or plugin-categories]'
  '--script-help[Show help about scripts.]'
  '--script-args[1=v1,... : Provide arguments to scripts. ie. --script-args grep.regex="<A href=\"(.*?)\">"]'
  '-u[Specify a URL for the request.]'
  '-m[Specify an iterator for combining payloads (product by default)]'
  '-z[Specify a payload for each FUZZ keyword used in the form of name\[,parameter\]\[,encoder\].]'
  '--zP[Arguments for the specified payload (it must be preceded by -z or -w).]'
  '--zD[Default parameter for the specified payload (it must be preceded by -z or -w).]'
  '--zE[Encoder for the specified payload (it must be preceded by -z or -w).]'
  '--slice[Filter payloads elements using the specified expression. It must be preceded by -z.]'
  '-w[Specify a wordlist file (alias for -z file,wordlist).]'
  '-V[All parameters bruteforcing (allvars and allpost). No need for FUZZ keyword.]'
  '-X[Specify an HTTP method for the request, ie. HEAD or FUZZ]'
  '-b[Specify a cookie for the requests. Repeat option for various cookies.]'
  '-d[Use post data (ex: "id=FUZZ&catalogue=1")]'
  '-H[Use header (ex:"Cookie:id=1312321&user=FUZZ"). Repeat option for various headers.]'
  '--basic[/ntlm/digest auth : in format "user:pass" or "FUZZ:FUZZ" or "domain\FUZ2Z:FUZZ"]'
  '--hc[/hl/hw/hh N\[,N\]+ : Hide responses with the specified code/lines/words/chars (Use BBB for taking values from baseline)]'
  '--sc[/sl/sw/sh N\[,N\]+ : Show responses with the specified code/lines/words/chars (Use BBB for taking values from baseline)]'
  '--ss[/hs regex : Show/hide responses with the specified regex within the content]'
  '--filter[Show/hide responses using the specified filter expression (Use BBB for taking values from baseline)]'
  '--prefilter[Filter items before fuzzing using the specified expression.]'
  '*:filename:_files'
)

_arguments -s $arguments
