#compdef dvdauthor

local arguments

arguments=(
  '-x[where XMLFILE is a configuration file describing the]'
  '-n[writing any files, for testing purposes. MUST occur before any]'
  '--video[or -v VOPTS where VOPTS is a plus (+) separated list of]'
  '--audio[or -a AOPTS where AOPTS is a plus (+) separated list of]'
  '--subpictures[or -s SOPTS where SOPTS is a plus (+) separated list]'
  '--palette[or -p FILE or -P where FILE specifies where to get the]'
  '--file[or -f FILE or FILE where FILE is either a file, a pipe, or a]'
  '--chapter[COPTS\] or -c COPTS or -C where COPTS is a comma (,)]'
  {--menu,-m}'[a menu.]'
  {--title,-t}'[a title.]'
  {--toc,-T}'[the table of contents file instead of a titleset.]'
  '--entry[or -e EOPTS makes the current menu the default for]'
  {--button,-b}'[specifies what command to issue for each button.]'
  {--instructions,-i}'[DEST executes the DEST instructions at the]'
  {--fpc,-F}'[sets the commands to be executed when the disc is first]'
  {--jumppad,-j}'[the creation of jumppads, which allow greater]'
  {--allgprm,-g}'[the use of all 16 general purpose registers.]'
  {--help,-h}'[this screen.]'
  '*:filename:_files'
)

