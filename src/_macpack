#compdef macpack

local arguments

arguments=(
  {-n,-appname}'[:appname    Application Name]'
  {-o,-output}'[:OUTPUT      Output directory]'
  '-a[assembly to pack]'
  {-i,-icon}'[icon filename]'
  '-r[1,resource2          Additional files to bundle]'
  '-m[11|console\] The mode for the application]'
  {-n,-appname}'[:appname    Application Name]'
  {-o,-output}'[:OUTPUT      Output directory]'
  '-a[assembly to pack]'
  {-i,-icon}'[icon filename]'
  '-r[1,resource2          Additional files to bundle]'
  '-m[11|console\] The mode for the application]'
  '*:filename:_files'
)

_arguments -s $arguments
