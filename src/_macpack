#compdef macpack

local arguments

arguments=(
  {-n,-appname}'[Application Name]:appname:'
  {-o,-output}'[Output directory]:OUTPUT:'
  '-a[assembly to pack]'
  {-i,-icon}'[icon filename]'
  '-r[1,resource2 Additional files to bundle]'
  '-m[11|console\] The mode for the application]'
  {-n,-appname}'[Application Name]:appname:'
  {-o,-output}'[Output directory]:OUTPUT:'
  '-a[assembly to pack]'
  {-i,-icon}'[icon filename]'
  '-r[1,resource2 Additional files to bundle]'
  '-m[11|console\] The mode for the application]'
  '*:filename:_files'
)

_arguments -s $arguments
