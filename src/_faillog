#compdef faillog

local arguments

arguments=(
  {-a,--all}'[display faillog records for all users]'
  '(- * :)'{-h,--help}'[display this help message and exit]'
  {-l,--lock-secs}'[after failed login lock account for SEC seconds]'
  {-m,--maximum}'[set maximum failed login counters to MAX]'
  {-r,--reset}'[reset the counters of login failures]'
  {-R,--root}'[directory to chroot into]'
  {-t,--time}'[display faillog records more recent than DAYS]'
  {-u,--user}'[/RANGE display faillog record or maintains failure]'
  '*:filename:_files'
)

_arguments -s $arguments
