#compdef tini

local arguments

arguments=(
  '--version[Show version and exit.]'
  '-h[Show this help message and exit.]'
  '-s[Register as a process subreaper (requires Linux >= 3.4).]'
  '-p[trigger SIGNAL when parent dies, e.g. "-p SIGKILL".]'
  '-v[Generate more verbose output. Repeat up to 3 times.]'
  '-w[Print a warning when processes are getting reaped.]'
  '-g[Send signals to the childs process group.]'
  '-e[remap EXIT_CODE (from 0 to 255) to 0.]'
  '-l[Show license and exit.]'
  '*:filename:_files'
)

_arguments -s $arguments
