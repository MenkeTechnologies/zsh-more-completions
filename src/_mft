#compdef mft

local arguments

arguments=(
  '-change[apply the change file CHFILE as with tangle and weave]'
  '-metapost[assume NAME is a METAPOST source file]'
  '-style[use MFTNAME instead of plain.mft (or mplain.mft)]'
  '-help[display this help and exit]'
  '-version[output version information and exit]'
  '*:filename:_files'
)

_arguments -s $arguments
