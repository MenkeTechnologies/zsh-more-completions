#compdef goid-tool

local arguments

arguments=(
  '(- * :)'{-h,--help}'[print help and exit]'
  {-V,--version}'[print version and exit]'
  {-r,--reader}'[number of the reader to use. By default, the]'
  {-v,--verbose}'[use (several times) to be more verbose]'
  {-p,--verify-pin}'[verify PIN]'
  {-b,--verify-bio}'[verify finger print]'
  '--verify-pin-or-bio[verify PIN or finger print (users choice)]'
  '--new-pin[change PIN]'
  '--new-bio[use (several times) to change one or more]'
  '--info[dump Information about the SoCManagers]'
  {-c,--certificate}'[use (several times) to pass CV certificates]'
  {-k,--key}'[private key for the CV certificate]'
  '--print-cardid[print the card ID]'
  '--write-cardid[write the specified card ID]'
  '--print-paccessid[print the PAccess ID]'
  '--write-paccessid[write the specified PAccess ID]'
  '--read-dg[read the specified data group; use several]'
  '--out-file[write output to a file instead of printing it;]'
  '--write-dg[write the specified data group; use several]'
  '--in-file[read input from a file; use once for each use]'
  '--delete-dg[delete the specified data group; use several]'
  '--create-dg[create the specified data group; use several]'
  '--new-size[file size of newly created DGs  (default=`256)]'
  '--new-read-ac[access condition for reading newly created DGs]'
  '--new-read-ac-chatbit[required access bits in certificates CHAT for]'
  '--new-write-ac[access condition for writing newly created DGs]'
  '--new-write-ac-chatbit[required access bits in certificates CHAT for]'
  '*:filename:_files'
)

_arguments -s $arguments
