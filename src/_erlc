#compdef erlc

local arguments

arguments=(
  '-b[type of output file (e.g. beam)]'
  '-d[turn on debugging of erlc itself]'
  '-Dname[define name]'
  '-Dname[define name to have value]'
  '-help[shows this help text]'
  '-I[where to search for include files]'
  '-M[generate a rule for make(1) describing the dependencies]'
  '-MF[write the dependencies to file]'
  '-MT[change the target of the rule emitted by dependency generation]'
  '-MQ[same as -MT but quote characters special to make(1)]'
  '-MG[consider missing headers as generated files and add them to the dependencies]'
  '-MP[add a phony target for each dependency]'
  '-MD[same as -M -MT file (with default file)]'
  '-o[name output directory or file]'
  '-pa[add path to the front of Erlangs code path]'
  '-pz[add path to the end of Erlangs code path]'
  '-smp[compile using SMP emulator]'
  '-v[verbose compiler output]'
  '-Werror[make all warnings into errors]'
  '-W0[disable warnings]'
  '-Wnumber[set warning level to number]'
  '-Wall[enable all warnings]'
  '-W[enable warnings (default; same as -W1)]'
  '-E[generate listing of expanded code (Erlang compiler)]'
  '-S[generate assembly listing (Erlang compiler)]'
  '-P[generate listing of preprocessed code (Erlang compiler)]'
  '*:filename:_files'
)

_arguments -s $arguments
