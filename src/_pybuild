#compdef pybuild

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show this help message and exit]'
  {-v,--verbose}'[turn verbose mode on]'
  {-q,--quiet}'[doesnt show external commands output]'
  {-qq,--really-quiet}'[be quiet]'
  '--version[show programs version number and exit]'
  '--detect[return the name of detected build system]'
  '--clean[clean files using auto-detected build system specific]'
  '--configure[invoke configure step for all requested Python]'
  '--build[invoke build step for all requested Python versions]'
  '--install[invoke install step for all requested Python versions]'
  '--test[invoke tests for auto-detected build system]'
  '--list-systems[list available build systems and exit]'
  '--before-clean[invoked before the clean command]'
  '--clean-args[]'
  '--after-clean[invoked after the clean command]'
  '--before-configure[invoked before the configure command]'
  '--configure-args[]'
  '--after-configure[invoked after the configure command]'
  '--before-build[invoked before the build command]'
  '--build-args[]'
  '--after-build[invoked after the build command]'
  '--before-install[invoked before the install command]'
  '--install-args[]'
  '--after-install[invoked after the install command]'
  '--before-test[invoked before the test command]'
  '--test-args[]'
  '--after-test[invoked after the test command]'
  '--test-nose[use nose module in --test step]'
  '--test-pytest[use pytest module in --test step]'
  '--test-tox[use tox in --test step]'
  {-d,--dir}'[source files directory - base for other relative dirs]'
  '--dest-dir[destination directory \[default: debian/tmp\]]'
  '--ext-dest-dir[destination directory for .so files]'
  '--ext-pattern[regular expression for files that should be moved if]'
  '--ext-dest-dir[set \[default: .so files\]]'
  '--install-dir[installation directory \[default: .../dist-packages\]]'
  '--name[use this name to guess destination directories]'
  {-s,--system}'[select a build system \[default: auto-detection\]]'
  {-p,--pyver}'[build for Python VERSION. This option can be used]'
  {-i,--interpreter}'[change interpreter \[default: python{version}\]]'
  '--disable[disable action, interpreter or version]'
  '*:filename:_files'
)

_arguments -s $arguments
