#compdef ndmetis

local arguments

arguments=(
  '-ctype[specifies the scheme to be used to match the vertices of the graph]'
  '-iptype[\[applies only when -ptype=rb\]]'
  '-rtype[specifies the scheme to be used for refinement.]'
  '-ufactor[specifies the maximum allowed load imbalance between the left and]'
  '-pfactor[specifies the minimum degree of the vertices that will be ordered]'
  '-no2hop[specifies that the coarsening will not perform any 2-hop matchings]'
  '-nocompress[specifies that the graph should not be compressed by combining]'
  '-ccorder[specifies if the connected components of the graph should first be]'
  '-niter[specifies the maximum number of iterations for the refinement]'
  '-nseps[specifies the number of different separators that it will compute at]'
  '-nooutput[specifies that no ordering file should be generated.]'
  '-seed[selects the seed of the random number generator.]'
  '-dbglvl[selects the dbglvl.]'
  '-help[prints this message.]'
  '*:filename:_files'
)

_arguments -s $arguments
