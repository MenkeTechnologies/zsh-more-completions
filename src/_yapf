#compdef yapf

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show this help message and exit]'
  {-v,--version}'[show version number and exit]'
  {-d,--diff}'[print the diff for the fixed source]'
  {-i,--in-place}'[make changes to files in place]'
  {-r,--recursive}'[run recursively over directories]'
  {-l,--lines}'[range of lines to reformat, one-based]'
  {-e,--exclude}'[patterns for files to exclude from formatting]'
  '--style[specify formatting style: either a style name (for]'
  '--style-help[show style settings and exit; this output can be saved]'
  '--no-local-style[dont search for local style definition]'
  {-p,--parallel}'[run yapf in parallel when formatting multiple files.]'
  {-vv,--verbose}'[print out file names while processing]'
  '*:filename:_files'
)

_arguments -s $arguments
