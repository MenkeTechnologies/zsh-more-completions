#compdef afm2pl

local arguments

arguments=(
  '-p[read/download ENCFILE for the PostScript encoding]'
  '-o[use octal for all character codes in the pl file]'
  '-e[widen (extend) characters by a factor of REAL]'
  '-s[oblique (slant) characters by REAL, generally <<1]'
  '-m[letterspace by INTEGER/1000 em]'
  '-V[verbose output; i.e. report on missing glyphs]'
  '--help[print this message and exit.]'
  '--version[print version number and exit.]'
  '*:filename:_files'
)

_arguments -s $arguments
