#compdef xscreensaver-text

local arguments

arguments=(
  '--date[print the host name and current time.]'
  '--text[print out the given text. It may contain %]'
  '--file[print the contents of the given file.]'
  '--program[run the given program and print its output.]'
  '--url[download and print the contents of the HTTP]'
  '--cols[wrap lines at this column. Default 72.]'
  '--lines[no more than N lines of output.]'
  '--latin1[emit Latin1 instead of UTF-8.]'
  '*:filename:_files'
)

_arguments -s $arguments
