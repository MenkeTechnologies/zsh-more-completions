#compdef critcl

local arguments

arguments=(
  '-debug[enable debugging]'
  '-force[force compilation of C files]'
  '-show[show the configuration options being used]'
  '-target[generate binary for specified target platform/architecture]'
  '-I[adds dir to the include search path when compiling.]'
  '-L[adds dir to the library search path when linking.]'
  '-cache[sets the Critcl cache directory to dir.]'
  '-keep[keep intermediate C files in the Critcl cache]'
  '-config[read the Critcl configuration options from file]'
  '-libdir[location of generated library/package]'
  '-includedir[location of generated package headers (stubs)]'
  '-showall[show configuration for all supported platforms]'
  '-targets[show all available target platforms]'
  '*:filename:_files'
)

_arguments -s $arguments
