#compdef ts_uinput

local arguments

arguments=(
  '(- * :)'{-h,--help}'[this help text]'
  {-d,--daemonize}'[run in the background as a daemon]'
  {-v,--verbose}'[verbose output]'
  {-n,--name}'[set name of new input device  (default: ts_uinput)]'
  {-i,--idev}'[touchscreens input device]'
  {-f,--fbdev}'[touchscreens framebuffer device]'
  {-s,--slots}'[override available concurrent touch contacts]'
  {-b,--nofb}'[read screen resolution from the input dev, not the framebuffer device.]'
  '*:filename:_files'
)

_arguments -s $arguments
