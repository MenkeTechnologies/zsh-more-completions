#compdef yara

local arguments

arguments=(
  '--atom-quality-table[path to a file with the atom quality table]'
  {-C,--compiled-rules}'[load compiled rules]'
  {-c,--count}'[print only number of matches]'
  {-d,--define}'[VALUE define external variable]'
  '--fail-on-warnings[fail on warnings]'
  {-f,--fast-scan}'[fast matching mode]'
  '(- * :)'{-h,--help}'[show this help and exit]'
  {-i,--identifier}'[print only rules named IDENTIFIER]'
  {-l,--max-rules}'[abort scanning after matching a NUMBER of rules]'
  '--max-strings-per-rule[set maximum number of strings per rule (default=10000)]'
  {-x,--module-data}'[FILE pass FILEs content as extra data to MODULE]'
  {-n,--negate}'[print only not satisfied rules (negate)]'
  {-w,--no-warnings}'[disable warnings]'
  {-m,--print-meta}'[print metadata]'
  {-D,--print-module-data}'[print module data]'
  {-e,--print-namespace}'[print rules namespace]'
  {-S,--print-stats}'[print rules statistics]'
  {-s,--print-strings}'[print matching strings]'
  {-L,--print-string-length}'[print length of matched strings]'
  {-g,--print-tags}'[print tags]'
  {-r,--recursive}'[recursively search directories]'
  {-k,--stack-size}'[set maximum stack size (default=16384)]'
  {-t,--tag}'[print only rules tagged as TAG]'
  {-p,--threads}'[use the specified NUMBER of threads to scan a directory]'
  {-a,--timeout}'[abort scanning after the given number of SECONDS]'
  {-v,--version}'[show version information]'
  '*:filename:_files'
)

_arguments -s $arguments
