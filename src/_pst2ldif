#compdef pst2ldif

local arguments

arguments=(
  '-V[Version. Display program version]'
  '-b[set the LDAP base value]'
  '-c[set the class of the LDAP objects (may contain more than one)]'
  '-d[Debug to file.]'
  '-h[Help. This screen]'
  '-l[extra line to insert in the LDIF file for each contact]'
  '-o[use old schema, default is new schema]'
  '*:filename:_files'
)

_arguments -s $arguments
