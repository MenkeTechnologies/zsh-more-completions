#compdef cdda-player

local arguments

arguments=(
  '-h[print this help]'
  '-k[print key mapping]'
  '-a[start up in auto-mode]'
  '-v[verbose]'
  '-l[list tracks]'
  '-c[print cover (PostScript to stdout)]'
  '-C[close CD-ROM tray. If you use this option]'
  '-p[play the whole CD]'
  '-t[play track >n<]'
  '-t[play all tracks between a and b (inclusive)]'
  '-L[set volume level]'
  '-s[stop playing]'
  '-S[list audio subchannel information]'
  '-e[eject cdrom]'
  '*:filename:_files'
)

_arguments -s $arguments
