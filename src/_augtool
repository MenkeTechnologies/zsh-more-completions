#compdef augtool

local arguments

arguments=(
  {-c,--typecheck}'[typecheck lenses]'
  {-b,--backup}'[preserve originals of modified files with]'
  {-n,--new}'[save changes in files with extension .augnew]'
  {-r,--root}'[use ROOT as the root of the filesystem]'
  {-I,--include}'[search DIR for modules; can be given multiple times]'
  {-t,--transform}'[add a file transform; uses the transform command]'
  {-l,--load-file}'[load individual FILE in the tree]'
  {-e,--echo}'[echo commands when reading from a file]'
  {-f,--file}'[read commands from FILE]'
  {-s,--autosave}'[automatically save at the end of instructions]'
  {-i,--interactive}'[run an interactive shell after evaluating]'
  {-S,--nostdinc}'[do not search the builtin default directories]'
  {-L,--noload}'[do not load any files into the tree on startup]'
  {-A,--noautoload}'[do not autoload modules from the search path]'
  '--span[load span positions for nodes related to a file]'
  '--timing[after executing each command, show how long it took]'
  '--version[print version information and exit.]'
  '*:filename:_files'
)

_arguments -s $arguments
