#compdef virt-diff

local arguments

arguments=(
  '-a[|--add image       Add image from first guest]'
  '--all[same as: --extra-stats --times --uids --xattrs]'
  '--atime[dont ignore access time changes]'
  '-A[add image from second guest]'
  '--checksum[...\]     Use checksum of file content]'
  '-c[|--connect uri     Specify libvirt URI for -d option]'
  '--csv[comma-Separated Values output]'
  '--dir-links[dont ignore directory nlink changes]'
  '--dir-times[dont ignore directory time changes]'
  '-d[|--domain guest    Add disks from first libvirt guest]'
  '-D[add disks from second libvirt guest]'
  '--echo-keys[dont turn off echo for passphrases]'
  '--extra-stats[display extra stats]'
  '--format[..\]    Force disk format for -a or -A option]'
  '--help[display brief help]'
  '-h[|--human-readable  Human-readable sizes in output]'
  '--keys-from-stdin[read passphrases from stdin]'
  '--times[display file times]'
  '--time-days[display file times as days before now]'
  '--time-relative[display file times as seconds before now]'
  '--time-t[display file times as time_ts]'
  '--uids[display UID, GID]'
  '-v[|--verbose         Verbose messages]'
  '-V[|--version         Display version and exit]'
  '-x[trace libguestfs API calls]'
  '--xattrs[display extended attributes]'
  '*:filename:_files'
)

_arguments -s $arguments
