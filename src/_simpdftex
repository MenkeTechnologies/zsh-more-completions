#compdef simpdftex

local arguments

arguments=(
  '--mode[tell simpdftex how to go from DVI to PDF. There are three modes:]'
  '--dpx[compatibility flag with simpdftex_dpmx. Equal to --mode dvipdfmx]'
  '--dpm[compatibility flag with simpdftex_dpmx. Equal to --mode dvipdfm]'
  '--help[display this message and exit]'
  '--no-echo-version[do not echo location and version of this script. Does not exit]'
  '--debug[add some debug output]'
  '--extendedname[depending on the mode, adds intermediary extensions to the]'
  '--maxpfb[.maxpfb is added. Example:]'
  '--maxpk[use Metafont bitmaps (pk files) when possible. Only real]'
  '--dvipsopts["]'
  '--maxpfb[use PostScript pfb files whenever possible. This produces]'
  '--dvipsopts["]'
  '--pdf[select .pdfmode extension for the output file name if]'
  '--extendedname[been set. Use printer definition]'
  '--dvipsopts["]'
  '--default[select no extension for the output file name, even if]'
  '--extendedfilename[been set. Use standard printer]'
  '--dvipsopts[" --noextendedname]'
  '--dvipsopts[give arbitrary arguments to dvips, e.g.]'
  '--dvipsopts["]'
  '--extratexopts[give extra arbitrary arguments to tex, e.g.]'
  '--extratexopts[nonstopmode"]'
  '--extradvipsopts[give extra arbitrary arguments to dvips, e.g.]'
  '--extradvipsopts["]'
  '--keep-psfile[after running dvips, copy the ps file over to the directory]'
  '--tex-path[give path of TeX binaries, use directory of this script]'
  '--distiller[use a distiller different from ps2pdf which is the default.]'
  '--distiller[/local/alternate/bin/ps2pdf]'
  '--distiller[using this flag sets the distiller filter mode to off]'
  '--distiller-filter[use a distiller executable or executable script which is]'
  '--distiller-filter[this flag only makes sense in dvips mode]'
  '--distilleropts[special options to pass to the distiller]'
  '--distiller-path[give path needed by the distiller binary. This path is added]'
  '--dvipdfmopts[give arbitrary arguments to dvipdfm or dvipdfmx, e.g.]'
  '--dvipdfmopts["]'
  '--outdir[write files here *if* our current directory is unwritable. This]'
  '*:filename:_files'
)

_arguments -s $arguments
