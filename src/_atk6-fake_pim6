#compdef atk6-fake_pim6

local arguments

arguments=(
  '-l[loop packet every 5 seconds]'
  '-f[flood packet (with random values where useful, e.g src)]'
  '-t[specify a non-standard ttl]'
  '-s[6 specify the source IPv6 address]'
  '-d[6 specify a non-standard destination IPv6 address]'
  '*:filename:_files'
)

_arguments -s $arguments
