#compdef pbm2ppa

local arguments

arguments=(
  '-b[bottom margin in 1"/600 (default: 150 = 0.25")]'
  '-d[dumps the configuration to stdout -f <cfgfile> read <cfgfile> as parameters]'
  '-h[displays this help text -l <margin> left margin in 1"/600 (default: 150 = 0.25")]'
  '-r[right margin in 1"/600 (default: 150 = 0.25")]'
  '-s[paper size (us,letter,legal,a4, default: us)]'
  '-t[top margin in 1"/600 (default: 150 = 0.25")]'
  '-v[printer model (710, 712, 720, 722, 820, or 1000)]'
  '-x[vertical offset adjustment in 1"/600]'
  '-y[horizontal offset adjustment in 1"/600]'
  '*:filename:_files'
)

_arguments -s $arguments
