#compdef spicy-stats

local arguments

arguments=(
  '--uri[spice server uri]'
  {-h,--host}'[spice server address]'
  {-p,--port}'[spice server port]'
  {-s,--secure-port}'[spice server secure port]'
  {-w,--password}'[server password]'
  '--version[display version and quit]'
  '*:filename:_files'
)

_arguments -s $arguments
