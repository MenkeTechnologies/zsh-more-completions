#compdef xlsfonts

local arguments

arguments=(
  '-l[give long info about each font]'
  '-m[give character min and max bounds]'
  '-C[force columns]'
  '-1[force single column]'
  '-u[keep output unsorted]'
  '-o[use OpenFont/QueryFont instead of ListFonts]'
  '-w[maximum width for multiple columns]'
  '-n[number of columns if multi column]'
  '-display[X server to contact]'
  '-d[(alias for -display displayname)]'
  '-v[print program version]'
  '*:filename:_files'
)

_arguments -s $arguments
