#compdef icedax

local arguments

arguments=(
  '-scanbus[scan the SCSI bus and exit]'
  '--devices[scan for system devices and print with native names]'
  '-paranoia[use the lib paranoia for reading.]'
  '-paraopts[set options for lib paranoia (see -paraopts=help).]'
  '-cddbp-server[set the cddbp server to use for title lookups.]'
  '-cddbp-port[set the cddbp port to use for title lookups.]'
  '-version[print version information.]'
  '*:filename:_files'
)

_arguments -s $arguments
