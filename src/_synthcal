#compdef synthcal

local arguments

arguments=(
  '-r[set the calibration resolution (default 256)]'
  '-t[i = input, o = output, d = display (default)]'
  '-d[choose colorant combination from the following (default 3):]'
  '-D[add or delete colorant from combination:]'
  '-o[1,o2,o3, Set non-linear curve offset (default 0.0)]'
  '-s[1,s2,s3, Set non-linear curve scale (default 1.0)]'
  '-p[1,p2,p3, Set non-linear curve powers (default 1.0)]'
  '-E[set the profile dEscription string]'
  '*:filename:_files'
)

_arguments -s $arguments
