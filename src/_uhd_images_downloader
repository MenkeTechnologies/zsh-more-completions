#compdef uhd_images_downloader

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show this help message and exit]'
  {-t,--types}'[regEx to select image sets from the manifest file.]'
  {-i,--install-location}'[set custom install location for images (default: None)]'
  {-m,--manifest-location}'[set custom location for the manifest file (default: )]'
  {-I,--inventory-location}'[set custom location for the inventory file (default: )]'
  {-l,--list-targets}'[print targets in the manifest file to stdout, and]'
  '--url-only[with -l, only print the URLs, nothing else. (default:]'
  '--buffer-size[set download buffer size (default: 8192)]'
  '--download-limit[set threshold for download limits. Any download larger]'
  '--http-proxy[specify HTTP proxy in the format]'
  {-b,--base-url}'[set base URL for images download location (default:]'
  {-k,--keep}'[keep the downloaded images archives in the image]'
  {-T,--test}'[verify the downloaded archives before extracting them]'
  {-y,--yes}'[answer all questions with yes (for scripting]'
  {-n,--dry-run}'[print selected target without actually downloading]'
  '--refetch[ignore the inventory file and download all images.]'
  {-V,--version}'[show programs version number and exit]'
  {-q,--quiet}'[decrease verbosity level (default: 0)]'
  {-v,--verbose}'[increase verbosity level (default: 0)]'
  '*:filename:_files'
)

_arguments -s $arguments
