#compdef lavrec

local arguments

arguments=(
  '-f[/--format \[aAjq\] Format AVI/Quicktime]'
  '-i[/--input \[pPnNsStTfa\] Input Source or 1-10:norm see manpage]'
  '-d[/--decimation num Decimation (either 1,2,4 or two digit number)]'
  '-g[/--geometry WxH+X+Y X-style geometry string (part of 768/720x576/480)]'
  '-q[/--quality num Quality \[%\]]'
  '-t[/--time num Capture time (default: unlimited - Ctrl-C to stop]'
  '-S[/--single-frame Single frame capture mode]'
  '-T[/--time-lapse num Time lapse, capture only every <num>th frame]'
  '-w[/--wait Wait for user confirmation to start]'
  '-B[/--batch Batch mode for recording non-interactively]'
  '-a[/--audio-bitsize num Audio size, 0 for no audio, 8 or 16]'
  '-r[/--audio-bitrate num Audio rate \[Hz\]]'
  '-s[/--stereo Stereo (default: mono)]'
  '-l[/--audio-volume num Recording level \[%\], -1 for mixers not touched]'
  '-m[/--mute Mute audio output during recording]'
  '-R[/--audio-source \[lmc123\] Set recording source: (l)ine, (m)icro, (c)d]'
  '-c[/--synchronization \[012\] Level of corrections for synchronization]'
  '-n[/--mjpeg-buffers num Number of MJPEG buffers (default: 64)]'
  '-b[/--mjpeg-buffer-size num Size of MJPEG buffers \[Kb\] (default: 256)]'
  '-C[/--channel LIST:CHAN When using a TV tuner, channel list/number]'
  '-F[/--frequency KHz When using a TV tuner, frequency in KHz]'
  '-U[/--use-read Use read instead of mmap for recording]'
  '--software-encoding[use software JPEG-encoding (for BTTV-capture)]'
  '--num-procs[number of encoding processes (default: 1)]'
  '--max-file-size[maximum size per file (in MB)]'
  '--max-file-frames[maximum number of frames per file]'
  '--file-flush[flush capture file to disk every num frames]'
  '-v[/--verbose \[012\] verbose level (default: 0)]'
  '*:filename:_files'
)

_arguments -s $arguments
