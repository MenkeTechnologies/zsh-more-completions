#compdef pdfbook2

local arguments

arguments=(
  '--version[show programs version number and exit]'
  {--help,-h}'[show this help message and exit]'
  {--paper,-p}'[format of the output paper dimensions as latex keyword (e.g.]'
  {--short-edge,-s}'[format the booklet for short-edge double-sided printing]'
  {--no-crop,-n}'[prevent the cropping to the content area]'
  {--outer-margin,-o}'[defines the outer margin in the booklet (default: 40)]'
  {--inner-margin,-i}'[defines the inner margin between the pages in the booklet]'
  {--top-margin,-t}'[defines the top margin in the booklet (default: 30)]'
  {--bottom-margin,-b}'[defines the bottom margin in the booklet (default: 30)]'
  '--signature[define the signature for the booklet handed to pdfjam, needs]'
  '--signature[*=INT]'
  '--resolution[resolution used by ghostscript in bp (default: 72)]'
  '*:filename:_files'
)

_arguments -s $arguments
