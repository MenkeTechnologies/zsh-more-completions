#compdef rustfmt

local arguments

arguments=(
  '--check[run in check mode. Exits with 0 if input is]'
  '--emit[what data to emit and how]'
  '--backup[backup any modified files.]'
  '--config-path[for the configuration file\]]'
  '--edition[2015|2018\]]'
  '--color[use colored output (if supported)]'
  '--print-config[PATH]'
  {-l,--files-with-diff}'[prints the names of mismatched files that were]'
  '--config[1=val1,key2=val2...\]]'
  {-v,--verbose}'[print verbose output]'
  {-q,--quiet}'[print less output]'
  {-V,--version}'[show version information]'
  '(- * :)'{-h,--help}'[TOPIC\] Show this message or help about a specific topic:]'
  '*:filename:_files'
)

_arguments -s $arguments
