#compdef xsltproc

local arguments

arguments=(
  {--version,-V}'[: show the version of libxml and libxslt used]'
  {--verbose,-v}'[: show logs of whats happening]'
  '--output[or -o file: save to a given file]'
  '--timing[display the time used]'
  '--repeat[run the transformation 20 times]'
  '--debug[dump the tree of the result instead]'
  '--dumpextensions[dump the registered extension elements and functions to stdout]'
  '--novalid[the DTD loading phase]'
  '--nodtdattr[not default attributes from the DTD]'
  '--noout[do not dump the result]'
  '--maxdepth[increase the maximum depth (default 3000)]'
  '--maxvars[increase the maximum variables (default 15000)]'
  '--maxparserdepth[increase the maximum parser depth]'
  '--seed-rand[initialize pseudo random number generator with specific seed]'
  '--html[the input document is(are) an HTML file(s)]'
  '--encoding[the input document character encoding]'
  '--param[value : pass a (parameter,value) pair]'
  '--stringparam[value : pass a (parameter, UTF8 string value) pair]'
  '--path[provide a set of paths for resources]'
  '--nonet[refuse to fetch DTDs or entities over network]'
  '--nowrite[refuse to write to any file or resource]'
  '--nomkdir[refuse to create directories]'
  '--writesubtree[allow file write only with the path subtree]'
  '--catalogs[use SGML catalogs from $SGML_CATALOG_FILES]'
  '--xinclude[do XInclude processing on document input]'
  '--xincludestyle[do XInclude processing on stylesheets]'
  '--load-trace[print trace of all external entites loaded]'
  {--profile,--norman}'[dump profiling informations]'
  '*:filename:_files'
)

_arguments -s $arguments
