#compdef install-info

local arguments

arguments=(
  '--add-once[add only to first matching section, not all.]'
  '--align[start description of new entries at column COL.]'
  '--calign[format second and subsequent description lines to]'
  '--debug[report what is being done.]'
  '--delete[delete existing entries for INFO-FILE from DIR-FILE;]'
  '--defsection[like --section, but only use TEXT if no sections]'
  '--description[the description of the entry is TEXT; used with]'
  '--entry[.]'
  '--dir-file[specify file name of Info directory file;]'
  '--dry-run[same as --test.]'
  '--entry[insert TEXT as an Info directory entry]'
  '--help[display this help and exit.]'
  '--info-dir[same as --dir-file=DIR/dir.]'
  '--info-file[specify Info file to install in the directory;]'
  '--item[same as --entry=TEXT.]'
  '--keep-old[do not replace entries, or remove empty sections.]'
  {--maxwidth,--max-width}'[wrap description at column COL.]'
  '--menuentry[same as --name=TEXT.]'
  '--name[the name of the entry is TEXT; used with --description]'
  '--no-indent[do not format new entries in the DIR file.]'
  '--quiet[suppress warnings.]'
  '--regex[put this files entries in all sections that match the]'
  '--remove[same as --delete.]'
  '--remove-exactly[only remove if the info file name matches exactly;]'
  '--section[put entries in section SEC of the directory.]'
  '--section[SEC equivalent to --regex=R --section=SEC --add-once.]'
  '--silent[suppress warnings.]'
  '--test[suppress updating of DIR-FILE.]'
  '--version[display version information and exit.]'
  '*:filename:_files'
)

_arguments -s $arguments
