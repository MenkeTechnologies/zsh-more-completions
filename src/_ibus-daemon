#compdef ibus-daemon

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show help options]'
  {-V,--version}'[show the applications version.]'
  {-d,--daemonize}'[run ibus as background process.]'
  {-s,--single}'[do not execute panel and config module.]'
  {-x,--xim}'[execute ibus XIM server.]'
  {-n,--desktop}'[specify the name of desktop session. \[default=gnome\]]'
  {-p,--panel}'[specify the cmdline of panel program. pass disable not to start a panel program.]'
  {-c,--config}'[specify the cmdline of config program. pass disable not to start a config program.]'
  {-a,--address}'[specify the address of ibus daemon.]'
  {-r,--replace}'[if there is an old ibus-daemon is running, it will be replaced.]'
  {-t,--cache}'[specify the cache mode. \[auto/refresh/none\]]'
  {-o,--timeout}'[\[default is 15000\] gdbus reply timeout in milliseconds. pass -1 to use the default timeout of gdbus.]'
  {-m,--mem-profile}'[enable memory profile, send SIGUSR2 to print out the memory profile.]'
  {-R,--restart}'[restart panel and config processes when they die.]'
  {-v,--verbose}'[verbose.]'
  '*:filename:_files'
)

_arguments -s $arguments
