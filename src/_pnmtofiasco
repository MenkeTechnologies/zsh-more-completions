#compdef pnmtofiasco

local arguments

arguments=(
  {-i,--image-name}'[compress raw PPM/PGM image(s) `FILE.]'
  {-o,--output-name}'[write automaton to `FILE (`- means stdout).{-}]'
  {-q,--quality}'[set quality of compression to `REAL.{20.00}]'
  {-t,--title}'[set title of FIASCO stream to `NAME.{}]'
  {-c,--comment}'[set comment of FIASCO stream to `NAME.{}]'
  {-z,--optimize}'[set optimization level to `NUM.{0}]'
  {-v,--version}'[print program version number, then exit.]'
  {-V,--verbose}'[set level of verbosity to `NUM.{1}]'
  {-f,--config}'[load `FILE to initialize parameters.]'
  {-h,--info}'[print brief help, then exit.]'
  {-H,--help}'[print detailed help, then exit.]'
  '*:filename:_files'
)

_arguments -s $arguments
