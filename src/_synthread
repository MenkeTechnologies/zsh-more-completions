#compdef synthread

local arguments

arguments=(
  '-v[verbose mode]'
  '-p[use separation profile]'
  '-l[construct and output in Lab rather than XYZ]'
  '-i[1,p2,p3, Set input channel curve powers (default 1.0)]'
  '-k[1:y1,x2:y2,x3:y2 Set input channel inflection points (default 0.5,0.5)]'
  '-o[1,p2,p3, Set output channel curve powers (default 1.0)]'
  '-r[add average random deviation of <level>% to input device values (after sep.)]'
  '-R[add average random deviation of <level>% to output PCS values]'
  '-u[make random deviations have uniform distributions rather than normal]'
  '-b[a,b Scale black point to target Lab value]'
  '*:filename:_files'
)

_arguments -s $arguments
