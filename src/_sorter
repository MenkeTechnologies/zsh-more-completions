#compdef sorter

local arguments

arguments=(
  '-b[minimum size. Ignore files smaller than size]'
  '-E[Perform category indexing only (no extension checks - was -i)]'
  '-e[Perform extension checks only (no category index files)]'
  '-h[HTML Format]'
  '-l[List index to STDOUT (no files are ever written)]'
  '-md5[Print the MD5 value with the index output]'
  '-s[Save files to category directories]'
  '-sha1[Print the SHA-1 value with the index output]'
  '-U[Ignore the unknown category - only save catgories in config files]'
  '-v[verbose debugging output]'
  '-V[print version information]'
  '-a[hash database of hashes to alert on]'
  '-c[specify a config file to use (in addition to default files)]'
  '-C[specify the ONLY config file to use]'
  '-d[save category index files in the specified directory]'
  '-f[file system type (Sleuth Kit types) of image]'
  '-i[format of image file]'
  '-o[offset of file system in image (in sectors)]'
  '-m[the mounting point of the image]'
  '-n[the NIST NSRL database file (NSRLFile.txt) (hashes to ignore)]'
  '-x[hash database of hashes to ignore]'
  '*:filename:_files'
)

_arguments -s $arguments
