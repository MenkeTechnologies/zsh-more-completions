#compdef dialyzer

local arguments

arguments=(
  '-r[same as the previous but the specified directories are searched]'
  '--apps[option typically used when building or modifying a plt as in:]'
  '-o[(or --output outfile)]'
  '--raw[when using Dialyzer from the command line, output the raw analysis]'
  '--src[override the default, which is to analyze BEAM files, and]'
  {-Dname,-Dname}'[)]'
  '-I[when analyzing from source, pass the include_dir to Dialyzer. (**)]'
  '-pa[include dir in the path for Erlang (useful when analyzing files]'
  '--output[_plt file]'
  '--plt[use the specified plt as the initial plt (if the plt was built]'
  '--plts[*]'
  '-Wwarn[A family of options which selectively turn on/off warnings]'
  '--shell[do not disable the Erlang shell while running the GUI.]'
  {--version,-v}'[)]'
  {--help,-h}'[)]'
  {--quiet,-q}'[)]'
  '--verbose[make Dialyzer a bit more verbose.]'
  '--statistics[prints information about the progress of execution (analysis phases]'
  '--build[_plt]'
  '--add[_to_plt]'
  '--remove[_from_plt]'
  '--check[_plt]'
  '--no[_check_plt (or -n)]'
  '--plt[_info]'
  '--get[_warnings]'
  '--dump[_callgraph file]'
  '--no[_native (or -nn)]'
  '--no[_native_cache]'
  '--fullpath[display the full path names of files for which warnings are emitted.]'
  '--gui[use the GUI.]'
  '-Wno[_return]'
  '-Wno[_unused]'
  '-Wno[_improper_lists]'
  '-Wno[_fun_app]'
  '-Wno[_match]'
  '-Wno[_opaque]'
  '-Wno[_fail_call]'
  '-Wno[_contracts]'
  '-Wno[_behaviours]'
  '-Wno[_missing_calls]'
  '-Wno[_undefined_callbacks]'
  '-Wunmatched[_returns ***]'
  '-Werror[_handling ***]'
  '-Wrace[_conditions ***]'
  '-Wunderspecs[**]'
  '-Wunknown[**]'
  '-Woverspecs[**]'
  '-Wspecdiffs[**]'
  '*:filename:_files'
)

_arguments -s $arguments
