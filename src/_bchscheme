#compdef bchscheme

local arguments

arguments=(
  '--library[sets the library search path to PATH. This is a colon-separated]'
  '--band[specifies the initial band to be loaded. Searches for FILENAME in]'
  '--fasl[specifies that a cold load should be performed, using FILENAME as]'
  '--heap[specifies the size of the heap in 1024-word blocks. Overrides any]'
  '--constant[specifies the size of constant space in 1024-word blocks. Overrides]'
  '--stack[specifies the size of the stack in 1024-word blocks. Overrides any]'
  '--option-summary[causes Scheme to write option values to standard error.]'
  '--help[causes Scheme to report the available command line options.]'
  '--version[causes Scheme to report versions and copyrights, then exit.]'
  {--batch-mode,--quiet,--silent}'[suppresses the startup report of versions and copyrights, and the]'
  '--emacs[specifies that Scheme is running as a subprocess of GNU Emacs.]'
  '--interactive[if this option isnt specified, and Schemes standard I/O is not a]'
  '--nocore[specifies that Scheme should not generate a core dump under any]'
  '--macosx-application[specifies that Scheme is running as a Mac OS X application.]'
  '--args[...]'
  '--edit[causes Edwin to start immediately after Scheme.]'
  '--eval[...]'
  '--load[...]'
  '--no-init-file[inhibits automatic loading of the ~/.scheme.init file.]'
  '--no-suspend-file[inhibits automatic saving of bands to ~/scheme_suspend.]'
  '--suspend-file[if specified, Scheme saves a band to ~/scheme_suspend on reception]'
  '*:filename:_files'
)

_arguments -s $arguments
