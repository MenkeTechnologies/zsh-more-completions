#compdef mf2pt1

local arguments

arguments=(
  '--help[provide help on mf2pt1s command-line options.]'
  '--version[output the mf2pt1 version number, copyright, and license.]'
  '--comment[include a font comment, usually a copyright notice.]'
  '--designsize[specify the font design size in points.]'
  '--encoding[designate the font encoding, either the name of a---typically]'
  '--family[specify the font family.]'
  {--fixedpitch,--nofixedpitch}'[assert that the font uses either monospaced (--fixedpitch) or]'
  '--fontversion[.mmm]'
  '--fullname[designate the full font name (family plus modifiers).]'
  '--italicangle[designate the italic angle in degrees counterclockwise from]'
  '--name[provide the font name.]'
  '--underpos[specify the vertical position of the underline in thousandths of the]'
  '--underthick[specify the thickness of the underline in thousandths of the font]'
  '--uniqueid[specify a globally unique font identifier.]'
  '--weight[provide a description of the font weight (e.g., ``Heavy).]'
  '--rounding[specify the fraction of a font unit (0.0 < number <= 1.0) to which]'
  '--bpppix[redefine the number of big points per pixel from 0.02 to number.]'
  '--ffscript[.pe]'
  '*:filename:_files'
)

_arguments -s $arguments
