#compdef xterm

local arguments

arguments=(
  '-C[intercept console messages]'
  '-Sccn[slave mode on "ttycc", file descriptor "n"]'
  '-T[title name for window]'
  '-b[internal border in pixels]'
  '-baudrate[set line-speed (default 38400)]'
  '-bcf[time text cursor is off when blinking]'
  '-bcn[time text cursor is on when blinking]'
  '-bd[border color]'
  '-bg[background color]'
  '-bw[border width in pixels]'
  '-cc[specify additional character classes]'
  '-class[class string (XTerm)]'
  '-cr[text cursor color]'
  '-display[X server to contact]'
  '-e[args ... command to execute]'
  '-fa[freeType font-selection pattern]'
  '-fb[bold text font]'
  '-fd[freeType Doublesize font-selection pattern]'
  '-fg[foreground color]'
  '-fi[icon font for active icon]'
  '-fn[normal text font]'
  '-fs[freeType font-size]'
  '-fw[doublewidth text font]'
  '-fwb[doublewidth bold text font]'
  '-fx[XIM fontset]'
  '-geometry[size (in characters) and position]'
  '-help[print out this message]'
  '-iconic[start iconic]'
  '-into[use the window id given to -into as the parent window rather than the default root window]'
  '-kt[set keyboard type: tcap hp sco sun vt220]'
  '-lcc[filename of locale converter (/usr/X11R6/bin/luit)]'
  '-leftbar[force scrollbar left]'
  '-lf[logging filename (not supported)]'
  '-mc[multiclick time in milliseconds]'
  '-ms[pointer color]'
  '-n[icon name for window]'
  '-name[client instance, icon, and title strings]'
  '-nb[margin bell in characters from right end]'
  '-report-charclass[report "charClass" after initialization]'
  '-report-colors[report colors as they are allocated]'
  '-report-fonts[report fonts as loaded to stdout]'
  '-rightbar[force scrollbar right (default left)]'
  '-selbg[selection background color]'
  '-selfg[selection foreground color]'
  '-sh[scale line-height values by the given number]'
  '-sl[number of scrolled lines to save]'
  '-ti[terminal identifier]'
  '-title[title string]'
  '-tm[terminal mode keywords and characters]'
  '-tn[TERM environment variable name]'
  '-version[print the version number]'
  '-xrm[additional resource specifications]'
  '-ziconbeep[beep and flag icon of window having hidden output]'
  '*:filename:_files'
)

_arguments -s $arguments
