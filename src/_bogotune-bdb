#compdef bogotune-bdb

local arguments

arguments=(
  '-h[print this help message.]'
  '-C[dont read standard config files.]'
  '-c[read specified config file.]'
  '-D[dont read a wordlist file.]'
  '-d[specify directory for wordlists.]'
  '-E[disable ESF (effective size factor) tuning.]'
  '-M[rewrite input file in message count format.]'
  '-r[specify robx value]'
  '-T[specify fp target value]'
  '-s[1 file2 ... - spam files]'
  '-n[1 file2 ... - non-spam files]'
  '-v[increase level of verbose messages]'
  '-q[quiet (suppress warnings)]'
  '*:filename:_files'
)

_arguments -s $arguments
