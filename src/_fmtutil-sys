#compdef fmtutil-sys

local arguments

arguments=(
  '--sys[use TEXMFSYS{VAR,CONFIG}]'
  '--user[use TEXMF{VAR,CONFIG}]'
  '--cnffile[read FILE instead of fmtutil.cnf]'
  '--fmtdir[write formats under DIR instead of TEXMF\[SYS\]VAR]'
  '--no-engine-subdir[dont use engine-specific subdir of the fmtdir]'
  '--no-error-if-no-format[successfully if no format is selected]'
  '--no-error-if-no-engine[1,ENGINE2,...]'
  '--no-strict[exit successfully even if a format fails to build]'
  '--nohash[dont update ls-R files]'
  '--recorder[pass the -recorder option and save .fls files]'
  '--quiet[be silent]'
  '--catcfg[(does nothing, exists for compatibility)]'
  '--dolinks[(does nothing, exists for compatibility)]'
  '--force[(does nothing, exists for compatibility)]'
  '--test[(does nothing, exists for compatibility)]'
  '--all[recreate all format files]'
  '--missing[create all missing format files]'
  '--refresh[recreate only existing format files]'
  '--byengine[(re)create formats built with ENGINE]'
  '--byfmt[(re)create format FORMAT]'
  '--byhyphen[(re)create formats that depend on HYPHENFILE]'
  '--enablefmt[FORMAT\[/ENGINE\] enable FORMAT, as built with ENGINE]'
  '--disablefmt[/ENGINE\] disable FORMAT, as built with ENGINE]'
  '--listcfg[list (enabled and disabled) configurations]'
  '--showhyphen[print name of hyphen file for FORMAT]'
  '--version[show version information and exit]'
  '--help[show this message and exit]'
  '--no-error-if-no-engine[exists, since luajittex cannot be]'
  '*:filename:_files'
)

_arguments -s $arguments
