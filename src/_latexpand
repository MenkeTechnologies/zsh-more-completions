#compdef latexpand

local arguments

arguments=(
  '--verbose[show whats going on]'
  '--keep-comments[dont strip comments (comments are lines]'
  '--empty-comments[empty comments (i.e. % at end of lines) for clarity]'
  '--keep-includes[dont expand \input and \include directives]'
  '--expand-usepackage[expand \usepackage{...} directives if the]'
  '--expand-bbl[expand the bibliography by inlining FILE]'
  '--help[this help message]'
  {--output,-o}'[generate output in <file>]'
  '--explain[generate explanatory comments in output]'
  '--show-graphics[show included graphics]'
  '--graphics[_extensions]'
  '--fatal[die in case a file cant be found.]'
  '--makeatletter[insert a \makeatletter in the preamble. In some]'
  {--in-encoding,--out-encoding}'[file encoding used by input and output files.]'
  '--in-encoding[(UTF-8)]'
  '*:filename:_files'
)

_arguments -s $arguments
