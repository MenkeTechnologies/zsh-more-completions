#compdef fig2mpdf

local arguments

arguments=(
  '-e[create an eps file instead of a pdf]'
  '-p[colon separated list of layer ranges a-b,c,d-e,...]'
  '-i[do include the deepest range in all figures]'
  '-I[include all lower ranges (pyramide mode)]'
  '-g[set layer gapwidth for automatically detecting ranges (default:0)]'
  '-s[replace \usepackage{times} by \usepackage{<style>} in the latex commands]'
  '-H[use file <header> for creating tex documents (only]'
  '-G[name multilayer files in PGF file name format <name>.page<no>.<ext>]'
  '-v[be verbose]'
  '-V[print out the version of fig2mpdf]'
  '*:filename:_files'
)

_arguments -s $arguments
