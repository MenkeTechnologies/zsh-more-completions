#compdef sg_get_config

local arguments

arguments=(
  '--brief[|-b only give feature names of DEVICE (dont decode)]'
  '--current[|-c equivalent to --rt=1 (show current)]'
  '--help[|-h print usage message then exit]'
  '--hex[|-H output response in hex]'
  '--inner-hex[|-i decode to feature name, then output features in hex]'
  '--list[|-l list all known features + profiles (ignore DEVICE)]'
  '--raw[|-R output in binary (to stdout)]'
  '--readonly[|-q open DEVICE read-only (def: open it read-write)]'
  '--rt[RT default value is 0]'
  '--starting[FC starting from feature code (FC) value]'
  '--verbose[|-v verbose]'
  '--version[|-V output version string]'
  '*:filename:_files'
)

_arguments -s $arguments
