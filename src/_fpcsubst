#compdef fpcsubst

local arguments

arguments=(
  '-i[set input file. Default is standard input]'
  '-o[set output file. Default is standard output.]'
  '-d[value define name=value pair.]'
  '-h[show this help and exit.]'
  '-u[remove name from list of name/value pairs.]'
  '-l[read name/value pairs from filename]'
  '-b[show builtin list and exit.]'
  '-v[be verbose.]'
  '*:filename:_files'
)

_arguments -s $arguments
