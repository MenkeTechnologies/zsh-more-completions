#compdef ffcfstress

local arguments

arguments=(
  '-d[device name (default: /dev/input/event0)]'
  '-u[update rate in Hz (default: 25.00)]'
  '-f[spring center motion frequency in Hz (default: 0.10)]'
  '-a[spring center motion amplitude 0.0..1.0 (default: 1.00)]'
  '-s[spring strength factor (default: 1.00)]'
  '-x[absolute axis to test (default: 0=X)]'
  '-A[switch off auto-centering]'
  '-o[dummy option (useful because at least one option is needed)]'
  '*:filename:_files'
)

_arguments -s $arguments
