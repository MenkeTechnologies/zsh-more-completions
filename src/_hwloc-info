#compdef hwloc-info

local arguments

arguments=(
  '--objects[report information about specific objects]'
  '--topology[report information the topology]'
  '--support[report information about supported features]'
  {-v,--verbose}'[include additional details]'
  {-s,--silent}'[reduce the amount of details to show]'
  '--ancestors[display the chain of ancestor objects up to the root]'
  '--ancestor[only display the ancestor of the given type]'
  '--children[display all children]'
  '--descendants[only display descendants of the given type]'
  '-n[prefix each line with the index of the considered object]'
  '--restrict[restrict the topology to processors listed in <cpuset>]'
  '--restrict[restrict the topology to the current process binding]'
  '--no-icaches[do not show instruction caches]'
  '--no-io[do not show any I/O device or bridge]'
  '--no-bridges[do not any I/O bridge except hostbridges]'
  '--whole-io[show all I/O devices and bridges]'
  '--input[file>]'
  '-i[file> Read topology from XML file <path>]'
  '--input[]'
  '-i[read topology from chroot containing the /proc and /sys]'
  '--input[2 2"]'
  '-i[2 2" Simulate a fake hierarchy, here with 2 NUMA nodes of 2]'
  '--input-format[]'
  '--if[enforce input format among xml, fsroot, synthetic]'
  '--thissystem[assume that the input topology provides the topology]'
  '--pid[detect topology as seen by process <pid>]'
  '--whole-system[do not consider administration limitations]'
  {-l,--logical}'[use logical object indexes for input (default)]'
  {-p,--physical}'[use physical object indexes for input]'
  '--version[report version and exit]'
  '*:filename:_files'
)

_arguments -s $arguments
