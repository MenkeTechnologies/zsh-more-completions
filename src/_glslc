#compdef glslc

local arguments

arguments=(
  '-c[only run preprocess, compile, and assemble steps.]'
  '-Dmacro[add an implicit macro definition.]'
  '-E[outputs only the results of the preprocessing step.]'
  '-fauto-bind-uniforms[automatically assign bindings to uniform variables that]'
  '-fauto-map-locations[automatically assign locations to uniform variables that]'
  '-fentry-point[specify the entry point name for HLSL compilation, for]'
  '-fhlsl[_functionality1, -fhlsl-functionality1]'
  '-fhlsl-iomap[use HLSL IO mappings for bindings.]'
  '-fhlsl-offsets[use HLSL offset rules for packing members of blocks.]'
  '-flimit[specify resource limits. Each limit is specified by a limit]'
  '-flimit-file[set limits as specified in the given file.]'
  '-fresource-set-binding[<reg0> <set0> <binding0>]'
  '-fcbuffer-binding-base[<value>]'
  '-fimage-binding-base[<value>]'
  '-fsampler-binding-base[<value>]'
  '-fssbo-binding-base[<value>]'
  '-ftexture-binding-base[<value>]'
  '-fuav-binding-base[<value>]'
  '-fubo-binding-base[<value>]'
  '-fshader-stage[treat subsequent input files as having stage <stage>.]'
  '-g[generate source-level debug information.]'
  '--help[display available options.]'
  '-I[add directory to include search path.]'
  '-mfmt[output SPIR-V binary code using the selected format. This]'
  '-M[generate make dependencies. Implies -E and -w.]'
  '-MM[an alias for -M.]'
  '-MD[generate make dependencies and compile.]'
  '-MF[write dependency output to the given file.]'
  '-MT[specify the target of the rule emitted by dependency]'
  '-O[optimize the generated SPIR-V code for better performance.]'
  '-Os[optimize the generated SPIR-V code for smaller size.]'
  '-O0[disable optimization.]'
  '-o[write output to <file>.]'
  '-std[version and profile for GLSL input files. Possible values]'
  '-S[only run preprocess and compilation steps.]'
  '--show-limits[display available limit names and their default values.]'
  '--target-env[set the target client environment, and the semantics]'
  '--version[display compiler version information.]'
  '-w[suppresses all warning messages.]'
  '-Werror[treat all warnings as errors.]'
  '-x[treat subsequent input files as having type <language>.]'
  '*:filename:_files'
)

_arguments -s $arguments
