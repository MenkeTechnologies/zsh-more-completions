#compdef rctest

local arguments

arguments=(
  '-r[and receive]'
  '-w[and send]'
  '-d[and dump incoming data]'
  '-s[and send]'
  '-u[and receive]'
  '-n[and be silent]'
  '-c[disconnect, connect, ...]'
  '-m[connects]'
  '-a[test (receive hcix as parameter)]'
  '*:filename:_files'
)

_arguments -s $arguments
