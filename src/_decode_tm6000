#compdef decode_tm6000

local arguments

arguments=(
  {-a,--audio}'[outputs audio on stdout]'
  {-d,--device}'[uses device for reading]'
  {-f,--freq}'[station frequency, in MHz (default is 193.25)]'
  {-i,--input}'[parses a file, instead of a device]'
  {-n,--nbufs}'[number of video buffers]'
  {-o,--output}'[outputs raw stream to a file]'
  {-r,--read}'[use read() instead of mmap method]'
  {-v,--verbose}'[enables debug messages]'
  '--usage[give a short usage message]'
  {-V,--version}'[print program version]'
  '*:filename:_files'
)

_arguments -s $arguments
