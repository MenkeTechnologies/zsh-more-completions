#compdef capinfos

local arguments

arguments=(
  '-t[the capture file type]'
  '-E[the capture file encapsulation]'
  '-I[the capture file interface information]'
  '-F[additional capture file information]'
  '-H[the SHA256, RMD160, and SHA1 hashes of the file]'
  '-k[the capture comment]'
  '-c[the number of packets]'
  '-s[the size of the file (in bytes)]'
  '-d[the total length of all packets (in bytes)]'
  '-l[the packet size limit (snapshot length)]'
  '-u[the capture duration (in seconds)]'
  '-a[the capture start time]'
  '-e[the capture end time]'
  '-o[the capture file chronological status (True/False)]'
  '-S[start and end times as seconds]'
  '-y[average data rate (in bytes/sec)]'
  '-i[average data rate (in bits/sec)]'
  '-z[average packet size (in bytes)]'
  '-x[average packet rate (in packets/sec)]'
  '-L[long report (default)]'
  '-T[table report]'
  '-M[machine-readable values in long reports]'
  '-R[header record (default)]'
  '-r[not generate header record]'
  '-B[infos with TAB character (default)]'
  '-m[infos with comma (,) character]'
  '-b[infos with SPACE character]'
  '-N[not quote infos (default)]'
  '-q[infos with single quotes ()]'
  '-Q[infos with double quotes (")]'
  '-h[this help and exit]'
  '-C[processing if file open fails (default is to continue)]'
  '-A[all infos (default)]'
  '-K[displaying the capture comment]'
  '*:filename:_files'
)

_arguments -s $arguments
