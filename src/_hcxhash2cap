#compdef hcxhash2cap

local arguments

arguments=(
  '-c[output cap file]'
  '--pmkid[input PMKID hash file]'
  '--hccapx[input hashcat hccapx file]'
  '--hccap[input hashcat hccap file]'
  '--john[input John the Ripper WPAPSK hash file]'
  '--help[show this help]'
  '--version[show version]'
  '*:filename:_files'
)

_arguments -s $arguments
