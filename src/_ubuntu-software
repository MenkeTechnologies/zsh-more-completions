#compdef ubuntu-software

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show help options]'
  '--help-all[show all help options]'
  '--help-gapplication[show GApplication options]'
  '--help-gtk[show GTK+ Options]'
  '--mode[start up mode: either ‘updates’, ‘updated’, ‘installed’ or ‘overview’]'
  '--search[search for applications]'
  '--details[show application details (using application ID)]'
  '--details-pkg[show application details (using package name)]'
  '--install[install the application (using application ID)]'
  '--local-filename[open a local package file]'
  '--interaction[the kind of interaction expected for this action: either ‘none’, ‘notify’, or ‘full’]'
  '--verbose[show verbose debugging information]'
  '--profile[show profiling information for the service]'
  '--quit[quit the running instance]'
  '--prefer-local[prefer local file sources to AppStream]'
  '--version[show version number]'
  '--display[X display to use]'
  '*:filename:_files'
)

_arguments -s $arguments
