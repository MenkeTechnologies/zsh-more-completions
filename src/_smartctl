#compdef smartctl

local arguments

arguments=(
  {-h,--help,--usage}'[display this help and exit]'
  {-V,--version,--copyright,--license}'[print license, copyright, and version information and exit]'
  {-i,--info}'[show identity information for device]'
  '--identify[show words and bits from IDENTIFY DEVICE data (ATA)]'
  {-g,--get}'[get device setting: all, aam, apm, lookahead, security, wcache, rcache, wcreorder]'
  {-a,--all}'[show all SMART information for device]'
  {-x,--xall}'[show all information for device]'
  '--scan[scan for devices]'
  '--scan-open[scan for devices and try to open each device]'
  {-q,--quietmode}'[(ATA)]'
  {-d,--device}'[specify device type to one of: ata, scsi, nvme\[,NSID\], sat\[,auto\]\[,N\]\[+TYPE\], usbcypress\[,X\], usbjmicron\[,p\]\[,x\]\[,N\], usbprolific, usbsunplus, marvell, areca,N/E, 3ware,N, hpt,L/M/N, megaraid,N, aacraid,H,L,ID, cciss,N, auto, test]'
  {-T,--tolerance}'[(ATA)]'
  {-b,--badsum}'[(ATA)]'
  {-r,--report}'[report transactions (see man page)]'
  {-n,--nocheck}'[(ATA)]'
  {-s,--smart}'[enable/disable SMART on device (on/off)]'
  {-o,--offlineauto}'[(ATA)]'
  {-S,--saveauto}'[(ATA)]'
  '-s[VALUE\], --set=NAME\[,VALUE\]]'
  {-H,--health}'[show device SMART health status]'
  {-c,--capabilities}'[(ATA, NVMe)]'
  {-A,--attributes}'[show device SMART vendor-specific Attributes and values]'
  {-f,--format}'[(ATA)]'
  {-l,--log}'[show device log. TYPE: error, selftest, selective, directory\[,g|s\]]'
  '-v[OPTION , --vendorattribute=N,OPTION (ATA)]'
  {-F,--firmwarebug}'[(ATA)]'
  {-P,--presets}'[(ATA)]'
  '-B[+\]FILE, --drivedb=\[+\]FILE (ATA)]'
  {-t,--test}'[run test. TEST: offline, short, long, conveyance, force, vendor,N]'
  {-C,--captive}'[do test in captive mode (along with -t)]'
  {-X,--abort}'[abort any non-captive test on device]'
  '*:filename:_files'
)

_arguments -s $arguments
