#compdef authorindex

local arguments

arguments=(
  '-d[additional statistical information as comments]'
  '-i[file (with extension .ain) suitable as input for makeindex]'
  '-k[auxiliary bibliography style file _autidx_.bst after script finishes]'
  '-h[this help and exit]'
  '-r[suppresses automatic inclusion of .aux generated by \include-ed files]'
  '-p[result to standard output]'
  '*:filename:_files'
)

_arguments -s $arguments
