#compdef kotlin

local arguments

arguments=(
  '-classpath[) <path>    Paths where to find user class files]'
  '-Dname[set a system JVM property]'
  '-J[<option>                 Pass an option directly to JVM]'
  '-no-reflect[dont include Kotlin reflection implementation into classpath]'
  '-version[display Kotlin version]'
  '-help[)                 Print a synopsis of options]'
  '*:filename:_files'
)

_arguments -s $arguments
