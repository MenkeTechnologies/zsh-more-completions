#compdef pod2man

local arguments

arguments=(
  {-c,--center}'[sets the centered page header for the ".TH" macro to string. The]'
  '--official[.]'
  {-d,--date}'[set the left-hand footer string for the ".TH" macro to string. By]'
  '--errors[set the error handling style. "die" says to throw an exception on]'
  '--fixed[the fixed-width font to use for verbatim text and code. Defaults to]'
  '--fixedbold[bold version of the fixed-width font. Defaults to "CB". Only matters]'
  '--fixeditalic[italic version of the fixed-width font (actually, something of a]'
  '--fixedbolditalic[bold italic (probably actually oblique) version of the fixed-width]'
  '(- * :)'{-h,--help}'[print out usage information.]'
  {-l,--lax}'[no longer used. pod2man used to check its input for validity as a]'
  '--lquote[]'
  '--rquote[sets the quote marks used to surround C<> text. --lquote sets the]'
  {--lquote,--rquote,--quotes}'[.]'
  {-n,--name}'[set the name of the manual page for the ".TH" macro to name. Without]'
  '--nourls[normally, L<> formatting codes with a URL but anchor text are]'
  {-o,--official}'[set the default header to indicate that this page is part of the]'
  {-q,--quotes}'[sets the quote marks used to surround C<> text to quotes. If quotes]'
  {-r,--release}'[set the centered footer for the ".TH" macro to version. By default]'
  {-s,--section}'[set the section for the ".TH" macro. The standard section numbering]'
  '--stderr[by default, pod2man dies if any errors are detected in the POD]'
  {-u,--utf8}'[by default, pod2man produces the most conservative possible *roff]'
  {-v,--verbose}'[print out the name of each output file as it is being generated.]'
  '*:filename:_files'
)

_arguments -s $arguments
