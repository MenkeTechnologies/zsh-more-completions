#compdef tomboy

local arguments

arguments=(
  '--version[print version information.]'
  '--help[print this usage message.]'
  '--note-path[load/store note data in this directory.]'
  '--search[open the search all notes window with the search text.]'
  '--new-note[create and display a new note.]'
  '--new-note[create and display a new note, with a title.]'
  '--open-note[/url\] Display the existing note matching title.]'
  '--start-here[display the Start Here note.]'
  '--highlight-search[search and highlight text in the opened note.]'
  '--addin[:html-export-all \[path\] Exports all notes to HTML in the given location.]'
  '--addin[:html-export-all-quit \[path\] Exports all notes to HTML in the given location and then quits.]'
  '*:filename:_files'
)

_arguments -s $arguments
