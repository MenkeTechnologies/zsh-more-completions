#compdef sssd

local arguments

arguments=(
  {-d,--debug-level}'[debug level]'
  '--debug-timestamps[add debug timestamps]'
  '--debug-microseconds[show timestamps with microseconds]'
  '--logger[set logger]'
  {-D,--daemon}'[become a daemon (default)]'
  {-i,--interactive}'[run interactive (not a daemon)]'
  {-c,--config}'[specify a non-default config file]'
  {-g,--genconf}'[refresh the configuration database, then]'
  '--version[print version number and exit]'
  '--usage[display brief usage message]'
  '*:filename:_files'
)

_arguments -s $arguments
