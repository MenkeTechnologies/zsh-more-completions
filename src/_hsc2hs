#compdef hsc2hs

local arguments

arguments=(
  {-o,--output}'[name of main output file]'
  {-t,--template}'[template file]'
  {-c,--cc}'[C compiler to use]'
  {-l,--ld}'[linker to use]'
  {-C,--cflag}'[flag to pass to the C compiler]'
  '-I[passed to the C compiler]'
  {-L,--lflag}'[flag to pass to the linker]'
  {-i,--include}'[as if placed in the source]'
  '-D[VALUE\] --define=NAME\[=VALUE\] as if placed in the source]'
  '--no-compile[stop after writing *_hsc_make.c]'
  {-x,--cross-compile}'[activate cross-compilation mode]'
  '--cross-safe[restrict .hsc directives to those supported by --cross-compile]'
  {-k,--keep-files}'[do not remove temporary files]'
  '--column[annotate output with COLUMN pragmas (requires GHC 8.2)]'
  {-v,--verbose}'[dump commands to stderr]'
  {-V,--version}'[output version information and exit]'
  '*:filename:_files'
)

_arguments -s $arguments
