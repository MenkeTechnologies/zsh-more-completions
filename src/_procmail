#compdef procmail

local arguments

arguments=(
  '-v[display the version number and exit]'
  '-p[preserve (most of) the environment upon startup]'
  '-t[fail softly if mail is undeliverable]'
  '-f[(re)generate the leading From line]'
  '-o[override the leading From line if necessary]'
  '-Y[berkeley format mailbox, disregard Content-Length:]'
  '-a[will set $1, $2, etc]'
  '-d[explicit delivery mode]'
  '-z[act as an LMTP server]'
  '-m[act as a general purpose mail filter]'
  '*:filename:_files'
)

_arguments -s $arguments
