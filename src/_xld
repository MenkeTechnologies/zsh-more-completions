#compdef xld

local arguments

arguments=(
  '-c[Cue sheet you want to split file with]'
  '-e[Exclude pre-gap from decoded file]'
  '-f[Specify format of decoded file]'
  '-o[Specify path of decoded file]'
  '-t[List of tracks you want to decode; ex. -t 1,3,4]'
  '--raw[Force read input file as Raw PCM]'
  '--samplerate[Samplerate of Raw PCM file; default=44100]'
  '--bit[Bit depth of Raw PCM file; default=16]:bit depth'
  '--channels[Number of channels of Raw PCM file; default=2]:channels'
  '--endian[Endian of Raw PCM file (little or big); default=little]:endian'
  '--correct-30samples[Correct "30 samples moved offset" problem]'
  '--ddpms[DDPMS file (assumes that the associated file is Raw PCM)]'
  '--stdout[write output to stdout (-o option is ignored)]'
  '--profile[choose a profile saved as <name> in GUI]'
  '--logchecker[check sanity of a logfile in <path>]:path'
  '--no-metadata[do not append any metadata]'
  '--filename-format[Format output filename as <format>]:format'
  '--scan-replaygain[scan replaygain of a file in <path>]:path'
  '--cue-encoding[specify cue sheet encoding as IANA charset <name>]:name'
  '*:filename:_files'
)

_arguments -s $arguments
