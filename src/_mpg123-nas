#compdef mpg123-nas

local arguments

arguments=(
  '-v[increase verbosity level -q quiet (dont print title)]'
  '-t[testmode (no output) -s write to stdout]'
  '-w[write output as WAV file]'
  '-k[skip first n frames \[0\] -n n decode only n frames \[all\]]'
  '-c[check range violations -y DISABLE resync on errors]'
  '-b[output buffer: n Kbytes \[0\] -f n change scalefactor \[32768\]]'
  '-r[set/force samplerate \[auto\]]'
  '-o[select output module -a d set audio device]'
  '-2[downsample 1:2 (22 kHz) -4 downsample 1:4 (11 kHz)]'
  '-d[play every nth frame only -h n play every frame n times]'
  '-0[decode channel 0 (left) only -1 decode channel 1 (right) only]'
  '-m[mix both channels (mono) -p p use HTTP proxy p \[$HTTP_PROXY\]]'
  '-z[shuffle play (with wildcards) -Z random play]'
  '-u[HTTP authentication string -E f Equalizer, data from file]'
  '-C[enable control keys --no-gapless not skip junk/padding in mp3s]'
  '*:filename:_files'
)

_arguments -s $arguments
