#compdef abrt-retrace-client

local arguments

arguments=(
  {-v,--verbose}'[be verbose]'
  {-s,--syslog}'[log to syslog]'
  {-k,--insecure}'[allow insecure connection to retrace server]'
  '--no-pkgcheck[do not check whether retrace server is able to process given package before uploading the archive]'
  '--url[retrace server URL]'
  '--port[retrace server port]'
  '--headers[(debug) show received HTTP headers]'
  {-d,--dir}'[read data from ABRT problem directory]'
  {-c,--core}'[read data from coredump]'
  {-l,--status-delay}'[delay for polling operations]'
  '--no-unlink[(debug) do not delete temporary archive created from dump dir in /var/tmp]'
  {-t,--task}'[id of your task on server]'
  {-p,--password}'[password of your task on server]'
  '*:filename:_files'
)

_arguments -s $arguments
