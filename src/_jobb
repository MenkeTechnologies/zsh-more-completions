#compdef jobb

local arguments

arguments=(
  '-d[use <directory> as input/output for OBB files]'
  '-k[use <key> as password to encrypt/decrypt OBB file]'
  '-o[write OBB file out to <filename>]'
  '-v[verbose mode]'
  '-h[help; this usage screen]'
  '-pn[package name for OBB file]'
  '-pv[package version for OBB file]'
  '-ov[set overlay flag]'
  '-dump[parse and dump OBB file]'
  '-about[notices about this tool]'
  '*:filename:_files'
)

_arguments -s $arguments
