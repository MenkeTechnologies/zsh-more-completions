#compdef iconvconfig

local arguments

arguments=(
  '--nostdlib[do not search standard directories, only those on]'
  {-o,--output}'[put output in FILE instead of installed location]'
  '--prefix[prefix used for all file accesses]'
  '--usage[give a short usage message]'
  {-V,--version}'[print program version]'
  '*:filename:_files'
)

_arguments -s $arguments
