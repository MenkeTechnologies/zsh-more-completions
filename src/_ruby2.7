#compdef ruby2.7

local arguments

arguments=(
  '-0[specify record separator (\0, if no argument)]'
  '-a[autosplit mode with -n or -p (splits $_ into $F)]'
  '-c[check syntax only]'
  '-Cdirectory[cd to directory before executing your script]'
  {-d,--debug}'[set debugging flags (set $DEBUG to true)]'
  '-e[    one line of script. Several -es allowed. Omit \[programfile\]]'
  {-Eex,--encoding}'[specify the default external and internal character encodings]'
  '-Fpattern[split() pattern for autosplit (-a)]'
  '-i[edit ARGV files in place (make backup if extension supplied)]'
  '-Idirectory[specify $LOAD_PATH directory (may be used more than once)]'
  '-l[enable line ending processing]'
  '-n[assume while gets(); ... end loop around your script]'
  '-p[assume loop like -n but print line also like sed]'
  '-rlibrary[require the library before executing your script]'
  '-s[enable some switch parsing for switches after script name]'
  '-S[look for the script using PATH environment variable]'
  '-v[print the version number, then turn on verbose mode]'
  '-w[turn warnings on for your script]'
  '-W[2|:category\]]'
  '-x[strip off text before #!ruby line and perhaps cd to directory]'
  '--jit[enable JIT with default options (experimental)]'
  '--jit-[enable JIT with an option (experimental)]'
  '--copyright[print the copyright]'
  '--dump[...}\[,...\]]'
  '--enable[...}\[,...\], --disable={gems|rubyopt|...}\[,...\]]'
  {--external-encoding,--internal-encoding}'[specify the default external or internal character encoding]'
  '--verbose[turn on verbose mode and disable script from stdin]'
  '--version[print the version number, then exit]'
  '--help[show this message, -h for short message]'
  '--jit-warnings[enable printing JIT warnings]'
  '--jit-debug[enable JIT debugging (very slow), or add cflags if specified]'
  '--jit-wait[wait until JIT compilation finishes every time (for testing)]'
  '--jit-save-temps[save JIT temporary files in $TMP or /tmp (for testing)]'
  '--jit-verbose[print JIT logs of level num or less to stderr (default: 0)]'
  '--jit-max-cache[max number of methods to be JIT-ed in a cache (default: 100)]'
  '--jit-min-calls[number of calls to trigger JIT (for testing, default: 10000)]'
  '*:filename:_files'
)

_arguments -s $arguments
