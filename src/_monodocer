#compdef monodocer

local arguments

arguments=(
  '--delete[delete removed members from the XML files.]'
  '--exceptions[document potential exceptions that members can]'
  '-f[specify a FLAG to alter behavior. See later -f*]'
  '--fignore-missing-types[do not report an error if a --type=TYPE type]'
  '--fno-assembly-versions[do not generate //AssemblyVersion elements.]'
  {-i,--import}'[import documentation from FILE.]'
  {-L,--lib}'[check for assembly references in DIRECTORY.]'
  '--library[ignored for compatibility with update-ecma-xml.]'
  {-o,--out}'[root DIRECTORY to generate/update documentation.]'
  '-r[search for dependent assemblies in the directory]'
  '--since[manually specify the assembly VERSION that new]'
  '--type[only update documentation for TYPE.]'
  '--dropns[when processing assembly ASSEMBLY, strip off]'
  '--ntypes[if the new assembly is switching to magic types]'
  '--preserve[do not delete members that dont exist in the]'
  '--api-style[denotes the apistyle. Currently, only `classic`]'
  {--fx,--frameworks}'[configuration XML file, that points to directories]'
  '--use-docid[add DocId to the list of type and member]'
  '-h[-\?, --help Show this message and exit.]'
  '*:filename:_files'
)

_arguments -s $arguments
