#compdef tkiptun-ng

local arguments

arguments=(
  '-d[MAC address, Destination]'
  '-s[MAC address, Source]'
  '-m[minimum packet length (default: 80)]'
  '-n[maximum packet length (default: 80)]'
  '-t[frame control, To DS bit]'
  '-f[frame control, From DS bit]'
  '-D[disable AP detection]'
  '-Z[select packets manually]'
  '-x[number of packets per second]'
  '-a[set Access Point MAC address]'
  '-c[set Destination MAC address]'
  '-h[set Source MAC address]'
  '-e[set target AP SSID]'
  '-M[MIC error timeout in seconds \[60\]]'
  '-K[keystream for continuation]'
  '-y[keystream-file for continuation]'
  '-j[inject FromDS packets]'
  '-P[pmk for verification/vuln testing]'
  '-p[psk to calculate pmk with essid]'
  '-i[capture packets from this interface]'
  '-r[extract packets from this pcap file]'
  '--help[Displays this usage screen]'
  '*:filename:_files'
)

_arguments -s $arguments
