#compdef readtags

local arguments

arguments=(
  '-d[turn on debugging output.]'
  '-e[include extension fields in output.]'
  '-h[print this help message.]'
  '-i[perform case-insensitive matching.]'
  '-l[list all tags.]'
  '-n[allow print line numbers if -e option is given.]'
  '-p[perform partial matching.]'
  '-Q[filter the result with EXP.]'
  '-s[1|2\]    Override sort detection of tag file.]'
  '-t[use specified tag file (default: "tags").]'
  '*:filename:_files'
)

_arguments -s $arguments
