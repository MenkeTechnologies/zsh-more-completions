#compdef gpicview

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show help options]'
  '--help-all[show all help options]'
  '--help-gtk[show GTK+ Options]'
  {-v,--version}'[print version information and exit]'
  '--slideshow[start slideshow]'
  '--display[X display to use]'
  '*:filename:_files'
)

_arguments -s $arguments
