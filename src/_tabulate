#compdef tabulate

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show this message]'
  {-1,--header}'[use the first row of data as a table header]'
  {-o,--output}'[print table to FILE (default: stdout)]'
  {-s,--sep}'[use a custom column separator (default: whitespace)]'
  {-F,--float}'[floating point number format (default: g)]'
  {-f,--format}'[set output table format; supported formats:]'
  '*:filename:_files'
)

_arguments -s $arguments
