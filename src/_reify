#compdef reify

local arguments

arguments=(
  {--sccs,-c}'[calculate strongly connected components]'
  {--steps,-s}'[add step numbers to generated facts]'
  {--help,-h}'[Print help information and exit]'
  {--version,-v}'[Print version information and exit]'
  {--verbose,-V}'[Set verbosity level to <n>]'
  '--time-limit[Set time limit to <n> seconds (0=no limit)]'
  '*:filename:_files'
)

_arguments -s $arguments
