#compdef plecost

local arguments

arguments=(
  '-l[Limit number of results for each plugin in google.]'
  '-G[Google search mode]'
  '-n[Number of plugins to use (Default all - more than 7000).]'
  '-c[Check plugins only with CVE associated.]'
  '-R[Reload plugin list. Use -n option to control the size (This take several minutes)]'
  '-o[Output file. (Default "output.txt")]'
  '-i[Input plugin list. (Need to start the program)]'
  '-s[Min sleep time between two probes. Time in seconds. (Default 10)]'
  '-M[Max sleep time between two probes. Time in seconds. (Default 20)]'
  '-t[Number of threads. (Default 1)]'
  '-h[Display help. (More info: http://iniqua.com/labs/)]'
  '*:filename:_files'
)

_arguments -s $arguments
