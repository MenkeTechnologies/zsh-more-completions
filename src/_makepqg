#compdef makepqg

local arguments

arguments=(
  '-a[output DER-encoded PQG params, BTOA encoded.]'
  '-b[output DER-encoded PQG params in binary]'
  '-r[output P, Q and G in ASCII hexadecimal.]'
  '-l[length of prime in bits (1024 is default)]'
  '-n[length of subprime in bits]'
  '-o[output to this file (default is stdout)]'
  '-g[generate SEED this many bits long.]'
  '*:filename:_files'
)

_arguments -s $arguments
