#compdef which

local arguments

arguments=(
  '--version[-\[vV\] Print version and exit successfully.]'
  '--help[print this help and exit successfully.]'
  '--skip-dot[skip directories in PATH that start with a dot.]'
  '--skip-tilde[skip directories in PATH that start with a tilde.]'
  '--show-dot[dont expand a dot to current directory in output.]'
  '--show-tilde[output a tilde for HOME directory for non-root.]'
  '--tty-only[stop processing options on the right if not on tty.]'
  {--all,-a}'[print all matches in PATH, not just the first]'
  {--read-alias,-i}'[list of aliases from stdin.]'
  '--skip-alias[ignore option --read-alias; dont read stdin.]'
  '--read-functions[shell functions from stdin.]'
  '--skip-functions[option --read-functions; dont read stdin.]'
  '*:filename:_files'
)

_arguments -s $arguments
