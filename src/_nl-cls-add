#compdef nl-cls-add

local arguments

arguments=(
  {-q,--quiet}'[do not print informal notifications.]'
  '(- * :)'{-h,--help}'[show this help text.]'
  {-v,--version}'[show versioning information.]'
  '--update[update classifier if it exists.]'
  '--update-only[only update classifier, never create it.]'
  {-d,--dev}'[network device the classifier should be attached to.]'
  {-i,--id}'[ID of new classifier (default: auto-generated)]'
  {-p,--parent}'[ID of parent { root | ingress | class-ID }]'
  '--proto[protocol to match (default: all)]'
  '--prio[priority (default: 0)]'
  '--mtu[overwrite MTU (default: MTU of network device)]'
  '--mpu[minimum packet size on the link (default: 0).]'
  '--overhead[overhead in bytes per packet (default: 0).]'
  '--linktype[overwrite linktype (default: type of network device)]'
  '(- * :)'{-h,--help}'[show help text of classifier specific options.]'
  '*:filename:_files'
)

_arguments -s $arguments
