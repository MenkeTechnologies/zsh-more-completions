#compdef sieve

local arguments

arguments=(
  {-c,--}'[compile script and exit]'
  {-D,--dump}'[compile script, dump disassembled sieve code to]'
  {-d,--debug}'[debug flags (defaults to "TPt")]'
  {-E,--}'[treat SCRIPT as Sieve program text]'
  {-e,--email}'[override user email address]'
  '--environment[VALUE]'
  {-f,--mbox-url}'[mailbox to sieve (defaults to users mail spool)]'
  {-k,--}'[keep on going if execution fails on a message]'
  '--line-info[print source location along with action logs]'
  {-n,--,--no-actions}'[do not execute any actions, just print what would]'
  '--no-program-name[do not prefix diagnostic messages with the program]'
  {-t,--ticket}'[ticket file for user authentication]'
  {-v,--}'[log all actions]'
  '--debug-level[set Mailutils debugging level]'
  '--log-facility[output logs to syslog FACILITY]'
  {-M,--mailer}'[use specified URL as the default mailer]'
  '--clear-include-path[clear Sieve include path]'
  {--clear-library-path,--clearpath}'[clear Sieve library path]'
  {-I,--includedir}'[append DIR to the list of directories searched for]'
  {-L,--libdir}'[append DIR to the list of directories searched for]'
  '--libdir-prefix[add DIR to the beginning of the list of]'
  '--config-file[load this configuration file; implies --no-config]'
  '--config-lint[check configuration file syntax and exit]'
  '--config-verbose[verbosely log parsing of the configuration files]'
  '--no-config[do not load site and user configuration files]'
  '--no-site-config[do not load site-wide configuration file]'
  '--no-user-config[do not load user configuration file]'
  '--set[VALUE set configuration parameter]'
  '--config-help[show configuration file summary]'
  '--show-config-options[show compilation options]'
  '--usage[give a short usage message]'
  {-V,--version}'[print program version]'
  '*:filename:_files'
)

_arguments -s $arguments
