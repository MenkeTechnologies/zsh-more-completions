#compdef groonga

local arguments

arguments=(
  '-c[:   run in client mode]'
  '-s[:   run in server mode]'
  '-d[:   run in daemon mode]'
  '-n[:                  create new database (except client mode)]'
  {-e,--encoding}'[specify encoding for new database]'
  '--file[read commands from specified file]'
  '--input-fd[read commands from specified file descriptor]'
  '--file[a prioriry over --input-fd]'
  '--output-fd[output response to specified file descriptor]'
  {-p,--port}'[number>:   specify server port number (client mode only)]'
  '--bind-address[/hostname>:]'
  {-p,--port}'[number>:     specify server port number]'
  {-i,--server-id}'[/hostname>:]'
  '--protocol[specify server protocol to listen]'
  '--document-root[specify document root path (http only)]'
  '--cache-limit[specify max number of cache data (default: 100)]'
  {-t,--max-threads}'[threads>:]'
  '--pid-path[specify file to write process ID to]'
  '--default-request-timeout[specify the default request timeout in seconds]'
  '--cache-base-path[specify the cache base path]'
  '--listen-backlog[specify the backlog for listen(2)]'
  '--memcached-column[specify column to access by memcached protocol]'
  {-l,--log-level}'[level>:]'
  '--log-flags[flags>:]'
  '--log-path[specify log path]'
  '--log-rotate-threshold-size[specify threshold for log rotate]'
  '--query-log-path[specify query log path]'
  '--query-log-rotate-threshold-size[specify threshold for query log rotate]'
  '--working-directory[specify working directory path]'
  '--config-path[specify config file path]'
  '--default-command-version[specify default command version (default: 1)]'
  '--default-match-escalation-threshold[specify default match escalation threshold (default: 0)]'
  '--show-config[:   show config]'
  '(- * :)'{-h,--help}'[:          show usage]'
  '--version[:       show groonga version]'
  '*:filename:_files'
)

_arguments -s $arguments
