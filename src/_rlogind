#compdef rlogind

local arguments

arguments=(
  {-4,--ipv4}'[daemon mode only accepts IPv4]'
  {-6,--ipv6}'[only IPv6 in daemon mode]'
  {-a,--verify-hostname}'[ask hostname for verification]'
  {-d,--daemon}'[daemon mode, with instance limit]'
  {-D,--debug}'[set debug level]'
  {-l,--no-rhosts}'[ignore .rhosts file]'
  {-L,--local-domain}'[set local domain name]'
  {-n,--no-keepalive}'[do not set SO_KEEPALIVE]'
  {-o,--allow-root}'[allow uid 0 to login, disabled by default]'
  {-p,--port}'[listen on given port (valid only in daemon mode)]'
  {-r,--reverse-required}'[require reverse resolving of a remote host IP]'
  '--usage[give a short usage message]'
  {-V,--version}'[print program version]'
  '*:filename:_files'
)

_arguments -s $arguments
