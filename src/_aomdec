#compdef aomdec

local arguments

arguments=(
  '--help[show usage options and exit]'
  '--codec[codec to use]'
  '--yv12[output raw YV12 frames]'
  '--i420[output raw I420 frames]'
  '--flipuv[flip the chroma planes in the output]'
  '--rawvideo[output raw YUV frames]'
  '--noblit[dont process the decoded frames]'
  '--progress[show progress after each frame decodes]'
  '--limit[stop decoding after n frames]'
  '--skip[skip the first n input frames]'
  '--postproc[postprocess decoded frames]'
  '--summary[show timing summary]'
  {-o,--output}'[output file name pattern (see below)]'
  {-t,--threads}'[max threads to use]'
  {-v,--verbose}'[show version string]'
  {-S,--scale}'[scale output frames uniformly]'
  '--frame-buffers[number of frame buffers to use]'
  '--md5[compute the MD5 sum of the decoded frame]'
  '--framestats[output per-frame stats (.csv format)]'
  {-k,--keep-going}'[(debug) Continue decoding after error]'
  '--output-bit-depth[output bit-depth for decoded frames]'
  '--tile-mode[tile coding mode (0 for normal tile coding mode)]'
  '--tile-row[row index of tile to decode (-1 for all rows)]'
  '--tile-column[column index of tile to decode (-1 for all columns)]'
  '--annexb[bitstream is in Annex-B format]'
  '--oppoint[select an operating point of a scalable bitstream]'
  '--all-layers[output all decoded frames of a scalable bitstream]'
  '--i420[. If the -o option is not specified, the output will be]'
  '*:filename:_files'
)

_arguments -s $arguments
