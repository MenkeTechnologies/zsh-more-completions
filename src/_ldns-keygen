#compdef ldns-keygen

local arguments

arguments=(
  '-a[use the specified algorithm (-a list to show a list)]'
  '-k[set the flags to 257; key signing key]'
  '-b[specify the keylength]'
  '-r[specify a random device (defaults to /dev/random)]'
  '-v[show the version and exit]'
  '*:filename:_files'
)

_arguments -s $arguments
