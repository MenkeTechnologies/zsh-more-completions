#compdef sheep

local arguments

arguments=(
  {-b,--bindaddr}'[specify IP address of interface to listen on]'
  {-c,--cluster}'[specify the cluster driver (default: corosync)]'
  {-D,--directio}'[use direct IO for backend store]'
  {-f,--foreground}'[make the program run in foreground]'
  {-g,--gateway}'[make the program run as a gateway mode]'
  '(- * :)'{-h,--help}'[display this help and exit]'
  {-i,--ioaddr}'[use separate network card to handle IO requests (default: disabled)]'
  {-j,--journal}'[use journal file to log all the write operations. (default: disabled)]'
  {-l,--log}'[specify the log level, the log directory and the log format(log level default: 6 \[SDOG_INFO\])]'
  {-n,--nosync}'[drop O_SYNC for write of backend]'
  {-p,--port}'[specify the TCP port on which to listen (default: 7000)]'
  {-P,--pidfile}'[create a pid file]'
  {-R,--recovery}'[specify the recovery speed throttling]'
  {-u,--upgrade}'[upgrade to the latest data layout]'
  {-v,--version}'[show the version]'
  {-V,--vnodes}'[set number of vnodes]'
  {-w,--wq-threads}'[specify a number of threads for workqueue]'
  {-W,--wildcard-recovery}'[recovery for first time]'
  {-y,--myaddr}'[specify the address advertised to other sheep]'
  {-z,--zone}'[specify the zone id (default: determined by listen address)]'
  '*:filename:_files'
)

_arguments -s $arguments
