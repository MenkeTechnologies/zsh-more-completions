#compdef numad

local arguments

arguments=(
  '-C[to count inactive file cache as available memory (default 1)]'
  '-C[to count inactive file cache memory as unavailable (default 1)]'
  '-d[debug logging (same effect as -l 7)]'
  '-h[print this usage info]'
  '-H[to set THP scan_sleep_ms (default 1000)]'
  '-i[to specify interval seconds]'
  '-K[to keep interleaved memory spread across nodes (default 0)]'
  '-K[to merge interleaved memory to local NUMA nodes (default 0)]'
  '-l[to specify logging level (usually 5, 6, or 7 -- default 5)]'
  '-m[to specify memory locality target percent (default 90)]'
  '-p[to add PID to inclusion pid list]'
  '-r[to remove PID from explicit pid lists]'
  '-R[to reserve some CPUs for non-numad use]'
  '-S[to scan all processes (default 1)]'
  '-S[to scan only explicit PID list processes (default 1)]'
  '-t[to specify thread / logical CPU valuation percent (default 20)]'
  '-u[to specify utilization target percent (default 85)]'
  '-v[verbose (same effect as -l 6)]'
  '-V[show version info]'
  '-w[for NUMA node suggestions]'
  '-x[to add PID to exclusion pid list]'
  '*:filename:_files'
)

_arguments -s $arguments
