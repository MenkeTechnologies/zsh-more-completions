#compdef groovysh

local arguments

arguments=(
  {-C,--color}'[enable or disable use of ANSI colors]'
  {-cp,-classpath,--classpath}'[specify where to find the class files - must be first]'
  {-d,--debug}'[enable debug output]'
  {-D,--define}'[value>]'
  {-e,--evaluate}'[evaluate the code first when starting interactive session]'
  '(- * :)'{-h,--help}'[display this help message]'
  {-pa,--parameters}'[generate metadata for reflection on method parameter names]'
  {-q,--quiet}'[suppress superfluous output]'
  {-T,--terminal}'[specify the terminal TYPE to use]'
  {-v,--verbose}'[enable verbose output]'
  {-V,--version}'[display the version]'
  '*:filename:_files'
)

_arguments -s $arguments
