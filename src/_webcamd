#compdef webcamd

local arguments

arguments=(
  '-d[device>]'
  '-i[or client number>]'
  '-m[<value>]'
  '-s[available parameters]'
  '-l[available USB devices]'
  '-S[as output by -l option]'
  '-N[as output by -l option]'
  '-M[index> for use with -S and -N options]'
  '-v[device number>]'
  '-B[in background]'
  '-f[path> \[/boot/modules\]]'
  '-r[not set realtime priority]'
  '-U[set user for character devices]'
  '-G[set group for character devices]'
  '-H[device by HAL daemon]'
  '-D[connect to remote host instead of USB]'
  '-L[make DVB device available from TCP/IP]'
  '-h[help]'
  '*:filename:_files'
)

_arguments -s $arguments
