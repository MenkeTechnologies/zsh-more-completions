#compdef arp-scan

local arguments

arguments=(
  {--help,-h}'[display this usage message and exit.]'
  '--file[or -f <s> Read hostnames or addresses from the specified file]'
  {--localnet,-l}'[generate addresses from network interface configuration.]'
  '--retry[or -r <i> Set total number of attempts per host to <i>]'
  '--timeout[or -t <i> Set initial per host timeout to <i> ms, default=500.]'
  '--interval[or -i <x> Set minimum packet interval to <x>.]'
  '--bandwidth[or -B <x> Set desired outbound bandwidth to <x>, default=256000.]'
  '--backoff[or -b <f> Set timeout backoff factor to <f>, default=1.50.]'
  {--verbose,-v}'[display verbose progress messages.]'
  '--localnet[is specified, display any]'
  {--version,-V}'[display program version and exit.]'
  {--random,-R}'[randomise the host list.]'
  '--randomseed[use <i> to seed the pseudo random number generator.]'
  {--numeric,-N}'[IP addresses only, no hostnames.]'
  '--snap[or -n <i> Set the pcap snap length to <i>. Default=64.]'
  '--interface[or -I <s> Use network interface <s>.]'
  {--quiet,-q}'[only display minimal output. No protocol decoding.]'
  {--plain,-x}'[display plain output showing only responding hosts.]'
  {--ignoredups,-g}'[dont display duplicate packets.]'
  '--ouifile[or -O <s> Use IEEE Ethernet OUI to vendor mapping file <s>.]'
  '--iabfile[or -O <s> Use IEEE Ethernet IAB to vendor mapping file <s>.]'
  '--macfile[or -O <s> Use custom Ethernet MAC to vendor mapping file <s>.]'
  '--srcaddr[or -S <m> Set the source Ethernet MAC address to <m>.]'
  '--arpsha[details on how to change that address.]'
  '--destaddr[or -T <m> Send the packets to Ethernet MAC address <m>]'
  '--arpsha[or -u <m> Use <m> as the ARP source Ethernet address]'
  '--arptha[or -w <m> Use <m> as the ARP target Ethernet address]'
  '--prototype[or -y <i> Set the Ethernet protocol type to <i>, default=0x0806.]'
  '--arphrd[or -H <i> Use <i> for the ARP hardware type, default=1.]'
  '--arppro[or -p <i> Use <i> for the ARP protocol type, default=0x0800.]'
  '--arphln[or -a <i> Set the hardware address length to <i>, default=6.]'
  '--arppln[or -P <i> Set the protocol address length to <i>, default=4.]'
  '--arpop[or -o <i> Use <i> for the ARP operation, default=1.]'
  '--arpspa[or -s <a> Use <a> as the source IP address.]'
  '--padding[or -A <h> Specify padding after packet data.]'
  {--llc,-L}'[use RFC 1042 LLC framing with SNAP.]'
  '--vlan[or -Q <i> Use 802.1Q tagging with VLAN id <i>.]'
  '--pcapsavefile[or -W <s> Write received packets to pcap savefile <s>.]'
  {--rtt,-D}'[display the packet round-trip time.]'
  '*:filename:_files'
)

_arguments -s $arguments
