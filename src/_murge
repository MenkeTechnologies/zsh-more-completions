#compdef murge

local arguments

arguments=(
  {-i,--ignore-case}'[ignore case differences in file contents.\[0;0m]'
  '--ignore-file-name-case[ignore case when comparing file names.\[0;0m]'
  '--no-ignore-file-name-case[consider case when comparing file names.\[0;0m]'
  {-E,--ignore-tab-expansion}'[ignore changes due to tab expansion.\[0;0m]'
  {-b,--ignore-space-change}'[ignore changes in the amount of white space.\[0;0m]'
  {-w,--ignore-all-space}'[ignore all white space.\[0;0m]'
  {-B,--ignore-blank-lines}'[ignore changes whose lines are all blank.\[0;0m]'
  {-I,--ignore-matching-lines}'[ignore changes whose lines all match RE.\[0;0m]'
  '--strip-trailing-cr[strip trailing carriage return on input.\[0;0m]'
  {-a,--text}'[treat all files as text.\[0;0m]'
  {-c,-C,--context}'[output NUM (default 3) lines of copied context.\[0;0m]'
  {-u,-U,--unified}'[output NUM (default 3) lines of unified context.\[0;0m]'
  '--label[use LABEL instead of file name.\[0;0m]'
  {-p,--show-c-function}'[show which C function each change is in.\[0;0m]'
  {-F,--show-function-line}'[show the most recent line matching RE.\[0;0m]'
  {-q,--brief}'[output only whether files differ.\[0;0m]'
  {-e,--ed}'[output an ed script.\[0;0m]'
  '--normal[output a normal diff.\[0;0m]'
  {-n,--rcs}'[output an RCS format diff.\[0;0m]'
  {-y,--side-by-side}'[output in two columns.\[0;0m]'
  {-W,--width}'[output at most NUM (default 130) print columns.\[0;0m]'
  '--left-column[output only the left column of common lines.\[0;0m]'
  '--suppress-common-lines[do not output common lines.\[0;0m]'
  {-D,--ifdef}'[output merged file to show `#ifdef NAME diffs.\[0;0m]'
  '--GTYPE-group-format[similar, but format GTYPE input groups with GFMT.\[0;0m]'
  '--line-format[similar, but format all input lines with LFMT.\[0;0m]'
  '--LTYPE-line-format[similar, but format LTYPE input lines with LFMT.\[0;0m]'
  {-l,--paginate}'[pass the output through `pr to paginate it.\[0;0m]'
  {-t,--expand-tabs}'[expand tabs to spaces in output.\[0;0m]'
  {-T,--initial-tab}'[make tabs line up by prepending a tab.\[0;0m]'
  {-r,--recursive}'[recursively compare any subdirectories found.\[0;0m]'
  {-N,--new-file}'[treat absent files as empty.\[0;0m]'
  '--unidirectional-new-file[treat absent first files as empty.\[0;0m]'
  {-s,--report-identical-files}'[report when two files are the same.\[0;0m]'
  {-x,--exclude}'[exclude files that match PAT.\[0;0m]'
  {-X,--exclude-from}'[exclude files that match any pattern in FILE.\[0;0m]'
  {-S,--starting-file}'[start with FILE when comparing directories.\[0;0m]'
  '--from-file[1 Compare FILE1 to all operands. FILE1 can be a directory.\[0;0m]'
  '--to-file[2 Compare all operands to FILE2. FILE2 can be a directory.\[0;0m]'
  '--horizon-lines[keep NUM lines of the common prefix and suffix.\[0;0m]'
  {-d,--minimal}'[try hard to find a smaller set of changes.\[0;0m]'
  '--speed-large-files[assume large files and many scattered small changes.\[0;0m]'
  {-v,--version}'[output version info.\[0;0m]'
  '--help[output this help.\[0;0m]'
  '*:filename:_files'
)

_arguments -s $arguments
