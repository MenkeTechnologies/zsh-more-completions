#compdef gnu-mail

local arguments

arguments=(
  {-A,--attach}'[attach FILE]'
  {-a,--append}'[VALUE append given header to the message being sent]'
  '--attach-fd[attach from file descriptor FD]'
  '--content-filename[set the Content-Disposition filename parameter for]'
  '--content-name[set the Content-Type name parameter for the next]'
  '--attach[]'
  '--content-type[set content type for subsequent --attach options]'
  {-E,--exec}'[execute COMMAND]'
  {-e,--exist}'[return true if mail exists]'
  '--encoding[set encoding for subsequent --attach options]'
  {-F,--byname}'[save messages according to sender]'
  {-H,--headers}'[write a header summary and exit]'
  {-i,--ignore}'[ignore interrupts]'
  {-M,--}'[compose MIME messages]'
  {-N,--nosum}'[do not display initial header summary]'
  {-n,--norc}'[do not read the system mailrc file]'
  {-p,--print,--read}'[print all mail to standard output]'
  {-q,--quit}'[cause interrupts to terminate program]'
  {-r,--return-address}'[use address as the return address when sending]'
  {-s,--subject}'[send a message with the given SUBJECT]'
  {-t,--to}'[read recipients from the message header]'
  {-u,--user}'[operate on USERs mailbox]'
  '--debug-level[set Mailutils debugging level]'
  '--config-file[load this configuration file; implies --no-config]'
  '--config-lint[check configuration file syntax and exit]'
  '--config-verbose[verbosely log parsing of the configuration files]'
  '--no-config[do not load site and user configuration files]'
  '--no-site-config[do not load site-wide configuration file]'
  '--no-user-config[do not load user configuration file]'
  '--set[VALUE      set configuration parameter]'
  '--config-help[show configuration file summary]'
  '--show-config-options[show compilation options]'
  '--usage[give a short usage message]'
  {-V,--version}'[print program version]'
  '*:filename:_files'
)

_arguments -s $arguments
