#compdef profcheck

local arguments

arguments=(
  '-v[verbosity level (default 1), 2 to print each DE]'
  '-c[show CIE94 delta E values]'
  '-k[show CIEDE2000 delta E values]'
  '-w[create X3DOM visualisation (iccprofile.x3d.html)]'
  '-x[use X3DOM axes]'
  '-m[make X3DOM lines a minimum of 0.5]'
  '-e[color vectors according to delta E]'
  '-h[plot a histogram of delta Es]'
  '-s[sort output by delta E]'
  '-P[.NN Create a pruned .ti3 with points less or equal to N.NN delta E]'
  '-d[1,deval2,devvalN]'
  '-p[sort device value by PCS (Lab) target]'
  '-f[use Fluorescent Whitening Agent compensation \[opt. simulated inst. illum.:]'
  '-i[choose illuminant for computation of CIE XYZ from spectral data & FWA:]'
  '-o[choose CIE Observer for spectral data:]'
  '-I[r = relative colorimetric, a = absolute (default)]'
  '*:filename:_files'
)

_arguments -s $arguments
