#compdef dialog-config

local arguments

arguments=(
  '--prefix[echos the package-prefix of dialog]'
  '--prefix[sets the package-prefix of dialog]'
  '--exec-prefix[echos the executable-prefix of dialog]'
  '--exec-prefix[sets the executable-prefix of dialog]'
  '--cflags[echos the C compiler flags needed to compile with dialog]'
  '--libs[echos the libraries needed to link with dialog]'
  '--version[echos the release+patchdate version of dialog]'
  '--abi-version[echos the ABI version of dialog]'
  '--bindir[echos the directory containing dialog programs]'
  '--datadir[echos the directory containing dialog data]'
  '--libdir[echos the directory containing dialog libraries]'
  '--mandir[echos the directory containing dialog manpages]'
  '--help[prints this message]'
  '*:filename:_files'
)

_arguments -s $arguments
