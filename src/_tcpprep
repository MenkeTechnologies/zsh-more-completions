#compdef tcpprep

local arguments

arguments=(
  {-d,--dbug}'[enable debugging output]'
  {-a,--auto}'[auto-split mode]'
  {-c,--cidr}'[CIDR-split mode]'
  {-r,--regex}'[regex-split mode]'
  {-p,--port}'[port-split mode]'
  {-e,--mac}'[source MAC split mode]'
  '--reverse[matches to be client instead of server]'
  {-C,--comment}'[embedded cache file comment]'
  '--no-arg-comment[do not embed any cache file comment]'
  {-x,--include}'[include only packets matching rule]'
  {-X,--exclude}'[exclude any packet matching this rule]'
  {-o,--cachefile}'[output cache file]'
  {-i,--pcap}'[input pcap file to process]'
  {-P,--print-comment}'[print embedded comment in the specified cache file]'
  {-I,--print-info}'[print basic info from the specified cache file]'
  {-S,--print-stats}'[print statistical information about the specified cache file]'
  {-s,--services}'[load services file for server ports]'
  {-N,--nonip}'[send non-IP traffic out server interface]'
  {-R,--ratio}'[ratio of client to server packets]'
  {-m,--minmask}'[minimum network mask length in auto mode]'
  {-M,--maxmask}'[maximum network mask length in auto mode]'
  {-v,--verbose}'[print decoded packets via tcpdump to STDOUT]'
  {-A,--decode}'[arguments passed to tcpdump decoder]'
  {-V,--version}'[print version information]'
  {-h,--less-help}'[display less usage information and exit]'
  {-H,--help}'[display extended usage information and exit]'
  '--save-opts[save the option state to a config file]'
  '--load-opts[load options from a config file]'
  '*:filename:_files'
)

_arguments -s $arguments
