#compdef irc

local arguments

arguments=(
  '-a[the \[server list\] adds to default server list]'
  '-b[the program should run in the background ``bot mode]'
  '-B[loads your .ircrc file before you connect to a server.]'
  '-d[the program should run in ``dumb mode (no fancy screen)]'
  '-h[print this help message]'
  '-q[the program will not load your .ircrc file]'
  '-s[the program will not connect to a server upon startup]'
  '-S[each argument will be tokenised by whitechar]'
  '-v[print the version of this irc client and exit]'
  '-x[run the client in full X_DEBUG mode]'
  '-c[join <chan> after first connection to a server]'
  '-H[use a virtual host instead of default hostname]'
  '-l[loads <file> instead of your .ircrc file]'
  '-L[loads <file> instead of your .ircrc file]'
  '-n[the program will use <nick> as your default nickname]'
  '-p[the program will use <port> as the default portnum]'
  '-z[the program will use <user> as your default username]'
  '*:filename:_files'
)

_arguments -s $arguments
