#compdef pg_receivexlog

local arguments

arguments=(
  {-D,--directory}'[receive transaction log files into this directory]'
  '--if-not-exists[do not error if slot already exists when creating a slot]'
  {-n,--no-loop}'[do not loop on connection lost]'
  {-s,--status-interval}'[time between status packets sent to server (default: 10)]'
  {-S,--slot}'[replication slot to use]'
  '--synchronous[flush transaction log immediately after writing]'
  {-v,--verbose}'[output verbose messages]'
  {-V,--version}'[output version information, then exit]'
  {-d,--dbname}'[connection string]'
  {-h,--host}'[database server host or socket directory]'
  {-p,--port}'[database server port number]'
  {-U,--username}'[connect as specified database user]'
  {-w,--no-password}'[never prompt for password]'
  {-W,--password}'[force password prompt (should happen automatically)]'
  '--create-slot[create a new replication slot (for the slots name see --slot)]'
  '--drop-slot[drop the replication slot (for the slots name see --slot)]'
  '*:filename:_files'
)

_arguments -s $arguments
