#compdef nmblookup

local arguments

arguments=(
  {-B,--broadcast}'[specify address to use for broadcasts]'
  {-f,--flags}'[list the NMB flags returned]'
  {-U,--unicast}'[specify address to use for unicast]'
  {-M,--master-browser}'[search for a master browser]'
  {-R,--recursion}'[set recursion desired in package]'
  {-S,--status}'[lookup node status as well]'
  {-T,--translate}'[translate IP addresses into names]'
  {-r,--root-port}'[use root port 137 (Win95 only replies]'
  {-A,--lookup-by-ip}'[do a node status on <name> as an IP]'
  '--usage[display brief usage message]'
  {-d,--debuglevel}'[set debug level]'
  {-s,--configfile}'[use alternate configuration file]'
  {-l,--log-basename}'[base name for log files]'
  {-V,--version}'[print version]'
  '--option[value Set smb.conf option from command line]'
  {-O,--socket-options}'[socket options to use]'
  {-n,--netbiosname}'[primary netbios name]'
  {-W,--workgroup}'[set the workgroup name]'
  {-i,--scope}'[use this Netbios scope]'
  '*:filename:_files'
)

_arguments -s $arguments
