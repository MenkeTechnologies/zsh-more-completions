#compdef png2theora

local arguments

arguments=(
  {-o,--output}'[.ogv> file name for encoded output (required);]'
  {-v,--video-quality}'[theora quality selector fro 0 to 10]'
  {-V,--video-rate-target}'[bitrate target for Theora video]'
  '--soft-target[use a large reservoir and treat the rate]'
  '--two-pass[compress input using two-pass rate control]'
  '--first-pass[perform first-pass of a two-pass rate]'
  '--second-pass[perform second-pass of a two-pass rate]'
  {-k,--keyframe-freq}'[keyframe frequency]'
  {-d,--buf-delay}'[buffer delay (in frames). Longer delays]'
  '--soft-target[used) and infinite for]'
  '--chroma-444[use 4:4:4 chroma subsampling]'
  '--chroma-422[use 4:2:2 chroma subsampling]'
  {-s,--aspect-numerator}'[aspect ratio numerator, default is 0]'
  {-S,--aspect-denominator}'[aspect ratio denominator, default is 0]'
  {-f,--framerate-numerator}'[frame rate numerator]'
  {-F,--framerate-denominator}'[frame rate denominator]'
  '*:filename:_files'
)

_arguments -s $arguments
