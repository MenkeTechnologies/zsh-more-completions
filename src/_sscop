#compdef sscop

local arguments

arguments=(
  '-F[use framing for sscop also]'
  '-V[set verbose flags to hex X]'
  '-W[set initial window to N]'
  '-a[v set parameter p to v]'
  '-b[enable robustness enhancement]'
  '-e[dont RELEASE_request on user EOF]'
  '-f[use begemot frame functions for user fd]'
  '-h[print this info]'
  '-i[use user fd only for output]'
  '-lN[loose every nth message]'
  '-r[reverse user and sscop file descriptors]'
  '-t[m set timer t to m milliseconds]'
  '-v[set sscop verbose flags to hex X]'
  '-w[dont start conversation]'
  '-x[enable POLL after retransmission]'
  '-3[redirect output to fd 3]'
  '*:filename:_files'
)

_arguments -s $arguments
