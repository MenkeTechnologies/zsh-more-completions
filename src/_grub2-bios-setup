#compdef grub2-bios-setup

local arguments

arguments=(
  {-a,--allow-floppy}'[make the drive also bootable as floppy (default]'
  {-b,--boot-image}'[use FILE as the boot image \[default=boot.img\]]'
  {-c,--core-image}'[use FILE as the core image \[default=core.img\]]'
  {-d,--directory}'[use GRUB files in the directory DIR]'
  {-f,--force}'[install even if problems are detected]'
  {-m,--device-map}'[use FILE as the device map]'
  '--no-rs-codes[do not apply any reed-solomon codes when]'
  {-s,--skip-fs-probe}'[do not probe for filesystems in DEVICE]'
  {-v,--verbose}'[print verbose messages.]'
  '--usage[give a short usage message]'
  {-V,--version}'[print program version]'
  '*:filename:_files'
)

_arguments -s $arguments
