#compdef bsondump

local arguments

arguments=(
  '--help[print usage]'
  '--version[print the tool version and exit]'
  {-v,--verbose}'[more detailed log output (include multiple times for]'
  '--quiet[hide all log output]'
  '--type[type of output: debug, json (default json)]'
  '--objcheck[validate BSON during processing]'
  '--pretty[output JSON formatted to be human-readable]'
  '--bsonFile[path to BSON file to dump to JSON; default is stdin]'
  '--outFile[path to output file to dump BSON to; default is]'
  '*:filename:_files'
)

_arguments -s $arguments
