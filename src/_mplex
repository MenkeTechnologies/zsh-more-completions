#compdef mplex

local arguments

arguments=(
  '--verbose[|-v num]'
  '--format[|-f fmt]'
  '--mux-bitrate[|-r num]'
  '--video-buffer[|-b num \[, num...\]]'
  {--lpcm-params,-L}'[\[, samppersec:chan:bits\]]'
  '--mux-limit[|-l num]'
  '--sync-offset[|-O num ms|s|mpt|c]'
  '--subpicture-delay[|-d delay \[ms|s|mpt|c\] \[:stream-id\] \[, delay\[:stream-id\]\]]'
  '--sector-size[|-s num]'
  '--vbr[|-V]'
  '--cbr[|-C]'
  '--run-in[|-R num]'
  '--packets-per-pack[|-p num]'
  '--system-headers[|-h]'
  '--max-segment-size[|-S size]'
  '--ignore-seqend-markers[|-M]'
  '--vdr-index[|-i <vdr-index-filename>]'
  '--workaround[|-W workaround \[, workaround \]]'
  '--help[|-\?]'
  '*:filename:_files'
)

_arguments -s $arguments
