#compdef VBoxVRDP

local arguments

arguments=(
  {-s,-startvm,--startvm}'[start given VM (required argument)]'
  {-v,-vrde,--vrde}'[enable or disable the VRDE server]'
  {-e,-vrdeproperty,--vrdeproperty}'[\[value\]> Set a VRDE property:]'
  '--settingspw[specify the settings password]'
  '--settingspwfile[specify a file containing the]'
  {-start-paused,--start-paused}'[start the VM in paused state]'
  {-c,-capture,--capture}'[record the VM screen output to a file]'
  {-w,--width}'[frame width when recording]'
  {-h,--height}'[frame height when recording]'
  {-r,--bitrate}'[recording bit rate when recording]'
  {-f,--filename}'[file name when recording. The codec used]'
  '*:filename:_files'
)

_arguments -s $arguments
