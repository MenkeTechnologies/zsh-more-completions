#compdef iucode_tool

local arguments

arguments=(
  {-q,--quiet}'[quiet operation]'
  {-v,--verbose}'[verbose operation (cumulative)]'
  '-t[sets input file type for the next microcode files.]'
  '-s[| \[!\]signature\[,\[pf_mask\]\[,\[lt:|eq:|gt:\]revision\]\]]'
  '-S[same as --scan-system=auto]'
  '--scan-system[select microcodes based on the running system]'
  '--scan-system[be unselected by a later -s]'
  '--downgrade[instead of discarding microcodes based on revision]'
  '--no-downgrade[keep the microcode with the highest revision]'
  '--date-after[select only microcodes newer than the specified]'
  '--date-before[select only microcodes older than the]'
  '--loose-date-filtering[for selection other revisions (outside of]'
  '--strict-date-filtering[select only microcodes strictly within the date]'
  {-l,--list}'[list selected microcode signatures]'
  {-L,--list-all}'[list all microcode signatures]'
  {-k,--kernel}'[upload selected microcodes to the kernel.]'
  {-K,--write-firmware}'[write selected microcodes with the filenames]'
  {-w,--write-to}'[write selected microcodes to a file in binary]'
  '--write-earlyfw[write selected microcodes to an early initramfs]'
  {-W,--write-named-to}'[write selected microcodes to files in the]'
  '--write-all-named-to[write every microcode to files in the specified]'
  '--no-overwrite[do not remove existing files (default)]'
  '--overwrite[unlink (remove) destination files before writing]'
  '--mini-earlyfw[optimize the early initramfs cpio container for]'
  '--normal-earlyfw[write a normal-sized early initramfs (default)]'
  '--strict-checks[perform strict checks on the microcode data]'
  '--no-strict-checks[perform less strict checks on the microcode data]'
  '--ignore-broken[skip broken microcode entries instead of aborting]'
  '--no-ignore-broken[abort on broken microcode entries (default)]'
  '-h[give this help list]'
  '--usage[give a short usage message]'
  {-V,--version}'[print program version]'
  '*:filename:_files'
)

_arguments -s $arguments
