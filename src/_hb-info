#compdef hb-info

local arguments

arguments=(
  {-h,--help}'[show help options]'
  '--help-all[show all help options]'
  '--help-face[options for the font face]'
  '--help-font[options for the font instance]'
  '--help-variations[options for font variations used]'
  '--help-misc[miscellaneous options affecting queries]'
  '--help-query[options to query the font instance]'
  {-q,--quiet}'[generate machine-readable output]'
  '--version[show version numbers]'
  '*:filename:_files'
)

_arguments -s $arguments
