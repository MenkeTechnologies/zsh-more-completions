#compdef rarian-sk-update

local arguments

arguments=(
  '-o[use the specified omf directories for]'
  '-r[use the specified directory for the resulting]'
  '--c[rebuild the index entirely. This will rebuild]'
  '-v[turn Verbosity on.]'
  '-p[specify a different place to store the mtimes file.]'
  '-q[run silently (default).]'
  '-h[-\? Print this help message and exit.]'
  '*:filename:_files'
)

_arguments -s $arguments
