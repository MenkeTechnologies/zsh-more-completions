#compdef jpackage

local arguments

arguments=(
  {--main-class,--main-jar}'[.jar]'
  '-m[/className]'
  {--main-class,--main-jar}'[.jar]'
  '--no-header-files[jlink options>...\]]'
  '-m[/className --runtime-image appRuntimeImage]'
  {--type,-t}'[the type of package to create]'
  '--app-version[version of the application and/or package]'
  '--copyright[string>]'
  '--description[string>]'
  {--help,-h}'[print the usage text with a list and description of each valid]'
  {--name,-n}'[name of the application and/or package]'
  {--dest,-d}'[path>]'
  '--temp[path>]'
  '--vendor[string>]'
  '--verbose[enables verbose output]'
  '--version[print the product version to the output stream and exit]'
  '--add-modules[name>\[,<module name>...\]]'
  {--module-path,-p}'[path>...]'
  '--bind-services[pass on --bind-services option to jlink (which will link in]'
  '--runtime-image[path>]'
  {--strip-debug,--no-header-files,--no-man-pages}'[and]'
  '--strip-native-commands[.]'
  '--icon[file path>]'
  {--input,-i}'[path>]'
  '--add-launcher[name>=<file path>]'
  '--arguments[class arguments>]'
  '--java-options[options>]'
  '--main-class[name>]'
  '--main-jar[jar file>]'
  {--module,-m}'[name>\[/<main class>\]]'
  '--mac-package-identifier[string>]'
  '--mac-package-name[string>]'
  '--mac-package-signing-prefix[string>]'
  '--mac-sign[request that the package be signed]'
  '--mac-signing-keychain[path>]'
  '--mac-signing-key-user-name[name>]'
  '--app-image[path>]'
  '--file-associations[path>]'
  '--install-dir[path>]'
  '--license-file[path>]'
  '--resource-dir[path to override jpackage resources]'
  '--runtime-image[path of the predefined runtime image to install]'
  '*:filename:_files'
)

_arguments -s $arguments
