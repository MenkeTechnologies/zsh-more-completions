#compdef portablectl

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show this help]'
  '--version[show package version]'
  '--no-pager[do not pipe output into a pager]'
  '--no-legend[do not show the headers and footers]'
  '--no-ask-password[do not ask for system passwords]'
  {-H,--host}'[@\]HOST       Operate on remote host]'
  {-M,--machine}'[operate on local container]'
  {-q,--quiet}'[suppress informational messages]'
  {-p,--profile}'[pick security profile for portable service]'
  '--copy[prefer copying or symlinks if possible]'
  '--runtime[attach portable service until next reboot only]'
  '--no-reload[dont reload the system and service manager]'
  '--cat[when inspecting include unit and os-release file]'
  '*:filename:_files'
)

_arguments -s $arguments
