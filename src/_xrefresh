#compdef xrefresh

local arguments

arguments=(
  '-display[or -d]'
  '-geometry[+X+Y       or -g spec]'
  '-black[use BlackPixel]'
  '-white[use WhitePixel]'
  '-solid[use the color indicated]'
  '-root[use the root background]'
  '-none[no background in window]'
  '-version[print program version]'
  '*:filename:_files'
)

_arguments -s $arguments
