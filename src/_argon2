#compdef argon2

local arguments

arguments=(
  '-i[use Argon2i (this is the default)]'
  '-d[use Argon2d instead of Argon2i]'
  '-id[use Argon2id instead of Argon2i]'
  '-t[sets the number of iterations to N (default = 3)]'
  '-m[sets the memory usage of 2^N KiB (default 12)]'
  '-k[sets the memory usage of N KiB (default 4096)]'
  '-p[sets parallelism to N threads (default 1)]'
  '-l[sets hash output length to N bytes (default 32)]'
  '-e[output only encoded hash]'
  '-r[output only the raw bytes of the hash]'
  '-v[10|13) Argon2 version (defaults to the most recent version, currently 13)]'
  '-h[print /usr/local/bin/argon2 usage]'
  '*:filename:_files'
)

_arguments -s $arguments
