#compdef sass

local arguments

arguments=(
  {-I,--load-path}'[specify a Sass import path.]'
  {-r,--require}'[require a Ruby library before running Sass.]'
  '--compass[make Compass imports available and load project configuration.]'
  {-t,--style}'[output style. Can be nested (default), compact, compressed, or expanded.]'
  {-v,--version}'[print the Sass version.]'
  '--watch[watch files or directories for changes.]'
  '--poll[check for file changes manually, rather than relying on the OS.]'
  '--update[compile files or directories to CSS.]'
  {-f,--force}'[recompile every Sass file, even if the CSS file is newer.]'
  '--stop-on-error[if a file fails to compile, exit immediately.]'
  '--scss[use the CSS-superset SCSS syntax.]'
  '--sourcemap[how to link generated output to the source files.]'
  {-s,--stdin}'[read input from standard input instead of an input file.]'
  {-E,--default-encoding}'[specify the default encoding for input files.]'
  '--unix-newlines[use Unix-style newlines in written files.]'
  {-g,--debug-info}'[emit output that can be used by the FireSass Firebug plugin.]'
  {-l,--line-numbers}'[emit comments in the generated CSS indicating the corresponding source line.]'
  '--line-comments[]'
  {-i,--interactive}'[run an interactive SassScript shell.]'
  {-c,--check}'[just check syntax, dont evaluate.]'
  '--precision[how many digits of precision to use when outputting decimal numbers.]'
  '--cache-location[the path to save parsed Sass files. Defaults to .sass-cache.]'
  {-C,--no-cache}'[dont cache parsed Sass files.]'
  '--trace[show a full Ruby stack trace on error.]'
  {-q,--quiet}'[silence warnings and status messages during compilation.]'
  '*:filename:_files'
)

_arguments -s $arguments
