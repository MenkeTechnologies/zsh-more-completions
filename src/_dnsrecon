#compdef dnsrecon

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show this help message and exit]'
  {-d,--domain}'[target domain.]'
  {-n,--name}'[_server NS_SERVER]'
  {-r,--range}'[IP range for reverse lookup brute force in formats]'
  {-D,--dictionary}'[dictionary file of subdomain and hostnames to use for]'
  '-f[filter out of brute force domain lookup, records that]'
  {-t,--type}'[type of enumeration to perform.]'
  '-a[perform AXFR with standard enumeration.]'
  '-s[perform a reverse lookup of IPv4 ranges in the SPF]'
  '-g[perform Google enumeration with standard enumeration.]'
  '-b[perform Bing enumeration with standard enumeration.]'
  '-k[perform crt.sh enumeration with standard enumeration.]'
  '-w[perform deep whois record analysis and reverse lookup]'
  '-z[performs a DNSSEC zone walk with standard enumeration.]'
  '--threads[number of threads to use in reverse lookups, forward]'
  '--lifetime[time to wait for a server to response to a query.]'
  '--db[SQLite 3 file to save found records.]'
  {-x,--xml}'[XML file to save found records.]'
  {-c,--csv}'[comma separated value file.]'
  {-j,--json}'[JSON file.]'
  '--iw[continue brute forcing a domain even if a wildcard]'
  '-v[enable verbose]'
  '(- * :)'{-h,--help}'[show this help message and exit]'
  {-d,--domain}'[target domain.]'
  {-n,--name}'[_server NS_SERVER]'
  {-r,--range}'[IP range for reverse lookup brute force in formats]'
  {-D,--dictionary}'[dictionary file of subdomain and hostnames to use for]'
  '-f[filter out of brute force domain lookup, records that]'
  {-t,--type}'[type of enumeration to perform.]'
  '-a[perform AXFR with standard enumeration.]'
  '-s[perform a reverse lookup of IPv4 ranges in the SPF]'
  '-g[perform Google enumeration with standard enumeration.]'
  '-b[perform Bing enumeration with standard enumeration.]'
  '-k[perform crt.sh enumeration with standard enumeration.]'
  '-w[perform deep whois record analysis and reverse lookup]'
  '-z[performs a DNSSEC zone walk with standard enumeration.]'
  '--threads[number of threads to use in reverse lookups, forward]'
  '--lifetime[time to wait for a server to response to a query.]'
  '--db[SQLite 3 file to save found records.]'
  {-x,--xml}'[XML file to save found records.]'
  {-c,--csv}'[comma separated value file.]'
  {-j,--json}'[JSON file.]'
  '--iw[continue brute forcing a domain even if a wildcard]'
  '-v[enable verbose]'
  '*:filename:_files'
)

_arguments -s $arguments
