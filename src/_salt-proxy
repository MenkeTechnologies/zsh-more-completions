#compdef salt-proxy

local arguments

arguments=(
  '--version[show programs version number and exit]'
  {-V,--versions-report}'[show programs dependencies version number and exit.]'
  '(- * :)'{-h,--help}'[show this help message and exit]'
  '--saltfile[specify the path to a Saltfile. If not passed, one]'
  {-c,--config-dir}'[pass in an alternative configuration directory.]'
  '--proxyid[id for this proxy.]'
  {-u,--user}'[specify user to run salt-proxy.]'
  {-d,--daemon}'[run the salt-proxy as a daemon.]'
  '--pid-file[specify the location of the pidfile. Default:]'
  {-l,--log-level}'[console logging log level. One of all, garbage]'
  '--log-file[log file path. Default: /var/log/salt/proxy.]'
  '--log-file-level[logfile logging log level. One of all, garbage]'
  '*:filename:_files'
)

_arguments -s $arguments
