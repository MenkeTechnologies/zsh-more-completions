#compdef blkls

local arguments

arguments=(
  '-e[every block (including file system metadata blocks)]'
  '-l[print details in time machine list format]'
  '-a[Display allocated blocks]'
  '-A[Display unallocated blocks]'
  '-f[file system type (use -f list for supported types)]'
  '-i[the format of the image file (use -i list for supported types)]'
  '-b[the size (in bytes) of the device sectors]'
  '-o[the offset of the file system in the image (in sectors)]'
  '-s[print slack space only (other flags are ignored]'
  '-v[verbose to stderr]'
  '-V[print version]'
  '*:filename:_files'
)

_arguments -s $arguments
