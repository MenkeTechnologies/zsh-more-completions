#compdef vsdbutil

local arguments

arguments=(
  '-a[(activates) on-disk permissions on the specified path]'
  '-c[the status of the permissions usage on the specified path]'
  '-d[(deactivates) the on-disk permissions on the specified path]'
  '-i[the permissions database to include all mounted HFS/HFS+ volumes]'
  '*:filename:_files'
)

_arguments -s $arguments
