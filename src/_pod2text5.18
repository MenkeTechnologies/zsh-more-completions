#compdef pod2text5.18

local arguments

arguments=(
  {-a,--alt}'[use an alternate output format that, among other things, uses a]'
  '--code[include any non-POD text from the input file in the output as well.]'
  {-c,--color}'[format the output with ANSI color escape sequences. Using this]'
  '--errors[*]'
  '-i[*, --indent=*indent*]'
  '(- * :)'{-h,--help}'[print out usage information and exit.]'
  {-l,--loose}'[print a blank line after a "=head1" heading. Normally, no blank line]'
  '-m[*, --left-margin=*width*, --margin=*width*]'
  '--nourls[normally, L<> formatting codes with a URL but anchor text are]'
  {-o,--overstrike}'[format the output with overstrike printing. Bold text is rendered as]'
  '-q[*, --quotes=*quotes*]'
  {-s,--sentence}'[assume each sentence ends with two spaces and try to preserve that]'
  '--stderr[by default, pod2text dies if any errors are detected in the POD]'
  {-t,--termcap}'[try to determine the width of the screen and the bold and underline]'
  {-u,--utf8}'[by default, pod2text tries to use the same output encoding as its]'
  {-w,--width}'[*, -*width*]'
  '*:filename:_files'
)

_arguments -s $arguments
