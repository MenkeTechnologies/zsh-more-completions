#compdef epiphany

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show help options]'
  '--help-all[show all help options]'
  '--help-gtk[show GTK+ Options]'
  {-n,--new-tab}'[open a new tab in an existing browser window]'
  '--new-window[open a new browser window]'
  '--import-bookmarks[import bookmarks from the given file]'
  {-l,--load-session}'[load the given session file]'
  {-t,--add-bookmark}'[add a bookmark]'
  {-p,--private-instance}'[start a private instance]'
  {-i,--incognito-mode}'[start an instance in incognito mode]'
  {-a,--application-mode}'[start the browser in application mode]'
  '--profile[profile directory to use in the private instance]'
  '--delete-application[]'
  '--display[X display to use]'
  '*:filename:_files'
)

_arguments -s $arguments
