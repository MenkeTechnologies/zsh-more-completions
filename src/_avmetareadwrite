#compdef avmetareadwrite

local arguments

arguments=(
  {-w,--write-metadata}'[use a PLISTFILE as metadata for the destination file]'
  {-a,--append-metadata}'[use a PLISTFILE as metadata to merge with the source metadata for the destination file]'
  {-p,--print-metadata}'[write in a PLISTFILE the metadata from the source file]'
  {-f,--file-type}'[use UTI as output file type]'
  {-o,--output-metadata}'[output the metadata from the source file]'
  {-d,--description-metadata}'[output the metadata description from the source file]'
  {-q,--quicktime-metadata}'[quicktime metadata format]'
  {-u,--quicktime-user-metadata}'[quicktime user metadata format]'
  {-i,--iTunes-metadata}'[iTunes metadata format]'
  '(- * :)'{-h,--help}'[print this message and exit]'
  '*:filename:_files'
)

_arguments -s $arguments
