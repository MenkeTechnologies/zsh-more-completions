#compdef xicclu

local arguments

arguments=(
  '-v[verbosity level 0 - 2 (default = 1)]'
  '-g[plot slice instead of looking colors up. (Default white to black)]'
  '-G[override plot slice start with Lab or Jab co-ordinate]'
  '-G[override plot slice end with Lab or Jab co-ordinate]'
  '-V[use vcgt calibration tag from profile]'
  '-f[f = forward, b = backwards, g = gamut, p = preview]'
  '-i[a = absolute, r = relative colorimetric]'
  '-o[n = normal (priority: lut > matrix > monochrome)]'
  '-p[x = XYZ_PCS, X = XYZ * 100, l = Lab_PCS, L = LCh, y = Yxy]'
  '-s[scale device range 0.0 - scale rather than 0.0 - 1.0]'
  '-e[video encode device input as:]'
  '-E[video decode device output as:]'
  '-k[black value target: z = zero K]'
  '-k[stle stpo enpo enle shape]'
  '-k[stle0 stpo0 enpo0 enle0 shape0 stle2 stpo2 enpo2 enle2 shape2]'
  '-K[same as -k, but target is K locus rather than K value itself]'
  '-l[set total ink limit, 0 - 400% (estimate by default)]'
  '-L[set black ink limit, 0 - 100% (estimate by default)]'
  '-a[show actual target values if clipped]'
  '-u[warn if output PCS is outside the spectrum locus]'
  '-m[merge output processing into clut]'
  '-b[use CAM Jab for clipping]'
  '-c[set viewing conditions for CIECAM97s]'
  '*:filename:_files'
)

_arguments -s $arguments
