#compdef camdd

local arguments

arguments=(
  '-i[val> Specify input device/file and parameters]'
  '-o[val> Specify output device/file and parameters]'
  '-C[specify a retry count for pass(4) devices]'
  '-E[enable CAM error recovery for pass(4) devices]'
  '-m[specify the maximum amount to be transferred in bytes or]'
  '-t[specify the I/O timeout to use with pass(4) devices]'
  '-v[enable verbose error recovery]'
  '-h[print this message]'
  '*:filename:_files'
)

_arguments -s $arguments
