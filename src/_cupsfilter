#compdef cupsfilter

local arguments

arguments=(
  '--list-filters[list filters that will be used.]'
  '-D[remove the input file when finished.]'
  '-P[.ppd Set PPD file.]'
  '-U[specify username.]'
  '-c[.conf Set cups-files.conf file to use.]'
  '-d[use the named printer.]'
  '-e[use every filter from the PPD file.]'
  '-i[/type Set input MIME type (otherwise auto-typed).]'
  '-j[N\] Filter file N from the specified job (default is file 1).]'
  '-m[/type Set output MIME type (otherwise application/pdf).]'
  '-n[set number of copies.]'
  '-o[value Set option(s).]'
  '-p[.ppd Set PPD file.]'
  '-t[set title.]'
  '-u[remove the PPD file when finished.]'
  '*:filename:_files'
)

_arguments -s $arguments
