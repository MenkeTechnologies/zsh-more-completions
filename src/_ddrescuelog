#compdef ddrescuelog

local arguments

arguments=(
  '(- * :)'{-h,--help}'[display this help and exit]'
  {-V,--version}'[output version information and exit]'
  {-a,--change-types}'[change the block types of mapfile]:nt:'
  {-A,--annotate-mapfile}'[add comments with human-readable pos/sizes]'
  {-b,--block-size}'[block size in bytes \[default 512\]]'
  {-B,--binary-prefixes}'[show binary multipliers in numbers \[SI\]]'
  {-c,--create-mapfile}'[create mapfile from list of blocks \[+-\]]'
  {-C,--complete-mapfile}'[complete mapfile adding blocks of type t \[?\]]'
  {-d,--delete-if-done}'[delete the mapfile if rescue is finished]'
  {-D,--done-status}'[return 0 if rescue is finished]'
  {-f,--force}'[overwrite existing output files]'
  {-i,--input-position}'[starting position of rescue domain \[0\]]'
  {-l,--list-blocks}'[print block numbers of given types (?*/-+)]'
  {-L,--loose-domain}'[accept an incomplete domain mapfile]'
  {-m,--domain-mapfile}'[restrict domain to finished blocks in file]'
  {-n,--invert-mapfile}'[invert block types (finished <--> others)]'
  {-o,--output-position}'[starting position in output file \[ipos\]]'
  {-p,--compare-mapfile}'[compare block types in domain of both files]'
  {-P,--compare-as-domain}'[like -p but compare finished blocks only]'
  {-q,--quiet}'[suppress all messages]'
  {-s,--size}'[maximum size of rescue domain to be processed]'
  {-t,--show-status}'[show a summary of mapfile contents]'
  {-v,--verbose}'[be verbose (a 2nd -v gives more)]'
  {-x,--xor-mapfile}'[XOR the finished blocks in file with mapfile]'
  {-y,--and-mapfile}'[AND the finished blocks in file with mapfile]'
  {-z,--or-mapfile}'[OR the finished blocks in file with mapfile]'
  '*:filename:_files'
)

_arguments -s $arguments
