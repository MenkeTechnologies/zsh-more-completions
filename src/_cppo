#compdef cppo

local arguments

arguments=(
    '-D[Equivalent of interpreting #define DEF before processing the]'
    '-U[Equivalent of interpreting #undef IDENT before processing the]'
    '-I[Add directory DIR to the search path for included files]'
    '-V[.MINOR.PATCH-OPTPRERELEASE+OPTBUILD]'
    '-o[Output file]'
    '-q[Identify and preserve camlp4 quotations]'
    '-s[Output line directives pointing to the exact source location of]'
    '-n[Do not output any line directive other than those found in the]'
    '-version[Print the version of the program and exit.]'
    '-x[Define a custom preprocessor target section starting with:]'
    '-help[Display this list of options]'
    '--help[Display this list of options]'
    '*:filename:_files'
)

_arguments -s $arguments
