#compdef theora_encode

local arguments

arguments=(
  {-o,--output}'[.ogv> file name for encoded output;]'
  {-A,--audio-rate-target}'[bitrate target for Vorbis audio;]'
  {-V,--video-rate-target}'[bitrate target for Theora video]'
  '--soft-target[use a large reservoir and treat the rate]'
  '--two-pass[compress input using two-pass rate control]'
  '--first-pass[perform first-pass of a two-pass rate]'
  '--second-pass[perform second-pass of a two-pass rate]'
  {-a,--audio-quality}'[vorbis quality selector from -1 to 10]'
  {-v,--video-quality}'[theora quality selector from 0 to 10]'
  {-s,--aspect-numerator}'[aspect ratio numerator, default is 0]'
  {-S,--aspect-denominator}'[aspect ratio denominator, default is 0]'
  {-f,--framerate-numerator}'[frame rate numerator, can be extracted]'
  {-F,--framerate-denominator}'[frame rate denominator, can be extracted]'
  {-k,--keyframe-freq}'[keyframe frequency]'
  {-z,--speed}'[sets the encoder speed level. Higher speed]'
  {-d,--buf-delay}'[buffer delay (in frames). Longer delays]'
  '--soft-target[used) and infinite for]'
  {-b,--begin-time}'[.d> Begin encoding at offset into input]'
  {-e,--end-time}'[.d> End encoding at offset into input]'
  '*:filename:_files'
)

_arguments -s $arguments
