#compdef genrb

local arguments

arguments=(
  '-h[-\? or --help this usage text]'
  {-q,--quiet}'[do not display warnings]'
  {-v,--verbose}'[print extra information when processing files]'
  {-V,--version}'[prints out version number and exits]'
  {-c,--copyright}'[include copyright notice]'
  {-e,--encoding}'[encoding of source files]'
  {-d,--destdir}'[destination directory, followed by the path, defaults to]'
  {-s,--sourcedir}'[source directory for files followed by path, defaults to]'
  {-i,--icudatadir}'[directory for locating any needed intermediate data files]'
  {-j,--write-java}'[write a Java ListResourceBundle for ICU4J, followed by optional encoding]'
  '--java-package[for --write-java: package name for writing the ListResourceBundle]'
  {-b,--bundle-name}'[for --write-java: root resource bundle name for writing the ListResourceBundle]'
  {-x,--write-xliff}'[write an XLIFF file for the resource bundle. Followed by]'
  {-k,--strict}'[use pedantic parsing of syntax]'
  {-l,--language}'[for XLIFF: language code compliant with BCP 47.]'
  {-C,--noBinaryCollation}'[do not generate binary collation image;]'
  {-R,--omitCollationRules}'[not include collation (tailoring) rules;]'
  '--formatVersion[write a .res file compatible with the requested formatVersion (single digit);]'
  '--writePoolBundle[write a pool.res file with all of the keys of all input bundles]'
  '--usePoolBundle[.res\] point to keys from the pool.res keys pool bundle if they are available there;]'
  '*:filename:_files'
)

_arguments -s $arguments
