#compdef integritysetup

local arguments

arguments=(
  '--version[print package version]'
  {-v,--verbose}'[shows more detailed error]'
  '--debug[show debug messages]'
  {-q,--batch-mode}'[do not ask for confirmation]'
  '--progress-frequency[progress line update (in seconds)]'
  '--no-wipe[do not wipe device after format]'
  {-j,--journal-size}'[journal size]'
  '--interleave-sectors[interleave sectors]'
  '--journal-watermark[journal watermark]'
  '--journal-commit-time[journal commit time]'
  {-t,--tag-size}'[tag size (per-sector)]'
  {-s,--sector-size}'[sector size]'
  '--buffer-sectors[buffers size]'
  {-I,--integrity}'[data integrity algorithm]'
  '--integrity-key-size[the size of the data integrity]'
  '--integrity-key-file[read the integrity key from a]'
  '--journal-integrity[journal integrity algorithm]'
  '--journal-integrity-key-size[the size of the journal]'
  '--journal-integrity-key-file[read the journal integrity key]'
  '--journal-crypt[journal encryption algorithm]'
  '--journal-crypt-key-size[the size of the journal]'
  '--journal-crypt-key-file[read the journal encryption key]'
  {-D,--integrity-no-journal}'[disable journal for integrity]'
  {-R,--integrity-recovery-mode}'[recovery mode (no journal, no]'
  '--usage[display brief usage]'
  '*:filename:_files'
)

_arguments -s $arguments
