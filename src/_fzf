#compdef fzf

local arguments

arguments=(
    {-x,--extended}'[Extended-search mode]'
    {-e,--exact}'[Enable Exact-match]'
    '--algo=[Fuzzy matching algorithm: \[v1|v2\] (default: v2)]:algorithm type:(v1 v2)'
    '-i[Case-insensitive match (default: smart-case match)]'
    '--literal[Do not normalize latin script letters before matching]'
    {-n,--nth=}'[Comma-separated list of field index expressions]:list of index expression:'
    '--with-nth=[Transform the presentation of each line using field index expressions]:index expression:'
    {-d,--delimiter=}'[Field delimiter regex (default: AWK-style)]:delimiter:'
    '--tac[Reverse the order of the input]'
    '--tiebreak=[Comma-separated list of sort criteria to apply]:list of sort criteria:(length begin end index)'
    {-m,--multi}'[Enable multi-select with tab/shift-tab]'
    '--no-mouse[Disable mouse]'
    '--bind=[Custom key bindings. Refer to the man page.]:keybinds:'
    '--cycle[Enable cyclic scroll]'
    '--no-hscroll[Disable horizontal scroll]'
    '--hscroll-off[Number of screen columns to keep to the right of the]'
    '--filepath-word[Make word-wise movements respect path separators]'
    '--jump-labels=[Label characters for jump and jump-accept]:label chars:'
    '--height=[Display fzf window below the cursor with the given]:height in %:'
    '--min-height=[Minimum height when --height is given in percent]:min height:'
    '--reverse[Reverse orientation]'
    '--border[Draw border above and below the finder]'
    '--margin=[Screen margin (TRBL / TB,RL / T,RL,B / T,R,B,L)]:margin:(TRBL TB,RL T,RL,B T,R,B,L)'
    '--inline-info[Display finder info inline with the query]'
    '--prompt=[Input prompt (default: > )]:prompt:'
    '--header=[String to print as header]:header:'
    '--header-lines=[The first N lines of the input are treated as header]:number of lines:'
    '--ansi[Enable processing of ANSI color codes]'
    '--tabstop=[Number of spaces for a tab character (default: 8)]:number of spaces:'
    '--color=[Base scheme (dark|light|16|bw) and/or custom colors]:base scheme:(dark light 16 bw)'
    '--no-bold[Do not use bold text]'
    '--history=[History file]:history file:_files'
    '--history-size=[Maximum number of history entries (default: 1000)]:history size:'
    '--preview=[Command to preview highlighted line ({})]:command:'
    '--preview-window=[Preview window layout (default: right:50%)]:option:(up down left right)'
    {-q,--query}'[Start the finder with the given query]'
    {-1,--select-1}'[Automatically select the only match]'
    {-0,--exit-0}'[Exit immediately when theres no match]'
    {-f,--filter}'[Filter mode. Do not start interactive finder.]'
    '--print-query[Print query as the first line]'
    '--expect[Comma-separated list of keys to complete fzf]'
    '--read0[Read input delimited by ASCII NUL characters]'
    '--print0[Print output delimited by ASCII NUL characters]'
    '--sync[Synchronous search for multi-staged filtering]'
    '--version[Display version information and exit]'
    '*:filename:_files'
)

_arguments -s $arguments
