#compdef sbd

local arguments

arguments=(
  '-l[listen for incoming connection]'
  '-p[choose port to listen on, or source port to connect out from]'
  '-a[choose an address to listen on or connect out from]'
  '-e[program to execute after connect (e.g. -e cmd.exe or -e bash)]'
  '-r[infinitely respawn/reconnect, pause for n seconds between]'
  '-c[encryption on/off. specify whether you want to use the built-in]'
  '-k[override default phrase to use for encryption (secret must be]'
  '-q[hush, quiet, dont print anything (overrides -v)]'
  '-v[be verbose]'
  '-n[toggle numeric-only IP addresses (dont do DNS resolution). if]'
  '-m[toggle monitoring (snooping) on/off (only used with the -e]'
  '-P[add prefix (+ a hardcoded separator) to all outbound data.]'
  '-H[highlight incoming data with a hardcoded (color) escape]'
  '-V[print version banner and exit (include that output in your]'
  '-s[invoke a shell, nothing else. if sbd is setuid 0, itll invoke]'
  '-w["immobility timeout" in seconds for idle read/write operations]'
  '-D[fork and run in background (daemonize). default: -D off]'
  '*:filename:_files'
)

_arguments -s $arguments
