#compdef ismtp

local arguments

arguments=(
  '-f[file> Imports a list of SMTP servers for testing.]'
  '-h[the target IP and port (IP:port).]'
  '-i[email> The ISAs email address.]'
  '-s[email> The senders email address.]'
  '-r[email> The recipients email address.]'
  '--sr[specifies both the senders and recipients email address.]'
  '-S[name> The senders first and last name.]'
  '-R[name> The recipients first and last name.]'
  '--SR[specifies both the senders and recipients first and last name.]'
  '-m[enables SMTP spoof testing.]'
  '-a[includes .txt attachment with spoofed email.]'
  '-e[enable SMTP user enumeration testing and imports email list.]'
  '-l[1|2|3> Specifies enumeration type (1 = VRFY, 2 = RCPT TO, 3 = all).]'
  '-i[email> The ISAs email address.]'
  '-x[enables SMTP external relay testing.]'
  '-t[the timeout value. (Default is 10.)]'
  '-o[creates "ismtp-results" directory and writes output to]'
  '*:filename:_files'
)

_arguments -s $arguments
