#compdef orbit2-config

local arguments

arguments=(
  '--prefix[change ORBit prefix \[default /usr\]]'
  '--exec-prefix[change ORBit executable prefix \[default /usr\]]'
  '--libs[print library linking information]'
  '--cflags[print pre-processor and compiler flags]'
  '--help[display this help and exit]'
  '--version[output version information]'
  '--use-service[the service SRVC will be used]'
  '*:filename:_files'
)

_arguments -s $arguments
