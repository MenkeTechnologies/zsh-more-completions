#compdef lavplay

local arguments

arguments=(
  '-H[/--H-offset num Horizontal offset (for hardware playback)]'
  '-V[/--V-offset num Vertical offset (for hardware playback)]'
  '-s[/--skip num skip num seconds before playing]'
  '-c[/--synchronization \[01\] Sync correction off/on (default on)]'
  '-n[/--mjpeg-buffers num Number of MJPEG buffers]'
  '-q[/--no-quit Do NOT quit at end of video]'
  '-g[/--gui-mode GUI-mode (used by xlav and LVS)]'
  '-x[/--exchange-fields Exchange fields of an interlaced video]'
  '-z[/--zoom Zoom video to fill screen as much as possible]'
  '-Z[/--full-screen Switch to fullscreen]'
  '-P[/--preserve-pathnames Do not canonicalise pathnames in editlists]'
  '-p[/--playback \[SHC\] playback: (S)oftware, (H)ardware (screen) or (C)ard]'
  '-a[/--audio num When play audio, 0:never, or sum of]'
  '-U[/--use-write Use write instead of mmap for audio playback]'
  '-F[/--flicker Disable flicker reduction]'
  '-S[/--size NxN width X height for SDL (S) or video (H) window]'
  '--s-x-offset[video Window X offset from topleft corner]'
  '--s-y-offset[video Window Y offset from topleft corner]'
  '--display[.x The X-display to use (default: :0.0)]'
  '-v[/--verbose \[012\] verbosity]'
  '*:filename:_files'
)

_arguments -s $arguments
