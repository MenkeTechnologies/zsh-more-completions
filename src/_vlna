#compdef vlna

local arguments

arguments=(
  '-s[silent: no messages to stderr]'
  '-r[rmbackup: if nofilter, removes temporary files]'
  '-v[set of lettres to add tie, default: KkSsVvZzOoUuAI]'
  '-x[code for tie symbol, default: 7E, example -x C2A0]'
  '-m[nomath: ignores math modes]'
  '-n[noverb: ignores verbatim modes]'
  '-l[laTeX mode]'
  '-w[web mode]'
  '*:filename:_files'
)

_arguments -s $arguments
