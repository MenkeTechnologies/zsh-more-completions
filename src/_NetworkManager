#compdef NetworkManager

local arguments

arguments=(
  '(- * :)'{-h,--help}'[show help options]'
  {-V,--version}'[print NetworkManager version and exit]'
  {-n,--no-daemon}'[dont become a daemon]'
  '--log-level[log level: one of \[TRACE,DEBUG,INFO,WARN,ERR,OFF,KEEP\]]'
  '--log-domains[RFKILL,WIFI Log domains separated by ,: any combination of \[DEFAULT,PLATFORM,RFKILL,ETHER,WIFI,BT,MB,DHCP4,DHCP6,DHCP,PPP,WIFI_SCAN,IP4,IP6,IP,AUTOIP4,DNS,VPN,SHARING,SUPPLICANT,AGENTS,SETTINGS,SUSPEND,CORE,DEVICE,OLPC,INFINIBAND,FIREWALL,ADSL,BOND,VLAN,BRIDGE,DBUS_PROPS,TEAM,CONCHECK,DCB,DISPATCH,AUDIT,SYSTEMD,VPN_PLUGIN,PROXY,ALL\]]'
  '--g-fatal-warnings[make all warnings fatal]'
  {-p,--pid-file}'[/NetworkManager/NetworkManager.pid Specify the location of a PID file]'
  '--run-from-build-dir[run from build directory]'
  '--print-config[print NetworkManager configuration and exit]'
  '--config[/NetworkManager/NetworkManager.conf Config file location]'
  '--config-dir[/NetworkManager/conf.d Config directory location]'
  '--system-config-dir[/lib/NetworkManager/conf.d System config directory location]'
  '--intern-config[/lib/NetworkManager/NetworkManager-intern.conf Internal config file location]'
  '--state-file[/lib/NetworkManager/NetworkManager.state State file location]'
  '--plugins[ibft List of plugins separated by ,]'
  '--configure-and-quit[quit after initial configuration]'
  {-d,--debug}'[dont become a daemon, and log to stderr]'
  '*:filename:_files'
)

_arguments -s $arguments
