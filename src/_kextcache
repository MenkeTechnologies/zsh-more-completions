#compdef kextcache

local arguments

arguments=(
  '-prelinked-kernel[(-c):]'
  '-system-prelinked-kernel[:]'
  '-invalidate[(-i): invalidate system kext caches for <volume>]'
  '-update-volume[(-u): update system kext caches for <volume>]'
  '-Installer[us, modify behavior appropriately]'
  '-caches-only[updating any helper partitions even if they appear out of date]'
  '-system-caches[update system kext info caches for the root volume]'
  '-bundle-id[(-b):]'
  '-volume-root[save kext paths in a prelinked kernel relative to <volume>]'
  '-kernel[(-K): Use kernel_filename for a prelinked kernel]'
  '-all-loaded[): Include all kexts ever loaded in prelinked kernel]'
  '-force[): Update volumes even if they look up to date]'
  '-arch[include architecture <archname> in created cache(s)]'
  '-F[run at low priority]'
  '-quiet[): quiet mode: print no informational or error messages]'
  '-verbose[0-6 | 0x<flags> \] (-v):]'
  '-print-diagnostics[):]'
  '-no-authentication[): dont authenticate kexts (for use during development)]'
  '-help[): print this message and exit]'
  '*:filename:_files'
)

_arguments -s $arguments
