#compdef prl_disk_tool

local arguments

arguments=(
  '--split[split the virtual hard disk by 2 GB.]'
  '--size[sets the virtual hard disk size in MB (by default) or GB.]'
  '--hdd[to *.hdd> path to the virtual hard disk image file.]'
  '--resize[_partition resize the last partition while resizing the disk.]'
  '--force[forcibly drop the suspended state before resizing the disk.]'
  '--force-hybrid-shutdown[shutdownState inside disks if vm is in Hybrid Shutdown state.]'
  {-i,--info}'[]'
  '--hdd[to *.hdd> path to the virtual hard disk image file.]'
  '--units[show the disk size in KB, MB, or GB.]'
  '--hdd[to *.hdd> path to the virtual hard disk image file.]'
  {-a,--all-leafs}'[estimate comact for all snapshot leafs.]'
  {-x,--exclude}'[skip snapshot leafs with specified uid.]'
  '--buildmap[build the bitmap of used blocks by scanning the disk.]'
  '--exclude-pagefile[remove the page file from the disk.]'
  '--force[forcibly drop the suspended state before compacting the disk.]'
  {-i,--info}'[]'
  '--hdd[to *.hdd> path to the virtual hard disk image file.]'
  {-a,--all-leafs}'[estimate comact for all snapshot leafs.]'
  {-x,--exclude}'[skip snapshot leafs with specified uid.]'
  '--buildmap[build the bitmap of used blocks by scanning the disk.]'
  '--details[add the compact details section to the JSON output.]'
  '--hdd[to *.hdd> path to the virtual hard disk image file.]'
  '--hdd[to *.hdd> path to the *.hdd file containing the operating system to be validated.]'
  '--hdd[to *.hdd> path to the *.hdd file containing the operating system to be configured.]'
  '--para[to the paravirt driver>]'
  '--boot[to the boot helper driver>]'
  '--toolsag[to the PTIAgent.exe file>]'
  '--mbrfile[to the MBR dump file>]'
  '--force[forcibly configure Boot Camp even if it was]'
  {-i,--info}'[]'
  '--hdd[to *.hdd> path to the virtual hard disk image file.]'
  {-c,--current}'[]'
  '--hdd[to *.hdd> path to the virtual hard disk image file.]'
  '--hdd[to *.hdd> path to the virtual hard disk image file.]'
  '--extend[convert an expandable disk to support disk]'
  '--expanding[reduce the size of a plain disk to the actual]'
  '--plain[convert an expandable disk to a disk of fixed]'
  '--split[split the data stored on the virtual hard disk]'
  '--merge[merge all parts of a split disk into one file.]'
  '--hdd[to *.hdd> path to the virtual hard disk image file.]'
  '--force[forcibly encrypt the virtual hard disk even when it]'
  '--hdd[to *.hdd> path to the virtual hard disk image file.]'
  '--hdd[to *.hdd> path to the virtual hard disk image file.]'
  '--password-type[the way caller specifies a password]'
  {--help,--usage}'[........ print this usage information.]'
  '*:filename:_files'
)

_arguments -s $arguments
