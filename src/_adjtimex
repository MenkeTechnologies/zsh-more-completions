#compdef adjtimex

local arguments

arguments=(
  {-p,--print}'[print values of kernel time variables]'
  {-t,--tick}'[set the kernel tick interval in usec]'
  {-f,--frequency}'[set system clock frequency offset]'
  {-s,--singleshot}'[slew the system clock by adj usec]'
  {-S,--status}'[set kernel clock status]'
  {-R,--reset}'[reset status after setting parameters]'
  {-o,--offset}'[add a time offset of adj usec]'
  {-m,--maxerror}'[set maximum error (usec)]'
  {-e,--esterror}'[set estimated error (usec)]'
  {-T,--timeconstant}'[set phase locked loop time constant]'
  {-a,--adjust}'[set system clock parameters per CMOS]'
  '--force-adjust[override +-1 percent sanity check]'
  {-c,--compare}'[compare system and CMOS clocks]'
  {-i,--interval}'[set clock comparison interval (sec)]'
  {-l,--log}'[log current times to file]'
  {-h,--host}'[query the timeserver]'
  {-w,--watch}'[get current time from user]'
  {-r,--review}'[review clock log file, estimate drifts]'
  {-u,--utc}'[the CMOS clock is set to UTC]'
  {-d,--directisa}'[access the CMOS clock directly]'
  {-n,--nointerrupt}'[bypass the CMOS clock interrupt access method]'
  '--help[print this help, then exit]'
  {-v,--version}'[print adjtimex program version, then exit]'
  {-V,--verbose}'[increase verbosity]'
  '*:filename:_files'
)

_arguments -s $arguments
