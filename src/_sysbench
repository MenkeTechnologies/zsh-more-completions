#compdef sysbench

local arguments

arguments=(
  '--threads[number of threads to use \[1\]]'
  '--events[limit for total number of events \[0\]]'
  '--time[limit for total execution time in seconds \[10\]]'
  '--forced-shutdown[number of seconds to wait after the --time limit before forcing shutdown, or off to disable \[off\]]'
  '--thread-stack-size[size of stack per thread \[64K\]]'
  '--rate[average transactions rate. 0 for unlimited rate \[0\]]'
  '--report-interval[periodically report intermediate statistics with a specified interval in seconds. 0 disables intermediate reports \[0\]]'
  '--report-checkpoints[...\] dump full statistics and reset all counters at specified points in time. The argument is a list of comma-separated values representing the amount of time in seconds elapsed from start of test when report checkpoint(s) must be performed. Report checkpoints are off by default. \[\]]'
  '--debug[print more debugging info \[off\]]'
  '--validate[perform validation checks where possible \[off\]]'
  '--help[print help and exit \[off\]]'
  '--version[print version and exit \[off\]]'
  '--config-file[file containing command line options]'
  '--tx-rate[deprecated alias for --rate \[0\]]'
  '--max-requests[deprecated alias for --events \[0\]]'
  '--max-time[deprecated alias for --time \[0\]]'
  '--num-threads[deprecated alias for --threads \[1\]]'
  '--rand-type[random numbers distribution {uniform,gaussian,special,pareto} \[special\]]'
  '--rand-spec-iter[number of iterations used for numbers generation \[12\]]'
  '--rand-spec-pct[percentage of values to be treated as special (for special distribution) \[1\]]'
  '--rand-spec-res[percentage of special values to use (for special distribution) \[75\]]'
  '--rand-seed[seed for random number generator. When 0, the current time is used as a RNG seed. \[0\]]'
  '--rand-pareto-h[parameter h for pareto distribution \[0.2\]]'
  '--verbosity[verbosity level {5 - debug, 0 - only critical messages} \[3\]]'
  '--percentile[percentile to calculate in latency statistics (1-100). Use the special value of 0 to disable percentile calculations \[95\]]'
  '--histogram[print latency histogram in report \[off\]]'
  '--db-driver[specifies database driver to use (help to get list of available drivers)]'
  '--db-ps-mode[prepared statements usage mode {auto, disable} \[auto\]]'
  '--db-debug[print database-specific debug information \[off\]]'
  '--mysql-host[...\] MySQL server host \[localhost\]]'
  '--mysql-port[...\] MySQL server port \[3306\]]'
  '--mysql-socket[...\] MySQL socket]'
  '--mysql-user[mySQL user \[sbtest\]]'
  '--mysql-password[mySQL password \[\]]'
  '--mysql-db[mySQL database name \[sbtest\]]'
  '--mysql-ssl[use SSL connections, if available in the client library \[off\]]'
  '--mysql-ssl-cipher[use specific cipher for SSL connections \[\]]'
  '--mysql-compression[use compression, if available in the client library \[off\]]'
  '--mysql-debug[trace all client library calls \[off\]]'
  '--mysql-ignore-errors[...\] list of errors to ignore, or "all" \[1213,1020,1205\]]'
  '--mysql-dry-run[dry run, pretend that all MySQL client API calls are successful without executing them \[off\]]'
  '--pgsql-host[postgreSQL server host \[localhost\]]'
  '--pgsql-port[postgreSQL server port \[5432\]]'
  '--pgsql-user[postgreSQL user \[sbtest\]]'
  '--pgsql-password[postgreSQL password \[\]]'
  '--pgsql-db[postgreSQL database name \[sbtest\]]'
  '*:filename:_files'
)

_arguments -s $arguments
