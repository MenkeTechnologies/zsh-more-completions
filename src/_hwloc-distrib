#compdef hwloc-distrib

local arguments

arguments=(
  '--ignore[ignore objects of the given type]'
  '--from[distribute starting from objects of the given type]'
  '--to[distribute down to objects of the given type]'
  '--at[distribute among objects of the given type]'
  '--reverse[distribute by starting from last objects]'
  '--restrict[restrict the topology to processors listed in <set>]'
  '--whole-system[do not consider administration limitations]'
  '--input[file>]'
  '-i[file> Read topology from XML file <path>]'
  '--input[]'
  '-i[read topology from chroot containing the /proc and /sys]'
  '--input[2 2"]'
  '-i[2 2" Simulate a fake hierarchy, here with 2 NUMA nodes of 2]'
  '--input-format[]'
  '--if[enforce input format among xml, fsroot, synthetic]'
  '--single[singlify each output to a single CPU]'
  '--taskset[show taskset-specific cpuset strings]'
  {-v,--verbose}'[show verbose messages]'
  '--version[report version and exit]'
  '*:filename:_files'
)

_arguments -s $arguments
