#compdef hwloc-bind

local arguments

arguments=(
  '--cpubind[use following arguments for cpu binding (default)]'
  '--membind[use following arguments for memory binding]'
  '--mempolicy[change policy that --membind applies (default is bind)]'
  {-l,--logical}'[take logical object indexes (default)]'
  {-p,--physical}'[take physical object indexes]'
  '--single[bind on a single CPU to prevent migration]'
  '--strict[require strict binding]'
  '--get[retrieve current process binding]'
  {-e,--get-last-cpu-location}'[retrieve the last processors where the current process ran]'
  '--nodeset[display (and parse) cpusets as nodesets]'
  '--pid[operate on process <pid>]'
  '--tid[operate on thread <tid>]'
  '--taskset[use taskset-specific format when displaying cpuset strings]'
  '--restrict[restrict the topology to processors listed in <set>]'
  '--whole-system[do not consider administration limitations]'
  '--hbm[only consider high bandwidth memory nodes]'
  '--no-hbm[ignore high-bandwidth memory nodes]'
  {-f,--force}'[launch the command even if binding failed]'
  {-q,--quiet}'[hide non-fatal error messages]'
  {-v,--verbose}'[show verbose messages]'
  '--version[report version and exit]'
  '*:filename:_files'
)

_arguments -s $arguments
