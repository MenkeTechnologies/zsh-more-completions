#compdef pdbedit

local arguments

arguments=(
  {-L,--list}'[list all users]'
  {-v,--verbose}'[be verbose]'
  {-w,--smbpasswd-style}'[give output in smbpasswd style]'
  {-u,--user}'[use username]'
  {-N,--account-desc}'[set account description]'
  {-f,--fullname}'[set full name]'
  {-h,--homedir}'[set home directory]'
  {-D,--drive}'[set home drive]'
  {-S,--script}'[set logon script]'
  {-p,--profile}'[set profile path]'
  {-I,--domain}'[set a users domain]'
  {-U,--user}'[STRING set user SID or RID]'
  {-M,--machine}'[STRING set machine SID or RID]'
  {-a,--create}'[create user]'
  {-r,--modify}'[modify user]'
  {-m,--machine}'[account is a machine account]'
  {-x,--delete}'[delete user]'
  {-b,--backend}'[use different passdb backend as]'
  {-i,--import}'[import user accounts from this backend]'
  {-e,--export}'[export user accounts to this backend]'
  {-g,--group}'[use -i and -e for groups]'
  {-y,--policies}'[use -i and -e to move account policies]'
  '--policies-reset[restore default policies]'
  {-P,--account-policy}'[value of an account policy (like]'
  {-C,--value}'[set the account policy to this value]'
  {-c,--account-control}'[values of account control]'
  '--force-initialized-passwords[force initialization of corrupt]'
  {-z,--bad-password-count-reset}'[reset bad password count]'
  {-Z,--logon-hours-reset}'[reset logon hours]'
  '--time-format[the time format for time parameters]'
  {-t,--password-from-stdin}'[get password from standard in]'
  {-K,--kickoff-time}'[set the kickoff time]'
  '--set-nt-hash[set password from nt-hash]'
  '--usage[display brief usage message]'
  {-d,--debuglevel}'[set debug level]'
  {-s,--configfile}'[use alternate configuration file]'
  {-l,--log-basename}'[base name for log files]'
  {-V,--version}'[print version]'
  '--option[value Set smb.conf option from command line]'
  '*:filename:_files'
)

_arguments -s $arguments
