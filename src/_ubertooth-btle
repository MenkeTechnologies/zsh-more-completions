#compdef ubertooth-btle

local arguments

arguments=(
  '-h[help]'
  '-f[connections]'
  '-n[t follow, only print advertisements]'
  '-p[sniff active connections]'
  '-a[get/set access address (example: -a8e89bed6)]'
  '-s[faux slave mode, using MAC addr (example: -s22:44:66:88:aa:cc)]:address:'
  '-t[set connection following target (example: -t22:44:66:88:aa:cc/48)]:address:'
  '-tnone[connection following target]'
  '-i[with one connection and return to idle]'
  '-I[continuously]'
  '-U[set ubertooth device to use]:0-7:'
  '-r[capture packets to PCAPNG file]:filename:'
  '-q[capture packets to PCAP file (DLT_BLUETOOTH_LE_LL_WITH_PHDR)]:filename:'
  '-c[capture packets to PCAP file (DLT_PPI)]:filename:'
  '-A[advertising channel index (default 37)]:index:'
  '-v[1\] verify CRC mode, get status or enable/disable]'
  '-x[allow n access address offenses (default 32)]:n:'
  '*:filename:_files'
)

_arguments -s $arguments
