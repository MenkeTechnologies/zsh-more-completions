#compdef cec-ctl

local arguments

arguments=(
  {-d,--device}'[use device <dev> instead of /dev/cec0]'
  {-D,--driver}'[use a cec device with this driver name]'
  {-a,--adapter}'[use a cec device with this adapter name]'
  {-p,--phys-addr}'[use this physical address]'
  {-o,--osd-name}'[use this OSD name]'
  {-V,--vendor-id}'[use this vendor ID]'
  {-l,--logical-address}'[show first configured logical address]'
  {-L,--logical-addresses}'[show all configured logical addresses]'
  {-C,--clear}'[clear all logical addresses]'
  {-n,--no-reply}'[toggle dont wait for a reply]'
  {-N,--non-blocking}'[transmit messages in non-blocking mode]'
  {-t,--to}'[send message to the given logical address]'
  {-f,--from}'[send message from the given logical address]'
  {-r,--show-raw}'[show the raw CEC message (hex values)]'
  {-s,--skip-info}'[skip Driver Info output]'
  {-S,--show-topology}'[show the CEC topology]'
  {-P,--poll}'[send poll message]'
  '(- * :)'{-h,--help}'[display this help message]'
  '--help-all[show all help messages]'
  {-T,--trace}'[trace all called ioctls]'
  {-v,--verbose}'[turn on verbose reporting]'
  {-w,--wall-clock}'[show timestamps as wall-clock time (implies -v)]'
  {-W,--wait-for-msgs}'[wait for messages and events for up to --monitor-time secs.]'
  '--cec-version-1[.4        Use CEC Version 1.4 instead of 2.0]'
  '--allow-unreg-fallback[allow fallback to Unregistered]'
  '--no-rc-passthrough[disable the RC passthrough]'
  '--reply-to-followers[the reply will be sent to followers as well]'
  '--raw-msg[transmit the message without validating it (must be root)]'
  '--timeout[set the reply timeout in milliseconds (default is 1000 ms)]'
  '--list-ui-commands[list all UI commands that can be used with --user-control-pressed]'
  '--list-devices[list all cec devices]'
  '--tv[this is a TV]'
  '--record[this is a recording and playback device]'
  '--tuner[this is a tuner device]'
  '--playback[this is a playback device]'
  '--audio[this is an audio system device]'
  '--processor[this is a processor device]'
  '--switch[this is a pure CEC switch]'
  '--cdc-only[this is a CDC-only device]'
  '--unregistered[this is an unregistered device]'
  '--feat-record-tv-screen[signal the Record TV Screen feature]'
  '--feat-set-osd-string[signal the Set OSD String feature]'
  '--feat-deck-control[signal the Deck Control feature]'
  '--feat-set-audio-rate[signal the Set Audio Rate feature]'
  '--feat-sink-has-arc-tx[signal the sink ARC Tx feature]'
  '--feat-source-has-arc-rx[the source ARC Rx feature]'
  '--rc-tv-profile-1[signal RC TV Profile 1]'
  '--rc-tv-profile-2[signal RC TV Profile 2]'
  '--rc-tv-profile-3[signal RC TV Profile 3]'
  '--rc-tv-profile-4[signal RC TV Profile 4]'
  '--rc-src-dev-root[signal that the RC source has a Dev Root Menu]'
  '--rc-src-dev-setup[signal that the RC source has a Dev Setup Menu]'
  '--rc-src-contents[signal that the RC source has a Contents Menu]'
  '--rc-src-media-top[signal that the RC source has a Media Top Menu]'
  '--rc-src-media-context[signal that the RC source has a Media Context Menu]'
  {-m,--monitor}'[monitor CEC traffic]'
  {-M,--monitor-all}'[monitor all CEC traffic]'
  '--monitor-pin[monitor low-level CEC pin]'
  '--monitor-time[monitor for <secs> seconds (default is forever)]'
  '--ignore[<opcode>   Ignore messages from logical address <la> and opcode]'
  '--store-pin[store the low-level CEC pin changes to the file <to>.]'
  '--analyze-pin[analyze the low-level CEC pin changes from the file <from>.]'
  '--test-power-cycle[test power cycle behavior of the display.]'
  '--stress-test-power-cycle[<count>\[,max-sleep=<secs>\]]'
  '--help-abort[show help for the Abort feature]'
  '--help-audio-rate-control[show help for the Audio Rate Control feature]'
  '--help-audio-return-channel-control[help for the Audio Return Channel Control feature]'
  '--help-capability-discovery-and-control[help for the Capability Discovery and Control feature]'
  '--help-deck-control[show help for the Deck Control feature]'
  '--help-device-menu-control[show help for the Device Menu Control feature]'
  '--help-device-osd-transfer[show help for the Device OSD Transfer feature]'
  '--help-dynamic-audio-lipsync[show help for the Dynamic Audio Lipsync feature]'
  '--help-htng[show help for the HTNG feature]'
  '--help-osd-display[show help for the OSD Display feature]'
  '--help-one-touch-play[show help for the One Touch Play feature]'
  '--help-one-touch-record[show help for the One Touch Record feature]'
  '--help-power-status[show help for the Power Status feature]'
  '--help-remote-control-passthrough[show help for the Remote Control Passthrough feature]'
  '--help-routing-control[show help for the Routing Control feature]'
  '--help-standby[show help for the Standby feature]'
  '--help-system-audio-control[show help for the System Audio Control feature]'
  '--help-system-information[show help for the System Information feature]'
  '--help-timer-programming[show help for the Timer Programming feature]'
  '--help-tuner-control[show help for the Tuner Control feature]'
  '--help-vendor-specific-commands[show help for the Vendor Specific Commands feature]'
  '--custom-command[<byte>\[,payload=<byte>\[:<byte>\]*\]]'
  '*:filename:_files'
)

_arguments -s $arguments
