#compdef androidtestrunner

local arguments

arguments=(
  '--path[the path where androiddeployqt builds the android package.]'
  '--apk[path>: The test apk path. The apk has to exist already, if it]'
  '--make[cmd>: make command, needed to install the qt library.]'
  '--adb[cmd>: The Android ADB command. If missing the one from]'
  '--activity[the Activity to run. If missing the first]'
  '--timeout[timeout to run the test.]'
  '--skip-install-root[: Do not append INSTALL_ROOT=... to the make command.]'
  '--verbose[: Prints out information during processing.]'
  '--help[: Displays this information.]'
  '*:filename:_files'
)

_arguments -s $arguments
