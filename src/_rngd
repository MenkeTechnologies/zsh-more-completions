#compdef rngd

local arguments

arguments=(
  {-b,--background}'[become a daemon (default)]'
  {-d,--no-drng}'[Do not use drng as a source of random number input]'
  {-e,--entropy-count}'[number of entropy bits to support (default: 8), 1]'
  {-f,--foreground}'[do not fork and become a daemon]'
  {-i,--ignorefail}'[ignore repeated fips failures]'
  {-l,--list}'[list the operational entropy sources on this]'
  {-n,--no-tpm}'[Do not use tpm as a source of random number input]'
  {-o,--random-device}'[kernel device used for random number output]'
  {-p,--pid-file}'[file used for recording daemon PID, and multiple]'
  {-q,--quiet}'[suppress error messages]'
  {-r,--rng-device}'[kernel device used for random number input]'
  {-s,--random-step}'[number of bytes written to random-device at a time]'
  {-v,--verbose}'[report available entropy sources]'
  {-W,--fill-watermark}'[do not stop feeding entropy to random-device until]'
  {-x,--exclude}'[disable the numbered entropy source specified]'
  '--usage[give a short usage message]'
  {-V,--version}'[print program version]'
  '*:filename:_files'
)

_arguments -s $arguments
