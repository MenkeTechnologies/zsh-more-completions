#compdef wdctl

local arguments

arguments=(
    {-f,--flags}'[print selected flags only]'
    {-F,--noflags}'[do not print information about flags]'
    {-I,--noident}'[do not print watchdog identity information]'
    {-n,--noheadings}'[do not print headings for flags table]'
    {-O,--oneline}'[print all information on one line]'
    {-o,--output}'[output columns of the flags]'
    {-r,--raw}'[use raw output format for flags table]'
    {-T,--notimeouts}'[do not print watchdog timeouts]'
    {-s,--settimeout}'[set watchdog timeout]'
    {-x,--flags-only}'[print only flags table (same as -I -T)]'
    '(- * :)'{-h,--help}'[display this help and exit]'
    {-V,--version}'[output version information and exit]'
    '*:filename:_files'
)

_arguments -s $arguments
