#compdef comedi_config

local arguments

arguments=(
  {-v,--verbose}'[verbose output.]'
  {-q,--quiet}'[quiet output.]'
  {-V,--version}'[print program version.]'
  {-i,--init-data,--init-data0}'[use file for driver initialization data, typically firmware code.]'
  '--init-data1[]'
  '--init-data2[]'
  '--init-data3[some drivers require multiple files of initialization data. Use these]'
  {-r,--remove}'[remove previously configured driver.]'
  '--read-buffer[set buffer size in kilobytes used for reading.]'
  '--write-buffer[set buffer size in kilobytes used for writing.]'
  '--subdevice-buffer[<size>\[,<subd>,<size>\]...]'
  '*:filename:_files'
)

_arguments -s $arguments
