#compdef whoismac

local arguments

arguments=(
  '-m[mac (six bytes of mac addr) or]'
  '-p[input PMKID hashline]'
  '-P[input EAPOL hashline from potfile]'
  '-e[input ESSID]'
  '-x[input ESSID in hex]'
  '-e[input ESSID]'
  '-v[vendor name]'
  '-h[this help screen]'
  '*:filename:_files'
)

_arguments -s $arguments
