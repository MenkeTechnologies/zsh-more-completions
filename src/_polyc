#compdef polyc

local arguments

arguments=(
  '-b[use poly as compiler instead of /opt/homebrew/Cellar/polyml/5.9/bin/poly]'
  '-c[compile but do not link.  The object file is written to the source file with .o extension.]'
  '-o[write the executable file to output]'
  '--help[write this text and exit]'
  '*:filename:_files'
)

_arguments -s $arguments
