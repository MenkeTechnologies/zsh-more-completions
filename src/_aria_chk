#compdef aria_chk

local arguments

arguments=(
  {-H,--HELP}'[print all argument options sorted alphabetically.]'
  '--datadir[path for control file (and logs if --logdir not used)]'
  '--logdir[path for log files]'
  '--ignore-control-file[dont open the control file. Only use this if you]'
  '--require-control-file[abort if we cant find/read the maria_log_control]'
  {-s,--silent}'[only print errors. One can use two -s to make]'
  {-t,--tmpdir}'[path for temporary files. Multiple paths can be]'
  {-v,--verbose}'[print more information. This can be used with]'
  {--description,--check}'[. Use many -v for more verbosity.]'
  {-V,--version}'[print version and exit.]'
  {-w,--wait}'[wait if table is locked.]'
  {-c,--check}'[check table for errors.]'
  {-e,--extend-check}'[check the table VERY throughly. Only use this in]'
  {-F,--fast}'[check only tables that havent been closed properly.]'
  {-C,--check-only-changed}'[check only tables that have changed since last check.]'
  {-f,--force}'[restart with -r if there are any errors in the table.]'
  {-i,--information}'[print statistics information about table that is checked.]'
  {-m,--medium-check}'[faster than extend-check, but only finds 99.99% of]'
  {-T,--read-only}'[dont mark table as checked.]'
  {-U,--update-state}'[mark tables as crashed if any errors were found and]'
  '--warning-for-wrong-transaction-id[give a warning if we find a transaction id in the table that is bigger]'
  {-B,--backup}'[make a backup of the .MAD file as filename-time.BAK.]'
  '--correct-checksum[correct checksum information for table.]'
  {-D,--data-file-length}'[max length of data file (when recreating data]'
  '--create-missing-keys[create missing keys. This assumes that the data]'
  {-e,--extend-check}'[try to recover every possible row from the data file]'
  {-f,--force}'[overwrite old temporary files. Add another --force to]'
  {-k,--keys-used}'[tell Aria to update only some specific keys. # is a]'
  '--max-record-length[skip rows bigger than this if aria_chk cant allocate]'
  {-r,--recover}'[can fix almost anything except unique keys that arent]'
  {-n,--sort-recover}'[forces recovering with sorting even if the temporary]'
  {-p,--parallel-recover}'[uses the same technique as -r and -n, but creates]'
  {-o,--safe-recover}'[uses old recovery method; Slower than -r but can]'
  '--transaction-log[log repair command to transaction log. This is needed]'
  '--character-sets-dir[..]'
  '--set-collation[change the collation used by the index.]'
  {-q,--quick}'[faster repair by not modifying the data file.]'
  {-u,--unpack}'[unpack file packed with ariapack.]'
  {-a,--analyze}'[analyze distribution of keys. Will make some joins in]'
  '--stats[_method=name Specifies how index statistics collection code should]'
  {-d,--description}'[prints some information about table.]'
  {-A,--set-auto-increment}'[force auto_increment to start at this or higher value]'
  {-S,--sort-index}'[sort index blocks. This speeds up read-next in]'
  {-R,--sort-records}'[sort records according to an index. This makes your]'
  {-b,--block-search}'[find a record, a block at given offset belongs to.]'
  {-z,--zerofill}'[fill empty space in data and index files with zeroes.]'
  {--zerofill-keep-lsn,--zerofill}'[does not zero out LSN of]'
  '--page[_buffer_size=# Size of page buffer. Used by --safe-repair]'
  '--read[_buffer_size=# Read buffer size for sequential reads during scanning]'
  '--sort[_buffer_size=# Size of sort buffer. Used by --recover]'
  '--sort[_key_blocks=# Internal buffer for sorting keys; Dont touch :)]'
  '--write[_buffer_size=# Write buffer size for sequential writes during repair]'
  '--print-defaults[print the program argument list and exit.]'
  '--no-defaults[dont read default options from any option file.]'
  '--defaults-file[only read default options from the given file #.]'
  '--defaults-extra-file[read this file after the global files are read.]'
  '--defaults-group-suffix[additionally read default groups with # appended as a suffix.]'
  '*:filename:_files'
)

_arguments -s $arguments
