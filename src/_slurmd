#compdef slurmd

local arguments

arguments=(
  '-b[report node reboot now.]'
  '-c[force cleanup of slurmd shared memory.]'
  '-C[print node configuration information and exit.]'
  '-d[pathname to the slurmstepd program.]'
  '-D[run daemon in foreground.]'
  '-f[read configuration from the specified file.]'
  '-h[print this help message.]'
  '-L[log messages to the file `logfile.]'
  '-M[use mlock() to lock slurmd pages into memory.]'
  '-n[run the daemon at the specified nice value.]'
  '-N[run the daemon for specified hostname.]'
  '-v[verbose mode. Multiple -vs increase verbosity.]'
  '-V[print version information and exit.]'
  '*:filename:_files'
)

_arguments -s $arguments
