#compdef rz-sign

local arguments

arguments=(
  '-a[add extra a to analysis command]'
  '-f[interpret the file as a FLIRT .sig file and dump signatures]'
  '-h[help menu]'
  '-j[show signatures in json]'
  '-o[.sdb      add signatures to file, create if it does not exist]'
  '-q[quiet mode]'
  '-r[show output in rizin commands]'
  '-s[save all signatures under this signspace]'
  '-v[show version information]'
  '*:filename:_files'
)

_arguments -s $arguments
