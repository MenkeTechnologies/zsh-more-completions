#compdef espeak-ng

# Autogenerated from man page /usr/share/man/man1/espeak-ng.1.gz

local arguments

arguments=(
    '(- * :)'{-h,--help}'[Show summary of options.]'
    '--version[Prints the espeak library version and the location of the espeak voice data.]'
    '-f[Text file to speak.]:file>'
    '--stdin[Read text input from stdin instead of a file.]'
    '-d[Use the specified device to speak the audio on.]:<device>'
    '-q[Quiet, don\t produce any speech (may be useful with -x).]'
    '-a[Amplitude, 0 to 200, default is 100.]:<integer>'
    '-g[Word gap. Pause between words, units of 10ms at the default speed.]:<integer>'
    '-k[Indicate capital letters with: 1=sound, 2=the word "capitals", higher values …]:<integer>'
    '-l[Line length.]:<integer>'
    '-p[Pitch adjustment, 0 to 99, default is 50.]:<integer>'
    '-s[Speed in words per minute, default is 160.]:<integer>'
    '-v[Use voice file of this name from espeak-ng-data/voices.]:name>'
    '-w[Write output to this WAV file, rather than speaking it directly.]'
    '--split[Used with -w to split the audio output into <minutes> recorded chunks.]:<minutes>'
    '-b[Input text encoding, 1=UTF8, 2=8 bit, 4=16 bit.]'
    '-m[Indicates that the text contains SSML (Speech Synthesis Markup Language) tags…]'
    '-x[Write phoneme mnemonics to stdout.]'
    '-X[Write phonemes mnemonics and translation trace to stdout.]'
    '-z[No final sentence pause at the end of the text.]'
    '--stdout[Write speech output to stdout.]'
    '--compile[Compile the pronunciation rules and dictionary in the current directory.]:voicename'
    '--compile-debug[Compile the pronunciation rules and dictionary in the current directory as ab…]:voicename'
    '--ipa[Write phonemes to stdout using International Phonetic Alphabet.]'
    '--tie[The character to use to join multi-letter phonemes in -x and --ipa output.]:<character>'
    '--path[Specifies the directory containing the espeak-ng-data directory.]:<path>'
    '--pho[Write mbrola phoneme data (. pho) to stdout or to the file in --phonout.]'
    '--phonout[Write output from -x -X commands and mbrola phoneme data to this file.]:<filename>'
    '--punct[Speak the names of punctuation characters during speaking.]:"<characters>"'
    '--sep[The character to separate phonemes from the -x and --ipa output.]:<character>'
    '--voices[Lists the available voices.]:code>'
    '*:filename:_files'
)
_arguments -s $arguments
