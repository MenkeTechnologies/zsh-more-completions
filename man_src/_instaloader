#compdef instaloader

local arguments

arguments=(
  '--login[.]'
  '--login[.]'
  '--slide[set what image/interval of a sidecar you want to]'
  '--no-pictures[do not download post pictures. Cannot be used together]'
  {-V,--no-videos}'[do not download videos.]'
  '--no-video-thumbnails[do not download thumbnails of videos.]'
  {-G,--geotags}'[download geotags when available. Geotags are stored as]'
  {-C,--comments}'[download and update comments for each post. This]'
  '--no-captions[do not create txt files.]'
  '--post-metadata-txt[template to write in txt file for each Post.]'
  '--storyitem-metadata-txt[template to write in txt file for each StoryItem.]'
  '--no-metadata-json[do not create a JSON file containing the metadata of]'
  '--no-compress-json[do not xz compress JSON files, rather create pretty]'
  '--no-posts[do not download regular posts.]'
  '--no-profile-pic[do not download profile picture.]'
  {-s,--stories}'[also download stories of each profile that is]'
  '--highlights[also download highlights of each profile that is]'
  '--tagged[also download posts where each profile is tagged.]'
  '--igtv[also download IGTV videos.]'
  {-F,--fast-update}'[for each target, stop when encountering the first]'
  '--latest-stamps[store the timestamps of latest media scraped for each]'
  {--post-filter,--only-if}'[expression that, if given, must evaluate to True for]'
  '--storyitem-filter[expression that, if given, must evaluate to True for]'
  {-c,--count}'[do not attempt to download more than COUNT posts.]'
  {-l,--login}'[login name (profile name) for your Instagram account.]'
  {-f,--sessionfile}'[path for loading and storing session key file.]'
  {-p,--password}'[password for your Instagram account. Without this]'
  '--dirname-pattern[name of directory where to store posts. {profile} is]'
  '--filename-pattern[prefix of filenames for posts and stories, relative to]'
  '--title-pattern[prefix of filenames for profile pics, hashtag profile]'
  '--resume-prefix[prefix for filenames that are used to save the]'
  '--no-resume[do not resume a previously-aborted download iteration]'
  '--user-agent[user Agent to use for HTTP requests. Defaults to]'
  '--max-connection-attempts[maximum number of connection attempts until a request]'
  '--request-timeout[seconds to wait before timing out a connection]'
  '--abort-on[comma-separated list of HTTP status codes that cause]'
  '--no-iphone[do not attempt to download iPhone version of images]'
  {-q,--quiet}'[disable user interaction, i.e. do not print messages]'
  {-h,--help}'[show this help message and exit.]'
  '--version[show version number and exit.]'
  '*:filename:_files'
)

_arguments -s $arguments
