local arguments

arguments=(
    {-p,--list-processes}'[This lists all Tracker processes in the system.]'
    '--kill[This uses SIGKILL to stop all Tracker processes found matching the parameter,…]'
    '--terminate[This uses SIGTERM to stop all Tracker processes.]'
    {-s,--start}'[Starts all miners.]'
    {-f,--follow}'[Follow status changes to daemons as they happen.]'
    {-w,--watch}'[Watch changes that happen to the database in real time.]':ontology
    '--list-common-statuses[This will list statuses most commonly produced by miners and the store.]'
    '--list-miners-running[This will list all miners which have responded to a D-Bus call.]'
    '--list-miners-available[This will list all miners which are available even if they are not running at…]'
    '--pause-details[For listing all miners which are paused and the reasons for being paused, you…]'
    '--miner[This argument is used with --pause or --resume to say which miner you want to…]:miner'
    '--pause[The reason here is useful to know WHY the miner should be paused.]:reason'
    '--pause-for-process[This works exactly the same way as --pause with the exception that it only ke…]:reason'
    '--resume[The cookie is given by a successful --pause command.]:cookie'
    '*:filename:_files'
)
_arguments -s $arguments
