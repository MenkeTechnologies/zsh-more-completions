local arguments

arguments=(
    {-d,--device}'[Use device <dev> as the video device if <dev> is a number, then /dev/video<de…]:dev'
    {-f,--file}'[Read from the file <file> for the raw frame data.]:file'
    {-p,--port}'[Listen for a network connection on the given port. The default port is 8362.]:port'
    {-T,--tpg}'[Use the test pattern generator.]'
    {-c,--count}'[Stop after <cnt> captured frames.]:cnt'
    {-b,--buffers}'[Request <bufs> buffers (default 4) when streaming from a video device.]:bufs'
    {-s,--single-step}'[Starting with frame <frm> (default 1), pause after displaying each frame unti…]:frm'
    {-C,--colorspace}'[Override colorspace.]:c'
    {-X,--xfer-func}'[Override transfer function.]:x'
    {-Y,--ycbcr-enc}'[Override Y\CbCr encoding.]:y'
    {-Q,--quant}'[Override quantization.]:q'
    {-P,--pixelformat}'[For video devices: set the format to this pixel format.]:p'
    {-l,--list-formats}'[Display all supported formats.]'
    '(- * :)'{-h,--help}'[Display this help message.]'
    {-t,--timings}'[Report frame render timings.]'
    {-v,--verbose}'[Be more verbose.]'
    {-R,--raw}'[Open device in raw mode.]'
    '--opengl[Force openGL to display the video.]'
    '--opengles[Force openGL ES to display the video.]'
    {-W,--width}'[Set width.]:width'
    {-H,--height}'[Set frame (not field!) height.]:height'
    '--fps[Set frames-per-second (default is 30).]:fps'
    {-F,--field}'[Override field setting.]:f'
    '--list-patterns[List available patterns for use with --pattern.]'
    '--pattern[Choose output test pattern, the default is 0.]:pat'
    '--square[Show a square in the middle of the output test pattern.]'
    '--border[Show a border around the pillar/letterboxed video.]'
    '--sav[Insert an SAV code in every line.]'
    '--eav[Insert an EAV code in every line.]'
    '--pixel-aspect[Select a pixel aspect ratio, the default is to autodetect.]:aspect'
    '--video-aspect[Select a video aspect ratio, the default is to use the frame ratio.]:aspect'
    '--alpha[Value to use for the alpha component, range 0-255, the default is 0.]:alpha-value'
    '--alpha-red-only[Only use the --alpha value for the red colors, for all others use 0.]'
    '--rgb-lim-range[Encode RGB values as limited \[16-235\] instead of full range.]'
    '--hor-speed[Choose speed for horizontal movement, the default is 0 and the range is \[-3.]:speed'
    '--vert-speed[Choose speed for vertical movement, the default is 0 and the range is \[-3. 3\].]:speed'
    '--perc-fill[Percentage of the frame to actually fill. the default is 100%.]:percentage'
    '--test[Test all formats, each test generates <count> frames.]:count'
    '--test-mask[Mask which tests are performed. <mask> is a bit mask with these values:.]:mask'
    '*:filename:_files'
)
_arguments -s $arguments
