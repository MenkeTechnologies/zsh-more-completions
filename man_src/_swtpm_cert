#compdef swtpm_cert

local arguments

arguments=(
  '--pubkey[: PEM file for public key (EK)]'
  '--signkey[: PEM file for CA signing key or GnuTLS TPM or]'
  '--signkey-password[: Password for the CA signing key]'
  '--signkey-pwd[: Alternative password option for CA signing key]'
  '--parentkey-password[: Password of parent key; SRK password of TPM]'
  '--parentkey-pwd[: Alternative password option for SRK password]'
  '--issuercert[: PEM file with CA cert]'
  '--out-cert[: Filename for certificate]'
  '--modulus[string>    : The modulus of the public key]'
  '--exponent[: The exponent of the public key]'
  '--ecc-x[: ECC key x component]'
  '--ecc-y[: ECC key y component]'
  '--ecc-curveid[: ECC curve id; secp256r1, secp384r1, secp521r1]'
  '--serial[number>  : The certificate serial number]'
  '--days[: Number of days the cert is valid]'
  '--pem[: Write certificate in PEM format; default is DER]'
  '--type[: The type of certificate to create; default is ek]'
  '--tpm-manufacturer[: The name of the TPM manufacturer]'
  '--tpm-model[: The TPM model (part number)]'
  '--tpm-version[: The TPM version (firmware version)]'
  '--platform-manufacturer[: The name of the Platform manufacturer]'
  '--platform-model[: The Platform model (part number)]'
  '--platform-version[: The Platform version (firmware version)]'
  '--tpm-spec-family[: Specification family (string)]'
  '--tpm-spec-level[: Specification level (integer)]'
  '--tpm-spec-revision[: Specification revision (integer)]'
  '--subject[: Subject such as location in format]'
  '--add-header[: Add the TCG certificate header describing]'
  '--tpm2[: Issue a TPM 2 compliant certificate]'
  '--allow-signing[: The EK of a TPM 2 allows signing;]'
  '--decryption[: The EK if a TPM 2 can be used for key]'
  '--print-capabilities[: Print capabilities and exit]'
  '--version[: Display version and exit]'
  '--help[: Display this help screen and exit]'
  '*:filename:_files'
)

_arguments -s $arguments
