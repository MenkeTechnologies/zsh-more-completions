#compdef jcat-tool

local arguments

arguments=(
  {-h,--help}'[show help options]'
  '--version[print the version number]'
  {-v,--verbose}'[print verbose debug statements]'
  '--basename[only consider the basename for the ID]'
  '--disable-time-checks[disable time checks when verifying]'
  '--public-key[location of public key used for verification]'
  '--public-keys[location of public key directories used for verification]'
  '--prefix[prefix for import and output files]'
  '--kind[kind for blob, e.g. `gpg`]'
  '--appstream-id[appstream ID for blob, e.g. `com.bbc`]'
  '--keyring[keyring location, e.g. `/var/lib/fwupd`]'
  '*:filename:_files'
)

_arguments -s $arguments
