#compdef nfsstat

# Autogenerated from man page /usr/share/man/man8/nfsstat.8.gz

local arguments

arguments=(
    {-s,--server}'[Print only server-side statistics.]'
    {-c,--client}'[Print only client-side statistics.]'
    {-n,--nfs}'[Print only NFS statistics.]'
    '-2[Print only NFS v2 statistics.]'
    '-3[Print only NFS v3 statistics.]'
    '-4[Print only NFS v4 statistics.]'
    {-m,--mounts}'[Print information about each of the mounted NFS file systems.]'
    {-r,--rpc}'[Print only RPC statistics.]'
    '-o[Display statistics for the specified facility, which must be one of: . RS.]:facility'
    {-v,--verbose}'[This is equivalent to -o all.]'
    {-l,--list}'[Print information in list form.]'
    {-S,--since}'[Instead of printing current statistics, nfsstat imports statistics from fi…]'
    {-Z,--sleep}'[Instead of printing current statistics and immediately exiting, nfsstat takes…]':interval
    '*:filename:_files'
)
_arguments -s $arguments
