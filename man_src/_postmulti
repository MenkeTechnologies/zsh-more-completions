#compdef postmulti

# Autogenerated from man page /usr/share/man/man1/postmulti.1

local arguments

arguments=(
    '-a[Perform the operation on all instances. This is the default.]'
    '-g[Perform the operation only for members of the named group.]:group'
    '-i[Perform the operation only for the instance with the specified name.]:name'
    '-R[Reverse the iteration order.]'
    '-l[List Postfix instances with their instance name, instance group name, enable/…]'
    '-p[Invoke postfix(1) to execute postfix-command.]:postfix-command'
    '-x[Execute the specified unix-command for all Postfix instances.]:unix-command'
    '-v[Enable verbose logging for debugging purposes. Multiple.]'
    '-I[Assign the specified instance name to an existing instance, newly-created ins…]:name'
    '-G[Assign the specified group name to an existing instance or to a newly created…]:group'
    '-e["Edit" managed instances. The following actions are supported:.]:action'
    '*:filename:_files'
)
_arguments -s $arguments
