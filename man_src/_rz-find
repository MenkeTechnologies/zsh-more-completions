#compdef rz-find

local arguments

arguments=(
  '-a[only accept aligned hits]'
  '-b[set block size]'
  '-e[search for regex matches (can be used multiple times)]'
  '-f[start searching from address from]'
  '-F[read the contents of the file and use it as keyword]'
  '-h[show this help]'
  '-i[identify filetype (rizin -nqcpm file)]'
  '-j[output in JSON]'
  '-m[magic search, file-type carver]'
  '-M[set a binary mask to be applied on keywords]'
  '-n[do not stop on read errors]'
  '-r[print using rizin commands]'
  '-s[search for a specific string (can be used multiple times)]'
  '-S[search for a specific wide string (can be used multiple times). Assumes str is UTF-8.]'
  '-t[stop search at address to]'
  '-q[quiet - do not show headings (filenames) above matching contents (default for searching a single file)]'
  '-v[print version and exit]'
  '-x[search for hexpair string (909090) (can be used multiple times)]'
  '-X[show hexdump of search results]'
  '-z[search for zero-terminated strings]'
  '-Z[show string found on each search hit]'
  '*:filename:_files'
)

_arguments -s $arguments
