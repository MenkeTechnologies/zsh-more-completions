#compdef ppmlabel

# Autogenerated from man page /usr/share/man/man1/ppmlabel.1.gz

local arguments

arguments=(
    '--angle[Sets the angle of the baseline of subsequent text.]:angle"'
    '--background[If the argument is `` transparent \\, text is drawn over the existing pixels…]'
    '--colour[Sets the colour for subsequent text.]:colour"'
    '--file[Reads text from the file filename and draws it on successive lines.]:filename"'
    '--size[Sets the height of the tallest characters above the baseline to textsize pix…]:textsize"'
    '--text[Draws the given text string (which must be quoted if it contains spaces).]'
    '-x[Sets the column at which subsequent text will be left justified.]:column"'
    '-y[Sets the row which will form the baseline of subsequent text.]:row'
    '*:filename:_files'
)
_arguments -s $arguments
