#compdef ifstatus

local arguments

arguments=(
  {-a,--auto}'[enable interface automatically (off)]'
  {-q,--quiet}'[quiet behaviour (off)]'
  {-v,--verbose}'[enable verbosity (off)]'
  {-h,--help}'[show this help]'
  {-V,--version}'[show version number]'
  '*:filename:_files'
)

_arguments -s $arguments
