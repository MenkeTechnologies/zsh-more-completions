#compdef anthy-dic-tool-unicode

local arguments

arguments=(
  '--help[: Show this usage text]'
  '--version[: Show version]'
  '--dump[: Dump dictionary]'
  '--load[: Load dictionary]'
  '--append[: Append dictionary]'
  '--migrate[: Migrate Anthy text dictionary to Anthy-Unicode text dictionary]'
  '--eucjp[: Use EUC-JP encoding]'
  '--personality[use NAME as a name of personality]'
  '--text[: Use text dictionary with --append or --load option]'
  '--src[use FILE as a source file]'
  '--dest[use FILE as a destination file]'
  '*:filename:_files'
)

_arguments -s $arguments
