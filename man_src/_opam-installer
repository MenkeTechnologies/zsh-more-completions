#compdef opam-installer

# Autogenerated from man page /usr/share/man/man1/opam-installer.1.gz

local arguments

arguments=(
    '--docdir[Documentation dir. Relative to prefix or absolute. By default $prefix/doc.]:PATH'
    '--help[Show this help in format FMT (pager, plain or groff).]'
    {-i,--install}'[Install the package (the default).]'
    '--libdir[OCaml lib dir. Relative to prefix or absolute.]:PATH'
    '--mandir[Manpages dir. Relative to prefix or absolute. By default $prefix/man.]:PATH'
    '--name[Specify the package name. Used to set install directory under `share/\, etc.]:NAME'
    '--prefix[The prefix to install to.]'
    '--script[Don\t execute the commands, but output a shell-script (experimental).]'
    '--stubsdir[Stubs installation dir. Relative to prefix or absolute.]:PATH'
    '--topdir[Toplevel install dir. Relative to prefix or absolute.]:PATH'
    {-u,--uninstall,--remove}'[Remove the package.]'
    '--version[Show version information.]'
    '*:filename:_files'
)
