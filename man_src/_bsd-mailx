#compdef bsd-mailx

# Autogenerated from man page /usr/share/man/man1/bsd-mailx.1.gz

local arguments

arguments=(
    '-a[Specify additional header fields on the command line such as "X-Loop: foo@bar…]'
    '-b[Send blind carbon copies to bcc-addr.]'
    '-c[Send carbon copies to list of users.]'
    '-d[Causes bsd-mailx mail to output all sorts of information useful for debugging…]'
    '-E[Don\t send messages with an empty body.]'
    '-f[Use an alternate mailbox.]'
    '-I[Forces bsd-mailx mail to run in interactive mode, even when input is not a te…]'
    '-i[Ignore tty interrupt signals.]'
    '-N[Inhibits initial display of message headers when reading mail or editing a ma…]'
    '-n[Inhibits reading /etc/mail. rc upon startup.]'
    '-r[Use from-addr as the from address in the message and envelope.]'
    '-s[Specify subject on command line (only the first argument after the s flag is …]'
    '-u[Equivalent to: Pp $ mail -f /var/mail/user Pp except that locking is done.]'
    '-v[Verbose mode. The details of delivery are displayed on the user\s terminal.]'
    '*:filename:_files'
)
_arguments -s $arguments
