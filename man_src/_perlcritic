#compdef perlcritic

# Autogenerated from man page /Users/wizard/perl5/man/man1/perlcritic.1

local arguments

function __severity() {
    
    local ary=(1:gentle 2:stern 3:harsh 4:cruel 5:brutal)
    _describe N ary
}

arguments=(
    {--profile,-p}'[Directs "perlcritic" to use a profile named by FILE rather than looking for the default .perlcriticrc]:FILE:_files'
    '--noprofile[Directs "perlcritic" not to load any configuration file, thus reverting to the default configuration for all Policies]'
    '--severity[Directs "perlcritic" to only apply Policies with a severity greater than "N"]:N:__severity'
    {-5,-4,-3,-2,-1}'[These are numeric shortcuts for setting the "--severity" option]'
    {--gentle,--stern,--harsh,--cruel,--brutal}'[These are named shortcuts for setting the "--severity" option]'
    '--theme[Directs "perlcritic" to apply only Policies with themes that satisfy the "RULE"]:RULE'
    '--include[Directs "perlcritic" to apply additional Policies that match the regex "/PATTERN/imx"]:PATTERN'
    '--exclude[Directs "perlcritic" to not apply any Policy that matches the regex "/PATTERN/imx"]:PATTERN'
    {--single-policy,-s}'[Directs "perlcritic" to apply just one Policy module matching the regex "/PATTERN/ixms"]:PATTERN'
    '--top[Directs "perlcritic" to report only the top "N" Policy violations in each file]:N'
    '--force[Directs "perlcritic" to ignore the magical "## no critic" annotations in the source code]'
    '--statistics[Causes several statistics about the code being scanned and the violations found to be reported after any other output]'
    '--statistics-only[Like the "--statistics" option, but suppresses normal output and only shows the statistics]'
    '--verbose[Sets the verbosity level or format for reporting violations]:N'
    '--list[Displays a condensed listing of all the Perl::Critic::Policy modules]'
    '--list-enabled[Displays a condensed listing of all the Perl::Critic::Policy modules that would be enforced]'
    '--list-themes[Displays a list of all the themes of the Perl::Critic::Policy modules that are found on this machine]'
    '--profile-proto[Displays an expanded listing of all the Perl::Critic::Policy modules that are found on this machine]'
    '--only[Directs perlcritic to apply only Policies that are explicitly mentioned in your .perlcriticrc file]'
    '--profile-strictness[Directs perlcritic how to treat certain recoverable problems found in a .perlcriticrc]:strictnes:(warn fatal quiet)'
    {-C,--count}'[Display only the number of violations for each file]'
    {--color,--colour}'[When set, Severity 5 and 4 are colored red and yellow, respectively]'
    '--pager[If set, perlcritic will pipe output to the given PAGER_COMMAND_STRING]:PAGER_COMMAND_STRING'
    '--color-severity-highest[Specifies the color to be used for highest severity violations]:COLOR_SPECIFICATION'
    '--color-severity-high[Specifies the color to be used for high severity violations]:COLOR_SPECIFICATION'
    '--color-severity-medium[Specifies the color to be used for medium severity violations]:COLOR_SPECIFICATION'
    '--color-severity-low[Specifies the color to be used for low severity violations]:COLOR_SPECIFICATION'
    '--color-severity-lowest[Specifies the color to be used for lowest severity violations]:COLOR_SPECIFICATION'
    '--files-with-violations[Display only the names of files with violations]'
    '--files-without-violations[Display only the names of files without violations]'
    '--program-extensions[Tell "perlcritic" to treat files whose names end in the given file name extension as programs]:file_name_extension'
    '--doc[Displays the perldoc for all Perl::Critic::Policy modules that match "m/PATTERN/ixms"]:PATTERN'
    '--allow-unsafe[This option directs "perlcritic" to allow the use of Policies that have been marked as "unsafe"]'
    '--quiet[Suppress the "source OK" message when no violations are found]'
    '(- * :)'{--help,-?,-H}'[Displays a brief summary of options and exits]'
    '--options[Displays the descriptions of the options and exits]'
    '--man[Displays the complete "perlcritic" manual and exits]'
    '(- * :)'{-V,--version}'[Displays the version number of "perlcritic" and exits]'
    '*:perl filename:_files -g "*.pl"'
)
