#compdef serdi

local arguments

arguments=(
  '-a[write ASCII output if possible.]'
  '-b[fast bulk output for large serialisations.]'
  '-c[chop PREFIX from matching blank node IDs.]'
  '-e[eat input one character at a time.]'
  '-f[keep full URIs in input (dont qualify).]'
  '-h[display this help and exit.]'
  '-i[input syntax: turtle/ntriples/trig/nquads.]'
  '-l[lax (non-strict) parsing.]'
  '-o[output syntax: turtle/ntriples/nquads.]'
  '-p[add PREFIX to blank node IDs.]'
  '-q[suppress all output except data.]'
  '-r[keep relative URIs within ROOT_URI.]'
  '-s[parse INPUT as string (terminates options).]'
  '-v[display version information and exit.]'
  '*:filename:_files'
)

_arguments -s $arguments
