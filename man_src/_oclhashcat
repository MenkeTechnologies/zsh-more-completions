#compdef oclhashcat

local arguments

arguments=(
  {-m,--hash-type}'[hash-type, see references below]'
  {-a,--attack-mode}'[attack-mode, see references below]'
  {-V,--version}'[print version]'
  {-h,--help}'[print help]'
  '--quiet[suppress output]'
  {-b,--benchmark}'[run benchmark]'
  '--benchmark-mode[benchmark-mode, see references below]'
  '--hex-charset[assume charset is given in hex]'
  '--hex-salt[assume salt is given in hex]'
  '--hex-wordlist[assume words in wordlist is given in hex]'
  '--force[ignore warnings]'
  '--status[enable automatic update of the status-screen]'
  '--status-timer[seconds between status-screen update]'
  '--status-automat[display the status view in a machine readable format]'
  '--loopback[add new plains to induct directory]'
  '--weak-hash-threshold[threshold when to stop checking for weak hashes, default is 100 salts]'
  '--markov-hcstat[specify hcstat file to use, default is hashcat.hcstat]'
  '--markov-disable[disables markov-chains, emulates classic brute-force]'
  '--markov-classic[enables classic markov-chains, no per-position enhancement]'
  {-t,--markov-threshold}'[threshold when to stop accepting new markov-chains]'
  '--runtime[abort session after NUM seconds of runtime]'
  '--session[define specific session name]'
  '--restore[restore session from --session]'
  '--restore-disable[do not write restore file]'
  {-o,--outfile}'[define outfile for recovered hash]'
  '--outfile-format[define outfile-format for recovered hash, see references below]'
  '--outfile-autohex-disable[disable the use of $HEX\[\] in output plains]'
  '--outfile-check-timer[seconds between outfile checks]'
  {-p,--separator}'[separator char for hashlists and outfile]'
  '--show[show cracked passwords only]'
  '--left[show un-cracked passwords only]'
  '--username[enable ignoring of usernames in hashfile (recommended: also use --show)]'
  '--remove[enable remove of hash once it is cracked]'
  '--remove-timer[update input hash file each NUM seconds]'
  '--potfile-disable[do not write potfile]'
  '--debug-mode[defines the debug mode (hybrid only by using rules), see references below]'
  '--debug-file[output file for debugging rules (see also --debug-mode)]'
  '--induction-dir[specify induction directory to use, default is $session.induct]'
  '--outfile-check-dir[specify the outfile directory which should be monitored, default is $session.outfiles]'
  '--logfile-disable[disable the logfile]'
  '--truecrypt-keyfiles[keyfiles used, separate with comma]'
  {-c,--segment-size}'[size in MB to cache from the wordfile]'
  '--bitmap-min[minimum number of bits allowed for bitmaps]'
  '--bitmap-max[maximum number of bits allowed for bitmaps]'
  '--cpu-affinity[locks to CPU devices, separate with comma]'
  '--opencl-platforms[openCL platforms to use, separate with comma]'
  {-d,--opencl-devices}'[openCL devices to use, separate with comma]'
  '--opencl-device-types[openCL device-types to use, separate with comma, see references below]'
  {-w,--workload-profile}'[enable a specific workload profile, see references below]'
  {-n,--kernel-accel}'[workload tuning: 1, 8, 40, 80, 160]'
  {-u,--kernel-loops}'[workload fine-tuning: 8 - 1024]'
  '--gpu-temp-disable[disable temperature and fanspeed readings and triggers]'
  '--gpu-temp-abort[abort session if GPU temperature reaches NUM degrees celsius]'
  '--gpu-temp-retain[try to retain GPU temperature at NUM degrees celsius (AMD only)]'
  '--powertune-enable[enable automatic power tuning option (AMD OverDrive 6 only)]'
  '--scrypt-tmto[manually override automatically calculated TMTO value for scrypt]'
  {-s,--skip}'[skip number of words]'
  {-l,--limit}'[limit number of words]'
  '--keyspace[show keyspace base:mod values and quit]'
  {-j,--rule-left}'[single rule applied to each word from left dict]'
  {-k,--rule-right}'[single rule applied to each word from right dict]'
  {-r,--rules-file}'[rules-file, multi use: -r 1.rule -r 2.rule]'
  {-g,--generate-rules}'[generate NUM random rules]'
  '--generate-rules-func-min[force NUM functions per random rule min]'
  '--generate-rules-func-max[force NUM functions per random rule max]'
  '--generate-rules-seed[force RNG seed to NUM]'
  {-1,--custom-charset1}'[user-defined charsets]'
  {-2,--custom-charset2}'[example:]'
  {-3,--custom-charset3,--custom-charset1}'[: sets charset ?1 to 0123456789abcdef]'
  {-4,--custom-charset4,-2}'[.hcchr : sets charset ?2 to chars contained in file]'
  {-i,--increment}'[enable increment mode]'
  '--increment-min[start incrementing at NUM]'
  '--increment-max[stop incrementing at NUM]'
  '*:filename:_files'
)

_arguments -s $arguments
