#compdef slirp4netns

local arguments

arguments=(
  {-c,--configure}'[bring up the interface]'
  {-e,--exit-fd}'[specify the FD for terminating slirp4netns]'
  {-r,--ready-fd}'[specify the FD to write to when the network is configured]'
  {-m,--mtu}'[specify MTU (default=1500, max=65521)]'
  {-6,--enable-ipv6}'[enable IPv6 (experimental)]'
  {-a,--api-socket}'[specify API socket path]'
  '--cidr[specify network address CIDR (default=10.0.2.0/24)]'
  '--disable-host-loopback[prohibit connecting to 127.0.0.1:* on the host namespace]'
  '--netns-type[specify network namespace type (\[path|pid\], default=pid)]'
  '--userns-path[specify user namespace path]'
  '--enable-sandbox[create a new mount namespace (and drop all caps except CAP_NET_BIND_SERVICE if running as the root)]'
  '--enable-seccomp[enable seccomp to limit syscalls (experimental)]'
  '--outbound-addr[4     sets outbound ipv4 address to bound to (experimental)]'
  '--outbound-addr6[6    sets outbound ipv6 address to bound to (experimental)]'
  '--disable-dns[disables 10.0.2.3 (or configured internal ip) to host dns redirect (experimental)]'
  '--macaddress[specify the MAC address of the TAP (only valid with -c)]'
  {-h,--help}'[show this help and exit]'
  {-v,--version}'[show version and exit]'
  '*:filename:_files'
)

_arguments -s $arguments
